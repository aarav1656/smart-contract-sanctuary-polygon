import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import "@uniswap/v3-periphery/contracts/libraries/TransferHelper.sol";
import "@uniswap/v3-periphery/contracts/libraries/Path.sol";


struct SwapResolverOptions {
    bytes path;
    uint256 amountOutMinimum;
    address inputTokenAddress;
    address destinationAddress;
    bool isSingleSwap;
}

// Resolver interface
interface IResolver {
    // Pass payment info as calldata only the manager should have the right to update it
    function resolve(uint256 amountIn, uint256 amountOutMinimum, bytes calldata resolverOptions) external returns (uint256);

    // Reverts if the calldata passes is not a proper struct
    function validateAdditionalCalldata(bytes calldata resolverOptions) external view;
}

contract SwapResolver is Context, Ownable, IResolver {
    
    using Path for bytes;

    ISwapRouter private router; // Uniswap V3 router contract

    event RouterUpdated(address sender, address oldAddress, address newAddress);

    constructor(ISwapRouter _router) {
        _updateRouter(_router);
    }

    function updateRouter(ISwapRouter _router) public onlyOwner {
        _updateRouter(_router);
    }

    function _updateRouter(ISwapRouter _router) internal {
        emit RouterUpdated(_msgSender(), address(router), address(_router));
        router = ISwapRouter(_router);
    }


    // Validate the additional calldata passed to the resolver contract
    function validateAdditionalCalldata(bytes calldata resolverOptions) pure override external {

        abi.decode(resolverOptions, (SwapResolverOptions));
        
        
        // Check if the decode was successful
        // require(success, "Invalid additional calldata");
    }

    function resolve(uint256 amountIn, uint256 amountOutMinimum, bytes calldata resolverOptions) public override returns (uint256 amountOut) {

        // Decode the additional calldata as a SwapResolverOptions struct
        (SwapResolverOptions memory swapResolverOptions) = abi.decode(resolverOptions, (SwapResolverOptions));
        return resolveImplementation(amountIn, amountOutMinimum, swapResolverOptions);
    }

    event UsedPath(bytes path, string message);
    function resolveImplementation(uint256 amountIn, uint256 amountOutMinimum, SwapResolverOptions memory swapResolverOptions) public returns (uint256 amountOut) {
        
        TransferHelper.safeTransferFrom(swapResolverOptions.inputTokenAddress, _msgSender(), address(this), amountIn);
        TransferHelper.safeApprove(swapResolverOptions.inputTokenAddress, address(router), amountIn);

        //TODO: this branch is not required as multiswap will handle singleswap as well
        if(swapResolverOptions.isSingleSwap) {

            emit UsedPath(swapResolverOptions.path, "singleSwap");
            (address tokenIn, address tokenOut, uint24 fee) = swapResolverOptions.path.decodeFirstPool();
            ISwapRouter.ExactInputSingleParams memory singleHopParams = ISwapRouter
                .ExactInputSingleParams({
                    tokenIn: tokenIn,
                    tokenOut: tokenOut,
                    fee: fee,
                    recipient: swapResolverOptions.destinationAddress,
                    deadline: block.timestamp,
                    amountIn: amountIn,
                    amountOutMinimum: amountOutMinimum,
                    sqrtPriceLimitX96: 0
                });

            return router.exactInputSingle(singleHopParams);
        }

        emit UsedPath(swapResolverOptions.path, "multiswap");
        // Multiple pool swaps are encoded through bytes called a `path`. A path is a sequence of token addresses and poolFees that define the pools used in the swaps.
        // The format for pool encoding is (tokenIn, fee, tokenOut/tokenIn, fee, tokenOut) where tokenIn/tokenOut parameter is the shared token across the pools.
        // Since we are swapping DAI to USDC and then USDC to WETH9 the path encoding is (DAI, 0.3%, USDC, 0.3%, WETH9).
        ISwapRouter.ExactInputParams memory multiHopParams =
            ISwapRouter.ExactInputParams({
                path: swapResolverOptions.path,
                recipient: swapResolverOptions.destinationAddress,
                //Deadline shouldn't matter since it should execute inline
                deadline: block.timestamp,
                amountIn: amountIn,
                //TODO: this should be verified using an oracle
                amountOutMinimum: amountOutMinimum
            });

            // Executes the swap.
        return router.exactInput(multiHopParams);
    }

    event UsedPath(bytes path);
    function dummy(uint256 amountIn, address inToken, uint24 fee1, address hop, uint24 fee2, address out, SwapResolverOptions memory swapResolverOptions)  public  returns (uint256 amountOut) {
        
        TransferHelper.safeTransferFrom(swapResolverOptions.inputTokenAddress, _msgSender(), address(this), amountIn);
        TransferHelper.safeApprove(swapResolverOptions.inputTokenAddress, address(router), amountIn);

        bytes memory path = abi.encodePacked(inToken, fee1, hop, fee2, out);
        emit UsedPath(path);
        ISwapRouter.ExactInputParams memory params =
            ISwapRouter.ExactInputParams({
                path: path,
                recipient: swapResolverOptions.destinationAddress,
                //Deadline shouldn't matter since it should execute inline
                deadline: block.timestamp,
                amountIn: amountIn,
                //TODO: this should be verified using an oracle
                amountOutMinimum: 0
            });

        amountOut = router.exactInput(params);
        return amountOut;
    }
}