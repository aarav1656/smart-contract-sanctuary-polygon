import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@uniswap/lib/contracts/libraries/TransferHelper.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "./interfaces/IInsuranceFund.sol";

import "./MixinResolver.sol";

contract InsuranceFund is IInsuranceFund, Ownable, MixinResolver {
    /* ========== ADDRESS RESOLVER CONFIGURATION ========== */

    bytes32 private constant DEFOREX_CONTRACT = "Deforex";

    address public _deforex;

    constructor(address resolver) MixinResolver(resolver) {}

    function resolverAddressesRequired()
        public
        pure
        override
        returns (bytes32[] memory addresses)
    {
        addresses = new bytes32[](1);
        addresses[0] = DEFOREX_CONTRACT;
    }

    function _resolveAddressesFinish() internal override {
        _deforex = requireAndGetAddress(DEFOREX_CONTRACT);
    }

    modifier isDeforex() {
        require(_deforex == msg.sender, "ALP: Caller is not deforex");
        _;
    }

    function coverLoss(address token, uint256 amount)
        external
        isDeforex
        returns (uint256)
    {
        uint256 balance = IERC20(token).balanceOf(address(this));
        if (balance < amount) {
            amount = balance;
        }

        require(
            IERC20(token).balanceOf(address(this)) >= amount,
            "InsuranceFund: NOT_ENOUGH"
        );

        TransferHelper.safeTransfer(token, msg.sender, amount);
        return amount;
    }

    function withdraw(address token, uint256 value) external onlyOwner {
        require(
            IERC20(token).balanceOf(address(this)) >= value,
            "InsuranceFund: NOT_ENOUGH"
        );

        TransferHelper.safeTransfer(token, msg.sender, value);
    }
}

