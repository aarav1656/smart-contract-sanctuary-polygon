            revert Continuum_AlreadyExist("TeacherSignAlreadyExist");
        }

        if (abi.encodePacked(whitelistCID).length == 0) {
            revert Continuum_NotExist("WhitelistCIDNotExist");
        }

        if (
            markleRoot == keccak256(abi.encodePacked("")) ||
            markleRoot.length != 32
        ) {
            revert Continuum_NotExist("MarkleRootNotExist");
        }

        Course storage courseData = course[courseIndex];
        courseData.markleRoot = markleRoot;
        courseData.teacherSign = signature;
        courseData.whitelistCID = whitelistCID;
        emit WhitelistCreated();
    }

    function releaseCourse(
        bytes32 courseIndex,
        BadgeInfo calldata data,
        bytes calldata signature,
        string calldata badgeRootUrlCID
    ) public isLegal verifyLegalSign(courseIndex, data, signature) {
        if (!course[courseIndex].exist) {
            revert Continuum_NotExist("CourseNotExist");
        }

        if (course[courseIndex].teacherSign.length == 0) {
            revert Continuum_NotExist("TeacherSignNotExist");
        }

        if (course[courseIndex].legalSign.length > 0) {
            revert Continuum_AlreadyExist("LegalSignAlreadyExist");
        }

        if (abi.encodePacked(badgeRootUrlCID).length == 0) {
            revert Continuum_NotExist("BadgeRootUrlCidNotExist");
        }

        Course storage courseData = course[courseIndex];
        courseData.legalSign = signature;
        courseData.badgeRootUrlCID = badgeRootUrlCID;
        emit CourseReleased();
    }

    receive() external payable {}

    fallback() external payable {}
}

