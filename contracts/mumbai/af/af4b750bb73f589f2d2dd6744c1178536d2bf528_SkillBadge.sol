pragma solidity ^0.8.17;

import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {Counters} from "@openzeppelin/contracts/utils/Counters.sol";
import {ERC721Time} from "../base/ERC721Time.sol";
import {IBadge} from "../interfaces/IBadge.sol";
import {OnChainURI} from "../libraries/OnChainURI.sol";
import {DataTypes} from "../libraries/DataTypes.sol";
import {Badge} from "./Badge.sol";
import {PaymentHandler} from "../utils/PaymentHandler.sol";

contract SkillBadge is Badge, PaymentHandler {
    string public constant NAME = "Metaintro Skill Badge";
    string public constant SYMBOL = "MSB";
    uint public constant PRICE = 10; // 10 MATIC

    struct SkillMetadata {
        address[2] validators;
        uint96[2] validated;
        string name;
        string imageURI;
    }

    mapping(uint256 => SkillMetadata) public metadata;
    mapping(uint256 => bool) public customized;

    string public defaultImageURI;
    string public defaultTokenURI;

    // Errors
    error NotOwner();
    error NotCustomSkill();
    error NonExistingToken();
    error NotExpectedValidator();
    error PaymentFailure();

    // Events
    event SetMetadata(address indexed owner, uint256 indexed tokenId, string indexed name);
    event UpdateDefaultTokenURI(string indexed uri);
    event ValidateToken(address indexed validator, uint256 indexed tokenId, address indexed owner);

    constructor(
        address _usdt,
        address _usdc,
        address _aggregator,
        uint256 _price
    ) PaymentHandler(_usdt, _usdc, _aggregator, _price) {
        __ERC721_Init(NAME, SYMBOL);
    }

    function mint(uint256 _tokenId, bool _isCustom) external {
        _safeMint(_msgSender(), _tokenId);

        customized[_tokenId] = _isCustom;
    }

    function setTokenMetadata(
        uint256 _tokenId,
        string memory _name,
        string memory _imageURI,
        address[2] calldata _validators
    ) external {
        address sender = _msgSender();
        uint96[2] memory initialInfo = [uint96(0), uint96(0)];

        if (sender != ownerOf(_tokenId)) {
            revert NotOwner();
        }

        if (!customized[_tokenId]) {
            revert NotCustomSkill();
        }

        metadata[_tokenId] = SkillMetadata({
            name: _name,
            imageURI: _imageURI,
            validators: _validators,
            validated: initialInfo
        });

        emit SetMetadata(sender, _tokenId, _name);
    }

    function getMetadata(uint256 _tokenId) external view returns (SkillMetadata memory) {
        if (!_exists(_tokenId)) {
            revert NonExistingToken();
        }

        return metadata[_tokenId];
    }

    function setDefaultImageURI(string memory _uri) external onlyOwner {
        defaultImageURI = _uri;
    }

    function setDefaultTokenURI(string memory _uri) external onlyOwner {
        defaultTokenURI = _uri;

        emit UpdateDefaultTokenURI(_uri);
    }

    /**
     * @dev See {ERC721DateTime-baseURI}.
     */
    function _baseURI() internal view override returns (string memory) {
        return defaultTokenURI;
    }

    /**
     * @dev See {ERC721DateTime-tokenURI}.
     */
    function tokenURI(uint256 tokenId) public view override returns (string memory) {
        if (!_exists(tokenId)) {
            revert NonExistingToken();
        }

        if (!customized[tokenId]) {
            return super.tokenURI(tokenId);
        }

        SkillMetadata memory data = metadata[tokenId];
        string memory attributes = OnChainURI.composeSkillBadgeAttributes(
            getVerifiedValidator(data),
            tokenDataOf(tokenId).mintTimestamp
        );

        return
            OnChainURI.composeSkillBadgeURI(
                data.name,
                bytes(data.imageURI).length == 0 ? defaultImageURI : data.imageURI,
                attributes
            );
    }

    function getVerifiedValidator(SkillMetadata memory data) internal pure returns (address) {
        if (data.validated[0] == 1) {
            return data.validators[0];
        }

        if (data.validated[1] == 1) {
            return data.validators[1];
        }

        return address(0);
    }

    function validateBadgeWithSig(
        uint256 _payType,
        DataTypes.ValidateBadgeData calldata vars,
        DataTypes.EIP712Signature calldata sig
    ) external payable {
        bool paid = false;

        if (_payType == 0) {
            paid = pay();
        } else {
            paid = payWithStable(_payType);
        }

        if (!paid) {
            revert PaymentFailure();
        }

        SkillMetadata storage data = metadata[vars.tokenId];

        if (vars.from == data.validators[0] || vars.from == data.validators[1]) {
            _validateBadgeWithSigForSpecificAddress(vars.from, vars, sig);
            sigNonces[vars.from]++;

            data.validated[vars.from == data.validators[0] ? 0 : 1] = 1;

            emit ValidateToken(vars.from, vars.tokenId, vars.owner);

            // https://eips.ethereum.org/EIPS/eip-4906
            emit MetadataUpdate(vars.tokenId);
        } else {
            revert NotExpectedValidator();
        }
    }
}

