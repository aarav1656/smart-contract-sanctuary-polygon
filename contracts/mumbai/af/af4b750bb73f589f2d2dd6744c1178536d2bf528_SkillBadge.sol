import {IERC20} from "@openzeppelin/contracts/interfaces/IERC20.sol";
import {AggregatorV3Interface} from "../interfaces/AggregatorV3Interface.sol";

contract PaymentHandler is Ownable {
    address public immutable usdt;
    address public immutable usdc;
    uint256 public constant DECIMALS = 6;

    uint256 public price;
    // Multiplied by factor 100 (10 ** 2)
    uint256 public constant PRICE_FACTOR = 2;
    AggregatorV3Interface internal priceFeed;

    event SetNewPrice(uint256 indexed price);

    constructor(address _usdt, address _usdc, address _aggregator, uint256 _price) {
        usdt = _usdt;
        usdc = _usdc;

        priceFeed = AggregatorV3Interface(_aggregator);
        price = _price;
    }

    function pay() internal returns (bool) {
        // price is scaled up by 10 ** decimals()
        uint256 amount = (price * (10 ** (18 - PRICE_FACTOR + priceFeed.decimals()))) / getLatestPrice();

        if (msg.value < amount) {
            return false;
        } else if (msg.value > amount) {
            return payable(msg.sender).send(msg.value - amount);
        }

        return true;
    }

    function payWithStable(uint256 _type) internal returns (bool) {
        if (_type != 1 && _type != 2) {
            // 1: USDT
            // 2: USDC
            // Invalid type
            return false;
        }

        IERC20 token = _type == 1 ? IERC20(usdt) : IERC20(usdc);

        return token.transferFrom(_msgSender(), address(this), price * (10 ** (DECIMALS - PRICE_FACTOR)));
    }

    function getLatestPrice() public view returns (uint256) {
        (, int _price, , , ) = priceFeed.latestRoundData();
        return uint256(_price);
    }

    function withdraw(address _vault) external onlyOwner {
        IERC20 USDT = IERC20(usdt);
        IERC20 USDC = IERC20(usdc);

        // Withdraw ETH/MATIC
        payable(_vault).transfer(address(this).balance);

        // Withdraw USDT and USDC
        USDT.transfer(_vault, USDT.balanceOf(address(this)));
        USDC.transfer(_vault, USDC.balanceOf(address(this)));
    }

    function setNewPrice(uint256 _price) external onlyOwner {
        price = _price;

        emit SetNewPrice(_price);
    }
}

