        return
            keccak256(
                abi.encode(
                    EIP712_DOMAIN_TYPEHASH,
                    keccak256(bytes(name())),
                    EIP712_REVISION_HASH,
                    block.chainid,
                    address(this)
                )
            );
    }

    /**
     * @dev Calculates EIP712 digest based on the current DOMAIN_SEPARATOR.
     *
     * @param hashedMessage The message hash from which the digest should be calculated.
     *
     * @return bytes32 A 32-byte output representing the EIP712 digest.
     */
    function _calculateDigest(bytes32 hashedMessage) internal view returns (bytes32) {
        bytes32 digest;
        unchecked {
            digest = keccak256(abi.encodePacked("\x19\x01", _calculateDomainSeparator(), hashedMessage));
        }
        return digest;
    }

    /**
     * @dev Validate if signature is valid and generated by expectedAddress specified in the params
     *
     * @param expectedAddress Expected address that signed the data
     * @param data Validation data
     * @param sig Signature
     * @notice Reverts the transaction if signature is expired or not valid
     */
    function _validateBadgeWithSigForSpecificAddress(
        address expectedAddress,
        DataTypes.ValidateBadgeData calldata data,
        DataTypes.EIP712Signature calldata sig
    ) internal view {
        address owner = ownerOf(data.tokenId);
