     * @dev We do a transfer call as opposed to a transferFrom because normally when you call
     *      transferFrom from another contract, _msgSender() would be that contract itself, but since
     *      we are calling transferFrom from within the erc20 itself, the _msgSender() returns the caller
     *      From the following two lines, it will error out because 'from == spender'
     *      address spender = _msgSender();
     *      _spendAllowance(from, spender, amount);
     *
     * @param _handlerAddress The address of the deployed and registered
     *        InvokeSpendHandler contract
     * @param _id An id passed by the caller to represent any arbitrary and
     *        potentially off-chain event id
     * @param _primeValue The amount of PRIME that was sent to the
     *        invokeSpend function (and was collected to _destination)
     * @param _data Catch-all param to allow the caller to pass additional
     *        data to the handler
     */
    function invokeSpend(
        address _handlerAddress,
        uint256 _id,
        uint256 _primeValue,
        uint256 _timestamp,
        bytes memory _data
    ) public payable nonReentrant {
        require(msg.value + _primeValue > 0, "PrimeTokenOFT: No msg.value or PRIME");
        require(
            spendGateways[_handlerAddress].primeDestinationAddress !=
                address(0),
            "PrimeTokenOFT: not a handler"
        );
        require(
            block.timestamp < _timestamp + spendWindow,
            "PrimeTokenOFT: expired request"
        );

        SpendGateway memory gateway = spendGateways[_handlerAddress];

        if (msg.value > 0) {
            (bool sent, bytes memory data) = gateway
                .nativeTokenDestinationAddress
                .call{ value: msg.value }("");
            require(sent, "Failed to send MATIC");
        }

        // Transfer uses _msgSender() PRIME from user, not from the OFT contract itself
        if (_primeValue > 0) {
            transfer(gateway.primeDestinationAddress, _primeValue);
        }

        // invoke the handler function with all transaction data
        InvokeSpendHandler(_handlerAddress).handleInvokeSpend(
            _msgSender(),
            gateway.nativeTokenDestinationAddress,
            gateway.primeDestinationAddress,
            _id,
            _primeValue,
            _timestamp,
            _data
        );
    }

    /**
     * @notice Allow an address with ADMIN_ROLE to add a handler contract for invokeSpend
     * @dev additional handler contracts will be added to support new use cases, existing handler contracts can never be
     *      deleted nor replaced
     * @param _contractAddress - The address of the new invokeSpend handler contract to be registered
     * @param _nativeTokenDestinationAddress - The address to which MATIC is collected
     * @param _primeDestinationAddress - The address to which PRIME is collected
     */
    function addSpendHandlerContract(
        address _contractAddress,
        address _nativeTokenDestinationAddress,
        address _primeDestinationAddress
    ) public onlyAdmin {
        require(
            _nativeTokenDestinationAddress != address(0) &&
                _primeDestinationAddress != address(0),
            "Destination addresses cannot be 0x0"
        );
        require(
            spendGateways[_contractAddress].primeDestinationAddress ==
                address(0),
            "Can't overwrite existing gateway"
        );
        spendGateways[_contractAddress] = SpendGateway({
            nativeTokenDestinationAddress: _nativeTokenDestinationAddress,
            primeDestinationAddress: _primeDestinationAddress,
            invokeSpendHandler: InvokeSpendHandler(_contractAddress)
        });
        emit SpendGatewayRegistered(
            _contractAddress,
            _nativeTokenDestinationAddress,
            _primeDestinationAddress
        );
    }

    /**
     * @notice Update the ParallelAlpha forwarder address
     * @dev Only callable by admin
     * @param _forwarder fowarder address param
     */
    function setForwarderAddress(address _forwarder) external onlyAdmin {
        _setTrustedForwarder(_forwarder);
    }

    /**
     * @notice Estimate fee cost for sending message
     */
    function estimateSendFee(
        address _from,
        uint16 _dstChainId,
        bytes memory _toAddress,
        uint256 _amount,
        bool _isCreditTo,
        bool _useZro,
        bytes memory _adapterParams
    ) public view virtual returns (uint256 nativeFee, uint256 zroFee) {
        // mock the payload for send()
        bytes memory payload = abi.encode(
            _from,
            _toAddress,
            _amount,
            _isCreditTo
        );
        return
            lzEndpoint.estimateFees(
                _dstChainId,
                address(this),
                payload,
                _useZro,
                _adapterParams
            );
    }

    /**
     * @notice Calls internal function _send
     * @param _from The address that will have its tokens burned when bridging
     * @param _dstChainId The destination chain identifier
     * @param _toAddress The address that will receive the tokens on the destination chain
     * @param _amount Amount of tokens to bridge
     * @param _isCreditTo Identifier, true if bridging to destination chain, false if bridging to current chain
     * @param _refundAddress If the source transaction is cheaper than the amount of value passed, refund the additional amount to this address
     * @param _zroPaymentAddress The address of the ZRO token holder who would pay for the transaction
     * @param _adapterParams parameters for custom functionality. e.g. receive airdropped native gas from the relayer on destination
     */
    function send(
        address _from,
        uint16 _dstChainId,
        bytes memory _toAddress,
        uint256 _amount,
        bool _isCreditTo,
        address payable _refundAddress,
        address _zroPaymentAddress,
        bytes memory _adapterParams
    ) public payable virtual {
        _send(
            _from,
            _dstChainId,
            _toAddress,
            _amount,
            _isCreditTo,
            _refundAddress,
            _zroPaymentAddress,
            _adapterParams
        );
    }

    /**
     * @notice Send a LayerZero message to the specified address at a LayerZero endpoint specified by our chainId.
     * @param _from The address that will have its tokens burned when bridging
     * @param _dstChainId The destination chain identifier
     * @param _toAddress The address that will receive the tokens on the destination chain
     * @param _amount Amount of tokens to bridge
     * @param _isCreditTo Identifier, true if bridging to destination chain, false if bridging to current chain
     * @param _refundAddress If the source transaction is cheaper than the amount of value passed, refund the additional amount to this address
     * @param _zroPaymentAddress The address of the ZRO token holder who would pay for the transaction
     * @param _adapterParams parameters for custom functionality. e.g. receive airdropped native gas from the relayer on destination
     */
    function _send(
        address _from,
        uint16 _dstChainId,
        bytes memory _toAddress,
        uint256 _amount,
        bool _isCreditTo,
        address payable _refundAddress,
        address _zroPaymentAddress,
        bytes memory _adapterParams
    ) internal virtual {
        if (_isCreditTo) {
            _debitFrom(_from, _dstChainId, _toAddress, _amount);
        }

        bytes memory payload = abi.encode(
            _from,
            _toAddress,
            _amount,
            _isCreditTo
        );
        _lzSend(
            _dstChainId,
            payload,
            _refundAddress,
            _zroPaymentAddress,
            _adapterParams
        );

        uint64 nonce = lzEndpoint.getOutboundNonce(_dstChainId, address(this));
        emit SendToChain(_from, _dstChainId, _toAddress, _amount, nonce);
    }

    /**
     * @notice Burn tokens for user
     * @dev If the caller is not _from, only allow a successful call if allowance exceeds or equal to _amount
     * @param _from The address that will have its tokens burned
     * @param _amount Amount of tokens to burn
     */
    function _debitFrom(
        address _from,
        uint16,
        bytes memory,
        uint256 _amount
    ) internal virtual override {
        address spender = _msgSender();
        if (_from != spender) _spendAllowance(_from, spender, _amount);
        _burn(_from, _amount);
    }

    /**
     * @notice Mint tokens for user
     * @param _toAddress The address that will have tokens minted for
     * @param _amount Amount of tokens to mint
     */
    function _creditTo(
        uint16,
        address _toAddress,
        uint256 _amount
    ) internal virtual override {
        _mint(_toAddress, _amount);
    }

    /**
     * @notice Recieve a message from source chain
     * @param _srcChainId Source chain id
     * @param _payload creditFrom - This address will be debited if the source chain is sending a message to bridge tokens back
     * creditTo - This address will be credited if the source chain is bridging tokens to current chain, otherwise this address will credited at the source chain
     * amount - Amount of tokens to credit/debit
     * isCreditTo - Identifier, mint on current chain if true, burn on current chain and mint on source chain if false
     */
    function _nonblockingLzReceive(
        uint16 _srcChainId,
        bytes memory,
        uint64 /*_nonce*/,
        bytes memory _payload
    ) internal override {
        // decode the sender that wants to bridge their prime token
        (
            address creditFrom,
            bytes memory creditTo,
            uint256 amount,
            bool isCreditTo
        ) = abi.decode(_payload, (address, bytes, uint256, bool));
        if (isCreditTo) {
            address sendBackToAddress;
            assembly {
                sendBackToAddress := mload(add(creditTo, 20))
            }
            _creditTo(_srcChainId, sendBackToAddress, amount);
        } else {
            send(
                creditFrom,
                _srcChainId,
                creditTo,
                amount,
                true,
                payable(address(this)), // (msg.sender will be this contract) refund address (LayerZero will refund any extra gas back to caller of send()
                address(0x0), // future param, unused for this example
                ""
            );
        }
    }
}