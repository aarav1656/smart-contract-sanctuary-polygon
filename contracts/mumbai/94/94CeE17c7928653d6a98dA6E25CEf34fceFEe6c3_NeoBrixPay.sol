import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import "@uniswap/v3-periphery/contracts/interfaces/IQuoter.sol";

import "../helpers/ERC2771Recipient.sol";

interface IUniswapRouter is ISwapRouter {
    function refundETH() external payable;
}

interface ITC { // Interface for Token Contract

    struct Token{
        address contractAddress;
        string tokenName;
        string symbol;
        uint256 decimal;
    }

    function getTokenData(string memory _symbol) external view returns(Token memory);
    function getTokenList() external view returns(string[] memory);
}

contract NeoBrixPay is Initializable, ERC2771Recipient, PausableUpgradeable, AccessControlUpgradeable, ReentrancyGuardUpgradeable {

    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");

    ITC private TokenContract ;

    IUniswapRouter public uniswapRouter;
    IQuoter public quoter;


    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize() public initializer {
        __Pausable_init();
        __AccessControl_init();
        __ReentrancyGuard_init();

        uniswapRouter = IUniswapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);
        quoter = IQuoter(0xb27308f9F90D607463bb33eA1BeBb41C27CE5AB6);
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(PAUSER_ROLE, _msgSender());
        _grantRole(ADMIN_ROLE, _msgSender());

    }

/*
******************************************Contract Settings Functions****************************************************
*/

    function pause() public onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() public onlyRole(PAUSER_ROLE) {
        _unpause();
    }

     function setAdmin(address _admin) public onlyRole(ADMIN_ROLE) {
        _grantRole(ADMIN_ROLE, _admin);
    }

    function removeAdmin(address _admin) public onlyRole(ADMIN_ROLE) {
        _revokeRole(ADMIN_ROLE, _admin);
    }

    function setTrustedForwarder(address _newtrustedForwarder) public onlyRole(ADMIN_ROLE) {
        _setTrustedForwarder(_newtrustedForwarder);
    }

/*
******************************************Interface Initilization Functions****************************************************
*/    

    function setTokenContract(address _tokenContractAddress) public onlyRole(ADMIN_ROLE) {
        TokenContract = ITC(_tokenContractAddress);
    }

    function setUniswapRouter(address _uniswapRouterAddress) public onlyRole(ADMIN_ROLE) {
        uniswapRouter = IUniswapRouter(_uniswapRouterAddress);
    }

    function setUniswapQouter(address _uniswapQouterAddress) public onlyRole(ADMIN_ROLE) {
        quoter = IQuoter(_uniswapQouterAddress);
    }

/*
**********************************************Contract Events****************************************************
*/    

    event CollectPayment(address indexed _sender, address indexed _receiver, uint256 _amount, string tokenName, string transferType, string orderId);
    event FiatExchangeTransfer(address indexed _sender, uint256 _amount, string tokenName, string orderId);

/*
**********************************************Payment Functions***********************************************************
*/


    //This function needs prior approval from sender
    function directTokenPayment(address _sender, address _receiver, uint256 _amount, string memory _token, string calldata _orderId) public nonReentrant {
        ITC.Token memory tokenData = TokenContract.getTokenData(_token);
        IERC20Upgradeable token = IERC20Upgradeable(tokenData.contractAddress);
        token.transferFrom(_sender, _receiver, _amount);
        emit CollectPayment(_sender, _receiver, _amount, tokenData.tokenName, "DIRECT_TOKEN_TRANSFER", _orderId);
    }

    function directNativePayment(address _sender, address _receiver, uint256 _amount, string calldata _orderId) public payable nonReentrant {
        require(msg.value == _amount, "Amount not equal to msg.value");
        payable(_receiver).transfer(_amount);
        emit CollectPayment(_sender, _receiver, _amount, "NATIVE", "DIRECT_NATIVE_TRANSFER", _orderId);
    }


    //This function needs prior approval from sender in some cases
    function swapTokenPayment(address _sender, address _receiver, string calldata _inToken, string calldata _outToken,  uint256 _inAmount, uint256 _deadline, string calldata _orderId) public payable nonReentrant {
        if(keccak256(abi.encodePacked(_inToken)) == keccak256(abi.encodePacked("WETH"))){
            _convertUniswapExactETHToToken(_sender, _inToken, _outToken, _inAmount, _receiver, _deadline);
        }else if(keccak256(abi.encodePacked(_outToken)) == keccak256(abi.encodePacked("WETH"))){
            _convertUniswapExactTokenToETH(_sender, _inToken, _outToken, _inAmount, _receiver, _deadline);
        }else{
            _convertUniswapExactTokenToToken(_sender, _inToken, _outToken, _inAmount, _receiver, _deadline);
        }    
        emit CollectPayment(_sender, _receiver, _inAmount, _outToken, "SWAP_TOKEN_TRANSFER", _orderId);

    }

    function _convertUniswapExactETHToToken(address _sender, string calldata _inToken, string calldata _outToken, uint256 _inAmount, address _receiver, uint256 _deadline) internal {
        require(msg.value >= _inAmount, "Amount not equal to msg.value");
        ITC.Token memory inTokenData = TokenContract.getTokenData(_inToken);
        ITC.Token memory outTokenData = TokenContract.getTokenData(_outToken);

        
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter.ExactInputSingleParams(
            inTokenData.contractAddress,
            outTokenData.contractAddress,
            3000, //fee
            _receiver,
            _deadline,
            _inAmount,
            0,
            0
        );
        
        uniswapRouter.exactInputSingle{value:msg.value}(params);
        uniswapRouter.refundETH();
    }

    function _convertUniswapExactTokenToETH(address _sender, string calldata _inToken, string calldata _outToken, uint256 _inAmount, address _receiver, uint256 _deadline) internal {
        ITC.Token memory inTokenData = TokenContract.getTokenData(_inToken);
        ITC.Token memory outTokenData = TokenContract.getTokenData(_outToken);

        IERC20Upgradeable inToken = IERC20Upgradeable(inTokenData.contractAddress);
        inToken.transferFrom(_sender, address(this), _inAmount); // Making a transfer of tokens from user to contract
        inToken.approve(address(uniswapRouter), _inAmount); // Approving Router to use tokens from contract
        
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter.ExactInputSingleParams(
            inTokenData.contractAddress,
            outTokenData.contractAddress,
            3000, //fee
            _receiver,
            _deadline,
            _inAmount,
            0,
            0
        );
        
        uniswapRouter.exactInputSingle(params);
        uniswapRouter.refundETH();
    }


    function _convertUniswapExactTokenToToken(address _sender, string calldata _inToken, string calldata _outToken, uint256 _inAmount, address _receiver, uint256 _deadline) internal {
        ITC.Token memory inTokenData = TokenContract.getTokenData(_inToken);
        ITC.Token memory outTokenData = TokenContract.getTokenData(_outToken);
        ITC.Token memory wethTokenData = TokenContract.getTokenData("WETH");

        IERC20Upgradeable inToken = IERC20Upgradeable(inTokenData.contractAddress);
        inToken.transferFrom(_sender, address(this), _inAmount); // Making a transfer of tokens from user to contract
        inToken.approve(address(uniswapRouter), _inAmount); // Approving Router to use tokens from contract

        uint24 fee = 3000;
        
        ISwapRouter.ExactInputParams memory params = ISwapRouter.ExactInputParams(
            abi.encodePacked(inTokenData.contractAddress, fee, wethTokenData.contractAddress, fee, outTokenData.contractAddress),
            _receiver,
            _deadline,
            _inAmount,
            0
        );
        
        uniswapRouter.exactInput(params);
        uniswapRouter.refundETH();
    }

    function getEstimatedUniswapToken1forToken2(string calldata _token1, string calldata _token2, uint _token2Amount) external payable returns (uint256) {
        ITC.Token memory token1Data = TokenContract.getTokenData(_token1);
        ITC.Token memory token2Data = TokenContract.getTokenData(_token2);

        address tokenIn = token1Data.contractAddress;
        address tokenOut = token2Data.contractAddress;
        uint24 fee = 3000;
        uint160 sqrtPriceLimitX96 = 0;

        return quoter.quoteExactOutputSingle(
            tokenIn,
            tokenOut,
            fee,
            _token2Amount,
            sqrtPriceLimitX96
        );
    }

    function externalFiatPay(address _sender, address _receiver, string calldata _currency, uint256 _amount, string calldata _orderId) public payable nonReentrant {
        ITC.Token memory tokenData = TokenContract.getTokenData(_currency);
        IERC20Upgradeable token = IERC20Upgradeable(tokenData.contractAddress);
        token.transferFrom(address(this), _receiver, _amount);
        
        emit FiatExchangeTransfer(_sender, _amount, _currency,  _orderId);
        emit CollectPayment(_sender, _receiver, _amount, _currency, "FIAT_EXCHANGE_TRANSFER", _orderId);
    }

/*
***************************************** Important Functions - Edit With Care***********************************************************
*/   
    function _msgSender() internal view virtual override(ContextUpgradeable, ERC2771Recipient) returns (address sender) {
        if (isTrustedForwarder(msg.sender)) {
            // The assembly code is more direct than the Solidity version using `abi.decode`.
            /// @solidity memory-safe-assembly
            assembly {
                sender := shr(96, calldataload(sub(calldatasize(), 20)))
            }
        } else {
            return super._msgSender();
        }
    }

    function _msgData() internal view virtual override(ContextUpgradeable, ERC2771Recipient) returns (bytes calldata) {
        if (isTrustedForwarder(msg.sender)) {
            return msg.data[:msg.data.length - 20];
        } else {
            return super._msgData();
        }
    }
    
   receive() external payable {}

}

