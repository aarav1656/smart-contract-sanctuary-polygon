pragma solidity ^0.8.7;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract FantasySport is Ownable {
    using SafeMath for uint256;
    struct player {
        uint8 Id;
        string name;
        uint16 matchPoints;
    }

    struct team {
        uint8 teamId;
        player[] players;
        uint256 totalPoints;
    }

    struct participant {
        uint8 matchId;
        uint8 contestId;
        address walletAddress;
        team teams;
    }

    struct contest {
        uint256 Id;
        uint8 maxParticipant;
        participant[] participants;
        uint256 entryFee;
        address winner;
    }

    mapping(uint256 => contest[]) public matchIdToContestArray;
    mapping(uint256 => bool) public matchStarted;
    uint256 private numContest;
    uint256 public matchId; // this will come from api.
    address[] _walletAddress;
    contest Contest;

    function createContest(
        uint256 _matchId,
        uint8 _maxParticipants,
        uint256 _entryFee
    ) public payable {
        // require(!matchStarted[_matchId], "Match has already started");
        require(msg.value == _entryFee, "Value is not equal to entry fee");
        numContest += 1;
        Contest.Id = numContest;
        Contest.maxParticipant = _maxParticipants;
        Contest.entryFee = _entryFee;
        Contest.participants[0].walletAddress = msg.sender;
        Contest.winner = address(0);

        matchIdToContestArray[_matchId].push(Contest);
    }

    function joinContest(uint256 _matchId, uint256 _contestId) public payable {
        require(!matchStarted[_matchId], "Match has already started");
        uint256 index = _contestId - 1;
        uint256 _entryFee = matchIdToContestArray[_matchId][index].entryFee;
        require(msg.value == _entryFee, "Value is not equal to entry fee");
        uint i = matchIdToContestArray[_matchId][index].participants.length;
        i++;
        matchIdToContestArray[_matchId][index]
            .participants[i]
            .walletAddress = msg.sender;
    }

    function addTeams(
        uint256 _matchId
        // string[] memory _team
    ) public onlyOwner {
        require(matchStarted[_matchId], "Match has not started");

        for (
            uint256 index = 0;
            index < matchIdToContestArray[_matchId].length;
            index++
        ) {
            for (
                uint256 j = 0;
                j < matchIdToContestArray[_matchId][index].participants.length;
                j++
            ) {
                for (uint8 l = 0; l < 10; l++) {
                    matchIdToContestArray[_matchId][index]
                        .participants[j]
                        .teams
                        .players[l]
                        .Id = 0; // from api
                }
            }
        }
    }

    function announceWinner(uint256 _matchId) public payable {
        for (
            uint256 index = 0;
            index < matchIdToContestArray[_matchId].length;
            index++
        ) {
            for (
                uint256 j = 0;
                j < matchIdToContestArray[_matchId][index].participants.length;
                j++
            ) {
                for (uint8 l = 0; l < 10; l++) {
                    matchIdToContestArray[_matchId][index]
                        .participants[j]
                        .teams
                        .players[l]
                        .matchPoints = 0; // from api
                }
                matchIdToContestArray[_matchId][index]
                    .participants[j]
                    .teams
                    .totalPoints = 0; // from api
            }
            matchIdToContestArray[_matchId][index].winner = address(0); // from api
        }

        for (
            uint256 index = 0;
            index < matchIdToContestArray[_matchId].length;
            index++
        ) {
            uint256 numParticipants = matchIdToContestArray[_matchId][index]
                .participants
                .length;
            uint256 _entryFee = matchIdToContestArray[_matchId][index].entryFee;

            uint256 prize = numParticipants.mul(_entryFee);
            address _winner = matchIdToContestArray[_matchId][index].winner;

            (bool sent, ) = _winner.call{value: prize}("");
            require(sent, "failed to send ether");
        }
    }

    receive() external payable {}

    fallback() external payable {}
}