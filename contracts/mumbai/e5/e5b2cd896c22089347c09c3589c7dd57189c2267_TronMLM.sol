contract TronMLM is  Ownable {
    using SafeMath for uint256;

    address public companyWallet; // using this wallet for receiving fee
    uint256 public companyWalletTotalFeeEarning;
    uint256 public joiningAmount = 0.00125 ether; // 125 Tron for joining 
    uint256 public serviceFee = 20 * 10**2; // 25% service fee, decimal number 10**2

    uint256 public totalMembers;
    struct userDetails {
        bool isJoined;
        address sponsor;
        uint256 joinDate;
        uint256 holdAmount;
        uint256 withdrawal;
    }
    struct downline{
        address user;
        uint256 joinDate;
    }

    mapping (address => userDetails) public users;
    mapping (address => downline[]) public downlineList;
    
    constructor(){
        companyWallet = msg.sender;
        users[msg.sender] = userDetails(true, address(0), block.timestamp, 0, 0); // new user add
        totalMembers++; 
    }

    function register(address sponsor) payable external {
        
            require(users[sponsor].isJoined, "Invalid sponsor wallet");
            require(msg.value >= joiningAmount, "Insufficient amount for joining");
            
            users[msg.sender] = userDetails(true, sponsor, block.timestamp, 0, 0); // new user add
            downlineList[sponsor].push(downline(msg.sender, block.timestamp)); // downline add

            uint256 fee = msg.value.mul(serviceFee).div(10000);

            users[sponsor].holdAmount += msg.value.sub(fee);
            companyWalletTotalFeeEarning += fee;
            payable(companyWallet).transfer(fee);

            earningSettlement(sponsor); 
            totalMembers++; 
    } 

   function earningSettlement(address sponsor) internal {
        uint i = 0;
        uint256 sponsorAmount = 0.00100 ether;
        uint256 feeAmount = 0.00020 ether;
        uint256 earningAmount = 0.00180 ether;

        while(i < 1){
            userDetails memory user = users[sponsor];
            if(user.holdAmount >= 0.00300 ether){

                payable(companyWallet).transfer(feeAmount);
                payable(sponsor).transfer(earningAmount);

                companyWalletTotalFeeEarning += feeAmount;

                user.holdAmount = 0;
                user.withdrawal += earningAmount;

                i++;
                if(user.sponsor != address(0)){
                    users[user.sponsor].holdAmount += sponsorAmount;

                    if(users[user.sponsor].holdAmount >= 0.00300 ether){
                        sponsor = user.sponsor;
                        i = 0;
                    }
                }
            }   
        }
   }


   function setCompanyWallet(address _companyWallet) external onlyOwner {
        companyWallet = _companyWallet;
   }
}