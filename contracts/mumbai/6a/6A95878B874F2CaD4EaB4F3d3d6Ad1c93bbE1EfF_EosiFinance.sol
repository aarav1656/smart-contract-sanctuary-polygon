pragma solidity ^0.8.9;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract EosiFinance {
    address private owner;

    uint256 public balance;

    struct Campaign {
        address owner;
        string traderName;
        string minProfit;
        uint256 minCapital;
        uint256 commission;
        uint256 amountCollected;
        string image;
        address[] investors;
        uint256[] investments;
    }

    // Data structure to store information about the investment smart contract
    struct InvestmentData {
        uint256 totalInvAmt; // Total investment amount in the contract
        address owner; // Address of the owner of the contract
        mapping(address => uint256) investors; // Array of investor addresses
        mapping(address => InvestorData) investorData; // Mapping of investors to their data
        bool paused; // Flag to indicate if the contract is paused
    }

    // Data structure to store information about an investor
    struct InvestorData {
        uint256 invAmt; // Investment amount of the investor
        uint256 balance; // Balance of the investor
        bool blacklisted; // Flag to indicate if the investor is blacklisted
    }

    mapping(uint256 => Campaign) public campaigns;

    uint256 public numberOfCampaigns = 0;

    //Events
    event BlklistAddr(address investor);
    event UnBlklist(address investor);
    event Withdrawal(uint256 amount, uint256 timestamp);
    event TransferSent(address _from, address _destAddr, uint _amount);
    event TransferReceived(address _from, uint _amount);
    event TransferERCSent(address _from, address _destAddr, uint _amount);

    // Investment contract data
    InvestmentData public investmentContractData;

    // Address of contract deployer. Marked payable so that
    // we can withdraw to this address later.

    constructor() {
        // Set the owner of the contract to the address calling the constructor
        owner = payable(msg.sender);
    }

    modifier onlyOwner() {
        require(
            msg.sender == owner,
            "Only the contract owner can call this function"
        );
        _;
    }

    function createCampaign(
        address _owner,
        string memory _traderName,
        string memory _minProfit,
        uint256 _minCapital,
        uint256 _commission,
        string memory _image
    ) public returns (uint256) {
        Campaign storage campaign = campaigns[numberOfCampaigns];

        // require(campaign.commission < block.timestamp, "The commission should be a date in the future.");

        campaign.owner = _owner;
        campaign.traderName = _traderName;
        campaign.minProfit = _minProfit;
        campaign.minCapital = _minCapital;
        campaign.commission = _commission;
        campaign.amountCollected = 0;
        campaign.image = _image;

        numberOfCampaigns++;

        return numberOfCampaigns - 1;
    }

    function donateToCampaign(uint256 _id) public payable {
        uint256 amount = msg.value;

        Campaign storage campaign = campaigns[_id];

        campaign.investors.push(msg.sender);
        campaign.investments.push(amount);

        (bool sent, ) = payable(campaign.owner).call{value: amount}("");

        if (sent) {
            campaign.amountCollected = campaign.amountCollected + amount;
        }
    }

    receive() external payable {
        balance += msg.value;

        emit TransferReceived(msg.sender, msg.value);
    }

    function getInvestors(
        uint256 _id
    ) public view returns (address[] memory, uint256[] memory) {
        return (campaigns[_id].investors, campaigns[_id].investments);
    }

    function getCampaigns() public view returns (Campaign[] memory) {
        Campaign[] memory allCampaigns = new Campaign[](numberOfCampaigns);

        for (uint i = 0; i < numberOfCampaigns; i++) {
            Campaign storage item = campaigns[i];

            allCampaigns[i] = item;
        }

        return allCampaigns;
    }

    // Blacklist an investor
    function Blklist(address _investor) public onlyOwner {
        require(
            msg.sender == owner,
            "Only the contract owner can call this function"
        );
        require(_investor != address(0), "Invalid investor address"); // Check if the investor address is valid
        require(_investor != owner, "Owner cannot be blacklisted"); // Check if the investor is the owner of the contract
        emit BlklistAddr(_investor);
    }

    // Unblacklist an investor
    function unblklist(address _investor) public onlyOwner {
        require(_investor != address(0), "Invalid investor address"); // Check if the investor address is valid
        emit UnBlklist(_investor);
    }

    // Pause the contract
    function pause() public onlyOwner {
        require(
            msg.sender == owner,
            "Only the contract owner can call this function"
        );
        require(!investmentContractData.paused, "Contract is already paused"); // Check if the contract is already paused
        investmentContractData.paused = true;
    }

    // Unpause the contract
    function unpause() public onlyOwner {
        require(
            msg.sender == owner,
            "Only the contract owner can call this function"
        );
        require(investmentContractData.paused, "Contract is not paused"); // Check if the contract is paused
        investmentContractData.paused = false;
    }

    // Transfer ERC20 funds from the contract to an address

    function transferERC20tokens(
        IERC20 token,
        address to,
        uint256 amount
    ) public {
        require(msg.sender == owner, "Only owner can withdraw funds");
        uint256 erc20balance = token.balanceOf(address(this));
        require(amount <= erc20balance, "balance is low");
        token.transfer(to, amount);
        emit TransferSent(msg.sender, to, amount);
    }

    // Withdraw funds by Deployer

    function withdraw(
        uint256 amount,
        address payable destAddr
    ) public onlyOwner {
        require(msg.sender == owner, "Only owner can withdraw funds");
        require(amount <= balance, "Insufficient funds");

        destAddr.transfer(amount);
        balance -= amount;
        emit TransferSent(msg.sender, destAddr, amount);
    }
}