pragma solidity ^0.8.9;

import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./Utils.sol";

contract Kurama is Ownable, VRFConsumerBaseV2, Utils {
    //  <-  Required for generating Random Numbers  ->  //
    address vrfCoordinatorV2Address = address(0x7a1BaC17Ccc5b313516C5E16fb24f7659aA5ebed);
    VRFCoordinatorV2Interface public immutable vrfCoordinatorV2 = VRFCoordinatorV2Interface(vrfCoordinatorV2Address);
    uint64 private subscriptionId;
    bytes32 private immutable keyHash = bytes32(0x4b09e658ed251bcafeebbc69400383d49f344ace09b9576fe248bb02c003fe9f);
    uint32 private immutable callbackGasLimit = 500000;
    uint16 private constant REQUEST_CONFIRMATIONS = 3;

    uint256 public nonce = 0;

    address public signerAddress;

    function setSignerAddress(address _address) external onlyOwner {
        signerAddress = _address;
    }

    constructor() VRFConsumerBaseV2(vrfCoordinatorV2Address) {}

    function setSubscriptionID(uint64 _subscriptionId) external onlyOwner {
        subscriptionId = _subscriptionId;
    }

    //  <-  Define Raffle State  ->  //
    enum RaffleState {
        Open,
        Close
    }

    //  <-  Raffle Structure  ->  //
    struct Raffle {
        string id;
        uint256 onChainIndex;
        RaffleState state;
        uint256 endTime;
        uint32 maxWinners;
    }

    //  <-  Mapping of Raffles with Raffle ID  ->  //
    mapping(string => Raffle) private raffleMapping;
    //  <-  Mapping of User entries with Raffle ID  ->  //
    mapping(string => address[]) private entriesMapping;
    //  <-  Mapping of Winners with Raffle ID  ->  //
    mapping(string => address[]) private winnersMapping;
    //  <- Raffles Array  ->  //
    Raffle[] private raffles;
    //  <-  Admins Mapping  ->  //
    mapping(address => bool) public adminMapping;

    function addAdmin(address _address) external onlyOwner {
        adminMapping[_address] = true;
    }

    function removeAdmin(address _address) external onlyOwner {
        adminMapping[_address] = false;
    }

    modifier onlyAdminOrOwner() {
        require(
            msg.sender == owner() || adminMapping[msg.sender],
            "Function only accessible to owner or admin"
        );
        _;
    }

    //  <-  WithDraw ETH  ->  //
    function withDraw() external onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    //  <- Events  ->  //
    event RaffleCreated(string id, Raffle raffle);
    event RaffleUpdated(string id, Raffle raffle);
    event EnteredRaffle(string id, address userAddress);

    //  <-  ONLY OWNER - Create new Raffle  ->  //
    function createRaffle(
        string memory id,
        uint256 timeInterval,
        uint32 maxWinners
    ) external onlyAdminOrOwner {
        uint256 onChainIndex = raffles.length;
        Raffle memory raffle = Raffle(
            id,
            onChainIndex,
            RaffleState.Open,
            block.timestamp + timeInterval,
            maxWinners
        );
        raffleMapping[id] = raffle;
        raffles.push(raffle);
        emit RaffleCreated(id, raffle);
    }

    function updateRaffle(
        string memory id,
        Raffle memory raffle
    ) external onlyAdminOrOwner {
        require(
            (keccak256(abi.encodePacked(raffleMapping[id].id)) == keccak256(abi.encodePacked(id)))
            && raffleMapping[id].maxWinners != 0, "Raffle with Id not present"
        );
        uint256 onChainIndex = raffleMapping[id].onChainIndex;
        raffleMapping[id] = raffle;
        raffles[onChainIndex] = raffle;
        emit RaffleUpdated(id, raffle);
    }

    //  <-  Enter in Raffle  ->  //
    function enterRaffle(bytes memory signature, string memory _raffleId, address _address, uint256 _entry) external {
        require(_getSigner(_hashTx(_address, _entry, nonce), signature) == signerAddress, "Invalid Signature");
        nonce += 1;
        Raffle memory raffle = raffleMapping[_raffleId];
        require(raffle.state == RaffleState.Open, "Raffle Not Open");
        for(uint256 i=0; i<_entry; i++) {
            entriesMapping[_raffleId].push(_address);
        }
        emit EnteredRaffle(_raffleId, _address);
    }

    //  <-  ChainLink Keeper => determine if performUpkeep should be executed on-chain  ->  //
    function checkUpkeep(
        bytes memory /* checkData */
    ) public view returns (bool upkeepNeeded, bytes memory performData) {
        for (uint256 i = 0; i < raffles.length; i++) {
            Raffle memory raffle = raffles[i];
            bool isOpen = raffle.state == RaffleState.Open;
            bool timePassed = block.timestamp >= raffle.endTime;

            uint256 raffleEntries = entriesMapping[raffle.id].length;
            bool enoughtEntries = (raffleEntries > 0);

            if (timePassed && isOpen && enoughtEntries) {
                upkeepNeeded = (timePassed && isOpen && enoughtEntries);
                return (upkeepNeeded, abi.encodePacked(raffle.id));
            }
        }
    }

    //  <-  Mapping of Raffle ID to VRF Request ID  ->  //
    mapping(uint256 => string) public requestIdToRaffleId;

    //  <-  ChainLink Keeper => When checkUpkeep returns upkeepNeeded == true, the Keeper node broadcasts a transaction to the blockchain to execute performUpkeep  ->  //
    function performUpkeep(
        bytes calldata /* performData */
    ) external {
        (bool upkeepNeeded, bytes memory data) = checkUpkeep("");
        require(upkeepNeeded, "Raffle Upkeep Not Needed");
        string memory raffleId = string(data);
        Raffle memory raffle = raffleMapping[raffleId];

        raffleMapping[raffleId].state = RaffleState.Close;
        raffles[raffle.onChainIndex].state = RaffleState.Close;

        uint256 requestId = vrfCoordinatorV2.requestRandomWords(
            keyHash,
            subscriptionId,
            REQUEST_CONFIRMATIONS,
            callbackGasLimit,
            raffleMapping[raffleId].maxWinners
        );
        requestIdToRaffleId[requestId] = raffleId;
    }

    //  <-  Receives random values and perform operation with random values  ->  //
    function fulfillRandomWords(
        uint256 requestId,
        uint256[] memory randomWords
    ) internal override {
        string memory raffleId = requestIdToRaffleId[requestId];
        for (uint256 i = 0; i < randomWords.length; i++) {
            uint256 indexOfWinner = randomWords[i] % entriesMapping[raffleId].length;
            winnersMapping[raffleId].push(entriesMapping[raffleId][indexOfWinner]);
        }
    }

    //  <- View Functions  ->  //
    function getRaffles() external view returns (Raffle[] memory) {
        return raffles;
    }

    function getRafflesCount() external view returns (uint256) {
        return raffles.length;
    }

    function getRaffle(string memory _raffleId) external view returns (Raffle memory) {
        return raffleMapping[_raffleId];
    }

    function getRaffleEntries(string memory _raffleId) external view returns (address[] memory) {
        return entriesMapping[_raffleId];
    }

    function getRaffleEntriesLength(string memory _raffleId) external view returns (uint256) {
        return entriesMapping[_raffleId].length;
    }

    function getRaffleWinners(string memory _raffleId) external view returns (address[] memory) {
        return winnersMapping[_raffleId];
    }

    function getRaffleWinnersLength(string memory _raffleId) external view returns (uint256) {
        return winnersMapping[_raffleId].length;
    }
}

