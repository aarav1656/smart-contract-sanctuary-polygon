pragma solidity 0.8.17;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

// Stablecoin
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract Storage is Context, ReentrancyGuard, AccessControlEnumerable {
    using Counters for Counters.Counter;

    Counters.Counter internal _partnerCounter;
    Counters.Counter internal _riderCounter;
    Counters.Counter internal _ordersCounter;

    bytes32 public constant PARTNER_ROLE = keccak256("PARTNER_ROLE");
    bytes32 public constant RIDER_ROLE   = keccak256("RIDER_ROLE");
    bytes32 public constant ADMIN_ROLE   = keccak256("ADMIN_ROLE");

    IERC20 public stablecoin;

    enum OrderState {
        NotStarted,
        InProcess,
        RiderSelected,
        PickedUp,
        Completed,
        Canceled
    }

    struct Order {
        uint256         partnerId;
        address         client;
        uint256         total;
        uint256         riderFee;
        address         chosenRider;
        OrderState      state;
    }

    mapping(address => uint256) internal _riderActiveOrder;
    mapping(uint256 => Order)   internal _orders;

    event PartnerAdded(
        uint256 indexed partnerId,
        address indexed partnerAddress
    );
    
    event RiderAdded(
        uint256 indexed riderId,
        address indexed riderAddress
    );

    event OrderAdded(
        uint256 indexed orderId, 
        address indexed client, 
        uint256 orderTotal,
        uint256 riderFee,
        uint256 indexed partnerId
    );

    /**
     * @notice Checks if orderId is valid
     * @param orderId The order ID
     */
    modifier validOrder(uint256 orderId) {
        require(
            orderId > 0 && orderId < _ordersCounter.current(),
            "Use a valid order ID"
        );
        require(
            _orders[orderId].state != OrderState.Completed && _orders[orderId].state != OrderState.Canceled,
            "Order already delivered or canceled"
        );
        _;
    }

    constructor(address stablecoin_) {
        require(stablecoin_ != address(0), "Stblcn address zero");
        stablecoin = IERC20(stablecoin_);

        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(ADMIN_ROLE, _msgSender());

        // Starts at 1
        _ordersCounter.increment();
    }

    receive() external payable {
        payable(_msgSender()).transfer(msg.value);
    }

    /**
     * @notice Set new partner only for admins
     * @param partnerAddress To get paid after
     */
    function setNewPartner(address partnerAddress) external onlyRole(ADMIN_ROLE) {
        require(!hasRole(PARTNER_ROLE, partnerAddress), "Partner already stored");
        require(partnerAddress != address(0), "Address zero");

        uint256 partnerId = _partnerCounter.current();
        _partnerCounter.increment();

        _grantRole(PARTNER_ROLE, partnerAddress);
        emit PartnerAdded(partnerId, partnerAddress);
    }

    /**
     * @notice Set new rider
     *              Required:
     *                - Address is not address zero and is not already stored
     */
    function setNewRider(address riderAddress) external onlyRole(ADMIN_ROLE) {
        require(!hasRole(RIDER_ROLE, riderAddress), "Rider already stored");
        require(riderAddress != address(0), "Address zero");

        uint256 riderId = _riderCounter.current();
        _riderCounter.increment();

        _grantRole(RIDER_ROLE, riderAddress);
        _riderActiveOrder[riderAddress] = 0;
        emit RiderAdded(riderId, riderAddress);
    }

    /**
     * @notice Store new order in mapping _orders
     *              Required:
     *                - Price (param and sended) is > 0
     *                - Caller is not address zero
     *                - Partner must be registered
     *
     * @param partnerId The partner id to retrieve it address
     * @param orderPrice The total of the order in wei
     * @param riderFee Fee for the rider
     */
    function storeOrder(uint256 partnerId, uint256 orderPrice, uint256 riderFee) external nonReentrant {
        uint256 total = riderFee + orderPrice;

        require(_msgSender() != address(0), "Sender is address zero");
        require(getRoleMember(PARTNER_ROLE, partnerId) != address(0), "Non exists partner");

        // Transfer
        SafeERC20.safeTransferFrom(stablecoin, _msgSender(), address(this), total);
        
        uint256 orderId = _ordersCounter.current();
        _ordersCounter.increment();

        Order memory order;
        order.partnerId  = partnerId;
        order.state      = OrderState.NotStarted;
        order.client     = _msgSender();
        order.total      = orderPrice;
        order.riderFee   = riderFee;

        _orders[orderId] = order;
        emit OrderAdded(orderId, _msgSender(), orderPrice, riderFee, partnerId);
    }

    //                                                       =========== Read section ===========                                                       

    /**
     * @notice Get the state of `orderId`
     * @param  orderId The order ID
     * @return OrderState of the order
     */
    function getOrderState(uint256 orderId) external view validOrder(orderId) returns(OrderState) {
        return _orders[orderId].state;
    }
 
    /**
     * @notice Get the total of orders made
     * @return totalOfOrders The number of orders
     */
    function getOrderCounter() external view returns (uint256) {
        return _ordersCounter.current() - 1;
    }

    /**
     * @notice Get the state of `orderId`
     * @return activeOrder of the rider
     */
    function getActiveOrder() external view onlyRole(RIDER_ROLE) returns (uint256) {
        return _riderActiveOrder[_msgSender()];
    }

    /**
     * @notice Get the address registered of `partnerId`
     * @param  partnerId The partner ID for search his address
     * @return partnerAddress of `partnerId`
     */
    function getPartnerAddress(uint256 partnerId) external view returns(address) {
        return getRoleMember(PARTNER_ROLE, partnerId);
    }

    /**
     * @notice Get the address registered of `riderId`
     * @param  riderId The rider ID for search his address
     * @return riderAddress of `riderId`
     */    
    function getRiderAddress(uint256 riderId) external view returns(address) {
        return getRoleMember(RIDER_ROLE, riderId);
    }

    /**
     * @notice Returns the type of user
     * @return type of the caller
     */
    function getTypeOfUser() external view returns (string memory) {
        if(hasRole(PARTNER_ROLE, _msgSender())){
            return "Partner";
        }
        else if(hasRole(RIDER_ROLE, _msgSender())){
            return "Rider";
        }
        else{
            return "User";
        }
    }

    /**
     * @notice Get the state of `orderId`
     * @param  orderId The order ID
     * @return OrderState of the order
     */
    function getClientAddress(uint256 orderId) external view validOrder(orderId) returns (address) {
        return _orders[orderId].client;
    }
}

