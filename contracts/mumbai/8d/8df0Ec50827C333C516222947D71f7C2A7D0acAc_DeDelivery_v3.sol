pragma solidity 0.8.17;

import "./Storage.sol";

/**
 * @title  A decentraliced delivery
 * @notice You can use this contract to make decentraliced orders
 * @dev In case the DB goes down, the service can still be used.
*/
contract DeDelivery_v3 is Storage {

    uint256 public fee;
    address public feeAddress;

    event OrderStarted(
        uint256 indexed orderId,
        uint256 indexed partnerId
    );

    event OrderRejected(
        uint256 indexed orderId,
        uint256 indexed partnerId
    );

    event RiderAssigned(
        address indexed riderAssigned,
        uint256 indexed orderId
    );

    event OrderPicked(
        uint256 indexed orderId
    );

    event OrderDelivered(
        uint256 indexed orderId, 
        address indexed client, 
        address indexed partnerAddress, 
        uint256 partnerId, 
        uint256 partnerTotal
    );

    event RiderPaid(
        address indexed riderAddress, 
        uint256 indexed orderId, 
        uint256 total
    );

    event PartnerPaid(
        address indexed partnerAddress, 
        uint256 indexed orderId, 
        uint256 total
    );

    event OrderCanceled(
        uint256 indexed orderId
    );

    /**
     * @notice Checks if sender is owner or chosen rider
     * @param orderId The order ID
     */
    modifier onlyPartnerRiderOwner(uint256 orderId) {
        Order memory order = _orders[orderId];
        require(
            order.chosenRider == _msgSender() 
            || 
            order.client == _msgSender()
            ||
            getRoleMember(PARTNER_ROLE, order.partnerId) == _msgSender()
            ,
            "Neither partner nor rider nor client"
        );
        _;
    }

    /**
     * @notice Constructor sets initial roles and fee address
     * @param feeAddress_ Fee address
     * @param fee_ Fee amount
     */
    constructor(address feeAddress_, uint256 fee_, address stablecoin) Storage(stablecoin) {
        feeAddress = feeAddress_;
        fee = fee_ * 100;
    }

    /**
     * @notice Start an order by partner
     *              Required:
     *                - `orderId` partner is caller
     *
     * @param orderId The order ID
     */
    function startOrder(uint256 orderId) external validOrder(orderId) onlyPartnerRiderOwner(orderId) {
        Order storage order = _orders[orderId];
        require(order.state == OrderState.NotStarted, "Order in process");
        order.state = OrderState.InProcess;

        emit OrderStarted(orderId, order.partnerId);
    }

    /**
     * @notice Reject the order and return to client the paid only for partner
     * @param orderId The order ID to reject
     */
    function rejectOrder(uint256 orderId) external validOrder(orderId) onlyPartnerRiderOwner(orderId) {
        Order storage order = _orders[orderId];
        require(order.state == OrderState.NotStarted, "Order in process");
        order.state = OrderState.Canceled;

        uint256 total = order.total + order.riderFee;
        SafeERC20.safeTransfer(stablecoin, order.client, total);

        emit OrderRejected(orderId, order.partnerId);
    }

    /**
     * @notice Rider select function for orders
     *              Required:
     *                - Registered rider and not occupied
     *                - Not delivered order
     *                - Rider not assigned yet
     *
     * @param orderId Order ID to set rider
     */
    function riderSelect(uint256 orderId) external onlyRole(RIDER_ROLE) validOrder(orderId) {
        Order storage order = _orders[orderId];
        
        require(_riderActiveOrder[_msgSender()] == 0, "Busy rider");
        require(order.state == OrderState.InProcess, "Order not in process");
        require(order.client != _msgSender(), "Rider cannot be the client");

        SafeERC20.safeTransferFrom(stablecoin, _msgSender(), address(this), order.total);
        
        // Order update
        order.chosenRider = _msgSender();
        order.state = OrderState.RiderSelected;

        // Rider update
        _riderActiveOrder[_msgSender()] = orderId;
        emit RiderAssigned(_msgSender(), orderId);
    }

    /**
     * @notice Partner assign new state to order
     *              Required:
     *                - Registered partner
     *                - Rider assigned
     *
     * @param orderId Order ID
     *! @dev CHECK THAT THE RIDER IS THE RIDER OF THE ORDER. (v4)
     */
    function pickUp(uint256 orderId) external onlyRole(PARTNER_ROLE) validOrder(orderId) onlyPartnerRiderOwner(orderId) {
        Order storage order = _orders[orderId];
        require(order.state == OrderState.RiderSelected, "Rider not selected");
        
        // Order update
        order.state = OrderState.PickedUp;
        emit OrderPicked(orderId);
    }

    /**
     * @notice This function delivers an order and pays partner and DAO
     *              Required:
     *                - Sender MUST BE the orderer
     *                - Order not delivered by the rider/owner
     *
     * @param orderId The order ID
     */
    function deliverOrder(uint256 orderId) external nonReentrant validOrder(orderId) onlyPartnerRiderOwner(orderId) {
        Order storage order = _orders[orderId];
        require(order.state == OrderState.PickedUp, "Not picked up");
        order.state = OrderState.Completed;

        uint256 orderTotal = order.total;

        // Rider
        uint256 riderTotal = order.riderFee + orderTotal;
        _riderActiveOrder[order.chosenRider] = 0;
        emit RiderPaid(order.chosenRider, orderId, riderTotal);

        // DAO
        uint256 daoTotal = calculatePercentage(orderTotal, fee);

        // Partner
        address partner = getRoleMember(PARTNER_ROLE, order.partnerId);
        uint256 partnerTotal = orderTotal - daoTotal;
        emit PartnerPaid(partner, orderId, partnerTotal);

        SafeERC20.safeTransfer(stablecoin, partner, partnerTotal);
        SafeERC20.safeTransfer(stablecoin, order.chosenRider, riderTotal);
        SafeERC20.safeTransfer(stablecoin, feeAddress, daoTotal);
        emit OrderDelivered(orderId, order.client, partner, order.partnerId, partnerTotal);
    }

    //? Private functions
    /**
     * @notice Calculate the percentage of the total order price
     * @param number The total price
     * @param percentage Percentage in basis points
     * @return partOf The percentage (percentage) of total (number)
     * @dev Used by delivery ops.
     */
    function calculatePercentage(uint256 number, uint256 percentage) private pure returns (uint256) {
        return number * percentage / 10000; 
    }

    //                                                       =========== Admin section ===========                                                       

    /**
     * @notice Set new paramters
     *              Required:
     *                - `feeAddress_` should not be address zero
     *                - `fee_` should not be zero
     * 
     * @param daoAddress_ The new fee address
     * @param fee_ The new fee amount
     */
    function setNewParamaters(address daoAddress_, uint256 fee_) external onlyRole(ADMIN_ROLE) {
        require(daoAddress_ != address(0), "Zero address");
        feeAddress = daoAddress_;
        fee = fee_ * 100;
    }

    /**
     * @notice This function is called for cancel a non started order.
     * @param orderId The order ID
     */
    function userCancelOrder(uint256 orderId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];
        require(order.state == OrderState.NotStarted, "Order started");

        order.state = OrderState.Canceled;

        uint256 total = order.total + order.riderFee;
        SafeERC20.safeTransfer(stablecoin, order.client, total);
    }

    /**
     * @notice This function is called for accept an order. Same that startOrder
     * @param orderId The order ID
     * @param partnerId The ID of the partner
     */
    function partnerAccept(uint256 orderId, uint256 partnerId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];
        require(partnerId == order.partnerId, "Not partner");
        require(order.state == OrderState.NotStarted, "Order started");

        order.state = OrderState.InProcess;

        emit OrderStarted(orderId, order.partnerId);
    }

    /**
     * @notice This function is called for reject a non started order. Same that rejectOrder
     * @param orderId The order ID
     * @param partnerId The ID of the partner
     */
    function partnerReject(uint256 orderId, uint256 partnerId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];
        require(partnerId == order.partnerId, "Not partner");
        require(order.state == OrderState.NotStarted, "Order started");

        order.state = OrderState.Canceled;

        uint256 total = order.total + order.riderFee;
        SafeERC20.safeTransfer(stablecoin, order.client, total);

        emit OrderRejected(orderId, order.partnerId);
    }

    /**
     * @notice This function is called to release a rider from an order. MUST be another rider selected before.
     * @param orderId The order ID
     * @param riderId The rider ID who wants be free
     * @dev For next versions: Rider opens a chat with other rider (p2p agreement) & new param newRiderId 
     */
    function releaseRider(uint256 orderId, uint256 riderId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];
        address riderAddress = getRoleMember(RIDER_ROLE, riderId);

        require(order.chosenRider == riderAddress, "Not rider");
        require(order.state == OrderState.RiderSelected, "Rider not selected yet");
        
        order.state = OrderState.InProcess;
        _riderActiveOrder[riderAddress] = 0;
        SafeERC20.safeTransfer(stablecoin, riderAddress, order.total);
    }

    /**
     * @notice This function is called for change an order to pickedup state. Same that pickUp
     * @param orderId The order ID
     * @param partnerId The ID of the partner
     * @param riderId To check if it's the same in the contract
     */
    function partnerDeliver(uint256 orderId, uint256 partnerId, uint256 riderId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];
        address riderAddress = getRoleMember(RIDER_ROLE, riderId);

        require(partnerId == order.partnerId, "Not partner");
        require(riderAddress == order.chosenRider, "Not rider");
        require(order.state == OrderState.RiderSelected, "Rider not selected yet");

        order.state = OrderState.PickedUp;
        emit OrderPicked(orderId);
    }

    /**
     * @notice This function is called when an user cannot finish an order. Same that deliverOrder
     * @param orderId The order ID to cancel
     * @param riderId When the rider comes to the home of the client, will ask to the rider its ID to check
     */
    function userDeliver(uint256 orderId, uint256 riderId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];

        require(order.chosenRider == getRoleMember(RIDER_ROLE, riderId), "Not the rider");
        require(order.state == OrderState.PickedUp, "Not picked up");
        order.state = OrderState.Completed;

        uint256 orderTotal = order.total;

        // Rider
        uint256 riderTotal = order.riderFee + orderTotal;
        _riderActiveOrder[order.chosenRider] = 0;
        emit RiderPaid(order.chosenRider, orderId, riderTotal);

        // DAO
        uint256 daoTotal = calculatePercentage(orderTotal, fee);

        // Partner
        address partner = getRoleMember(PARTNER_ROLE, order.partnerId);
        uint256 partnerTotal = orderTotal - daoTotal;
        emit PartnerPaid(partner, orderId, partnerTotal);

        SafeERC20.safeTransfer(stablecoin, partner, partnerTotal);
        SafeERC20.safeTransfer(stablecoin, order.chosenRider, riderTotal);
        SafeERC20.safeTransfer(stablecoin, feeAddress, daoTotal);
        emit OrderDelivered(orderId, order.client, partner, order.partnerId, partnerTotal);
    }

    /**
     * @notice This function is called when the admin wants to pay with the money of rider to the partner
     * @param orderId The order ID to cancel
     */
    function cancelForPartner(uint256 orderId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];

        address partner = getRoleMember(PARTNER_ROLE, order.partnerId);

        if (order.state == OrderState.PickedUp || order.state == OrderState.RiderSelected) {
            _riderActiveOrder[order.chosenRider] = 0;
            SafeERC20.safeTransfer(stablecoin, partner, order.total);
        }

        order.state = OrderState.Canceled;
        uint256 total = order.total + order.riderFee;

        SafeERC20.safeTransfer(stablecoin, order.client, total);
        emit OrderCanceled(orderId);
    }

    /**
     * @notice This function in called when the rider is a good person, the money returns to it. 
     * Client in both functions recover its money.
     * @param orderId The order ID to cancel
     */
    function cancelForRider(uint256 orderId) external validOrder(orderId) onlyRole(ADMIN_ROLE) {
        Order storage order = _orders[orderId];

        if (order.state == OrderState.PickedUp || order.state == OrderState.RiderSelected) {
            _riderActiveOrder[order.chosenRider] = 0;
            SafeERC20.safeTransfer(stablecoin, order.chosenRider, order.total);
        }

        order.state = OrderState.Canceled;
        uint256 total = order.total + order.riderFee;

        SafeERC20.safeTransfer(stablecoin, order.client, total);
        emit OrderCanceled(orderId);
    }
}

