import "@openzeppelin/contracts/utils/Context.sol";
import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import "@uniswap/v3-periphery/contracts/libraries/TransferHelper.sol";


struct CommonResolverOptions {
    address inputTokenAddress;
    address targetAddress; // target address for the payment
    address destinationAddress; // address for the designation of funds 
}

struct SwapResolverOptions {
    bytes path;
    address recipient;
    uint256 deadline;
    uint256 amountIn;
    uint256 amountOutMinimum;
    CommonResolverOptions common;
}

// Resolver interface
interface IResolver {
    // Pass payment info as calldata only the manager should have the right to update it
    function resolve(uint256 amount, bytes calldata resolverOptions) external returns (uint256);

    // Reverts if the calldata passes is not a proper struct
    function validateAdditionalCalldata(bytes calldata resolverOptions) external view;
}

contract SwapResolver is Context, IResolver {
    ISwapRouter private router; // Uniswap V3 router contract

    constructor(address _router) {
        router = ISwapRouter(_router);
    }

    // Validate the additional calldata passed to the resolver contract
    function validateAdditionalCalldata(bytes calldata resolverOptions) pure external {

        // Decode the additional calldata as a SwapResolverOptions struct
        (SwapResolverOptions memory data) = abi.decode(resolverOptions, (SwapResolverOptions));
        abi.decode(resolverOptions, (SwapResolverOptions));
        
        // Check if the decode was successful
        // require(success, "Invalid additional calldata");
    }

    function resolve(uint256 amountIn, bytes calldata resolverOptions) public returns (uint256 amountOut) {

        // Decode the additional calldata as a SwapResolverOptions struct
        (SwapResolverOptions memory swapResolverOptions) = abi.decode(resolverOptions, (SwapResolverOptions));
        
        TransferHelper.safeTransferFrom(swapResolverOptions.common.inputTokenAddress, _msgSender(), address(this), amountIn);
        TransferHelper.safeApprove(swapResolverOptions.common.inputTokenAddress, address(router), amountIn);

        // Multiple pool swaps are encoded through bytes called a `path`. A path is a sequence of token addresses and poolFees that define the pools used in the swaps.
        // The format for pool encoding is (tokenIn, fee, tokenOut/tokenIn, fee, tokenOut) where tokenIn/tokenOut parameter is the shared token across the pools.
        // Since we are swapping DAI to USDC and then USDC to WETH9 the path encoding is (DAI, 0.3%, USDC, 0.3%, WETH9).
        ISwapRouter.ExactInputParams memory params =
            ISwapRouter.ExactInputParams({
                path: swapResolverOptions.path,
                recipient: swapResolverOptions.common.destinationAddress,
                deadline: block.timestamp,
                amountIn: amountIn,
                //TODO: this should be verified using an oracle
                amountOutMinimum: 0
            });

        // Executes the swap.
        amountOut = router.exactInput(params);
        
        return amountOut;
    }
}