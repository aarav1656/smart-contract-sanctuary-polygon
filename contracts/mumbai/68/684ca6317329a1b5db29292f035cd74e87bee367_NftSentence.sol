// Define the contract
contract NftSentence {
    
    // Define the Sentence struct
    struct Sentence {
        string phrase;
        string author;
    }
    
    // Declare the variables
    address owner;
    Sentence[] sentences;

    address nftContractAddress; // The nft contract address
    
    // Define the constructor function
    constructor() {
        // Set the contract owner
		owner = msg.sender;

        //  Set the nft contract address (test token address: 0xE9dd65752Cf54D79430e44B73ea6557feE276B2e)
        setNftContractAddress(0xE9dd65752Cf54D79430e44B73ea6557feE276B2e);
		
		// Add the initial sentences
		addSentence("Aaaaa aaaa  aaaaaa", "AAA");
		addSentence("Bbbbb bb bbbbb bb", "BBB");
		addSentence("Cccccccccccc cccc", "CC");
		addSentence("Ddd dddddd ddd ddd ddddd", "DDDD");
    }
    
    // Define the onlyOwner modifier
    modifier onlyOwner() {
        require(msg.sender == owner, "Only the owner can perform this action");
        _;
    }
    
    // Define the addSentence function
    function addSentence(string memory phrase, string memory author) public onlyOwner {
        Sentence memory sentence = Sentence({phrase: phrase, author: author});
		sentences.push(sentence);
    }
    
    // Define the checkNft function
    function checkNft(address userAddress, uint256 tokenId) public view returns (bool) {
        IERC721 nftContract = IERC721(nftContractAddress);
        return nftContract.ownerOf(tokenId) == userAddress;
    }
    
    // Define the getNftSentence function
    function getNftSentence(address userAddress, uint256 tokenId) public view returns (Sentence memory) {
		require(checkNft(userAddress, tokenId), "You do not own this NFT");
		
        //uint256 sentenceIndex = uint256(keccak256(abi.encodePacked(block.timestamp, tokenId, sentences.length))) % sentences.length;
        uint256 sentenceIndex = uint256(keccak256(abi.encodePacked(tokenId, sentences.length))) % sentences.length;

		return sentences[sentenceIndex];
	}
    
    // Define the setNftSentence function
    //function setNftSentence(uint256 tokenId, uint256 sentenceIndex) public onlyOwner {
    //    require(sentenceIndex < sentences.length, "Invalid sentence index");
    //    nftToSentence[tokenId] = sentences[sentenceIndex];
    //}
    
    // Define the setNftContractAddress function
    function setNftContractAddress(address _contractAddress) public onlyOwner {
        nftContractAddress = _contractAddress;
    }

    function getAllSentences() public view returns (string[] memory) {
        string[] memory formatedSentences = new string[](sentences.length);
        for (uint256 i = 0; i < sentences.length; i++) {
			Sentence memory sentence = sentences[i];
			string memory sentenceString = string(abi.encodePacked("[", uint256ToString(i), "] : ", sentence.phrase, " -- ", sentence.author));
            formatedSentences[i] = sentenceString;
		}
        return formatedSentences;
    }
    
	// Define the printAllSentences function
	function printAllSentences() public onlyOwner {
		for (uint256 i = 0; i < sentences.length; i++) {
			Sentence memory sentence = sentences[i];
			string memory sentenceString = string(abi.encodePacked("[", uint256ToString(i), "] : ", sentence.phrase, " -- ", sentence.author));
			emit PrintSentence(sentenceString);
		}
	}

