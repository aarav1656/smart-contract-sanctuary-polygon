    )
        Ownable()
    {
        policyPrice = policyPrice_;
        policyReward = policyReward_;

        setChainlinkToken(chainlinkToken_);
        setChainlinkOracle(chainlinkOracle_);

        _chainlinkFee = 1 * LINK_DIVISIBILITY / 10; // 0.1
        _jobId = jobId_;
    }

    // TODO: use Trustus to compute and validate stuff off-chain
    function applyForPolicy(
        string calldata flight_,
        uint64 arrivalTime_
    )
        external
        payable
    {
        require(msg.value == policyPrice, "Invalid value sent");
        // require(arrivalTime_ > block.timestamp + minTimeBeforeArrival, "Flight is too soon");

        bytes32 flightId = keccak256(abi.encode(flight_, arrivalTime_));

        require(_addrToFlight[msg.sender][flightId] == false, "Already applied");

        FlightInfo storage flightInfo = _flights[flightId];
        // check if not initialized
        if (flightInfo.policyState == 0) {
            flightInfo.flightId = flightId;
            flightInfo.flightName = flight_;
            flightInfo.arrivalTime = arrivalTime_;
            flightInfo.policyState = 1;
        }
        flightInfo.subscribers.push(msg.sender);

        _addrToFlight[msg.sender][flightId] = true;

        emit AppliedForPolicy(flightId, msg.sender, arrivalTime_, flight_);
    }

    function policyState(bytes32 flightId_)
        external
        view
        returns (uint8)
    {
        return _flights[flightId_].policyState;
    }

    function shouldCheckFlight(bytes32 flightId)
        external
        view
        returns (bool)
    {
        FlightInfo storage flightInfo = _flights[flightId];
        return flightInfo.arrivalTime + minTimeAfterArrival < block.timestamp;
    }

    // We presume anyone can call it
    // we could inventivise others (like aave or dustsweeper?)
    // or we guarantee the call ourselves
    // solidity is just not great with queues and everything
    // but we def. should have a cleanup function anyway
    // to ensure a call X hours after arrival
    // - I also thought about having a linked (double) list with binary-search
    // that stores ordered by arrival time flights
    // then we can have upkeeps automatically do that
    function checkFlight(bytes32 flightId)
        external
        returns (bytes32 requestId)
    {
        FlightInfo storage flightInfo = _flights[flightId];
        // require(flightInfo.arrivalTime + minTimeAfterArrival < block.timestamp, "Check later");
        require(flightInfo.policyState == 1, "Wrong policy state");

        Chainlink.Request memory req = buildChainlinkRequest(
            _jobId,
            address(this),
            this.fulfillFlightStatus.selector
        );

        req.add("flight", flightInfo.flightName);
        req.add("arrival", Strings.toString(flightInfo.arrivalTime));

        flightInfo.policyState = 2;

        requestId = sendChainlinkRequest(req, _chainlinkFee);
        _chainlinkReqToFlight[requestId] = flightInfo.flightId;
    }

    function fulfillFlightStatus(
        bytes32 requestId_,
        bytes1 status_,
        uint64 delay_
    )
        external
        recordChainlinkFulfillment(requestId_)
    {
        bytes32 flightId = _chainlinkReqToFlight[requestId_];

        FlightInfo storage flightInfo = _flights[flightId];
        require(flightInfo.policyState == 2, "Wrong state");

        // TODO: carefully check other statuses
        if (status_ == "C") {
            // cancelled -> pay everyone
            _onPolicyPaid(flightId, true, delay_);
        } else if (status_ != "L") {
            // not arrived yet
            // will have to reschedule the check
            _onPolicyPostponed(flightId);
        } else if (delay_ >= minDelayToWin) {
            // delayed just enough
            _onPolicyPaid(flightId, false, delay_);
        } else {
            // farewell
            _onPolicyFailed(flightId, delay_);
        }

        delete _chainlinkReqToFlight[requestId_];
    }

    function _onPolicyPostponed(bytes32 flightId_)
        internal
    {
        FlightInfo storage flightInfo = _flights[flightId_];
        flightInfo.policyState = 1; // back to init
        // TODO: also add a cooldown mechanism

        emit PolicyPostponed(flightId_);
    }

    function _onPolicyPaid(bytes32 flightId_, bool isCancelled_, uint64 actualDelay_)
        internal
    {
        FlightInfo storage flightInfo = _flights[flightId_];
        flightInfo.policyState = 3;

        for (uint32 i = 0; i < flightInfo.subscribers.length; i++) {
            address subscriber = flightInfo.subscribers[i];

            (bool sent,) = subscriber.call{value: policyReward}("");
            require(sent, "Failed to send reward");

            emit PolicyPaid(flightId_, subscriber, isCancelled_, actualDelay_);
        }
    }

    function _onPolicyFailed(bytes32 flightId_, uint64 actualDelay_)
        internal
    {
        FlightInfo storage flightInfo = _flights[flightId_];
        flightInfo.policyState = 4;

        emit PolicyFailed(flightId_, actualDelay_);
    }

    // --- management ---
    function setPolicyPriceReward(uint256 policyPrice_, uint256 policyReward_)
        external
        onlyOwner
    {
        policyPrice = policyPrice_;
        policyReward = policyReward_;
    }

    function withdraw(address to)
        external
        onlyOwner
    {
        uint256 balance = address(this).balance;
        (bool sent,) = to.call{value: balance}("");
        require(sent, "Failed to withdraw");
    }

    // allows to fund the bank
    receive() external payable {}
}