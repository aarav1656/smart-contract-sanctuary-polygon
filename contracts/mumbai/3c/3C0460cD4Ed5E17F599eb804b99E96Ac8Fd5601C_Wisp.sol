pragma solidity ^0.8.17;

import "./utils/ERC1967Upgrade.sol";

contract WispManagement is ERC1967Upgrade {

    address public admin;
    mapping(address => bool) public workers;
    mapping(uint256 => address) public clients;

    event AdminChanged(address newAdmin);
    event WorkerAdded(address worker);
    event WorkerRemoved(address worker);
    event ClientUpdated(uint256 clientId, address clientAddress);

    modifier onlyAdmin() {
        require(msg.sender == admin, "Message sender is not an admin");
        _;
    }

    modifier onlyWorker() {
        require(workers[msg.sender], "Message sender is not a worker");
        _;
    }

    function upgrade(address newImplementation) public onlyAdmin {
        _upgradeTo(newImplementation);
    }

    function changeAdmin(address newAdmin) public onlyAdmin {
        require(newAdmin != address(0), "Invalid new admin");
        admin = newAdmin;
        emit AdminChanged(newAdmin);
    }

    function addWorker(address worker) public onlyAdmin {
        require(!workers[worker], "Already a worker");
        workers[worker] = true;
        emit WorkerAdded(worker);
    }

    function removeWorker(address worker) public onlyAdmin {
        require(workers[worker], "Not a worker");
        workers[worker] = false;
        emit WorkerRemoved(worker);
    }

    function setClientAddress(uint256 clientId, address clientAddress) public onlyAdmin {
        clients[clientId] = clientAddress;
        emit ClientUpdated(clientId, clientAddress);
    }
}