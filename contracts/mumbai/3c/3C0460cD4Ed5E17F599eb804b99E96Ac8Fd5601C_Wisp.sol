import "./WispManagement.sol";
import "./utils/WispEIP712.sol";
import "./utils/Signature.sol";
import {Client, Agreement, Interval} from "./WispEntities.sol";

contract Wisp is Initializable, WispManagement {

    event SubscriptionPaid(address payer, bytes32 agreementHash);
    event SubscriptionCancelled(address payer, bytes32 agreementHash);

    mapping(address => mapping(bytes32 => uint256)) public lastPaymentDates;

    constructor() {
        _disableInitializers();
    }

    function initialize(address[] calldata _workers, Client[] calldata _clients) public initializer {
        admin = msg.sender;
        for (uint256 i = 0; i < _workers.length; i++) {
            addWorker(_workers[i]);
        }
        for (uint256 i = 0; i < _clients.length; i++) {
            setClientAddress(_clients[i].id, _clients[i].payoutAddress);
        }
    }

    function setupAndCharge(Agreement calldata agreement, bytes calldata signature, address payer) public onlyWorker {
        bytes32 agreementHash = WispEIP712.hashTypedData(agreement);
        Signature.verify(signature, agreementHash, payer);

        require(lastPaymentDates[payer][agreementHash] == 0, "Agreement is not valid");

        address recipient = clients[agreement.clientId];
        require(recipient != address(0), "Recipient is not valid");
        bool transferred = IERC20(agreement.token).transferFrom(payer, recipient, agreement.amount);
        require(transferred, "Transfer is failed");
        lastPaymentDates[payer][agreementHash] = truncateToDay(block.timestamp);
        emit SubscriptionPaid(payer, agreementHash);
    }

    function charge(Agreement calldata agreement, address payer) public onlyWorker {
        bytes32 agreementHash = WispEIP712.hashTypedData(agreement);
        uint256 lastPaymentDate = lastPaymentDates[payer][agreementHash];
        require(lastPaymentDate != 0, "Agreement is not valid");

        uint256 nextPaymentDate = lastPaymentDate + minIntervalDuration(agreement.interval) * agreement.intervalCount;
        require(nextPaymentDate <= block.timestamp, "Payment is not yet due");

        address recipient = clients[agreement.clientId];
        require(recipient != address(0), "Recipient is not valid");
        bool transferred = IERC20(agreement.token).transferFrom(payer, recipient, agreement.amount);
        require(transferred, "Transfer is failed");
        lastPaymentDates[payer][agreementHash] = truncateToDay(block.timestamp);
        emit SubscriptionPaid(payer, agreementHash);
    }

    function cancelAgreement(address payer, bytes32 agreementHash) public {
        require(msg.sender == payer || workers[msg.sender], "Only worker and owner can cancel the agreement");
        require(lastPaymentDates[payer][agreementHash] != 0, "Invalid agreement");
        lastPaymentDates[payer][agreementHash] = type(uint256).max;
        emit SubscriptionCancelled(payer, agreementHash);
    }

    function minIntervalDuration(Interval interval) private pure returns (uint256) {
        if (interval == Interval.DAY) {
            return 86400;
        } else if (interval == Interval.WEEK) {
            return 604800;
        } else if (interval == Interval.MONTH) {
            return 2419200;
        } else if (interval == Interval.YEAR) {
            return 31536000;
        }

        revert();
    }

    function truncateToDay(uint256 timestamp) private pure returns (uint256) {
        return timestamp - (timestamp % 86400);
    }
}

