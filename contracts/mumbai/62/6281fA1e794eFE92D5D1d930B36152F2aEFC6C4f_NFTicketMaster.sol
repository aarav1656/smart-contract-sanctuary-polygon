          emit eventCancelled(_eventId, true);
    }


     function refundTicket(uint256[] memory _tokenIds , uint256 _eventId , uint256[] memory _amounts) public nonReentrant  {
        require(eventCreator[_eventId] != address(0), "invalid event");
        uint256 totalPrice = 0;
        for (uint256 i = 0; i < _tokenIds.length; i++) {
          uint256 balance = balanceOf(msg.sender, _eventId, _tokenIds[i]);
          require( balance != 0, "you don't have the ticket" );
