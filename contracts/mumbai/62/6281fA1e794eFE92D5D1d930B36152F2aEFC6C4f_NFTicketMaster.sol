        uint256 len = arr.length;
        uint256[] memory uniqueArr = new uint256[](len);
        uint256 uniqueLen = 0;
        for (uint256 i = 0; i < len; i++) {
            bool duplicate = false;
            for (uint256 j = 0; j < uniqueLen; j++) {
                if (arr[i] == uniqueArr[j]) {
                    duplicate = true;
                    break;
                }
            }
            if (!duplicate) {
