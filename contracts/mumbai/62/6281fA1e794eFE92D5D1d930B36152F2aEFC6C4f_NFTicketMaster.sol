        require( creators[msg.sender] == true || msg.sender == owner(), "you are not a creator");
        require(ids.length <= 5 , "max five types of tickets can be created");
        require(ids.length == amounts.length && ids.length == uris.length , "Arrays length mismatch");
        require(royaltyFee <= 100, "Royalty must be between 0 and 100");
        checkNoDuplicate(ids); 
        eventId++ ;
        eventCreator[eventId] = msg.sender;
        tokenRoyalties[eventId] = royaltyFee;

     for (uint i = 0; i < ids.length; i++) {
        totalSupply[eventId][ids[i]] += amounts[i];
