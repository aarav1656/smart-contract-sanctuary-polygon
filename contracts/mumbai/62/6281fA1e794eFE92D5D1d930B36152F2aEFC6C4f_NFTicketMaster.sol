            tokenSellers[_eventId][tokenIds[i]].push(msg.sender);
            tokenAmounts[_eventId][tokenIds[i]] += amounts[i];
            tokenPrices[_eventId][tokenIds[i]] = prices[i];
            tokenForSale[_eventId][tokenIds[i]] = true;
            amountsToTransfer[i] = amounts[i];
        }
           safeBatchTransferFrom(msg.sender, address(this), tokenIds, amountsToTransfer,_eventId, " ");

            for (uint i = 0; i < tokenIds.length; i++) {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
