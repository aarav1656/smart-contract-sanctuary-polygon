            require(lockedNFTs[_eventId][tokenIds[i]].value == false, "you cannot buy the NFT during the event");

            uint256 price = daysOfEventParticipating * (tokenPrices[_eventId][tokenIds[i]] * amounts[i]);
            uint256 priceAfterDiscount = (price * discount) / 100;
            uint256 royalty = (priceAfterDiscount * tokenRoyalties[_eventId]) / 100;
            totalPrice += price; 
            totalRoyality += royalty;
            tokenAmounts[_eventId][tokenIds[i]] -= amounts[i];
            _safeTransferFrom(address(this), msg.sender, tokenIds[i], amounts[i], _eventId, "");
            uint256 balance = balanceOf(msg.sender, _eventId, tokenIds[i]);
            balance += amounts[i];

            if (tokenAmounts[_eventId][tokenIds[i]] == 0) {
                tokenForSale[_eventId][tokenIds[i]] = false;
            }
            emit Buy(msg.sender, tokenIds[i], amounts[i], price);
        }

            require(msg.value >= totalPrice, "Insufficient funds");
            if (msg.value > totalPrice) {
            payable(msg.sender).transfer(msg.value - totalPrice);
        }
            payable(seller).transfer(totalPrice - totalRoyality);
            payable(eventCreator[eventId]).transfer(totalRoyality);
    }


