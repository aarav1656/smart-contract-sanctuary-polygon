    function _div(uint256 _a, uint256 _b) internal pure returns (uint256 c) {
        require(_b != 0, "DIV_ZERO");
        uint256 c0 = _a * BONE;
        uint256 c1 = c0 + (_b / 2);
        c = c1 / _b;
    }

    function _min(uint256 _first, uint256 _second) internal pure returns (uint256) {
        if (_first < _second) {
            return _first;
        }
