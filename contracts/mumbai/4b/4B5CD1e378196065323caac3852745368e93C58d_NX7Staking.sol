pragma abicoder v2;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import '@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol';
import '@uniswap/v3-periphery/contracts/libraries/TransferHelper.sol';


contract NX7Staking is ERC721Holder, Ownable, ReentrancyGuard {
    struct Staking {
        uint256 amount;
        uint256 startTime;
        uint256 endTime;
        bool claimed;
    }

    IERC721 public nx7nft;
    address public nx7Token;
    address public usdcToken;

    uint256 public interval;

    ISwapRouter public immutable swapRouter;

    address public rewardWallet;

    mapping(address => mapping(uint256 => Staking)) public stakings;

    uint256 public lastUpdateBlock;

    event Staked(address indexed owner, uint256 id, uint256 amount, uint256 time);
    event Unstaked(address indexed owner, uint256 id, uint256 amount, uint256 time);
    event Claim(address indexed owner, uint256 id, uint256 amount);

    constructor(
        address _nx7nft,
        address _nx7Token,
        address _usdcToken,
        ISwapRouter _swapRouter,
        address _rewardWallet,
        uint256 _interval
    ) {
        nx7nft = IERC721(_nx7nft);
        nx7Token = _nx7Token;
        usdcToken = _usdcToken;
        swapRouter = _swapRouter;
        rewardWallet = _rewardWallet;
        interval = _interval;
    }

    function changeInterval(uint256 _interval) external {
        interval = _interval;
    }

    function changeRewardWallet(address _rewardWallet) external {
        rewardWallet = _rewardWallet;
    }
    function stake(uint256 _tokenId) external {
       require(
           nx7nft.ownerOf(_tokenId) == msg.sender ||
                nx7nft.isApprovedForAll(msg.sender, address(this)),
            "NX7Staking: Token not owned or approved by the sender"
        );
        require(stakings[msg.sender][_tokenId].amount == 0, "NX7Staking: Already staked");
        stakings[msg.sender][_tokenId] = Staking({
            amount: 1,
            startTime: block.timestamp,
            endTime: block.timestamp + interval,
            claimed: false
        });
        nx7nft.safeTransferFrom(msg.sender, address(this), _tokenId);

                emit Staked (msg.sender, _tokenId, 1, block.timestamp);

    }

    function unstake(uint256 _tokenId) external {
        Staking storage staking = stakings[msg.sender][_tokenId];
        require(staking.amount > 0, "NX7Staking: Not staked");
        require(staking.claimed, "NX7Staking: Reward not claimed yet");
        nx7nft.safeTransferFrom( address(this), msg.sender, _tokenId);

        staking.amount = 0;
        staking.startTime = 0;
        staking.endTime = 0;
        staking.claimed = false;

        emit Unstaked (msg.sender, _tokenId, 1, block.timestamp);
    }

    function claim(uint256 _tokenId) public nonReentrant returns (uint256 amountOut) {
        Staking storage staking = stakings[msg.sender][_tokenId];

        require(!staking.claimed, "NX7Staking:Reward already claimed");
        require(staking.amount > 0, "NX7Staking: Not staked");
        require(staking.endTime <= block.timestamp, "NX7Staking: Not yet time to claim");

        staking.claimed = true;

        uint256 usdcAmount = 1 * 10 ** 6;

        uint24 poolFee = 3000;

        TransferHelper.safeTransferFrom(usdcToken, msg.sender, address(this), usdcAmount);

       TransferHelper.safeApprove(usdcToken, address(swapRouter), usdcAmount);
        
       ISwapRouter.ExactInputSingleParams memory params =
            ISwapRouter.ExactInputSingleParams({
                tokenIn: usdcToken,
                tokenOut: nx7Token,
                fee: poolFee,
                recipient: msg.sender,
                deadline: block.timestamp,
                amountIn: usdcAmount,
                amountOutMinimum: 0,
                sqrtPriceLimitX96: 0
            });

        // The call to `exactInputSingle` executes the swap.
        amountOut = swapRouter.exactInputSingle(params);

        lastUpdateBlock = block.number;

        emit Claim(msg.sender, _tokenId, amountOut);
    }
    
}

