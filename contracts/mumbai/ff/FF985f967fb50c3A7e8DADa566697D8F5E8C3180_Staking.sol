pragma solidity ^0.8.11;

/// @author thirdweb

import "@thirdweb-dev/contracts/extension/ContractMetadata.sol";
import "@thirdweb-dev/contracts/extension/Multicall.sol";
import "@thirdweb-dev/contracts/extension/Ownable.sol";

import "@thirdweb-dev/contracts/eip/interface/IERC20.sol";
import "@thirdweb-dev/contracts/eip/interface/IERC20Metadata.sol";

import "@thirdweb-dev/contracts/openzeppelin-presets/security/ReentrancyGuard.sol";

import "@thirdweb-dev/contracts/lib/CurrencyTransferLib.sol";

import "@thirdweb-dev/contracts/openzeppelin-presets/utils/math/SafeMath.sol";

contract Staking is ContractMetadata, Multicall, Ownable, ReentrancyGuard {
    /// @dev ERC20 Reward Token address. See {_mintRewards} below.
    IERC20 public derivativeToken;
    /// @dev ERC20 Staking Token address. See {_mintRewards} below.
    IERC20 public stakingToken;

    /// @dev Total amount of rewards in the contract.
    uint256 private rewardBalance;
    
    /// State variables for calculating rewards
    uint256 public totalPool;
    uint256 public LSTGiven;
    uint256 public scaleFactor = 1e18;
        /// @dev Decimals of staking token.
    uint256 public stakingTokenDecimals;

    /// @dev Decimals of reward token.
    uint256 public derivativeTokenDecimals;

    constructor(
        IERC20 _stakingToken,
        IERC20 _derivativeToken
    )
    ReentrancyGuard() {
        require(address(_stakingToken) != address(0), "address 0");

        stakingToken = _stakingToken;
        stakingTokenDecimals = 18;
        derivativeTokenDecimals = 18;
        totalPool = 0;
        LSTGiven = 0;
        rewardBalance = 0;
    
    
        _setupOwner(msg.sender);
        require(_derivativeToken != _stakingToken, "Reward Token and Staking Token can't be same.");
        derivativeToken = _derivativeToken;
    }


    /*///////////////////////////////////////////////////////////////
                        External/Public Functions
    //////////////////////////////////////////////////////////////*/
    /**
     *  @notice    Stake ERC20 Tokens.
     *
     *  @dev       See {_stake}. Override that to implement custom logic.
     *
     *  @param _amount    Amount to stake.
     */
    function stake(uint256 _amount) external payable nonReentrant {
        uint256 scaledAmount = _amount * scaleFactor;
        _stake(scaledAmount);
    }

    /**
     *  @notice    Withdraw staked ERC20 tokens.
     *
     *  @dev       See {_withdraw}. Override that to implement custom logic.
     *
     *  @param _amount    Amount to withdraw.
     */
    function unstake(uint256 _amount) external payable nonReentrant {
        uint256 scaledAmount = _amount * scaleFactor;
        _unstake(scaledAmount);
    }

    function getStakeQuote(uint _amount) external returns(uint256){
        uint256 scaledAmount = _amount * scaleFactor;
        return _getStakeQuote(scaledAmount);
    }
    function getUnstakeQuote(uint _amount) external returns(uint256){
        uint256 scaledAmount = _amount * scaleFactor;
        return _getUnstakeQuote(scaledAmount);
    }


    // @dev Admin deposits reward tokens.
    function depositRewards(uint256 _amount) external payable virtual nonReentrant {
        uint256 scaledAmount = _amount * scaleFactor;
        _depositRewards(scaledAmount); // override this for custom logic.
    }

    /// @dev Admin can withdraw excess reward tokens.
    function withdrawTokens(uint256 _amount) external virtual nonReentrant {
        uint256 scaledAmount = _amount * scaleFactor;
        _withdrawTokens(scaledAmount); // override this for custom logic.
    }

    /// @notice View total rewards available in the staking contract.
    function getRewardsBalance() external view virtual returns (uint256) {
        return rewardBalance;
    }


    /*///////////////////////////////////////////////////////////////
                            Internal Functions
    //////////////////////////////////////////////////////////////*/

 function _stake(uint256 _amount) internal {
        require(_amount != 0, "Staking 0 tokens");
        require(stakingToken.balanceOf(msg.sender) >= _amount, "Insufficient funds");
        require(derivativeToken.balanceOf(address(this)) >= _amount, "Contract has insufficient funds");

        address _stakingToken = address(stakingToken);


        //uint256 balanceBefore = stakingToken.balanceOf(address(this));
        CurrencyTransferLib.safeTransferERC20(
        _stakingToken,
        _stakeMsgSender(),
        address(this),
        _amount
    );

        //uint256 actualAmount = stakingToken.balanceOf(address(this)) - balanceBefore;

        uint256 quote = _getStakeQuote(_amount);
        derivativeToken.transfer(msg.sender, quote);

        totalPool += _amount;
        LSTGiven += quote;


        //emit TokensStaked(_stakeMsgSender(), actualAmount);
    }

    function _unstake(uint256 _amount) internal  {
        require(_amount != 0, "Unstaking 0 tokens");
        require(derivativeToken.balanceOf(msg.sender) >= _amount, "Unstaking more than owned");
        require(stakingToken.balanceOf(address(this)) >= _amount, "Contract has insufficent tokens");

        address _derivativeToken = address(derivativeToken);


        //uint256 balanceBefore = derivativeToken.balanceOf(address(this));
        CurrencyTransferLib.transferCurrency(
            _derivativeToken,
            _stakeMsgSender(),
            address(this),
            _amount
        );
        //uint256 actualAmount = derivativeToken.balanceOf(address(this)) - balanceBefore;



        uint256 quote = _getUnstakeQuote(_amount);
        stakingToken.transfer(msg.sender, quote);

        LSTGiven -= _amount;
        totalPool -= quote; 

        //emit TokensWithdrawn(_stakeMsgSender(), _amount);
    }

    event GetStakeQuote(uint256 _amount, uint256 totalPool, uint256 LSTGiven, uint256 poolFraction, uint256 outputTokens);


    function _getStakeQuote(uint256 _amount) internal returns(uint256 outputTokens){
        require(_amount > 0, "Amount must be greater than zero");
        require(totalPool > 0, "totalPool is zero");
        require(LSTGiven > 0, "Given LST is zero");

        // LSTGiven * ((Scale factor * newPool) / oldPool) 
        // Scale factor is used to avoid integer division
        // poolFraction should be greater than or equal to 1
        uint256 poolFraction = LSTGiven * ((scaleFactor * (totalPool + _amount))/totalPool);

        require(poolFraction >= 1, "Error with calculations");    
        outputTokens = poolFraction / scaleFactor - LSTGiven; 
        
        emit GetStakeQuote(_amount, totalPool, LSTGiven, poolFraction, outputTokens);
        return outputTokens;
    }

    event GetUnstakeQuote(uint256 _amount, uint256 totalPool, uint256 LSTGiven, uint256 owedRewards, uint256 outputTokens);
    function _getUnstakeQuote(uint256 _amount) internal returns(uint256 outputTokens){
        require(_amount > 0, "Amount must be greater than zero");
        require(totalPool > 0, "totalPool is zero");
        require(LSTGiven > 0, "Given LST is zero");
        
        uint256 owedRewards = totalPool * ((scaleFactor * _amount) / LSTGiven);
        outputTokens = owedRewards / scaleFactor; 

        emit GetUnstakeQuote(_amount, totalPool, LSTGiven, owedRewards, outputTokens);
        return outputTokens;
    }


    /// @dev Admin deposits reward tokens -- override for custom logic.
    function _depositRewards(uint256 _amount) internal {
        require(msg.sender == owner(), "Not authorized");
        require(stakingToken.balanceOf(msg.sender) >= _amount, "Not enough tokens in wallet");

        address _stakingToken = address(stakingToken);

        //uint256 balanceBefore = derivativeToken.balanceOf(address(this));
        CurrencyTransferLib.transferCurrency(
            _stakingToken,
            msg.sender,
            address(this),
            _amount
        );
        //uint256 actualAmount = derivativeToken.balanceOf(address(this)) - balanceBefore;

        rewardBalance += _amount;
        totalPool += _amount;
    }

    /// 
    function _withdrawTokens(uint256 _amount) internal  {
        require(msg.sender == owner(), "Not authorized");
        require(stakingToken.balanceOf(address(this)) >= _amount, "Not enough tokens in contract");
        // to prevent locking of direct-transferred tokens
        //derivativeTokenBalance = _amount > derivativeTokenBalance ? 0 : derivativeTokenBalance - _amount;
        address _stakingToken = address(stakingToken);
        CurrencyTransferLib.transferCurrency(
            _stakingToken,
            address(this),
            msg.sender,
            _amount

        );

        rewardBalance -= _amount;

    }

    /// @dev Returns whether staking restrictions can be set in given execution context.
    function _canSetStakeConditions() internal view returns (bool) {
        return msg.sender == owner();
    }

    /// @dev Returns whether contract metadata can be set in the given execution context.
    function _canSetContractURI() internal view virtual override returns (bool) {
        return msg.sender == owner();
    }

    /// @dev Returns whether owner can be set in the given execution context.
    function _canSetOwner() internal view virtual override returns (bool) {
        return msg.sender == owner();
    }

        /// @dev Exposes the ability to override the msg sender -- support ERC2771.
    function _stakeMsgSender() internal view returns (address) {
        return msg.sender;
    }


    /*///////////////////////////////////////////////////////////////
                            Diagnosis Functions
    //////////////////////////////////////////////////////////////*/
    function senderStakeTokenAmount() external view returns(uint _amount){
        return stakingToken.balanceOf(msg.sender);
    }
    function senderderivativeTokenAmount() external view returns(uint _amount){
        return derivativeToken.balanceOf(msg.sender);
    }

    function _queryderivativeTokenAmount() external view returns(uint _amount){
        return derivativeToken.balanceOf(address(this));
    }

    function _queryStakingTokenAmount() external view returns(uint _amount){
        return stakingToken.balanceOf(address(this));
    }
    
    function _queryTotalPool() external view returns(uint256){
        return totalPool;
    }

    function _queryGivenDerivativeToken() external view returns (uint256) {
        return LSTGiven;
    }

    function _queryDerivativeTokenApproval() external view returns (uint256) {
        return derivativeToken.allowance(msg.sender, address(this));
    }

    function _queryStakingTokenApproval() external view returns (uint256) {
        return stakingToken.allowance(msg.sender, address(this));
    } 

}