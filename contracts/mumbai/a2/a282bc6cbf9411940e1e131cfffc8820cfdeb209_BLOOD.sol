contract BLOOD is NativeMetaTransaction, ContextMixin {
  using SafeMath for uint256;
  mapping (address => uint256) private balance;

  uint256 public totalSupply;
  string public name;

  constructor() {
    _initializeEIP712("Blood", "1");
    name = "Blood";
  }

  // This is to support Native meta transactions
    // never use msg.sender directly, use _msgSender() instead
    function _msgSender()
        internal
        view
        returns (address payable sender)
    {
        return ContextMixin.msgSender();
    }

  function balanceOf(address account) public view returns (uint256) {
    return balance[account];
  }

  function credit(address account, uint256 amount) public {
    require(amount > 0, "ZERO_AMOUNT");
    require(account != address(0), "NULL_ADDRESS");
    balance[account] = balance[account].add(amount);
    totalSupply = totalSupply.add(amount);
  }

  function debit(address account, uint256 amount) public {
    require(amount > 0, "ZERO_AMOUNT");
    require(account != address(0), "NULL_ADDRESS");
    require(balance[account] >= amount, "INSUFFICIENT_BALANCE");
    balance[account] = balance[account].sub(amount);
    totalSupply = totalSupply.sub(amount);
  }

  function transfer(address from, address to, uint256 amount) public {
    require(amount > 0, "ZERO_AMOUNT");
    require(balance[from] >= amount, "NULL_ADDRESS");
    balance[from] = balance[from].sub(amount);
    balance[to] = balance[to].add(amount);
  }
}