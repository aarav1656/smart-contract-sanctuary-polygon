pragma solidity =0.8.17;

import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./interfaces/IShibaReferralsHub.sol";
import "./interfaces/IShibaTokenReward.sol";
import "./interfaces/IShibaBank.sol";

contract ShibaBank is IShibaBank, ReentrancyGuard, Pausable, Ownable {
    //---------- Libraries ----------//
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;

    //---------- Contracts ----------//
    IERC20 public immutable CHIP; // SWC token contract.
    IShibaReferralsHub internal REFERRALS;

    //---------- Variables ----------//
    uint256 private totalPlayerBalances;
    uint256 private reserve;
    uint256 public bankOverflow;
    uint256 public minProfits;
    address public distributor;

    //---------- Storage -----------//
    struct Beneficiaries {
        address Holders;
        address Referrals;
        address Devs;
    }
    struct Fees {
        uint256 HoldersFee;
        uint256 ReferralsFee;
        uint256 DevsFee;
    }

    Beneficiaries public BENEFICIARIES;
    Fees public BENEFICIARIES_FEES;

    mapping(address => uint256) internal playerBalance;
    EnumerableSet.AddressSet internal GAMES;
    EnumerableSet.AddressSet internal BANNED_PLAYERS;

    //---------- Events -----------//
    event BoughtCredits(address indexed player, uint256 amount);
    event SoldCredits(address indexed player, uint256 amount);
    event ProfitsDestributed(uint256 holders, uint256 referrals, uint256 devs);
    event PlayerBanned(address indexed player, bool banned);

    //---------- Constructor ----------//
    constructor(address _chip) {
        CHIP = IERC20(_chip);
        BENEFICIARIES_FEES.HoldersFee = 8000; // 80%
        BENEFICIARIES_FEES.ReferralsFee = 1000; // 10%
        BENEFICIARIES_FEES.DevsFee = 1000; // 10%
        bankOverflow = 5_000_000 ether;
        minProfits = 100_000 ether;
    }

    //---------- Modifiers ------------//
    modifier onlyGame() {
        require(GAMES.contains(_msgSender()), "Forbidden");
        _;
    }

    modifier onlyDistributor() {
        require(_msgSender() == distributor, "Forbidden");
        _;
    }

    //----------- Internal Functions -----------//
    function _distributeProfits(uint256 _amount) internal {
        uint256 toHolders = (_amount * BENEFICIARIES_FEES.HoldersFee) / 10000;
        uint256 toReferrals = (_amount * BENEFICIARIES_FEES.ReferralsFee) /
            10000;
        uint256 toDevs = (_amount * BENEFICIARIES_FEES.DevsFee) / 10000;
        CHIP.transfer(BENEFICIARIES.Holders, toHolders);
        CHIP.transfer(BENEFICIARIES.Referrals, toReferrals);
        CHIP.transfer(BENEFICIARIES.Devs, toDevs);
        emit ProfitsDestributed(toHolders, toReferrals, toDevs);
    }

    //----------- External Functions -----------//
    function hasProfits() public view override returns (bool) {
        return treasuryBalance() >= bankOverflow.add(minProfits);
    }

    function isBanned(address _player) public view returns (bool) {
        return BANNED_PLAYERS.contains(_player);
    }

    function treasuryBalance() public view returns (uint256) {
        uint256 totalBalance = CHIP.balanceOf(address(this));
        return
            totalPlayerBalances.add(reserve) > totalBalance
                ? 0
                : totalBalance.sub(totalPlayerBalances.add(reserve));
    }

    function playerCredits(address _wallet)
        public
        view
        override
        returns (uint256)
    {
        return playerBalance[_wallet];
    }

    function distributeProfits()
        external
        override
        nonReentrant
        whenNotPaused
        onlyDistributor
    {
        require(hasProfits(), "zero profits");
        uint256 toDistribute = treasuryBalance().sub(bankOverflow);
        _distributeProfits(toDistribute);
    }

    function buyCredits(uint256 _amount, address _referrer)
        external
        nonReentrant
        whenNotPaused
    {
        require(_amount > 0, "zero amount");
        require(!isBanned(_msgSender()), "banned");
        require(CHIP.transferFrom(_msgSender(), address(this), _amount));
        if (_referrer != address(0) && !REFERRALS.isReferral(_msgSender())) {
            REFERRALS.addReferral(_msgSender(), _referrer);
        }
        totalPlayerBalances += _amount;
        playerBalance[_msgSender()] += _amount;
        emit BoughtCredits(_msgSender(), _amount);
    }

    function sellCredits(uint256 _amount) external nonReentrant whenNotPaused {
        require(_amount > 0, "zero amount");
        require(playerCredits(_msgSender()) >= _amount, "insufficient credits");
        totalPlayerBalances -= _amount;
        playerBalance[_msgSender()] -= _amount;
        CHIP.transfer(_msgSender(), _amount);
        emit SoldCredits(_msgSender(), _amount);
    }

    function spendCredits(
        address _wallet,
        uint256 _amount,
        bool _cheat
    ) external override onlyGame {
        require(_amount > 0, "Bank: zero amount");
        require(
            playerCredits(_wallet) >= _amount,
            "Bank: insufficient credits"
        );
        unchecked {
            playerBalance[_wallet] -= _amount;
            reserve += _amount * 3;
        }
        totalPlayerBalances -= _amount;
        if (!_cheat) {
            REFERRALS.addPoints(_wallet, _amount);
        }
    }

    function winCredits(
        address _wallet,
        uint256 _amount,
        uint256 _betAmount
    ) external override onlyGame {
        reserve -= _betAmount * 3;
        unchecked {
            totalPlayerBalances += _amount;
            playerBalance[_wallet] += _amount;
        }
    }

    function loseCredits(uint256 _betAmount) external override onlyGame {
        reserve -= _betAmount * 3;
    }

    function getBannedLength() external view returns (uint256) {
        return BANNED_PLAYERS.length();
    }

    function getBannedAtIndex(uint256 _index) external view returns (address) {
        return BANNED_PLAYERS.at(_index);
    }

    function getGamesLength() external view returns (uint256) {
        return GAMES.length();
    }

    function getGameAtIndex(uint256 _index) external view returns (address) {
        return GAMES.at(_index);
    }

    function editBanned(address _player, bool _add) external onlyOwner {
        if (_add) {
            totalPlayerBalances -= playerBalance[_player];
            delete playerBalance[_player];
            BANNED_PLAYERS.add(_player);
        } else {
            BANNED_PLAYERS.remove(_player);
        }
        emit PlayerBanned(_player, _add);
    }

    function editGames(address _game, bool _add) external onlyOwner {
        if (_add) {
            GAMES.add(_game);
        } else {
            GAMES.remove(_game);
        }
    }

    function setBeneficiaries(
        address _Holders,
        address _Referrals,
        address _Devs
    ) external onlyOwner {
        require(
            _Holders != address(0) &&
                _Referrals != address(0) &&
                _Devs != address(0),
            "invalid address"
        );
        BENEFICIARIES.Holders = _Holders;
        BENEFICIARIES.Referrals = _Referrals;
        BENEFICIARIES.Devs = _Devs;
    }

    function setBeneficiariesFee(
        uint256 _Holders,
        uint256 _Referrals,
        uint256 _Devs
    ) external onlyOwner {
        require(
            _Holders != 0 && _Referrals != 0 && _Devs != 0,
            "invalid amount"
        );
        require(_Holders + _Referrals + _Devs == 10000, "fees out of bounds");
        BENEFICIARIES_FEES.HoldersFee = _Holders;
        BENEFICIARIES_FEES.ReferralsFee = _Referrals;
        BENEFICIARIES_FEES.DevsFee = _Devs;
    }

    function forceWithdrawn(uint256 _amount) external whenPaused onlyOwner {
        require(_amount > 0 && _amount <= treasuryBalance());
        CHIP.transfer(_msgSender(), _amount);
    }

    function setOverflow(uint256 _overflow) external onlyOwner {
        require(_overflow >= 100 ether, "invalid amount");
        bankOverflow = _overflow;
    }

    function setMinProfits(uint256 _minProfits) external onlyOwner {
        require(_minProfits > 0, "zero amount");
        minProfits = _minProfits;
    }

    /**
     * @notice Update referral hub.
     */
    function setReferralHub(address _referralHub) external onlyOwner {
        require(_referralHub != address(0), "zero address");
        REFERRALS = IShibaReferralsHub(_referralHub);
    }
    /**
     * @notice Update distributor.
     */
    function setDistributor(address _distributor) external onlyOwner {
        require(_distributor != address(0), "zero address");
        distributor = _distributor;
    }

    /**
     * @notice Function for pause and unpause the contract.
     */
    function togglePause() external onlyOwner {
        paused() ? _unpause() : _pause();
    }
}