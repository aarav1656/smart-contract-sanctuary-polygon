        staxoToken = IERC20(_staxoToken);

        COORDINATOR = VRFCoordinatorV2Interface(_vrfCoordinator);
        linkToken = _linkToken;
        s_subscriptionId = subscriptionId;
        keyHash = _keyHash;
        callbackGasLimit = _callbackGasLimit;
        requestConfirmations = _requestConfirmations;
        numWords = _numWords;
    }

    function placeBet(Bet[] calldata _bets) external nonReentrant whenNotPaused {
        uint256 totalBetAmount = 0;

        for (uint256 i = 0; i < _bets.length; i++) {
            totalBetAmount += _bets[i].amount;
            bets[msg.sender].push(_bets[i]);
        }
        playerAddress = msg.sender;

        require(staxoToken.balanceOf(msg.sender) >= totalBetAmount, "Insufficient balance");
        require(staxoToken.allowance(msg.sender, address(this)) >= totalBetAmount, "Allowance not enough");

        staxoToken.transferFrom(msg.sender, address(this), totalBetAmount);

        emit BetPlaced(msg.sender, _bets);

        requestRandomWords();
