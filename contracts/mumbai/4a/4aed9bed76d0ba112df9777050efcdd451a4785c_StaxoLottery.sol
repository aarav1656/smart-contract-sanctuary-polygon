        uint8 betType;
        uint8 option;
        uint256 amount;
    }

    event BetPlaced(address indexed player, Bet[] bet);
    event SpinResult(uint256 spinResult);
    event BetWon(address indexed player, Bet bet, uint256 payout);
    event Payout(address indexed player, uint256 amount);

