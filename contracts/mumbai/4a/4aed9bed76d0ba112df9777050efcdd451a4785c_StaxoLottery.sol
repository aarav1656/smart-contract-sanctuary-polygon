    }

    function checkNumberBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return spinResult == bet.option;
    }

    function checkColorBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        if (spinResult == 0) {
            return false;
        }
        
        bool isRed = (spinResult <= 10 || (spinResult >= 20 && spinResult <= 28)) ? spinResult % 2 == 1 : spinResult % 2 == 0;
        return bet.option == 0 ? isRed : !isRed;
    }

    function checkOddEvenBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return (bet.option == 0 && spinResult % 2 == 1) || (bet.option == 1 && spinResult % 2 == 0);
    }

    function checkHighLowBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return (bet.option == 0 && spinResult >= 1 && spinResult <= 18) || (bet.option == 1 && spinResult >= 19 && spinResult <= 36);
    }

    function checkColumnBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return (spinResult - 1) % 3 == bet.option;
    }

    function checkDozenBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return (spinResult - 1) / 12 == bet.option;
    }

    function checkNeighbourTopBottomBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return spinResult == bet.option || spinResult == bet.option + 3;
    }

    function checkNeighbourLeftRightBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return spinResult == bet.option || (spinResult + 1) % 3 != 0 && spinResult - 1 == bet.option;
    }

    function checkIntersectionBet(Bet memory bet, uint256 spinResult) private pure returns (bool) {
        return spinResult == bet.option || spinResult - 3 == bet.option || (spinResult + 1) % 3 != 0 && (spinResult - 1 == bet.option || spinResult - 4 == bet.option);
    }

    function calculatePayout(Bet memory bet) private pure returns (uint256) {
        uint256 payout;
    
        if (bet.betType == 0) { // number bet
            payout = bet.amount * 36;
        } else if (bet.betType == 1) { // color bet
            payout = bet.amount * 2;
        } else if (bet.betType == 2) { // odd/even bet
            payout = bet.amount * 2;
        } else if (bet.betType == 3) { // high/low bet
            payout = bet.amount * 2;
        } else if (bet.betType == 4) { // column bet
            payout = bet.amount * 3;
        } else if (bet.betType == 5) { // dozen bet
            payout = bet.amount * 3;
        } else if (bet.betType == 6) { // neighbouring number (top and bottom) bet
            payout = bet.amount * 18;
        } else if (bet.betType == 7) { // neighbouring number (left and right) bet
            payout = bet.amount * 18;
        } else if (bet.betType == 8) { // numbers on the intersection of the 4 numbers surrounding the number bet
            payout = bet.amount * 9;
        }
    
        return payout;
    }

    function requestRandomWords() internal returns (uint256 requestId) {
        requestId = COORDINATOR.requestRandomWords(
            keyHash,
            s_subscriptionId,
            requestConfirmations,
            callbackGasLimit,
            numWords
        );

        s_requests[requestId] = RequestStatus({
            randomWords: new uint256[](0),
            exists: true,
            fulfilled: false
        });

        requestIds.push(requestId);
        lastRequestId = requestId;
        emit RequestSent(requestId, numWords);

        return requestId;
    }

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        require(s_requests[_requestId].exists, "Request not found.");
        s_requests[_requestId].fulfilled = true;
        s_requests[_requestId].randomWords = _randomWords;
        randomWordsNum = _randomWords[0]; // Set array-index to variable, easier to play with
        emit RequestFulfilled(_requestId, _randomWords);

        payoutWinningBets();
    }

    // to check the request status of random number call.
    function getRequestStatus(
        uint256 _requestId
    ) external view returns (bool fulfilled, uint256[] memory randomWords) {
        require(s_requests[_requestId].exists, "Request not found.");
        RequestStatus memory request = s_requests[_requestId];
        return (request.fulfilled, request.randomWords);
    }

