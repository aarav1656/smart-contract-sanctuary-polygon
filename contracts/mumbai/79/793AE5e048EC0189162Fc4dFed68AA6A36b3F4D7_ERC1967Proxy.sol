pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/StorageSlot.sol";

abstract contract ERC1967AccessControl {

    bytes32 internal constant _ADMIN_SLOT = 0xb53127684a568b3173ae13b9f8a6016e243e63b6e8ee1178d6a717850b5d6103;

    event AdminChanged(address previousAdmin, address newAdmin);

    constructor() {
        _setAdmin(msg.sender);
    }

    modifier onlyERC1967Owner() {
        _checkERC1967Owner();
        _;
    }

    function _getAdmin() internal view returns (address) {
        return StorageSlot.getAddressSlot(_ADMIN_SLOT).value;
    }

    function getAdmin() external view returns (address) {
        return _getAdmin();
    }

    function _checkERC1967Owner() internal view virtual {
        require(_getAdmin() == msg.sender, "Ownable: caller is not the owner");
    }

    function _setAdmin(address newAdmin) internal {
        address oldOwner = _getAdmin();
        require(newAdmin != address(0), "Ownable: new admin is the zero address");
        StorageSlot.getAddressSlot(_ADMIN_SLOT).value = newAdmin;
        emit AdminChanged(oldOwner, newAdmin);
    }

}