    /// @notice Error for if PDT price = 0 and user requests the latest price.
    error PricePendingRequest();

    /*///////////////////////////////////////////////////////////////
                               STATE VARIABLES
    //////////////////////////////////////////////////////////////*/

    /// @notice Role required to create requests.
    bytes32 public constant REQUESTER_ROLE = keccak256("REQUESTER_ROLE");

    /// @notice LINK token address.
    address public chainlinkToken;

    /// @notice Oracle address.
    address public oracle;

    /// @notice Get uint256 Job ID.
    bytes32 public jobId;

    /// @notice LINK payment amount required by the oracle.
    uint256 public oraclePayment;

    /// @notice Price API
    string public api;

    /// @notice Price API Path to PDT USD Price Value
    string public path;

    /// @notice Cached ParagonsDAO Token price.
    uint256 private _pdtPrice;

    /*///////////////////////////////////////////////////////////////
                               EVENTS
    //////////////////////////////////////////////////////////////*/

    /// @notice  Emitted upon PDT price request fulfillment by the oracle.
    /// @dev     Prices contain 1e18 decimals.
    /// @param   requestId  Bytes32 ID of the request.
    /// @param   oldPdtPrice  Previous PDT Price.
    /// @param   newPdtPrice  Updated PDT Price.
    event PdtPriceUpdated(bytes32 indexed requestId, uint256 indexed oldPdtPrice, uint256 indexed newPdtPrice);

    /*///////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    /// @notice  Grants roles and setups up oracle.
    constructor() {
        // AccessControl
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        // Initializing
        _pdtPrice = 0.05 * 1e18;
    }

    /*///////////////////////////////////////////////////////////////
                               REQUEST
    //////////////////////////////////////////////////////////////*/

    /// @notice  Creates a Chainlink request to fetch the latest ParagonsDAO Token price and multiplies it 1e18.
    /// @dev     Requesters only.
    function requestPdtPrice() public onlyRole(REQUESTER_ROLE) {
        Chainlink.Request memory req = buildChainlinkRequest(jobId, address(this), this.fulfillPdtPrice.selector);

        req.add("get", api);
        req.add("path", path);
        req.addInt("times", 10 ** 18);

        sendChainlinkRequestTo(oracle, req, oraclePayment);
    }

    /*///////////////////////////////////////////////////////////////
                               FULFILLMENT
    //////////////////////////////////////////////////////////////*/

    /// @notice  Fulfills the Chainlink request, emits an event and caches it.
    /// @dev     Oracle only.
    /// @param   requestId  Bytes32 ID of the request.
    /// @param   pdtPrice  Latest ParagonsDAO Token Price.
    function fulfillPdtPrice(bytes32 requestId, uint256 pdtPrice) public recordChainlinkFulfillment(requestId) {
        emit PdtPriceUpdated(requestId, _pdtPrice, pdtPrice);
        _pdtPrice = pdtPrice;
    }

    /*///////////////////////////////////////////////////////////////
                               USER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice  Returns the latest cached ParagonsDAO Token Price.
    /// @dev     Result includes 1e18 decimals.
    /// @return  pdtPrice_  ParagonsDAO Token Price.
    function getLatestPdtPrice() public view returns (uint256 pdtPrice_) {
        if (_pdtPrice == 0) revert PricePendingRequest();
        return _pdtPrice;
    }

    /*///////////////////////////////////////////////////////////////
                               OWNER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice  Changes the API and respective PDT/USD Price Path.
    /// @dev     Full API link + Path e.g: RAW,PDT,USD,PRICE.
    /// @param   api_  API link to PDT Price.
    /// @param   path_  Result path to PDT USD price value.
    function setupApi(string memory api_, string memory path_) external onlyRole(DEFAULT_ADMIN_ROLE) {
        api = api_;
        path = path_;
    }

    /// @notice  Changes Oracle variables.
    /// @dev     Admin role only.
    /// @param   chainlinkToken_  Address of Chainlink Token.
    /// @param   oracle_  Address of Oracle.
    /// @param   jobId_  Bytes32 representing Job ID.
    /// @param   oraclePayment_  Amount of LINK to be paid per request.
    function setupOracle(
        address chainlinkToken_,
        address oracle_,
        bytes32 jobId_,
        uint256 oraclePayment_
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        chainlinkToken = chainlinkToken_;
        oracle = oracle_;
        jobId = jobId_;
        oraclePayment = oraclePayment_;

        setChainlinkToken(chainlinkToken_);
    }
}

