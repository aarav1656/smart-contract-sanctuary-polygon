        if (usdcAmount > 0) {
            usdc.transferFrom(_msgSender(), roobaWallet, uint256(usdcAmount));
            emit BuyTrading(_amount, _msgSender(), tnxId);
        } else {
            revert("Token Value 0");
        }
    }

