        address _forwardAddress,
        string memory _claimUSDCID
    ) external {
        uint256 amount = usdc.balanceOf(_forwardAddress);
        IForward(_forwardAddress).getRaisedUSDC(_seller);
        emit ForwardClaimUSDC(_forwardAddress, _seller, amount, _claimUSDCID);
    }

    function forwardClaimLeftToken(
        address _forwardAddress,
        string memory _claimLeftTokenID
    ) external {
        uint256 amount = IForward(_forwardAddress).tokenAvailable();
        IForward(_forwardAddress).claimLeftToken(_msgSender());
        emit ForwardClaimLeftToken(
            _forwardAddress,
            _msgSender(),
            amount,
            _claimLeftTokenID
        );
    }

