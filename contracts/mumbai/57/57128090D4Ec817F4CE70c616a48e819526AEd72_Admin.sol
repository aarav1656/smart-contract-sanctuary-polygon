    ) external {
        uint256 price = oraclePrice();
        uint256 tokenDecimal = 10 ** (IToken(_token).decimals());
        uint256 totalPriceInGrams = _amount * _gramsValue * price;
        uint256 usdcAmount = ((totalPriceInGrams * 10 ** usdc.decimals()) /
