    modifier validation(address _address) {
        require(_address != address(0), "Zero address");
        _;
    }

    modifier onlyOwner() {
        require(_msgSender() == owner, "Only owner can call");
        _;
    }
    

    //------------------------Initialize------------------------//

    function initialize(
        address _owner,
        address _factory,
        address _safeProxyFactory,
        address _masterForward,
        address _USDC,
        address _priceFeed,
        address _roobaWallet
    ) external {
