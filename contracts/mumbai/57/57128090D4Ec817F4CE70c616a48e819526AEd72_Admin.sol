        address _address
    ) external validation(_address) onlyOwner {
        factory = _address;
    }

    function setSafeProxyFactory(
        address _address
    ) external validation(_address) onlyOwner {
        safeProxyFactory = _address;
    }

    // function setSafeL2(
    //     address _address
    // ) external validation(_address) onlyOwner {
    //     safeL2 = _address;
    // }

    function setOwner(
        address _address
    ) external validation(_address) onlyOwner {
        owner = _address;
        _setupRole(DEFAULT_ADMIN_ROLE, _address);
    }

