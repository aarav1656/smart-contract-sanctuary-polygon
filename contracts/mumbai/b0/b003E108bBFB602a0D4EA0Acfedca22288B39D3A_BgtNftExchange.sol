    mapping(address => bool) private _minters;
    address private _owner;

    constructor() ERC20("BGT Token", "BGT")  ERC20Capped(500_000_000*10**18) {
        _owner = msg.sender;
    }

    function mint(address to, uint256 amount) external {
        require(isMinter(msg.sender), "BGT: not minter");
        ERC20Capped._mint(to, amount);
    }
 
    function burn(uint256 amount) external {
        _burn(msg.sender, amount);
    }

    function setMinter(address account, bool isMinter_) external {
        require(_owner == msg.sender, "BGT: only owner");
        _minters[account] = isMinter_;
    }

    function owner() external view returns(address){
        return _owner;
    }

    function isMinter(address account) public view returns(bool) {
        return _minters[account];
    }
    
}

