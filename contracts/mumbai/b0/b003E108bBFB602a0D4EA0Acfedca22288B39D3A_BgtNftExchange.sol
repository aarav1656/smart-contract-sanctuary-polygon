import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/utils/ERC1155HolderUpgradeable.sol";
import {IERC20Upgradeable, SafeERC20Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";


import {BGT} from "./BGT.sol";
import {BgtERC1155} from "./BgtERC1155.sol";

contract BgtNftExchange is OwnableUpgradeable, ERC1155HolderUpgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    struct DiscountInfo {
        address sender;
        uint256 nftAmount;
        uint256 requiredUsdt;
    }

    struct Discount {
        address sender;
        uint256 tokenId;
        uint256 nftAmount;
        uint256 requiredUsdt;
        bool used;
    }

    address public  USDT;
    address private _bgt;
    address private _bgtERC1155;
    address private _usdtReceiver;
    uint256 private constant  _nft99TokenId = 1;
    uint256 private constant  _nft2000TokenId = 2;

    
    uint256 private constant _NFT99_DISCOUNT_USDT_AMOUNT = 871_200_000;//deprecated
    uint256 private constant _NFT99_DISCOUNT_NUMBER = 100;//deprecated
    mapping(address => bool) private _nft99Discounts;//deprecated
    mapping(address => bool) private _nft99DiscountUsed;//deprecated

    mapping(uint256 => uint256) private _exchangedCap;
    mapping(uint256 => uint256) private _exchangedNumber;

    mapping(address => bool) private _operators;

    mapping(address => DiscountInfo) private _99discounts;//deprecated
    mapping(address => DiscountInfo) private _2000discounts;//deprecated

    mapping(bytes32 => Discount) private _discounts;
    mapping(address => uint256) private _userDiscountIndex;


    event ExchangeNft(address indexed user, uint256 nftTokenId, uint256 nftAmount, uint256 usdtAmount);
    event ExchangeNft99ToBGT(address indexed user, uint256 nftAmount, uint256 bgtAmount);

    function initialize(address bgt,
        address bgtERC1155,
        address usdt,
        address usdtReceiver,
        address operator
    ) public initializer {
        _bgt = bgt;
        _bgtERC1155 = bgtERC1155;
        USDT = usdt;
        _usdtReceiver = usdtReceiver;
        _operators[operator] = true;

        __Ownable_init();
        __ERC1155Holder_init();
    }

    // function exchangeNft99toBGT(uint256 amount) external {
    //     BgtERC1155(_bgtERC1155).safeTransferFrom(msg.sender, address(this), _nft99TokenId, amount, bytes(""));
    //     BgtERC1155(_bgtERC1155).burn(address(this), _nft99TokenId, amount, 0);
    //     uint256 bgtAmount = 30*amount*10**BGT(_bgt).decimals();
    //     BGT(_bgt).mint(msg.sender, 30*amount*10**BGT(_bgt).decimals());
    //     emit ExchangeNft99ToBGT(msg.sender, amount, bgtAmount);
    // }


    function exchangeNft(uint256 nftTokenId, uint256 nftAmount) external {
        require(nftAmount > 0, "BgtNftExchange: nftAmount error");
        require(nftAmount + _exchangedNumber[nftTokenId] <= _exchangedCap[nftTokenId], "BgtNftExchange: not allowed");

        uint256 usdtAmount = nftAmount*BgtERC1155(_bgtERC1155).tokenValue(nftTokenId);
        address user = msg.sender;

        uint256 maxIndex = _userDiscountIndex[user];
        for (uint256 index=1; index <= maxIndex; index++) {
            bytes32 key = getDiscountKey(user, index);
            Discount memory discount = _discounts[key];
            if (discount.tokenId == nftTokenId && discount.nftAmount == nftAmount && !discount.used) {
                usdtAmount = discount.requiredUsdt;
                delete _discounts[key];
                break;
            }
        }

        _exchangedNumber[nftTokenId] += nftAmount;
        IERC20Upgradeable(USDT).safeTransferFrom(
            user, 
            _usdtReceiver, 
            usdtAmount
        );
        BgtERC1155(_bgtERC1155).mint(user, nftTokenId, nftAmount, 0);
        emit ExchangeNft(user, nftTokenId, nftAmount, usdtAmount);
    }

    function setExchangedCap(uint256 tokenId, uint256 cap) external {
        require(isOperator(msg.sender) || owner() == msg.sender, "BgtNftExchange: only operator or owner");
        require(cap > _exchangedCap[tokenId], "BgtNftExchange: cap too small");
        require(cap <= BgtERC1155(_bgtERC1155).getNftCap(tokenId), "BgtNftExchange: cap too large");
        _exchangedCap[tokenId] = cap;
    }

    function tradableNumber(uint256 tokenId) external view returns(uint256){
        return _exchangedCap[tokenId] - _exchangedNumber[tokenId];
    }

    function setUsdtReceiver(address usdtReceiver) external onlyOwner {
        _usdtReceiver = usdtReceiver;
    }



    function getDiscountInfo(uint256 tokenId, address sender) public view returns(Discount[] memory discounts) {
        uint256 discountLen;
        uint256 maxIndex = _userDiscountIndex[sender];
        if (maxIndex >= 1) {
            for (uint256 index=1; index <= maxIndex; index++) {
                Discount memory discount = _discounts[getDiscountKey(sender, index)];
                if (discount.tokenId == tokenId && !discount.used) {
                    discountLen++;
                }
            }

            if (discountLen > 0) {
                uint256 resultIndex;
                discounts = new Discount[](discountLen);
                for (uint256 index = 1; index <= maxIndex; index++) {
                    Discount memory discount = _discounts[getDiscountKey(sender, index)];
                    if (discount.tokenId == tokenId && !discount.used) {
                        discounts[resultIndex] = discount;
                        resultIndex++;
                    }
                }
            }
        }
    }


    function setDiscountInfo(
        uint256 tokenId,
        address[] memory users,
        uint256[] memory nftAmounts,
        uint256[] memory requiredUsdts
    ) external {
        require(isOperator(msg.sender) || msg.sender == owner(), "BgtNftExchange: only operator or owner");
        uint256 len = users.length;
        require(nftAmounts.length == len && requiredUsdts.length == len, "BgtNftExchange: size error");
        for (uint256 i; i<len; i++) {
            address user = users[i];
            require(user != address(0), "BgtNftExchange: user address 0");
            uint256 index = _userDiscountIndex[user] + 1;
            _userDiscountIndex[user] = index;
            _discounts[getDiscountKey(user, index)] = Discount(
                users[i],
                tokenId,
                nftAmounts[i],
                requiredUsdts[i],
                false
            );
        }
    }

    function setOperator(address account, bool operator) external onlyOwner {
        _operators[account] = operator;
    }

    function isOperator(address user) public view returns(bool) {
        return _operators[user];
    }

    function exchangedAmount(uint256 tokenId) external view returns(uint256) {
        return _exchangedNumber[tokenId];
    }

    function getDiscountKey(address user, uint256 index) private pure returns (bytes32) {
        return keccak256(abi.encodePacked(user, index));
    }

}

