pragma solidity ^0.8.17;

contract AlchemistRewards is ReentrancyGuard{

    
    uint256 public rootcount=0;

    address public owner;
    address public signer;

    mapping(uint256 => bytes32) public merkleRoots;
    mapping(uint256 => mapping(address => bool)) public rewardsClaimed;
    mapping(uint256 => uint256) public phaserewards;
    mapping(uint256 => uint256) public rewardswithdrawn;

    constructor() {
        owner = msg.sender;
    }

    modifier notContract() {
        require(_isContract(msg.sender) == false, "Call from Contract not allowed");
        require(msg.sender == tx.origin, "Proxy Contract not allowed");
        _;
    }

    function deposit() external payable{
        phaserewards[rootcount] = msg.value;

    }

    function addmerkleRoot(bytes32 _root,uint256 _totalrewards) external {
        require(msg.sender == owner,"FC");
        rootcount++;
        merkleRoots[rootcount] = _root;
        phaserewards[rootcount] = _totalrewards;
    }

    function setSigner(address _signer) external {
        require(msg.sender == owner,"FC");
        signer = _signer;
    }

    function withdraw(uint _phaseno,bytes32[] calldata proof, uint rewardamt,bytes memory signature,address _to) external payable notContract nonReentrant{
        require(rewardsClaimed[_phaseno][msg.sender] == false,"Already claimed");
        require(checkInRewardslist(_phaseno,proof,rewardamt) == true,"Not eligible");
        require(verify(signer,msg.sender, rewardamt,_phaseno,signature), "Invalid signature");
        require((rewardswithdrawn[_phaseno] + rewardamt) <= phaserewards[_phaseno],"All rewards for this phase are claimed");
        
        rewardsClaimed[_phaseno][msg.sender] = true;
        rewardswithdrawn[_phaseno] = rewardswithdrawn[_phaseno] + rewardamt;
        payable(_to).transfer(rewardamt);
    }

    function checkInRewardslist(uint256 _phaseno,bytes32[] calldata proof, uint256 rewardamt) view public returns (bool) {
        
        bytes32 leaf = keccak256(abi.encode(msg.sender, rewardamt,_phaseno));
        bool verified = MerkleProof.verify(proof, merkleRoots[_phaseno], leaf);
        return verified;
    }

    function getMessageHash(
        address _to,
        uint _amount,
        uint _nonce
    ) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(_to, _amount, _nonce));
    }

    function getEthSignedMessageHash(bytes32 _messageHash)
        public
        pure
        returns (bytes32)
    {
        return
            keccak256(
                abi.encodePacked("\x19Ethereum Signed Message:\n32", _messageHash)
            );
    }

    function verify(
        address _signer,
        address _to,
        uint _amount,
        uint _nonce,
        bytes memory signature
    ) public pure returns (bool) {
        bytes32 messageHash = getMessageHash(_to, _amount, _nonce);
        bytes32 ethSignedMessageHash = getEthSignedMessageHash(messageHash);

        return recoverSigner(ethSignedMessageHash, signature) == _signer;
    }

    function recoverSigner(bytes32 _ethSignedMessageHash, bytes memory _signature)
        public
        pure
        returns (address)
    {
        (bytes32 r, bytes32 s, uint8 v) = splitSignature(_signature);

        return ecrecover(_ethSignedMessageHash, v, r, s);
    }

    function splitSignature(bytes memory sig)
        public
        pure
        returns (
            bytes32 r,
            bytes32 s,
            uint8 v
        )
    {
        require(sig.length == 65, "invalid signature length");

        assembly {
            r := mload(add(sig, 32))
            s := mload(add(sig, 64))
            v := byte(0, mload(add(sig, 96)))
        }
    }

    function _isContract(address account) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(account)
        }
        return size > 0;
    }

    
}