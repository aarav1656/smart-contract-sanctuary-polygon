pragma solidity ^0.8.7;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";

import "./utils/NonblockingLzApp.sol";
import "./utils/GasGuzzlerSignature.sol";
import "./interfaces/IERC1155BurnableUpgradeable.sol";
import "./interfaces/IControllers.sol";

contract VoucherRedeemer is OwnableUpgradeable, GasGuzzlerSignature, NonblockingLzApp {
    struct GasBackVoucherConditions {
        uint256 max;
        uint256 min;
    }

    uint16 public version;
    uint16 public destinationChainId;
    uint256 public gas;
    address public GasGuzzlersGasBackVoucher;
    address controllerAddress;

    // tokenId => GasBackVoucherConditions
    mapping(uint256 => GasBackVoucherConditions) public GasBackVouchers;
    mapping(address => mapping(uint256 => bool)) public nonceUsed;

    modifier onlyController(address _caller) {
        require(IControllers(controllerAddress).isController(_caller), "Only Controller allowed");
        _;
    }

    /**
    @notice This is initializer function is used to initialize values of contracts  
    @param _gasGuzzlersGasBackVoucher This is address for ERC1155 marketplace  
    */
    function initialize(
        address _gasGuzzlersGasBackVoucher,
        uint16 _destinationChainId,
        address _endpointAddress,
        address _controllerAddress
    ) public initializer {
        __Ownable_init();
        __nonblockingLzApp_init(_endpointAddress);
        GasGuzzlersGasBackVoucher = _gasGuzzlersGasBackVoucher;
        destinationChainId = _destinationChainId;
        controllerAddress = _controllerAddress;
        __GasGuzzlerStakingContractSigner_init("GasGuzzlerMarketplace", "1");
        gas = 3500000;
        version = 1;
    }

    function redeem(
        bytes memory _userAddress,
        MarketplaceSignature memory signature,
        uint256[] calldata _tokenId,
        uint256 _gasToRefundInWei,
        uint256[] calldata _quantity
    ) public payable onlyController(msg.sender) {
        require(_quantity.length == _tokenId.length, "GasGuzzlersMarketplace redeem: Invalid Input");
        require(msg.sender == tx.origin, "GasGuzzlersMarketplace redeem: Only wallets allowed");
        address _toAddress;
        assembly {
            _toAddress := mload(add(_userAddress, 20))
        }
        require(_toAddress == signature.userAddress, "redeem: user address and signature does not match");
        require(getSigner(signature) == signature.userAddress, "Error: Invalid signature");
        require(!nonceUsed[signature.userAddress][signature.timestamp], "Error: Nonce already used");

        for (uint256 i = 0; i < _tokenId.length; i++) {
            require(
                IERC1155BurnableUpgradeable(GasGuzzlersGasBackVoucher).balanceOf(address(_toAddress), _tokenId[i]) >=
                    _quantity[i],
                "redeem: doesn't own enough voucher"
            );

            GasBackVoucherConditions memory _gasBackVoucherConditions = GasBackVouchers[_tokenId[i]];
            uint256 maxEth = _gasBackVoucherConditions.max * _quantity[i];
            uint256 minEth = _gasBackVoucherConditions.min * _quantity[i];

            require(maxEth >= _gasToRefundInWei, "redeem: should use more tokens");
            require(minEth < _gasToRefundInWei, "redeem: should use less tokens");

            nonceUsed[signature.userAddress][signature.timestamp] = true;
            IERC1155BurnableUpgradeable(GasGuzzlersGasBackVoucher).burn(address(_toAddress), _tokenId[i], _quantity[i]);
        }

        bytes memory payload = abi.encode(_gasToRefundInWei, _userAddress);
        bytes memory adaptorParams = abi.encodePacked(version, gas);
        (uint256 transactionCost, ) = lzEndpoint.estimateFees(
            destinationChainId,
            address(this),
            payload,
            false,
            adaptorParams
        );
        require(msg.value > transactionCost, "Error: make sure to pay redeem fee properly");
        _lzSend(destinationChainId, payload, payable(msg.sender), address(0), adaptorParams);
    }

    function estimateFees(address _userAddress, uint256 _paymentToTransferInEth)
        external
        view
        returns (uint256 nativeFee, uint256 zroFee)
    {
        return
            lzEndpoint.estimateFees(
                destinationChainId,
                address(this),
                abi.encode(_paymentToTransferInEth, _userAddress),
                false,
                abi.encodePacked(version, gas)
            );
    }

    function setGasBackVoucher(address _gasGuzzlersGasBackVoucher) public onlyOwner {
        GasGuzzlersGasBackVoucher = _gasGuzzlersGasBackVoucher;
    }

    function setGasBackVoucherConditions(uint256 _tokenID, GasBackVoucherConditions calldata _gasBackVoucherConditions)
        public
        onlyOwner
    {
        GasBackVouchers[_tokenID] = _gasBackVoucherConditions;
    }

    function getChainID() external view returns (uint256) {
        uint256 id;
        assembly {
            id := chainid()
        }
        return id;
    }

    function _nonblockingLzReceive(
        uint16 _srcChainId,
        bytes memory _srcAddress,
        uint64 _nonce,
        bytes memory _payload
    ) internal virtual override {}
}

