pragma solidity ^0.8.10;
import "./draft-EIP712Upgradeable.sol";

///@author Alfa
contract GasGuzzlerSignature is EIP712Upgradeable {
    string public SIGNING_DOMAIN;
    string public SIGNATURE_VERSION;

    struct MarketplaceSignature {
        address userAddress;
        uint256 timestamp;
        bytes signature;
    }

    function __GasGuzzlerStakingContractSigner_init(string memory domain, string memory version) internal {
        SIGNING_DOMAIN = domain;
        SIGNATURE_VERSION = version;
        __EIP712_init(domain, version);
    }

    function getDetails() public view returns (string memory, string memory) {
        return (SIGNING_DOMAIN, SIGNATURE_VERSION);
    }

    function getSigner(MarketplaceSignature memory signature) public view returns (address) {
        return _verify(signature);
    }

    /// @notice Returns a hash of the given Locker, prepared using EIP712 typed data hashing rules
    function _hash(MarketplaceSignature memory signature) internal view returns (bytes32) {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        keccak256("MarketplaceSignature(address userAddress,uint256 timestamp)"),
                        signature.userAddress,
                        signature.timestamp
                    )
                )
            );
    }

    function _verify(MarketplaceSignature memory signature) internal view returns (address) {
        bytes32 digest = _hash(signature);
        return ECDSAUpgradeable.recover(digest, signature.signature);
    }
}

