    function isNonceUsed(uint256 _nonce) public view returns (bool) {
        return usedNonces[_nonce];
    }

    function pause(bool _state) public onlyOwner {
        paused = _state;
    }


    function setAddresses(address _bonusPayTokenAddress, address _signerAddress) public onlyOwner {
        bonusPayTokenAddress = _bonusPayTokenAddress;
        signerAddress = _signerAddress;
    }


    function withdrawToken(address erc20Address, address to_, uint256 amount_) external onlyOwner {
        IERC20(erc20Address).approve(to_, amount_);
        IERC20(erc20Address).transfer(to_, amount_);
    }

    function withdrawNative() public payable onlyOwner {
        require(payable(msg.sender).send(address(this).balance));
    }

    function transferIn(uint256 amount_) external {
        IERC20 token = IERC20(bonusPayTokenAddress);
        bool success = token.transferFrom(msg.sender, address(this), amount_);
        if (success){
            //split pools
            uint256 bonusSplit = amount_.div(3);
            // 1/3 to top_pool
            bonusPools["top"] = bonusPools["top"].add(bonusSplit);
            // 1/3 to daily pool
            string memory todayDailyPoolName = getPoolName(block.timestamp, "dp");
            bonusPools[todayDailyPoolName] = bonusPools[todayDailyPoolName].add(bonusSplit);
            // 1/3 to daily scoring pool
            string memory todayDailyScoringPoolName = getPoolName(block.timestamp, "sp");
            bonusPools[todayDailyScoringPoolName] = bonusPools[todayDailyScoringPoolName].add(bonusSplit);
        }

    }



    function getPoolName(uint256 _timestamp, string memory _prefix) public pure returns (string memory) {
        return string(abi.encodePacked(_prefix,"_",getYear(_timestamp).toString(),"-", getMonth(_timestamp).toString(), "-",getDay(_timestamp).toString()));
    }

    function getPoolAmount(string memory _poolName) public view returns (uint256) {
        return bonusPools[_poolName];
    }

    function getPoolAmountByDate(uint256 _timestamp, string memory _prefix) public view returns (uint256) {
        return bonusPools[getPoolName(_timestamp, _prefix)];
    }



}