pragma solidity 0.8.4;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract NFTStaking is
    ReentrancyGuard,
    ChainlinkClient,
    ConfirmedOwner,
    Pausable,
    ERC721Holder
{
    using Chainlink for Chainlink.Request;
    using Strings for *;
    using SafeERC20 for IERC20;
    using SafeERC20 for ERC20Burnable;

    string public metaspaceBaseApiURL;
    bytes32 private jobIdUser;
    uint256 private immutable fee;

    mapping(bytes32 => address) private userTempReqID;

    // Interfaces for ERC20
    IERC20 public immutable mldToken;
    ERC20Burnable public immutable lordToken;

    address public masterWallet;

    // Number of lord tokens required while staking of NFT
    uint256 public requiredLord;

    uint256 public withdrawalFeesPercentage;
    uint256 public lordBurnPercentage;

    // Staker info
    struct Staker {
        mapping(bytes => uint256) stakedTokenNFTtime;
        uint256 unclaimedRewards;
        bytes[] allStakedNFTs;
    }

    mapping(address => bool) public isNFTSupported;

    // Mapping of User Address to Staker info
    mapping(address => Staker) public stakers;

    event Staked(
        address indexed user,
        address indexed nftAddress,
        uint256 tokenID,
        uint256 timestamp
    );
    event Withdrawn(
        address indexed user,
        address indexed nftAddress,
        uint256 tokenID,
        uint256 timestamp,
        bytes32 requestID
    );

    event ClaimedRewards(address indexed user, uint256 timestamp);

    event MasterWalletUpdated(address);
    event OracleUpdated(address newOracleAddress);
    event JobIDUpdated(string UserNewJobID);
    event UserDataUpdated(address user, uint256 userCalculatedRewards);
    event BaseAPIUpdated(string newMetaspaceAPI);
    event NFTSupportUpdated(address nftAddress, bool validate);
    event WithdrawalFeesUpdated(uint256 newWithdrawalFeesPercentage);
    event RequiredLordUpdated(uint256 requiredLord);
    event LordBurnPercentageUpdated(uint256 newlordBurnPercentage);

    error NotDeposited(address, uint256);

    // Constructor function to set the rewards token and the NFT collection addresses
    constructor(
        IERC20 _mldToken,
        ERC20Burnable _lordToken,
        uint256 _withdrawalFeesPercentage,
        uint256 _requiredLord,
        string memory _metaspaceAPI,
        uint256 _lordBurnPercentage,
        address _masterWallet
    ) ConfirmedOwner(msg.sender) {
        require(_masterWallet != address(0), "Zero address");
        mldToken = _mldToken;
        lordToken = _lordToken;
        withdrawalFeesPercentage = _withdrawalFeesPercentage;
        requiredLord = _requiredLord;
        metaspaceBaseApiURL = _metaspaceAPI;
        lordBurnPercentage = _lordBurnPercentage;
        masterWallet = _masterWallet;

        setChainlinkToken(0x326C977E6efc84E512bB9C30f76E30c160eD06FB);
        setChainlinkOracle(0x40193c8518BB267228Fc409a613bDbD8eC5a97b3);
        jobIdUser = "ca98366cc7314957b8c012c72f05aeeb";
        fee = (1 * LINK_DIVISIBILITY) / 10; // 0.1 * 10**18 (Varies by network and job)
    }

    // If address already has ERC721 Token/s staked, calculate the rewards.
    // Increment the nftStaked and map msg.sender to the Token Id of the staked
    // Token to later send back on withdrawal. Finally give timeOfLastUpdate the
    // value of now.
    function stake(
        address nftAddress,
        uint256 _tokenId
    ) external nonReentrant whenNotPaused {
        require(isNFTSupported[nftAddress], "NFT not supported");
        // Wallet must own the token they are trying to stake
        require(
            IERC721(nftAddress).ownerOf(_tokenId) == msg.sender,
            "Not Owner"
        );

        uint256 burnLordAmount = (requiredLord * lordBurnPercentage) / 100;
        // burn the required lord token from the user wallet
        lordToken.burnFrom(msg.sender, burnLordAmount);

        lordToken.safeTransferFrom(
            msg.sender,
            masterWallet,
            requiredLord - burnLordAmount
        );

        Staker storage stakerData = stakers[msg.sender];

        // Transfer the token from the wallet to the Smart contract
        IERC721(nftAddress).safeTransferFrom(
            msg.sender,
            address(this),
            _tokenId
        );
        bytes memory encodedNFT = abi.encode(nftAddress, _tokenId);
        stakerData.stakedTokenNFTtime[encodedNFT] = block.timestamp;
        stakerData.allStakedNFTs.push(encodedNFT);

        emit Staked(msg.sender, nftAddress, _tokenId, block.timestamp);
    }

    // Check if user has any ERC721 Tokens Staked and if they tried to withdraw,
    // calculate the rewards and store them in the unclaimedRewards
    //  transfer the ERC721 token back to user
    function withdraw(
        address nftAddress,
        uint256 _tokenId
    ) external nonReentrant {
        Staker storage stakerData = stakers[msg.sender];
        bytes memory encodedData = abi.encode(nftAddress, _tokenId);
        uint256 stakedTime = stakerData.stakedTokenNFTtime[encodedData];
        // Wallet must own the token they are trying to withdraw
        if (stakedTime == 0) revert NotDeposited(nftAddress, _tokenId);
        string memory finalUrl = string(
            abi.encodePacked(
                metaspaceBaseApiURL,
                nftAddress.toHexString(),
                "/",
                _tokenId.toString()
            )
        );
        int256 multiplier = 1e9 *
            int256((block.timestamp - stakedTime) / 1 days);

        stakerData.stakedTokenNFTtime[encodedData] = 0;

        uint lastIndex = stakerData.allStakedNFTs.length - 1;
        uint targetIndex;

        for (uint i = 0; i <= lastIndex; i++) {
            if (
                keccak256(stakerData.allStakedNFTs[i]) == keccak256(encodedData)
            ) {
                targetIndex = i;
                break;
            }
        }
        stakerData.allStakedNFTs[targetIndex] = stakerData.allStakedNFTs[
            lastIndex
        ];
        stakerData.allStakedNFTs.pop();

        Chainlink.Request memory req = buildChainlinkRequest(
            jobIdUser,
            address(this),
            this.fulfillUserData.selector
        );

        // Set the URL to perform the GET request on
        req.add("get", finalUrl);
        req.add("path", "dailyReward");
        req.addInt("times", multiplier);

        // Sends the request
        bytes32 reqID = sendChainlinkRequest(req, fee);

        userTempReqID[reqID] = msg.sender;

        // Transfer the token back to the withdrawer
        IERC721(nftAddress).safeTransferFrom(
            address(this),
            msg.sender,
            _tokenId
        );

        emit Withdrawn(
            msg.sender,
            nftAddress,
            _tokenId,
            block.timestamp,
            reqID
        );
    }

    // Calculate rewards for the msg.sender, check if there are any rewards
    // claim, set unclaimedRewards to 0 and transfer the ERC20 Reward token
    // to the user.
    function claimRewards() external whenNotPaused {
        Staker storage stakerData = stakers[msg.sender];
        uint256 rewards = stakerData.unclaimedRewards;
        require(rewards > 0, "No rewards to claim");
        uint256 fees = (rewards * withdrawalFeesPercentage) / 100;

        stakerData.unclaimedRewards = 0;

        mldToken.safeTransfer(msg.sender, rewards - fees);
        mldToken.safeTransfer(masterWallet, fees);
        emit ClaimedRewards(msg.sender, block.timestamp);
    }

    function getActiveStakedNFTs(
        address _user
    ) external view returns (bytes[] memory, uint256[] memory) {
        Staker storage stakerData = stakers[_user];
        uint totalStakedNFT = stakerData.allStakedNFTs.length;

        uint256[] memory stakedNFTsTime = new uint256[](totalStakedNFT);
        for (uint i = 0; i < totalStakedNFT; i++) {
            stakedNFTsTime[i] = stakerData.stakedTokenNFTtime[
                stakerData.allStakedNFTs[i]
            ];
        }

        return (stakerData.allStakedNFTs, stakedNFTsTime);
    }

    function decodeData(
        bytes calldata nftEncoded
    ) external pure returns (address nftAddress, uint256 tokenID) {
        (nftAddress, tokenID) = abi.decode(nftEncoded, (address, uint256));
    }

    //////////
