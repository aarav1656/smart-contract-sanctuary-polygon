    //////////

    function updateChainlinkOracle(address _new) external onlyOwner {
        setChainlinkOracle(_new);
        emit OracleUpdated(_new);
    }

    function updateJobID(string memory _jobIDUser) external onlyOwner {
        jobIdUser = _stringToBytes32(_jobIDUser);
        emit JobIDUpdated(_jobIDUser);
    }

    /**
     * Allow withdraw of Link tokens from the contract
     */
    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(chainlinkTokenAddress());
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }

    //Updating status for an NFT address for staking eligibility
    function updateNFTSupport(
        address _nftAddress,
        bool _update
    ) external onlyOwner {
        require(
            isNFTSupported[_nftAddress] != _update,
            "Updating with same parameter"
        );
        isNFTSupported[_nftAddress] = _update;
        emit NFTSupportUpdated(address(_nftAddress), _update);
    }

    // Update the withdrawal fees , can only be invoked by the contract owner
    function updateWithdrawalFeesPercentage(
        uint256 _newWithdrawalFeesPercentage
    ) external onlyOwner {
        require(_newWithdrawalFeesPercentage <= 10, "Invalid Percentage");
        withdrawalFeesPercentage = _newWithdrawalFeesPercentage;
        emit WithdrawalFeesUpdated(_newWithdrawalFeesPercentage);
    }

    // Update the amount of required lord while staking NFT
    function updateRequiredLord(uint256 _requiredLord) external onlyOwner {
        requiredLord = _requiredLord;
        emit RequiredLordUpdated(_requiredLord);
    }

    function updateLordBurnPercentage(
        uint256 _lordBurnPercentage
    ) external onlyOwner {
        require(_lordBurnPercentage < 100, "Invalid Percentage");
        lordBurnPercentage = _lordBurnPercentage;
        emit LordBurnPercentageUpdated(_lordBurnPercentage);
    }

    function updateBaseAPI(string memory _newMetaspaceAPI) external onlyOwner {
        metaspaceBaseApiURL = _newMetaspaceAPI;
        emit BaseAPIUpdated(_newMetaspaceAPI);
    }

    function updateMasterWallet(address _newMasterWallet) external onlyOwner {
        require(_newMasterWallet != address(0), "zero address");
        masterWallet = _newMasterWallet;
        emit MasterWalletUpdated(_newMasterWallet);
    }

    //////////
    // API Oracle //
    //////////
    /**
     * @notice Fulfillment function for multiple parameters in a single request
     * @dev This is called by the oracle. recordChainlinkFulfillment must be used.
     */
    function fulfillUserData(
        bytes32 _requestId,
        uint256 _calculatedRewards
    ) external recordChainlinkFulfillment(_requestId) {
        address user = userTempReqID[_requestId];
        Staker storage stakerData = stakers[user];
        stakerData.unclaimedRewards += _calculatedRewards;
        emit UserDataUpdated(user, _calculatedRewards);
    }

    function _stringToBytes32(
        string memory source
    ) internal pure returns (bytes32 result) {
        bytes memory tempEmptyStringTest = bytes(source);
        if (tempEmptyStringTest.length == 0) {
            return 0x0;
        }

        assembly {
            // solhint-disable-line no-inline-assembly
            result := mload(add(source, 32))
        }
    }
