pragma solidity ^0.8.0;


contract LotteryArithmetic {

    // TODO address private immutable owner;

    using SafeMath for uint;
    using Uint8a10 for uint;
    uint decimals = 6; // TODO adjustable

    // Uint256 随机数经过多项式处理，再取模，结果随机分布在 0 ～ 226061063 区间
    uint private constant MOD = 226061063;
    // 多项式
    uint[] private vector = [31, 27, 23, 19, 17, 13, 11, 7, 5, 3, 0];
    // 随机数分布
    uint[] private intvals = [0, 5, 42, 422, 2327, 21071, 58826, 245648, 618411, 4342499, 52759286, 151455664];
    // 13个奖项 + 1个特别奖（没有体现在reward数组中）
    uint[] private reward = [0, 1, 2, 5, 10, 20, 100, 1000, 10000, 50000, 100000, 500000, 1000000]; // 13 items

    // // 拿到初步结果集 item 为 14 的 List, [0, 1, 3, 6.....8]
    function getResult(
        uint seed,
        uint count,
        uint256 gamePool,
        uint256 jackPool
    ) external view returns (
        uint32[] memory winCount,
        uint256 gamePoolMinus,
        uint256 jackPoolMinus
    ) {
        winCount = new uint32[](14);
        uint256 finalIndex = 0;
        for (uint i; i < count; i++) {
            uint256 random = uint256(keccak256(abi.encode(seed, i)));
            uint256 word = random.mod(MOD);
            uint256 res = polyEval(word).mod(MOD);
            uint256 index = getIndex(res);
            uint256 realIndex = filter(index, word, gamePool, jackPool);
            finalIndex = 0;
            if (realIndex < 13) { // 0 ~ 12
                uint256 award = getAward(realIndex);
                if (gamePool >= award){
                    finalIndex = realIndex;
                    gamePoolMinus += award;
                    gamePool -= award;
                }
            } else { // 13
                uint256 award = jackPool.div(2);
                jackPoolMinus += award;
                jackPool -= award;
            }
            winCount[finalIndex] += 1;
        }
    }

    function filter(uint index, uint seed, uint256 gamePool, uint256 jackPool) internal view returns (uint) {
        if (index == 0 || reward[index] * 10 ** decimals > gamePool.div(5)) {
            // uint pool = _jackPool;
            if (jackPool < 1000 * 10 ** decimals) {
                return 0;
            }
            return seed <= MOD.div(Math.min(jackPool.div(1 * 10 ** (decimals - 2)), 20 * 10 ** decimals)) ? 13 : 0;
        }
        return index;
    }

    function getAward(uint index) internal view returns (uint) {
        return reward[index] * 10 ** decimals;
    }

    function polyEval(uint value) internal view returns (uint result) {
        result = vector[0];
        for (uint i = 1; i < vector.length; i++) {
            result = result.mul(value).mod(MOD);
            result = result.add(vector[i]);
        }
    }

    function getIndex(uint value) internal view returns (uint index) {
        if (value == 0) {
            index = 12;
        } else {
            for (uint i; i < 11; i++) {
                if (intvals[i] < value && intvals[i + 1] >= value) {
                    index = 11 - i;
                    break;
                }
            }
        }
    }
    
}