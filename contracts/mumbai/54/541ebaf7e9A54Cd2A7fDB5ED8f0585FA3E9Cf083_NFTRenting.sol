pragma solidity 0.8.17;

import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";

/**
* @dev NFT NFT rental system.
* Has function for list NFT for rent, along with edit and delete listed NFT detials.
* Has function for rent listed NFT.
* Has function for calculate rental fee according to a period of input rental time.
* Has function for claim rental fee [perform by NFT owners].
* Has fuction for calculate platform commission.
*/
contract NFTRenting is OwnableUpgradeable, AccessControlUpgradeable, PausableUpgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    address public tokenAddress;
    uint256 totalUnpaidBalance;
    uint256 platformCommission;
    uint256 totalPlatformCommission;
    uint256 public Month = 5; //minutes//

    bytes32 public constant WORKER_ROLE = keccak256("WORKER_ROLE");

    struct RentingNFTDetail {
        bytes32 orderIdRentingNFT;
        address nftAddress;
        uint256 nftTokenID;
        address owner;
        address renter;
        uint256 rentalPricePerMonth;
        uint256 rentalPeriod;
        uint256 rentalStart;
        uint256 rentalEnd;
        uint256 lastClaimedTime;
        uint256 maxPeriod;
        uint256 maxPeriodBalance;
        bool rentalStatus;
    }
    
    struct CheckDetail {
        bytes32 orderIdRentingNFT;
        address owner;
    }

    mapping(bytes32 => RentingNFTDetail) public RentingNFTs; //input address of NFT and token id to output Renting Details
    mapping(address => mapping(uint256 => CheckDetail)) public CheckDetails; //input address of NFT and token id to output Renting Details
    mapping(address => bytes32[]) ownerToListedRentingOrderIds; //input owner address to output Renting Order Ids
    mapping(address => bytes32[]) orderOfRenter;

    /**
     * @dev Declare event for use emit `MintNFT`,`MintWithPrice`.
     */
    event ListRentingNFT(bytes32 orderIdRentingNFT ,address NFTaddress, uint256 NFTID , uint256 rentalPricePerMonth,uint256 maxPeriod, address NFTOwner);
    event CancelListedRentingNFT(bytes32 orderIdRentingNFT,address NFTaddress, uint256 NFTID, address NFTOwner);
    event ExecuteRent(bytes32 orderIdRentingNFT,address NFTaddress, uint256 NFTID, uint256 rentalPeriod, address renter, uint256 rentalStart, uint256 rentalEnd, uint256 totalRenterSpent);
    event ClaimFeeRenting(bytes32 orderIdRentingNFT, address NFTaddress, uint256 NFTID, address NFTOwner, uint256 NFTOwnerReceivedAmount, uint256 unclaimedFee, uint256 platformFee, uint256 lastClaimedTime, uint256 totalUnpaidBalance);
    event ChangeOwnerRentingNFT(bytes32 orderIdRentingNFT, address newOwner);

    function initialize(
        address _tokenAddress,
        uint256 _platformCommission
    ) public initializer {
        tokenAddress = _tokenAddress;
        platformCommission = _platformCommission;

      ///@dev as there is no constructor, we need to initialise the OwnableUpgradeable explicitly
      __Pausable_init();
      __Ownable_init();
      __AccessControl_init();
      _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
   }

    modifier onlyNFTOwnerANDadmin(bytes32 _orderIdRentingNFT) {
        RentingNFTDetail storage order = RentingNFTs [_orderIdRentingNFT];
        require(msg.sender == IERC721Upgradeable(order.nftAddress).ownerOf(order.nftTokenID) || hasRole(WORKER_ROLE, msg.sender) , "[NFTRenting.onlyNFTOwnerANDadmin] Not NFT owner or Admin.");
        _;
    }

    modifier onlyNFTOwner(uint256 tokenId, address nftAddress) {
        require(msg.sender == IERC721Upgradeable(nftAddress).ownerOf(tokenId) , "[NFTRenting.onlyNFTOwner] Not NFT owner.");
        _;
    }

    function setMonth(uint256 _Month) public {
        Month = _Month;
    }

     function setPlatformCommission(uint256 _platformCommission) public {
        platformCommission = _platformCommission;
    }

    // /**
    // * @dev list and for rent.
    // * unclaimed fee need to be 0 before NFT owners can list their RentingNFTs.
    // * owner, rentalPrice will be input to RentingNFTDetail.
    // * @param _NFTAddress - address of prefered NFT.
    // * @param _NFTId -  ID of prefered NFT.
    // * @param _rentalPrice -  prefered rental price per day.
    // */
    function listRentingNFT(address _NFTAddress, uint256 _NFTId, uint256 _rentalPricePerMonth, uint256 _maxPeriod) public onlyNFTOwner(_NFTId, _NFTAddress) whenNotPaused{   
        require(_rentalPricePerMonth != 0, "[NFTRenting.listRentingNFT] Rental price can't be zero.");
        require(CheckDetails[_NFTAddress][_NFTId].orderIdRentingNFT == 0, "[NFTRenting.listRentingNFT] Renting order is still running");
        require(CheckDetails[_NFTAddress][_NFTId].owner == 0x0000000000000000000000000000000000000000, "[NFTRenting.listRentingNFT] NFT already listed");

        bytes32 _orderIdRentingNFT = keccak256(
            abi.encodePacked(
                block.timestamp,
                _NFTAddress,
                _NFTId,
                msg.sender,
                _rentalPricePerMonth
            )
        );

        CheckDetail storage detail = CheckDetails [_NFTAddress][_NFTId];
            detail.orderIdRentingNFT = _orderIdRentingNFT;
            detail.owner =  msg.sender;
        RentingNFTDetail storage order = RentingNFTs [_orderIdRentingNFT];
            order.orderIdRentingNFT = _orderIdRentingNFT;
            order.nftAddress = _NFTAddress;
            order.nftTokenID = _NFTId;
            order.owner =  msg.sender;
            order.renter = 0x0000000000000000000000000000000000000000;
            order.rentalPricePerMonth = _rentalPricePerMonth;
            order.rentalPeriod = 0;
            order.rentalStart = 0;
            order.rentalEnd = 0;
            order.lastClaimedTime = 0;
            order.maxPeriod = _maxPeriod;
            order.maxPeriodBalance = _maxPeriod;
            order.rentalStatus =  false;

        ownerToListedRentingOrderIds[msg.sender].push(_orderIdRentingNFT);

        emit ListRentingNFT(_orderIdRentingNFT, _NFTAddress, _NFTId, _rentalPricePerMonth,_maxPeriod,msg.sender);
    }

    // /**
    // * @dev cancel listed order.
    // * @param _NFTAddress - address of prefered NFT.
    // * @param _NFTId -  ID of prefered NFT.
    // */
    function cancelListedRentingOrder(bytes32 _orderIdRentingNFT) public onlyNFTOwnerANDadmin(_orderIdRentingNFT) whenNotPaused{
        RentingNFTDetail storage order = RentingNFTs [_orderIdRentingNFT];
        require(order.orderIdRentingNFT != 0, "[NFTRenting.cancelListedRentingOrder] Renting NFT not published");
        require(order.renter == 0x0000000000000000000000000000000000000000, "[NFTRenting.cancelListedRentingOrder] This Renting order already has a renter");
        
        emit CancelListedRentingNFT(_orderIdRentingNFT,order.nftAddress, order.nftTokenID,order.owner);
        removeOwner(order.orderIdRentingNFT, order.owner);
        delete CheckDetails[order.nftAddress][order.nftTokenID];
        delete RentingNFTs[_orderIdRentingNFT];
        
    }

    // /**
    // * @dev renter's address will be input in RentingNFTDetail.
    // * calculate total rental price and decrease tokens from renter's balanceVault according to the calculated amount.
    // * startPeriod will be input to RentingNFTDetail according to current timestamp.
    // * @param _NFTAddress - address of prefered NFT.
    // * @param _NFTId -  ID of prefered NFT.
    // * @param _rentalPeriod -  prefered rental period [day(s)].
    // */
    function executeRent(bytes32 _orderIdRentingNFT, uint256 _rentalPeriod) public whenNotPaused{
        RentingNFTDetail storage order = RentingNFTs [_orderIdRentingNFT];
        require(order.renter == 0x0000000000000000000000000000000000000000, "[NFTRenting.executeRent] NFT already rented");
        require(order.orderIdRentingNFT != 0, "[NFTRenting.executeRent] Renting NFT not published");
        require(_rentalPeriod != 0, "[NFTRenting.executeRent] Rental period can't be zero");
        require(order.owner != msg.sender,"[NFTRenting.executeRent] Can't rent your own nft.");
        require(_rentalPeriod <= order.maxPeriodBalance, "[NFTRenting.executeRent] Rental period can't be mpre than max period.");

        IERC20Upgradeable(tokenAddress).safeTransferFrom(msg.sender,address(this),(order.rentalPricePerMonth * _rentalPeriod));
        // update deducted fee amount from renter to totalUnpaidBalance
        totalUnpaidBalance += order.rentalPricePerMonth * _rentalPeriod ;

        uint256 _rentalEnd = block.timestamp + (_rentalPeriod * Month * 1 minutes);
            order.renter = msg.sender;
            order.rentalPeriod =  _rentalPeriod; //pay rental price
            order.rentalStart = block.timestamp; // get current time as start period
            order.rentalEnd = _rentalEnd;
            order.maxPeriodBalance -= _rentalPeriod;
            order.rentalStatus = true ;
        orderOfRenter[msg.sender].push(_orderIdRentingNFT);
        emit ExecuteRent(_orderIdRentingNFT,order.nftAddress,order.nftTokenID, _rentalPeriod, msg.sender, order.rentalStart, order.rentalEnd, order.rentalPricePerMonth * _rentalPeriod);
    }

    // /**
    // * @dev claim rental fee.
    // * calculate and deduct platform commission from fee amount when NFT owner claim rental fee.
    // * update total platform commission. 
    // * totalPlatformCommission - refers to total amount of commission remaining in balanceVault.
    // * update total unpaid balance. 
    // * totalUnpaidBalance - refers to total unpaid balance that has been deducted from renter's wallet but not yet transfered to owner's wallet.
    // * reset lastClaimedTime to current timestamp.
    // * @param _NFTAddress - address of prefered NFT.
    // * @param _NFTId -  ID of prefered NFT.
    // */
    function claimFeeRenting(bytes32 _orderIdRentingNFT) external   onlyNFTOwnerANDadmin(_orderIdRentingNFT) whenNotPaused{
        RentingNFTDetail storage order = RentingNFTs [_orderIdRentingNFT];
        require(block.timestamp >= order.rentalEnd, "[NFTRenting.claimFeeRenting] Renting period has not ended yet");

        require(order.orderIdRentingNFT != 0, "[NFTRenting.claimFeeRenting] Renting NFT not published");
        require(order.renter != 0x0000000000000000000000000000000000000000, "[NFTRenting.claimFeeRenting] This NFT has no renter");

        uint256 unclaimedFee = order.rentalPricePerMonth * order.rentalPeriod;
        uint256 platformFee = (unclaimedFee * platformCommission) / 1000000000000000000;
        IERC20Upgradeable(tokenAddress).safeTransfer(msg.sender, unclaimedFee - platformFee);
        totalPlatformCommission += platformFee;
        totalUnpaidBalance -= unclaimedFee;
        order.lastClaimedTime = block.timestamp;

        emit ClaimFeeRenting(_orderIdRentingNFT,order.nftAddress,order.nftTokenID,order.owner,
         unclaimedFee - platformFee, unclaimedFee,
         platformFee, block.timestamp, 
         totalUnpaidBalance);
        removeRenter(order.orderIdRentingNFT, order.renter);
        removeOwner(order.orderIdRentingNFT, order.owner);
        delete CheckDetails[order.nftAddress][order.nftTokenID];
        delete RentingNFTs[_orderIdRentingNFT];
        
    }

    /**
    * @dev contract owner claim platform commission.
    */
    function claimPlatformCommission() public onlyOwner {
        IERC20Upgradeable(tokenAddress).safeTransfer(msg.sender, totalPlatformCommission);
    }

    /**
    * @dev set new owner for backend
    */
    function changeOwnerRentingNFT(bytes32 _orderIdRentingNFT, address _newOwner) public onlyRole(WORKER_ROLE) {
        RentingNFTDetail storage order = RentingNFTs [_orderIdRentingNFT];
        removeOwner(order.orderIdRentingNFT, order.owner);
        order.owner = _newOwner;
        CheckDetails[order.nftAddress][order.nftTokenID].owner = _newOwner;
        ownerToListedRentingOrderIds[_newOwner].push(_orderIdRentingNFT);
        emit ChangeOwnerRentingNFT(_orderIdRentingNFT, _newOwner);
    }

    /**
     * @dev Get all listed Renting NFTs of specific address.
     */
    function getOwnerListedRentingNFTs(address _owner) public view returns (bytes32[] memory nfts){
        bytes32[] memory owerNFTs = ownerToListedRentingOrderIds[_owner];
        nfts = new bytes32[](ownerToListedRentingOrderIds[_owner].length);
        for (uint256 i; i < ownerToListedRentingOrderIds[_owner].length; i++) {
            nfts[i] = owerNFTs[i];
        }
        return nfts;
    }
    /**
     * @dev Get all listed Renting NFTs of specific address.
     */
    function getOrderRentingByRenter(address _renter) public view returns (bytes32[] memory nfts){
        bytes32[] memory renterNFTs = orderOfRenter[_renter];
        nfts = new bytes32[](orderOfRenter[_renter].length);
        for (uint256 i; i < orderOfRenter[_renter].length; i++) {
            nfts[i] = renterNFTs[i];
        }
        return nfts;
    }

    /**
     * @dev remove ownership from previous owner when order is executed.
     */
    function removeRenter(bytes32 _orderId, address _renter) private {
        uint256 index = findIndex(_orderId, _renter);
        orderOfRenter[_renter][index] = orderOfRenter[_renter][
            orderOfRenter[_renter].length - 1
        ];
        orderOfRenter[_renter].pop();
    }

    /**
     * @dev remove ownership from previous owner when order is executed.
     */
    function removeOwner(bytes32 _orderId, address _owner) private {
        uint256 index = findIndex(_orderId, _owner);
        ownerToListedRentingOrderIds[_owner][index] = ownerToListedRentingOrderIds[_owner][
            ownerToListedRentingOrderIds[_owner].length - 1
        ];
        ownerToListedRentingOrderIds[_owner].pop();
    }

    /**
     * @dev find index of item to remove.
     */
    function findIndexforRenter(bytes32 _orderId, address _renter) private view returns (uint256){
        for (uint256 i; i <  orderOfRenter[_renter].length; i++) {
            if ( orderOfRenter[_renter][i] == _orderId) {
                return i;
            }
        }
        revert(
            "[NFTRenting.findIndexforRenter] Can't find the renter of this NFT."
        );
    }
    /**
     * @dev find index of item to remove.
     */
    function findIndex(bytes32 _orderId, address _owner) private view returns (uint256){
        for (uint256 i; i < ownerToListedRentingOrderIds[_owner].length; i++) {
            if (ownerToListedRentingOrderIds[_owner][i] == _orderId) {
                return i;
            }
        }
        revert(
            "[NFTRenting.findIndex] Can't find the ownership of this NFT."
        );
    }

    function getTotalUnpaidBalance() public view returns(uint256) {
        return totalUnpaidBalance;
    }

    function multiGrantRole(bytes32 _role,address [] memory _workerAddress) external {
        uint256 _length = _workerAddress.length;
           for (uint256 i = 0; i < _length; i++){
                grantRole(_role, _workerAddress[i]);
           }
    } 

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }
}

