        contestsMap[totalContests] = contestAddr;

        _activeContests.add(contestAddr);

        emit NewContest(contestAddr, msg.sender);
        totalContests++;
    }

    function removeContest(address contestAddr) public onlyAdmin {
        require(isContest(contestAddr) == true, "Contest not found");
        _activeContests.remove(contestAddr);
        contests[contestAddr].status = 0;
    }

    function updateContest(address contestAddr, uint status) public onlyAdmin {
        require(isContest(contestAddr) == true, "Contest not found");
        contests[contestAddr].status = status;
    }

    function getContestById(uint contest_id) public view returns (address) {
        return contestsMap[contest_id];
    }

    function isContest(address contestAddr) public view returns (bool) {
        return contests[contestAddr].status > 0;
    }

    //function enter(address playerAddr) external payable returns(bool);
    function enter(address contestAddr) public payable onlyContest(contestAddr) {
        IContest _contest = IContest(contestAddr);
        bool _ok = _contest.enter(msg.sender);
        require(_ok, "Fail");
        emit NewEntrance(contestAddr, msg.sender);
    }

    //function bet(address _playerAddr, uint32 _stake, uint16 _value, uint[] calldata _selections) external returns(uint);
    function bet(address contestAddr, uint32 _stake, uint16 _value, uint[] calldata _selections) public onlyContest(contestAddr) {
        IContest _contest = IContest(contestAddr);
        uint bet_id = _contest.bet(msg.sender, _stake, _value, _selections);

        emit NewBet(contestAddr, msg.sender, bet_id);
    }

    //function oracle(uint bet_id, uint16 value, uint32 profit, uint8 status) external;
    function oracle(address contestAddr, uint[] calldata _oracleResults) public onlyOracles() onlyContest(contestAddr) {
        IContest _contest = IContest(contestAddr);
        uint len = _oracleResults.length;
        for (uint i; i < len;) {
            (address playerAddr, uint bet_id, uint value, uint profit, uint status) = _contest.oracle(_oracleResults[i]);

            if (status != 0) {
                emit UpdateBet(contestAddr, playerAddr, bet_id, value, profit, status);
            }

            unchecked {
                ++i;
            }
        }
    }

    //event Claim(address indexed contestAddr, address indexed playerAddr, uint amount);
    //function claim(address playerAddr, uint amount, bytes32[] calldata merkleProof) external payable;
    function claim(address contestAddr, uint amount, bytes32[] calldata merkleProof) public onlyContest(contestAddr) {
        IContest _contest = IContest(contestAddr);
        _contest.claim(msg.sender, amount, merkleProof);
        emit Claim(contestAddr, msg.sender, amount);
    }
}