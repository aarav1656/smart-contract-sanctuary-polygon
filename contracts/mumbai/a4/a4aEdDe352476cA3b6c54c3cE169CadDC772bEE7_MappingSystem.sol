import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";

import "./interfaces/IDepositedToken.sol";
import "./interfaces/IMappedToken.sol";

// reference: https://github.com/Drakenwolf/Nft_Staking_System/blob/main/contracts/StakeSystem.sol

contract MappingSystem is Ownable, ERC721Holder {
  IDepositedToken public depositedTokenContract;
  IMappedToken public generatedTokenContract;

  uint256[] public depositedTokens;

  /// @dev Generated Token Id -> Deposited Token Id
  mapping(uint256 => uint256) public generatedTokenOrigins;

  /// @dev Deposited Token Id -> Index in depositedTokens, Index starts from 1
  mapping(uint256 => uint256) public depositedTokenIndex;

  uint256 public depositedTotal;

  /// @notice mapping of an account to its wallet

  event Deposited(address owner, uint256 token);
  event Redeemed(address owner, uint256 token);
  event Minted(address owner, uint256 token);

  constructor(address _depositedTokenContract, address _generatedTokenContract) {
    depositedTokenContract = IDepositedToken(_depositedTokenContract);
    generatedTokenContract = IMappedToken(_generatedTokenContract);
  }

  function deposit(uint256 tokenId) public returns (uint256) {
    return _deposit(msg.sender, tokenId);
  }

  function _deposit(address _user, uint256 _tokenId) internal returns (uint256) {
    require(depositedTokenContract.ownerOf(_tokenId) == _user, "No owner");

    depositedTokenContract.safeTransferFrom(_user, address(this), _tokenId);

    depositedTokens.push(_tokenId);
    ++depositedTotal;
    depositedTokenIndex[_tokenId] = depositedTotal; // index starts from 1
    emit Deposited(_user, _tokenId);

    // send the user a mapped NFT
    uint256 generatedTokenId = _mapAndMintTo(_user, _tokenId);

    emit Minted(_user, generatedTokenId);

    return generatedTokenId;
  }

  function _mapAndMintTo(address _user, uint256 _tokenId) internal returns (uint256) {
    IDepositedToken.GoblinAttributes memory inputAttributes = depositedTokenContract.getGoblinAttributes(_tokenId);
    IMappedToken.ShardAttributes memory outputAttributes;

    outputAttributes.physical_damage = inputAttributes.attack;
    outputAttributes.mana_regen = inputAttributes.attack_speed / 100;
    outputAttributes.durability = (inputAttributes.breeding_points * 100) / 8;
    outputAttributes.armor = (inputAttributes.defense + inputAttributes.resistance) / 2;
    outputAttributes.magical_damage = inputAttributes.magic;
    outputAttributes.speed = inputAttributes.movement_speed;

    uint256 generatedTokenId = generatedTokenContract.mintShard(_user, outputAttributes);

    generatedTokenOrigins[generatedTokenId] = _tokenId;

    return generatedTokenId;
  }

  function redeem(uint256 _tokenId) public {
    _redeem(msg.sender, _tokenId);
  }

  function _redeem(address _user, uint256 _tokenId) internal returns (uint256) {
    require(generatedTokenContract.ownerOf(_tokenId) == _user, "No owner");

    uint256 depositedTokenId = generatedTokenOrigins[_tokenId];

    depositedTokenContract.safeTransferFrom(address(this), _user, depositedTokenId);

    uint256 indexToDelete = depositedTokenIndex[depositedTokenId];
    require(indexToDelete != 0, "index error");
    depositedTokens[indexToDelete - 1] = depositedTokens[depositedTotal - 1];
    depositedTokens.pop();
    delete depositedTokenIndex[depositedTokenId];
    --depositedTotal;

    emit Redeemed(_user, depositedTokenId);

    generatedTokenContract.safeTransferFrom(_user, address(this), _tokenId);
    generatedTokenContract.burn(_tokenId);

    return depositedTokenId;
  }
}

