    function buyInsurance(uint256 _insuranceId, GameType _gameType) public {
        require(isBuyingInsurancePaused == false, "Buying insurance is paused");

        address addr = msg.sender;

        if (shouldCheckPlayerActivationStatus) {
            require(memberContract.hasValidActivationPass(addr), "Require activation pass");
            uint256 _activationPassId = memberContract.userPurchasedPackageId(addr);
            require(
                isValidInsuranceOption(_activationPassId, _insuranceId),
                "Member type not allowed to purchase this package"
            );
        }

        require(isEligibleToBuyNewInsurance(addr), "You are not eligible to buy insurance");

        uint256 _insurancePriceInVico = gameInsurancePackages[_insuranceId].priceInVico;
        uint256 _insuranceTotalPrice = (vicoToUsdBps * _insurancePriceInVico) / MAX_BPS;
        uint256 _packageExpiryDateTime = block.timestamp + gameInsurancePackages[_insuranceId].duration;

        require(_insurancePriceInVico > 0, "Invalid insurance");

        CurrencyTransferLib.transferCurrency(vicoTokenAddress, addr, address(this), _insuranceTotalPrice);

        delete userToGameProfileMap[addr];

        Insurance memory insurance = Insurance({
            insuranceId: _insuranceId,
            purchasedDateTime: block.timestamp,
            expiryDateTime: block.timestamp + insuredDuration,
            packageExpiryDateTime: _packageExpiryDateTime,
            priceInVico: _insurancePriceInVico,
            vicoToUsdBps: vicoToUsdBps,
            totalPrice: _insuranceTotalPrice,
            gameType: _gameType
        });
        userToGameProfileMap[addr].insurance = insurance;

        uint256 timestampOfBeginningOfDay = getTimestampOfBeginningOfDay(block.timestamp);
        GameHistory memory gameHistory = GameHistory({
            player: addr,
            status: GameHistoryStatus.PENDING,
            reward: 0,
            gameType: _gameType,
            timestamp: timestampOfBeginningOfDay
        });
        userGameHistories[addr][timestampOfBeginningOfDay] = gameHistory;

        emit NewInsurance(block.timestamp, _packageExpiryDateTime, addr);
    }

