            uint256 insuranceId,
            GameType gameType
        )
    {
        bool isEligible = isEligibleToBuyNewInsurance(addr);

        if (isEligible == true) {
            return (false, 0, 0, 0, 0, GameType.BUSD);
        }

        Insurance storage userInsurance = userToGameProfileMap[addr].insurance;
        return (
            !isEligible,
            userInsurance.purchasedDateTime,
            userInsurance.expiryDateTime,
            userInsurance.packageExpiryDateTime,
            userInsurance.insuranceId,
            userInsurance.gameType
        );
    }

    function isEligibleToBuyNewInsurance(address addr) public view returns (bool) {
        if (shouldCheckPlayerActivationStatus) {
            require(memberContract.hasValidActivationPass(addr), "Require activation pass");
