            insuranceId: existingInsurance.insuranceId,
            purchasedDateTime: existingInsurance.expiryDateTime,
            expiryDateTime: existingInsurance.expiryDateTime + insuredDuration,
            packageExpiryDateTime: existingInsurance.packageExpiryDateTime,
            priceInVico: existingInsurance.priceInVico,
            vicoToUsdBps: vicoToUsdBps,
            totalPrice: existingInsurance.totalPrice,
            gameType: existingInsurance.gameType
