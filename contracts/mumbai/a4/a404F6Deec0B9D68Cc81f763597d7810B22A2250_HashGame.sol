        UserGameProfile storage gameProfile = userToGameProfileMap[addr];

        return
            (gameProfile.insurance.expiryDateTime == 0 && gameProfile.insurance.purchasedDateTime == 0) ||
            (block.timestamp >= gameProfile.insurance.expiryDateTime);
    }

    function joinGame() public payable {
        require(isJoinGamePaused == false, "Game is paused");
        address player = msg.sender;
        (bool isUserInsured, , , , uint256 _insuranceId, ) = hasValidInsurance(player);
        require(isUserInsured, "User does not have valid insurance");
        require(!hasPlayedMaxGameRound(player), "User has played maximum rounds of game");

        uint256 _firstGameStakeValue = gameInsurancePackages[_insuranceId].firstGameStakeValue;
        UserGameProfile memory _gameProfile = userToGameProfileMap[player];
        uint256 _playedRound = _gameProfile.gameRoundCount;
        GameType _gameType = _gameProfile.insurance.gameType;
        uint256 _lastStakedValue = 0;
        GameRound memory lastJoinedGame;

        if (_playedRound > 0) {
            lastJoinedGame = userToGameProfileMap[player].gameRounds[_playedRound - 1];
        }

        if (_playedRound > 0 && lastJoinedGame.hasPlayed == false) {
            revert("Processing previous game, please try again later");
        }

        if (_playedRound > 0 && lastJoinedGame.isWon == true) {
            revert("You have already won a round");
        }

        if (_playedRound > 0) {
            _lastStakedValue = lastJoinedGame.stakeValue;
        }

        uint256 currentStakeValue = _lastStakedValue > 0 ? _lastStakedValue * nextGameMultiplier : _firstGameStakeValue;

        if (_gameType == GameType.BUSD) {
            CurrencyTransferLib.transferCurrency(busdTokenAddress, msg.sender, address(this), currentStakeValue);
        } else if (_gameType == GameType.RRC) {
            CurrencyTransferLib.transferCurrency(rrcTokenAddress, msg.sender, address(this), currentStakeValue);
        }

        GameRound memory newRound = GameRound({
            round: _playedRound + 1,
            hasPlayed: false,
            isWon: false,
            stakeValue: currentStakeValue,
            gameHash: "",
            createdAt: block.timestamp,
            resultSubmittedAt: 0
        });

        userToGameProfileMap[player].gameRounds.push(newRound);
        userToGameProfileMap[player].gameRoundCount++;
        emit NewGameRound(newRound.round, newRound.hasPlayed, newRound.isWon, newRound.stakeValue, player);
    }

    function processGame(address _player, bool _result, bytes32 _blockHash) public onlyRole(MAINTAINER_ROLE) {
        require(_blockHash.length > 0, "Empty hash");

        UserGameProfile memory _gameProfile = userToGameProfileMap[_player];
        GameType _gameType = _gameProfile.insurance.gameType;
        uint256 playedRound = _gameProfile.gameRoundCount;
        GameRound storage lastPlayedRound = userToGameProfileMap[_player].gameRounds[playedRound - 1];

        lastPlayedRound.isWon = _result;
        lastPlayedRound.hasPlayed = true;
        lastPlayedRound.gameHash = Strings.toHexString(uint256(_blockHash));
        lastPlayedRound.resultSubmittedAt = block.timestamp;

        emit ProcessedGameRound(
            lastPlayedRound.round,
            lastPlayedRound.hasPlayed,
            lastPlayedRound.isWon,
            lastPlayedRound.stakeValue,
            lastPlayedRound.gameHash,
            lastPlayedRound.resultSubmittedAt,
            _player
        );

        uint256 _timestampOfBeginningOfDay = getTimestampOfBeginningOfDay(_gameProfile.insurance.purchasedDateTime);
        GameHistory storage _gameHistory = userGameHistories[_player][_timestampOfBeginningOfDay];
        uint256 purchasedInsuranceId = _gameProfile.insurance.insuranceId;
        GameInsurancePackage memory purchasedPackage = gameInsurancePackages[purchasedInsuranceId];

        if (_result == true) {
            uint256 _payoutReward = lastPlayedRound.stakeValue * 2;
            uint256 userTotalLostCount = userLostCountMap[_player];

            if (_gameType == GameType.BUSD) {
                _payoutBUSD(_payoutReward, _player);
            } else if (_gameType == GameType.RRC) {
                if (userTotalLostCount == 0) {
                    _payoutBUSD(purchasedPackage.firstGameStakeValue, _player);
                } else if (userTotalLostCount == 1) {
                    _payoutBUSD((purchasedPackage.firstGameStakeValue * 9) / 10, _player);
                } else if (userTotalLostCount == 2) {
                    _payoutBUSD((purchasedPackage.firstGameStakeValue * 8) / 10, _player);
                } else if (userTotalLostCount > 2) {
                    _payoutBUSD((purchasedPackage.firstGameStakeValue * 7) / 10, _player);
                }

                _payoutRRC(lastPlayedRound.stakeValue * 2 - purchasedPackage.firstGameStakeValue, _player);
            }

            _gameHistory.status = GameHistoryStatus.WON;
            _gameHistory.reward = _payoutReward;
        }

        if (_result == false && hasPlayedMaxGameRound(_player)) {
            _payoutRRC(purchasedPackage.totalGameCost, _player);
            _gameHistory.status = GameHistoryStatus.LOST;

            userLostCountMap[_player] += 1;

            userToGameProfileMap[_player].insurance.gameType = GameType.RRC;
            delete userToGameProfileMap[_player].gameRounds;
            delete userToGameProfileMap[_player].gameRoundCount;
        }
    }

    function getPastGameRounds(address addr) public view returns (GameRound[] memory gameRounds) {
        return userToGameProfileMap[addr].gameRounds;
    }

    function currentGameRound(
        address addr
    ) public view returns (uint256 round, uint256 stakeValue, bool hasPendingRound) {
        (bool isUserInsured, , , , uint256 _insuranceId, ) = hasValidInsurance(addr);
        require(isUserInsured, "You do not have valid insurance");
        require(!hasPlayedMaxGameRound(addr), "You have played maximum rounds of game");

        uint256 _firstGameStakeValue = gameInsurancePackages[_insuranceId].firstGameStakeValue;
        uint256 playedRound = userToGameProfileMap[addr].gameRounds.length;
        uint256 lastStakedValue = 0;

        if (
            playedRound > 0 &&
            userToGameProfileMap[addr].gameRounds[playedRound - 1].hasPlayed == true &&
            userToGameProfileMap[addr].gameRounds[playedRound - 1].isWon == false
        ) {
            GameRound memory lastCreatedRound = userToGameProfileMap[addr].gameRounds[playedRound - 1];
            lastStakedValue = lastCreatedRound.stakeValue;
            uint256 currentStakeValue = lastStakedValue > 0
                ? lastStakedValue * nextGameMultiplier
                : _firstGameStakeValue;

            return (lastCreatedRound.round + 1, currentStakeValue, false);
        }

        if (
            playedRound > 0 &&
            userToGameProfileMap[addr].gameRounds[playedRound - 1].hasPlayed == true &&
            userToGameProfileMap[addr].gameRounds[playedRound - 1].isWon == true
        ) {
            return (0, 0, false);
        }

        if (playedRound > 0 && userToGameProfileMap[addr].gameRounds[playedRound - 1].hasPlayed == false) {
            return (0, 0, true);
        }

        if (playedRound == 0) {
            return (1, _firstGameStakeValue, false);
        }
    }

    function hasPlayedMaxGameRound(address addr) public view returns (bool hasPlayedMax) {
        (bool userHasValidInsurance, , , , , ) = hasValidInsurance(addr);
        bool userHasPlayedMaxRound = userToGameProfileMap[addr].gameRounds.length == maxGameRound;

        return userHasValidInsurance && userHasPlayedMaxRound;
    }

    function getTimestampOfBeginningOfDay(uint256 timestamp) private pure returns (uint256) {
        return (timestamp / 1 days) * 1 days;
    }

    function isValidInsuranceOption(uint256 _memberPassId, uint256 _insuranceId) private pure returns (bool) {
        return _insuranceId < (_memberPassId + 1) * 4;
    }

    function _authorizeUpgrade(address) internal view override onlyRole(DEFAULT_ADMIN_ROLE) {}

    function migrateUserLostCount(
        address[] calldata _users,
        uint256[] calldata _lostCounts
    ) public onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_users.length == _lostCounts.length, "Input arrays must have same length");

        for (uint256 i = 0; i < _users.length; i++) {
            userLostCountMap[_users[i]] = _lostCounts[i];
        }
    }

