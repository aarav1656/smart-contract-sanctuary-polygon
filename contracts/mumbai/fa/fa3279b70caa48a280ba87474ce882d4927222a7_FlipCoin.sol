contract FlipCoin is VRFV2WrapperConsumerBase {
    
    using SafeMath for uint256;

  
    enum BetOptions{ HEADS , TAILS }
    bool paused;
    uint16  constant requestConfirmations = 6;
    uint32  constant callBackGasLimit = 1_000_000;
    uint32  constant numWords = 1;
    uint256 public totalWinners;
    uint256 public FeeRequireToPlay = 0.1 ether;
    address  chainlinkaddress   = 0x326C977E6efc84E512bB9C30f76E30c160eD06FB; 
    address  vrfWraypperAddress = 0x99aFAf084eBA697E584501b8Ed2c0B37Dd136693;
    address public flipCoinOwner;

    event FlipCoinRequest(uint256 requestId);
    event FlipCoinResult(uint256 requestId , bool isWin);


    constructor()  VRFV2WrapperConsumerBase(chainlinkaddress,vrfWraypperAddress){
        flipCoinOwner = msg.sender;
    }

    struct flipCoinDetails{
        // uint256 BettingFee;
        uint256 randomWords;
        address player;
        bool isWin;
        bool fullFilled;
        BetOptions input;
    }

    mapping(uint256 => flipCoinDetails) public bettingDetails;


    function changeBettingFee(uint256 _FeeRequireToPlay) public  returns(string memory _response)
    {
        require(msg.sender==flipCoinOwner , "You are not auhteroized to change the Betting fee");
        FeeRequireToPlay = _FeeRequireToPlay;
        return "Fee changed scucessfully";
    }



    function flipTheCoin(BetOptions selection) external payable PausedTheFunctionality returns(uint256)
    {
        require(msg.value == FeeRequireToPlay , "Kindly pay the exact fee for betting");
        require(address(this).balance > FeeRequireToPlay.mul(2), "contract balance is not enough to pay you the reward , please come back later"); // added
        
        uint256 requestId = requestRandomness(callBackGasLimit,requestConfirmations,numWords);
        
        require(requestId != 0, "randomNumber generator doesent work properly.");
        require(bettingDetails[requestId].player == address(0) , "values are alreay intialized");     
        require(bettingDetails[requestId].isWin != true);


        flipCoinDetails memory _flipCoinDetails = bettingDetails[requestId];
        _flipCoinDetails.player = msg.sender;
        _flipCoinDetails.input = selection;
        // _flipCoinDetails.BettingFee = VRF_V2_WRAPPER.calculateRequestPrice(callBackGasLimit);

        emit FlipCoinRequest(requestId);
        return requestId;
    }

    function fulfillRandomWords(uint256 requestId, uint256[] memory randomwords) internal override
    {
        require(tx.origin == bettingDetails[requestId].player);
        // require(bettingDetails[requestId].BettingFee > 0 , "Request Not Found");
        require(msg.sender == vrfWraypperAddress);

        bettingDetails[requestId].fullFilled = true;
        bettingDetails[requestId].randomWords = randomwords[0];

        BetOptions result = BetOptions.HEADS;

            if(randomwords[0]%2==0)
            {
                result = BetOptions.TAILS;
            }

            if(bettingDetails[requestId].input==result)
            {
                bettingDetails[requestId].isWin=true;
                totalWinners++;
                payable(bettingDetails[requestId].player).transfer(FeeRequireToPlay.add(2 wei));
            
            }
            emit FlipCoinResult(requestId,bettingDetails[requestId].isWin);
    }

   
    function withdrawAllFunds() public /*whenNotPaused*/
    {
        require(msg.sender == flipCoinOwner , "You are not the admin");
        payable(flipCoinOwner).transfer(address(this).balance);

    }

    
    function changeVrfWraypperAddress(address _vrfWraypperAddress)  public returns (bool isChanges) {
        require(_vrfWraypperAddress != address(0),"input a valid address");
        require(msg.sender == flipCoinOwner , "Only owner can call this function");

        vrfWraypperAddress = _vrfWraypperAddress;
        return true;
    }

    function changeChainlinkaddress(address _newChainLinkaddress) public  returns (bool isChanges) {
        require(_newChainLinkaddress != address(0),"input a valid address");
        require(msg.sender == flipCoinOwner , "Only owner can call this function");
        chainlinkaddress = _newChainLinkaddress;
        return true;
    }


    function enableOrDiablePause(bool _pause) external {
        require(msg.sender == flipCoinOwner, "That's only owner can run this function");
        paused = _pause;
    }
    

    modifier PausedTheFunctionality() {
        require(paused == false, "Owner pause the function to proceed further!");
        _;
    }

    receive() external payable {
        require(msg.value > 0, "Zero ether recieved by the contract.");
    }
}