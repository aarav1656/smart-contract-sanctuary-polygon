contract ZKAccountBoundToken is
    Initializable,
    ERC1155Upgradeable,
    AccessControlUpgradeable
{
    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        CUSTOM TYPES                        */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    struct Schema {
        uint256 id; // associated token id.
        uint256 schemaHash; // hash of the schema (uid).
    }

    struct ClaimData {
        Schema schema;
        bytes32 claimSignatureHash;
        bytes encryptedClaim;
        bool revoked;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        CUSTOM ERRORS                       */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    error AccountBound();
    error InvalidRangeProof();
    error NotSBTOwner();
    error InvalidClaimSignatureHash();
    error InvalidSchemaHash();
    error InvalidThreshold();
    error InvalidOperator();
    error InvalidSlot();
    error SchemaHashNotSet();
    error ClaimSignedByInvalidPublicKey();
    error AccessRestricted(address account);
    error Revoked(address account, uint256 id);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                       ROLE CONSTANTS                       */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    bytes32 public constant ISSUER_ROLE = keccak256("ISSUER_ROLE");

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                          STORAGE                           */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    IZKQPVerifier public _verifier;
    BJJPublicKey public _bjjPubKey;

    mapping(address holder => mapping(uint256 id => ClaimData data)) public _claimData;
    mapping(uint256 id => Schema Schema) public _schemas;
    mapping(uint256 operator => bool valid) public _operators;

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                           EVENTS                           */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    event SetSchemaHash(uint256 indexed id, uint256 schemaHash);

    /// @notice Emitted when a claim-signature hash is updated.
    /// @param account The address of the ZKSBT holder.
    /// @param id The id of the ZKSBT.
    /// @param claimData The data related to the claim.
    event UpdateClaimData(
        address indexed account,
        uint256 indexed id,
        ClaimData claimData
    );

    /// @dev This emits when a new token is created and bound to an account by
    /// any mechanism.
    event Attest(address indexed to, uint256 indexed id);

    /// @dev This emits when an existing ZKSBT is revoked from an account and
    /// burnt.
    event Revoke(address indexed to, uint256 indexed id);

    event UpdateSchemaHash(uint256 indexed id, bytes32 schemaHash);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                         MODIFIERS                          */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /// @notice Restricts function callers to ZKSBT holder or admin.
    /// @param account The account of the function caller.
    /// @param id The id of the ZKSBT.
    modifier onlyHolderOrOwner(address account, uint256 id) {
        // function caller must be the account and an ZKSBT owner, or admin.
        if (
            (msg.sender != account || balanceOf(msg.sender, id) == 0) &&
            hasRole(DEFAULT_ADMIN_ROLE, msg.sender) == false
        ) {
            revert AccessRestricted(msg.sender);
        }
        _;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                 CONSTRUCTOR & INITIALIZER                  */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    /// @notice Initializes the contract and sets the Verfier contract address.
    /// @param verifier The address of the Verifier contract.
    function initialize(IZKQPVerifier verifier) public initializer {
        __ERC1155_init("");
        __AccessControl_init();

        _verifier = verifier;
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(ISSUER_ROLE, msg.sender);

        // Set valid operators.
        _operators[2] = true;
        _operators[3] = true;
        _operators[4] = true;
        _operators[5] = true;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                    EXTERNAL FUNCTIONS                      */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /// @notice Sets the contract uri.
    /// @param newuri The new uri.
    function setURI(
        string memory newuri
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _setURI(newuri);
    }

    function setBJJPublicKey(
        uint256 PubKeyX,
        uint256 PubKeyY
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        BJJPublicKey memory publicKey = BJJPublicKey(PubKeyX, PubKeyY);
        _bjjPubKey = publicKey;
    }

    /// @notice Sets the schema hash for a given claim.
    /// @param id The id of the claim(ZKSBT).
    /// @param schemaHash The schema hash of the claim.
    function setSchemaHash(
        uint256 id,
        uint256 schemaHash
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _schemas[id] = Schema(id, schemaHash);
        emit SetSchemaHash(id, schemaHash);
    }

    /// @notice Issues a claim(ZKSBT) to a given account.
    /// @param account The address of the ZKSBT receiver.
    /// @param id The id of the ZKSBT.
    /// @param claimSignatureHash The hash of the signed claim.
    /// @param encryptedClaim The encrypted claim.
    function issue(
        address account,
        uint256 id,
        bytes32 claimSignatureHash,
        bytes calldata encryptedClaim
    ) external onlyRole(ISSUER_ROLE) {
        Schema memory schema = getSchema(id);
        if (schema.schemaHash == 0) revert SchemaHashNotSet();

        ClaimData memory claimData = ClaimData(
            schema,
            claimSignatureHash,
            encryptedClaim,
            false
        );
        _claimData[account][id] = claimData;
        _mint(account, id, 1, "");
        emit UpdateClaimData(account, id, claimData);
    }

    /// @notice Updates the claim signature hash of a given account.
    /// @param account The address of the ZKSBT holder.
    /// @param id The id of the ZKSBT.
    /// @param claimSignatureHash The new claim signature hash.
    /// @param encryptedClaim The encrypted claim.
    function update(
        address account,
        uint256 id,
        bytes32 claimSignatureHash,
        bytes calldata encryptedClaim
    ) external onlyRole(ISSUER_ROLE) {
        if (isRevoked(account, id)) revert Revoked(account, id);
        uint256 schemaHash = _schemas[id].schemaHash;
        if (schemaHash == 0) revert SchemaHashNotSet();

        _claimData[account][id].claimSignatureHash = claimSignatureHash;
        _claimData[account][id].encryptedClaim = encryptedClaim;

        emit UpdateClaimData(account, id, _claimData[account][id]);
    }

    /// @notice Revokes a claim.
    /// @param account The address of the ZKSBT holder.
    /// @param id The id of the ZKSBT.
    function burn(
        address account,
        uint256 id
    ) external onlyHolderOrOwner(account, id) {
        if (isRevoked(account, id)) revert Revoked(account, id);
        Schema memory schema = getSchema(id);

        ClaimData memory claimData = ClaimData(
            schema,
            bytes32(0),
            new bytes(0),
            true
        );
        _claimData[account][id] = claimData;
        _burn(account, id, 1);
        emit UpdateClaimData(account, id, claimData);
    }

    /// @notice Performs a zero knowledge range proof verification
    //          on a claim's data-value according the given query.
    /// @param account The address of the ZKSBT holder.
    /// @param id The id of the claim(ZKSBT).
    /// @param query The query.
    /// @param zkProof The zero knowledge proof.
    function verifyZKQP(
        address account,
        uint256 id,
        Query memory query,
        ZKProof memory zkProof
    ) external view returns (bool) {
        if (balanceOf(account, id) == 0) revert NotSBTOwner();

        uint256 schemaHash = _schemas[id].schemaHash;
        bytes32 claimSignatureHash = _claimData[account][id].claimSignatureHash;

        return
            _verifier.verifyZKQP(
                ZKQPData(
                    schemaHash,
                    claimSignatureHash,
                    _bjjPubKey,
                    query,
                    zkProof
                )
            );
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                     PUBLIC FUNCTIONS                       */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    function getSchema(uint256 id) public view returns (Schema memory) {
        return _schemas[id];
    }

    /// @notice Checks if a claim is revoked.
    /// @param account The address of the ZKSBT holder.
    /// @param id The id of the ZKSBT.
    /// @return True if the claim is revoked, false otherwise.
    function isRevoked(address account, uint256 id) public view returns (bool) {
        return _claimData[account][id].revoked == true;
    }

    function supportsInterface(
        bytes4 interfaceId
    )
        public
        view
        override(ERC1155Upgradeable, AccessControlUpgradeable)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    // @notice ZKSBT is non-transferable
    function setApprovalForAll(
        address operator,
        bool approved
    ) public view virtual override {
        revert AccountBound();
    }

    // @notice ZKSBT is non-transferable
    function isApprovedForAll(
        address account,
        address operator
    ) public view virtual override returns (bool) {
        revert AccountBound();
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                    INTERNAL FUNCTIONS                      */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    // @notice SBT is non-transferable
    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal virtual override {
        if (!(from == address(0) || to == address(0))) revert AccountBound();
    }

    /// @notice Emits Attest event when a token is minted and Revoke when it
    ///         is burned.
    function _afterTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal virtual override {
        if (from == address(0)) {
            emit Attest(to, ids[0]);
        }
        if (to == address(0)) {
            emit Revoke(address(0), ids[0]);
        }
    }
}

