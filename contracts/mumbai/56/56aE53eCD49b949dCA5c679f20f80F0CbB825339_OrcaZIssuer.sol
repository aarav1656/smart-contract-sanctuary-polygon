contract OrcaZIssuer is Ownable, Pausable {
    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        CUSTOM TYPES                        */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    struct Verifier {
        address verifier;
        uint256 treeDepth;
    }
    struct GroupData {
        uint256 depth;
        uint256 root;
        uint256 id;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        CUSTOM ERRORS                       */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    error NullifierHashAlreadyUsed();
    error InvalidSigner(address signer, address receiver, address relayer);
    error InvalidSignature(address signer, address relayer);
    error CredentialNotIssued();
    error InsufficientFee(uint256 fee);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                          STORAGE                           */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    ISemaphoreVerifier public _verifier;
    ZKAccountBoundToken public immutable _ZKSBT;
    uint256 public _id;
    address public _relayer;
    address private _withdrawAddress;

    /// @dev Gets a nullifier hash and returns true or false.
    /// It is used to prevent double-issuing.
    mapping(uint256 nullifierHash => bool exists) internal _nullifierHashes;

    // mapping from a GID to its corresponding group data
    mapping(uint256 GID => GroupData data) public _groupData;

    mapping(uint256 id => uint256 fee) public _fees;

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                           EVENTS                           */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    event GroupAdded(uint256 GID, uint256 depth, uint256 root, uint256 id);
    event RootUpdated(uint256 GID, uint256 depth, uint256 root);
    event FeeSet(uint256 id, uint256 fee);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                         MODIFIERS                          */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    modifier feeCheck(uint256 id) {
        if (msg.value < _fees[id]) revert InsufficientFee(_fees[id]);
        _;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        CONSTRUCTOR                         */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    constructor(
        address ZKSBT,
        ISemaphoreVerifier verifier,
        address relayer,
        uint256 id
    ) {
        _ZKSBT = ZKAccountBoundToken(ZKSBT);
        // Sets all semaphore verifiers.
        _verifier = verifier;
        _id = id;
        _relayer = relayer;
        _withdrawAddress = msg.sender;
    }

    function setFee(uint256 id, uint256 fee) external onlyOwner {
        _fees[id] = fee;
        emit FeeSet(id, fee);
    }

    function setWithdrawAddress(address withdrawAddress) external onlyOwner {
        _withdrawAddress = withdrawAddress;
    }

    function withdraw() external onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }

    /// @notice Adds a new group.
    /// @param GID The group ID.
    /// @param depth The tree depth.
    /// @param root The merkle root.
    function addGroup(
        uint256 GID,
        uint256 depth,
        uint256 root
    ) external onlyOwner {
        _groupData[GID].depth = depth;
        _groupData[GID].root = root;
        _groupData[GID].id = _id;
        emit GroupAdded(GID, depth, root, _id);
        ++_id;
    }

    /// @notice Updates the root of a group.
    /// @param GID The group ID.
    /// @param depth The tree depth.
    /// @param root The new merkle root.
    function updateRoot(
        uint256 GID,
        uint256 depth,
        uint256 root
    ) external onlyOwner {
        _groupData[GID].depth = depth;
        _groupData[GID].root = root;
        emit RootUpdated(GID, root, depth);
    }

    /// @notice Sets the address of the relayer.
    /// @param relayer The address of the relayer.
    function setRelayer(address relayer) external onlyOwner {
        _relayer = relayer;
    }

    /// @notice Issues a ZKSBT and claim-signature to a receiver.
    /// @param receiver The address of the receiver.
    /// @param GID The group ID.
    /// @param nullifierHash The hash of the identity nullifier and external nullifier.
    /// @param externalNullifier The external nullifier.
    /// @param commitmentProof The proof a commitment is in the merkle tree.
    /// @param claimSignatureHash The hash of the claim signature.
    function issueClaim(
        address receiver,
        uint256 GID,
        uint256 nullifierHash,
        uint256 externalNullifier,
        uint256[8] calldata commitmentProof,
        bytes32 claimSignatureHash,
        bytes calldata encryptedClaim
    ) external payable feeCheck(_groupData[GID].id) whenNotPaused {
        if (_nullifierHashes[nullifierHash]) {
            revert NullifierHashAlreadyUsed();
        }
        // Set the nullifierHash as true to prevent double issuance
        _nullifierHashes[nullifierHash] = true;

        // Get merkle root from GID
        uint256 root = _groupData[GID].root;
        // Get id from GID
        uint256 id = _groupData[GID].id;
        // Get tree depth from GID
        uint256 depth = _groupData[GID].depth;

        // Verify the provided proof is valid
        _verifier.verifyProof(
            root,
            nullifierHash,
            GID,
            externalNullifier,
            commitmentProof,
            depth
        );

        // Issue SBT
        _ZKSBT.issue(receiver, id, claimSignatureHash, encryptedClaim);
    }

    /// @notice Updates the claim signature of a receiver.
    /// @param receiver The address of the receiver.
    /// @param GID The group ID.
    /// @param claimSignatureHash The new claim-signature hash.
    function updateClaim(
        address receiver,
        uint256 GID,
        bytes32 claimSignatureHash,
        bytes calldata encryptedClaim
    ) external payable feeCheck(_groupData[GID].id) whenNotPaused {
        // Verify the sender is the relayer or receiver
        if (msg.sender != _relayer && msg.sender != receiver)
            revert InvalidSigner(msg.sender, receiver, _relayer);

        uint256 id = _groupData[GID].id;
        // Verify the receiver owns a credential
        if (_ZKSBT.balanceOf(receiver, id) == 0) revert CredentialNotIssued();

        _ZKSBT.update(receiver, id, claimSignatureHash, encryptedClaim);
    }

    /// @notice Returns the ZKSBT address.
    function getZKSBT() public view returns (address) {
        return address(_ZKSBT);
    }

    // The owner can call this function to pause functions with "whenNotPaused" modifier.
    function pause() public onlyOwner {
        _pause();
    }

    // The owner can call this function to unpause functions with "whenNotPaused" modifier.
    function unpause() public onlyOwner {
        _unpause();
    }
}

