pragma solidity ^0.8.4;
pragma experimental ABIEncoderV2;

import "../EasInvestProject.sol";

library LibInvestor {
    struct InvestorData {
        mapping(address => uint256) _investorIdMap;
        address[] _investors;
    }

    event InvestorAdded(address investor, uint256 numOfInvestors);
    event InvestorRemoved(address investor, uint256 numOfInvestors);

    // External functions
    function updateInvestors(InvestorData storage self, address _address, uint256 balanceOfAddress) external {
        if (balanceOfAddress > 0) {
            _addInvestor(self, _address);
        }
        else {
            _removeInvestor(self, _address);
        }
    }

    // Private functions
    function _addInvestor(InvestorData storage self, address investor) private {
        if (self._investorIdMap[investor] == 0) {
            self._investors.push(investor);
            // idx = id-1
            uint256 id = self._investors.length;
            self._investorIdMap[investor] = id;
            emit InvestorAdded(investor, self._investors.length);
        } else {
            emit InvestorAdded(address(0), self._investors.length);
        }

    }

    function _removeInvestor(InvestorData storage self, address investor) private {
        if (self._investorIdMap[investor] > 0) {
            // idx = id-1
            uint256 idx = self._investorIdMap[investor] - 1;
            uint256 lastIdx = self._investors.length - 1;

            if (idx < lastIdx) {
                self._investors[idx] = self._investors[lastIdx];
                self._investorIdMap[self._investors[idx]] = idx + 1; // id = idx + 1
            }       

            self._investors.pop();
            //delete self._investors[lastIdx];
            self._investorIdMap[investor] = 0;
            delete self._investorIdMap[investor];
            //require(self._investorIdMap.length == 0, "map");
            //self._investorIdMap.pop();
            emit InvestorRemoved(investor, self._investors.length);
        } else {
            emit InvestorRemoved(address(0), self._investors.length);
        }
    }
}

