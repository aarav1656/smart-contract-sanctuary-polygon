pragma solidity ^0.8.4;
pragma experimental ABIEncoderV2;

import "../EasInvestProject.sol";
import "../EasInvestToken.sol";
import { LibInvestor } from "./LibInvestor.sol";
import { LibPayment } from "./LibPayment.sol";
import { LibDateTime } from "./LibDateTime.sol";

library LibProject {
    using LibInvestor for *;
    using LibPayment for *;
    using LibDateTime for *;
    
    enum State{ UNKNOWN, INVESTMENT, PAYMENT, REALIZATION, CANCELLED, FINISHED }

    struct ProjectData {
        State _state;
        address _projectOwner; 
        uint256 _rate;
        uint256 _maturity;
        EasInvestToken _eit;
        uint256 totalInterest;
        uint _paymentIdx;
    }

    event ProjectStateChanged(State state);
    event SumChanged(uint256 sum, uint256 sum2);

    function initialize(
        ProjectData storage self,
        uint256 rate,
        address projectOwner,
        uint256 year,
        uint256 month,
        uint256 day,
        address eitAddress
    ) internal {
        setState(self, LibProject.State.INVESTMENT);
        self._rate = rate;
        self._projectOwner = projectOwner;
        self._maturity = LibDateTime.timestampFromDate(year, month, day);
        setEIT(self, eitAddress);
    }

    function setState(ProjectData storage self, State state) internal {
        self._state = state;
        emit ProjectStateChanged(self._state);
    }

    function setEIT(ProjectData storage self, address eitAddress) internal {
        self._eit = EasInvestToken(eitAddress);
    }

    function getStateAsString(ProjectData calldata self) external pure returns (string memory) {
        string memory state = "UNKNOWN";
        if (self._state == State.INVESTMENT) { state = "INVESTMENT"; }
        else if (self._state == State.PAYMENT) { state = "PAYMENT"; }
        else if (self._state == State.REALIZATION) { state = "REALIZATION"; }
        else if (self._state == State.CANCELLED) { state = "CANCELLED"; }
        else if (self._state == State.FINISHED) { state = "FINISHED"; }
        return state;
    }

    function cancel(ProjectData storage projectData, LibInvestor.InvestorData storage investorData, address eipAddress) external {
        // Method     : cancel
        // Description: Cancelling a running project. 
        // Conditions : Project can only be cancelled in state INVESTMENT
        //require(_state == State.INVESTMENT, "EasInvestProject: project can only be cancelled in state INVESTMENT");
        require(projectData._state == LibProject.State.INVESTMENT, "EasInvestProject: project can only be cancelled in state INVESTMENT");
        uint idx = 0;
        uint len = investorData._investors.length;
        EasInvestProject eip = EasInvestProject(eipAddress);
        for (idx = 0; idx < len; idx += 1) {
            uint256 balanceOfAddress = eip.balanceOf(investorData._investors[idx]);
            projectData._eit.transfer(investorData._investors[idx], balanceOfAddress);
            idx++;         
        }
        uint256 balanceOfThis = projectData._eit.balanceOf(address(this));
        require(balanceOfThis == 0, "EasInvestProject: could not transfer all tokens to the investors");
        LibProject.setState(projectData, LibProject.State.CANCELLED);
    }

    function invest(
        ProjectData storage projectData,
        address eipAddress,
        address caller,
        uint256 amount
    ) external returns (uint256) {
        require(projectData._state == LibProject.State.INVESTMENT, "EasInvestProject: project already founded");

        EasInvestProject eip = EasInvestProject(eipAddress);
        uint256 eitBalanceOfCaller = projectData._eit.balanceOf(caller);
        require(eitBalanceOfCaller >= amount, "EasInvestProject: transfer amount exceeds balance");
        uint256 balanceOfThis = eip.balanceOf(eipAddress);
        if (amount > balanceOfThis) {
            amount = balanceOfThis;
        }
        // Transfer EIP
        require(balanceOfThis >= amount, "ERC20ForEIP: transfer amount exceeds balance");
        projectData._eit.transferFrom(caller, address(this), amount);
        projectData.totalInterest = projectData.totalInterest + (amount * projectData._rate / (100*(10**18)));
        return amount;
    }

    function payOwner(ProjectData storage projectData, address eipAddress) internal {
        require(projectData._state == LibProject.State.PAYMENT, "EasInvestProject: project not founded or finished");
        require(projectData._projectOwner != address(0), "EasInvestProject: project owner not defined");

        EasInvestProject eip = EasInvestProject(eipAddress);
        uint256 totalSupply = eip.totalSupply();
        projectData._eit.transfer(projectData._projectOwner, totalSupply);

        LibProject.setState(projectData, LibProject.State.REALIZATION);
    }

    function payInvestors(ProjectData storage projectData, LibPayment.PaymentData[] storage paymentData, LibInvestor.InvestorData storage investorData, address eipAddress) external {
        // Method     : payInvestors
        // Description: After realization of the project the project owner can pay its investors. 
        // Conditions : - Payment can only be done if project is in state REALIZATION
        //              - Payment can only be done if project owner has enough EIT (InvestmentSum + TotalInterest)
        require(projectData._state == LibProject.State.REALIZATION, "EasInvestProject: project can only be cancelled in state REALIZATION");

        EasInvestProject eip = EasInvestProject(eipAddress);
        // You can get around this by only processing transfers until gasLeft() drops below some threshold,
        // then storing an index of where you left off and picking up from there when you call the function again.
        uint256 investmentSum = eip.totalSupply();
        uint256 investmentSumPlusRate = investmentSum + projectData.totalInterest;

        if (paymentData.length > 0) {
            uint256 timeStamp = block.timestamp;
            if (paymentData[projectData._paymentIdx]._state != 1/*LibPayment.State.OPEN*/ ||
                paymentData[projectData._paymentIdx]._targetDate > timeStamp) {
                return;
            }
            //require(paymentData[projectData._paymentIdx]._state == 1/*LibPayment.State.OPEN*/, "Payment in wrong state");
            //require(paymentData[projectData._paymentIdx]._targetDate <= timeStamp, "No payment at this date");
            investmentSum = paymentData[projectData._paymentIdx]._amortization;
            investmentSumPlusRate = investmentSum + paymentData[projectData._paymentIdx]._interest;
        }

        uint idx = 0;
        uint len = investorData._investors.length;
        projectData._eit.transferFrom(projectData._projectOwner, address(this), investmentSumPlusRate);

        if (paymentData.length == 0) {
            for (idx = 0; idx < len; idx += 1) {
                uint256 balanceOfAddress = eip.balanceOf(investorData._investors[idx]);
                uint256 sum = balanceOfAddress + balanceOfAddress * projectData._rate / (100*(10**18));
                projectData._eit.transfer(investorData._investors[idx], sum);
                //idx++;         
            }
            LibProject.setState(projectData, LibProject.State.FINISHED);
        } else {
            for (idx = 0; idx < len; idx += 1) {
                uint256 balanceOfAddress = eip.balanceOf(investorData._investors[idx]);
                //uint256 sum = balanceOfAddress + balanceOfAddress * projectData._rate / (100*(10**18));
                uint256 sum = investmentSumPlusRate * balanceOfAddress / eip.totalSupply();
                emit SumChanged(sum, sum);
                projectData._eit.transfer(investorData._investors[idx], sum);
                //idx++;         
            }
            LibPayment.setState(paymentData[projectData._paymentIdx], 2/*LibPayment.State.DONE*/);
            projectData._paymentIdx += 1;
            if (paymentData.length == projectData._paymentIdx) {
                LibProject.setState(projectData, LibProject.State.FINISHED);            
            }
        }
    }
}

