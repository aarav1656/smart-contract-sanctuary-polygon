    using LibInvestor for *;
    using LibProject for *;
    using LibPayment for *;

    string version = "0.11";
    LibInvestor.InvestorData _investorData;
    LibProject.ProjectData _projectData;
    LibPayment.PaymentData[] _paymentData;

    // Constructor
    constructor(string memory name, string memory symbol, uint256 initialSupply, uint256 rate, address projectOwner, address eitAddress, uint256 year, uint256 month, uint256 day, LibPayment.PaymentData[] memory payments) ERC20(name, symbol) {
        LibProject.initialize(_projectData, rate, projectOwner, year, month, day, eitAddress);
        LibPayment.setPayments(_paymentData, payments);
        _mint(address(this), initialSupply);
    }

    // Fallback
    // ...

    // Receive
    // ...

    // External functions
    // ...

    // External functions that are view
    function getModuleVersion() external override view returns (string memory) {
        return version;
    }

    function getAddress() external view returns (address) {
        return address(this);
    }

    function getState() external view returns (LibProject.State state) {
        state = _projectData._state;
    }

    function getStateAsString() external view returns (string memory stateString) {
        stateString = LibProject.getStateAsString(_projectData);
    }

    function getMaturity() external view returns (uint256 maturity) {
        maturity = _projectData._maturity;
    }

    function getMaturityAsDate() external view returns (uint256 year, uint256 month, uint256 day) {
        (year, month, day) = LibDateTime.timestampToDate(_projectData._maturity);
    }

    function getMaturityAsString() external view returns (string memory dateTimeString) {
        dateTimeString = LibDateTime.timestampToDateAsString(_projectData._maturity);
    }

    function getRate() external view returns (uint256 rate) {
        rate = _projectData._rate;
    }
    
    function setProjectOwner(address projectOwner) external {
        _projectData._projectOwner = projectOwner;
    }

    function getProjectOwner() external view returns (address owner) {
        owner = _projectData._projectOwner;
    }

    function getInvestors() external view returns (address[] memory investors) {
        investors = _investorData._investors;
    }

    function getEITOwner() external view returns (address owner) {
        owner = _projectData._eit.getOwner();
    }

    function getPayments() external view returns (LibPayment.PaymentData[] memory paymentData) {
        paymentData = _paymentData;
    }

    // External functions that are pure
    function setPayments(LibPayment.PaymentData[] calldata paymentData) public {
        //_paymentData = new LibPayment.PaymentData[](paymentData.length);
        //_paymentData.length = paymentData.length;
        LibPayment.setPayments(_paymentData, paymentData);
        //_paymentIdx = 0;
        // _paymentData[paymentData.length];
        // for (_paymentIdx; _paymentIdx < paymentData.length; _paymentIdx += 1) {
        //     _paymentData[_paymentIdx] = paymentData[_paymentIdx];
        //     LibPayment.updateDate(_paymentData[_paymentIdx]);
        // }
    }

    // Public functions
    function invest(
        uint256 amount
    ) external virtual {
        amount = LibProject.invest(_projectData, address(this), msg.sender, amount);
        _transfer(address(this), msg.sender, amount);
        LibInvestor.updateInvestors(_investorData, msg.sender, balanceOf(msg.sender));
        // uint256 balanceOfThis = balanceOf(address(this));
        // if (balanceOfThis <= 0) {
        if (balanceOf(address(this)) <= 0) {
            LibProject.setState(_projectData, LibProject.State.PAYMENT);
            LibProject.payOwner(_projectData, address(this));
        }        
    }

    function getTotalInterest() external view returns (uint256 totalInterest) {
        totalInterest = _projectData.totalInterest;
    }

    function cancel() external {
        LibProject.cancel(_projectData, _investorData, address(this));
    }

    function payInvestors() external {
        LibProject.payInvestors(_projectData, _paymentData, _investorData, address(this));
    }

    // Internal functions
    // ...

    // Private functions
    // ...

    /* PUBLIC FUNCTIONS */
    /* Custom functions */

    /* PRIVATE */
}

