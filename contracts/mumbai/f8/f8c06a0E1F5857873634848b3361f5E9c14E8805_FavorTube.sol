abstract contract UsersConfig {

    event $setUserConfig(address channel, uint256 price, uint mode);

    struct UserConfig {
        uint256 price;
        uint8 modeType;
    }

    struct Mode {
        uint8[5] taxRate;
        uint256 minPrice;
        uint256 maxPrice;
    }

    mapping(address => UserConfig) public usersConfig;
    mapping(address => bool) public isSetConfig;
    UserConfig public defaultUserConfig;

    mapping(uint8 => Mode) modes;
    mapping(uint8 => bool) public modeSet;
    uint8[] modesKey;

    modifier modeTypeExist(uint8 modeType) {
        require(modeSet[modeType], "Mode type does not exist");
        _;
    }

    constructor(UserConfig memory userConfig, Mode memory mode) {
        _setMode(userConfig.modeType, mode);
        _setDefaultUserConfig(userConfig);
    }

    function getMode(uint8 modeType) public view returns (Mode memory) {
        return modes[modeType];
    }

    function getModesKey() external view returns (uint8[] memory) {
        return modesKey;
    }

    function getUserConfig(address addr) public view returns (UserConfig memory) {
        if (!isSetConfig[addr]) return defaultUserConfig;
        UserConfig memory userConfig = usersConfig[addr];
        if (!modeSet[userConfig.modeType]) {
            userConfig.modeType = defaultUserConfig.modeType;
        }
        return userConfig;
    }

    function _setMode(uint8 modeType, Mode memory mode) internal {
        if (!modeSet[modeType]) {
            modesKey.push(modeType);
        }
        modes[modeType] = mode;
        modeSet[modeType] = true;
    }

    function _removeMode(uint8 modeType, uint index) internal modeTypeExist(modeType) {
        require(modesKey[index] == modeType, "Index Error");
        delete modes[modeType];
        delete modeSet[modeType];
        modesKey[index] = modesKey[modesKey.length - 1];
        modesKey.pop();
    }

    function _setUserConfig(address addr, UserConfig memory userConfig) internal modeTypeExist(userConfig.modeType) {
        Mode memory mode = modes[userConfig.modeType];
        require(userConfig.price <= mode.maxPrice && userConfig.price >= mode.minPrice, "Incorrect price setting");
        usersConfig[addr] = userConfig;
        isSetConfig[addr] = true;
        emit $setUserConfig(addr, userConfig.price, userConfig.modeType);
    }

    function _setDefaultUserConfig(UserConfig memory userConfig) internal modeTypeExist(userConfig.modeType) {
        defaultUserConfig = userConfig;
    }

    function setMode(uint8, Mode memory) external virtual;

    function removeMode(uint8, uint) external virtual;

    function setUserConfig(UserConfig memory) external virtual;

    function setDefaultUserConfig(UserConfig memory) external virtual;
}

