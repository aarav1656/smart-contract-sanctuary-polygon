abstract contract Uniswap {

    using Path for bytes;

    IUniswapRouter public uniswapRouter;

    constructor(address router) {
        uniswapRouter = IUniswapRouter(router);
    }

    function ethTransferToken(ISwapRouter.ExactOutputParams memory params) internal returns (bool) {
        uint256 amountIn = uniswapRouter.exactOutput{value : msg.value}(params);
        uniswapRouter.refundETH();
        TransferHelper.safeTransferETH(msg.sender, params.amountInMaximum - amountIn);
        return true;
    }

    function exactTransferToken(ISwapRouter.ExactOutputParams memory params) internal returns (bool)  {
        (address tokenIn, , ) = params.path.decodeFirstPool();
        TransferHelper.safeTransferFrom(tokenIn, msg.sender, address(this), params.amountInMaximum);
        TransferHelper.safeApprove(tokenIn, address(uniswapRouter), params.amountInMaximum);
        uint256 amountIn = uniswapRouter.exactOutput(params);
        TransferHelper.safeTransfer(tokenIn, msg.sender, params.amountInMaximum - amountIn);
        return true;
    }

    receive() payable external {}
}

