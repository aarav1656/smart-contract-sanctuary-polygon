pragma solidity =0.8.17;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Base64.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

import "./IImage.sol";

/**
 * Generate image uri and token uri.
 */
contract Image is Ownable, IImage {
    using Strings for uint256;

    bytes32 constant KECCAK_N = keccak256(bytes("N"));
    bytes32 constant KECCAK_A = keccak256(bytes("A"));

    // image parts:
    string internal imagePart0;
    string internal imagePart1;
    string internal imagePart2;
    string internal imagePart3;
    string internal imagePart4;
    string internal imagePart5;
    string internal imagePart6;
    string internal imagePart7;
    string internal imagePart8;

    function tokenURI(address owner, string memory name)
        public
        view
        override
        returns (string memory)
    {
        bytes memory json = abi.encodePacked(
            '{"name":"',
            name,
            '", "image":"',
            imageURI(owner, name),
            '"}'
        );
        return
            string(
                abi.encodePacked(
                    "data:application/json;base64,",
                    Base64.encode(json)
                )
            );
    }

    function imageURI(address owner, string memory name)
        public
        view
        override
        returns (string memory)
    {
        string memory addr = _abbrAddress(owner);
        bytes memory svg = abi.encodePacked(
            _replace(imagePart0, name, addr),
            _replace(imagePart1, name, addr),
            _replace(imagePart2, name, addr),
            _replace(imagePart3, name, addr),
            _replace(imagePart4, name, addr),
            _replace(imagePart5, name, addr),
            _replace(imagePart6, name, addr),
            _replace(imagePart7, name, addr),
            _replace(imagePart8, name, addr)
        );
        return
            string(
                abi.encodePacked(
                    "data:image/svg+xml;base64,",
                    Base64.encode(svg)
                )
            );
    }

    function _replace(
        string memory s,
        string memory name,
        string memory addr
    ) internal view returns (string memory) {
        bytes memory bs = bytes(s);
        if (bs.length == 1) {
            bytes32 k = keccak256(bs);
            if (k == KECCAK_N) {
                return name;
            }
            if (k == KECCAK_A) {
                return addr;
            }
        }
        return s;
    }

    function setImageURI(string[] memory imageParts) external onlyOwner {
        require(imageParts.length == 9, "invalid image parts");
        imagePart0 = imageParts[0];
        imagePart1 = imageParts[1];
        imagePart2 = imageParts[2];
        imagePart3 = imageParts[3];
        imagePart4 = imageParts[4];
        imagePart5 = imageParts[5];
        imagePart6 = imageParts[6];
        imagePart7 = imageParts[7];
        imagePart8 = imageParts[8];
    }

    // internal logic
    function _abbrAddress(address addr) internal view returns (string memory) {
        bytes memory alphabet = "0123456789abcdef";
        bytes memory str = new bytes(13);
        str[0] = bytes1(uint8(48)); // "0"
        str[1] = bytes1(uint8(120)); //"x"
        uint256 data = uint256(uint160(addr));
        str[2] = alphabet[
            (data & 0x00_f000_000000000000000000000000000000000000) >> 156
        ];
        str[3] = alphabet[
            (data & 0x00_0f00_000000000000000000000000000000000000) >> 152
        ];
        str[4] = alphabet[
            (data & 0x00_00f0_000000000000000000000000000000000000) >> 148
        ];
        str[5] = alphabet[
            (data & 0x00_000f_000000000000000000000000000000000000) >> 144
        ];
        str[6] = bytes1(uint8(46)); // ".";
        str[7] = bytes1(uint8(46));
        str[8] = bytes1(uint8(46));
        str[9] = alphabet[
            (data & 0x00_000000000000000000000000000000000000_f000) >> 12
        ];
        str[10] = alphabet[
            (data & 0x00_000000000000000000000000000000000000_0f00) >> 8
        ];
        str[11] = alphabet[
            (data & 0x00_000000000000000000000000000000000000_00f0) >> 4
        ];
        str[12] = alphabet[
            data & 0x00_000000000000000000000000000000000000_000f
        ];
        return string(str);
    }
}