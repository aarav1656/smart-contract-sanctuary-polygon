pragma solidity 0.8.9;

import "./common/libraries/SafeMath.sol";
import "./common/libraries/Strings.sol";

import "./common/access/AccessControl.sol";
import "./common/cryptography/ECDSA.sol";

import "./common/ERC20/IERC20.sol";
import "./common/Pausable.sol";
import "./common/Withdrawable.sol";
import "./common/ReentrancyGuard.sol";

import "./muon/MuonClient.sol";

interface IFearWolf is IAccessControl {
    function setInitialOwner(address account, uint256 wolvesCount) external;
    function DISTRIBUTOR_ROLE() external view returns (bytes32);
}

/**
 * @dev Contract for selling FEAR Wolf NFT for ETH and FEAR.
 */
contract FearWolfSeller is MuonClient, AccessControl, Pausable, Withdrawable, ReentrancyGuard {
    using SafeMath for uint256;
    using Strings for uint256;

    /**
    * @dev Emitted when FEAR Wolf is bought with ETH.
    */
    event WolvesBoughtWithEth(address indexed account, uint256 price, uint16 count, uint256 totalAmount);

    /**
    * @dev Emitted when FEAR Wolf is bought with FEAR.
    */
    event WolvesBoughtWithFear(address indexed account, uint256 price, uint16 count, uint256 fearPrice, uint256 ethPrice, uint256 totalAmount);

    /**
    * @dev Emitted when FEAR Wolf is gifted.
    */
    event WolvesGifted(address indexed account, uint16 count);

    // contracts
    IERC20 public fearContract;
    IFearWolf public fearWolfContract;

    // counters
    uint16 public wolvesUnownedCount = 577; // FIXME!
    uint16 public wolvesBoughtWithEthCount;
    uint16 public wolvesBoughtWithFearCount;
    uint16 public wolvesGiftedCount;

    // batch limit, discount, stuff
    uint256 public batchMintingLimit = 10;
    uint256 public fearPurchaseDiscount= 2000; // 20%
    uint256 private percentageDivider = 10000; // 100%
    uint256 private acceptableMuonDelay = 2 minutes;

    // price in eth
    uint256 private fearWolfPrice = 0.2 ether;


    constructor(
        address fearContractAddress, 
        address fearWolfContractAddress,
        uint256 _muonAppId,
        PublicKey memory _muonPublicKey
    ) MuonClient(_muonAppId, _muonPublicKey) {
        fearContract = IERC20(fearContractAddress);
        fearWolfContract = IFearWolf(fearWolfContractAddress);
    }


    //// PRIVATE SERVICE FUNCITONS

    function _beforeUnpause() internal virtual override {
        require(fearWolfContract.hasRole(fearWolfContract.DISTRIBUTOR_ROLE(), address(this)), "Distributor role missing");
    }

    function _toBytes(uint256 x) private pure returns (bytes memory b) {
        b = new bytes(32);
        assembly { mstore(add(b, 32), x) }
    }

    function _verifyTSS(uint256 fearPrice, uint256 ethPrice, uint256 timestamp, bytes memory reqId, SchnorrSign memory signature) private {
        bytes32 hash = keccak256(
            abi.encodePacked(
                muonAppId,
                reqId,
                fearPrice,
                ethPrice,
                timestamp
            )
        );

        bool verified = muonVerify(reqId, uint256(hash), signature, muonPublicKey);
        require(verified, "TSS not verified");
        require(block.timestamp - timestamp < acceptableMuonDelay, "Expired signature");
    }


    //// PUBLIC FUNCTIONS

    /**
    * @dev Returns current FEAR Wolf price in ETH.
    * @return Amount of ETH to be paid for one FEAR Wolf NFT.
    */
    function getFearWolfEthPrice() external view returns(uint256) {
        return fearWolfPrice;
    }

    /**
    * @dev Returns current FEAR Wolf price in FEAR.
    * @return Amount of FEAR to be paid for one FEAR Wolf NFT.
    */
    function getFearWolfFearPrice(uint256 fearPrice, uint256 ethPrice) public view returns(uint256) {
        uint256 fearWolfPriceInFear = fearWolfPrice.mul(ethPrice).div(fearPrice);
        uint256 fearWolfPriceInFearAfterDiscount = fearWolfPriceInFear.mul(percentageDivider.sub(fearPurchaseDiscount)).div(percentageDivider);
        return fearWolfPriceInFearAfterDiscount;
    }

    /**
    * @dev Allows caller to buy FEAR Wolf using ETH.
    * @param wolvesCount Number of wolves to buy.
    * Requirements:
    * - Contract must not be paused;
    * - Number of wolves to buy must be greater than zero;
    * - Number of wolves to buy must be less or equal to the remaining unowned wolves;
    * - Sum of ETH sent must be greater or equal to current price multiplied by number of wolves to buy.
    * Emits {WolvesBoughtWithEth} event on success.
    */
    function buyWolvesWithEth(uint16 wolvesCount) external payable whenNotPaused nonReentrant {
        address caller = _msgSender();

        require(wolvesCount > 0, "Cannot buy zero wolves");
        require(wolvesCount <= batchMintingLimit, "Cannot buy more than 10 wolves at once");
        require(wolvesCount <= wolvesUnownedCount, "Not enough wolves left");
        require(msg.value >= fearWolfPrice.mul(wolvesCount), "Insufficient ETH sent");

        fearWolfContract.setInitialOwner(caller, wolvesCount);

        wolvesUnownedCount -= wolvesCount;
        wolvesBoughtWithEthCount += wolvesCount;
        emit WolvesBoughtWithEth(caller, fearWolfPrice, wolvesCount, msg.value);
    }

    /**
    * @dev Allows caller to buy FEAR Wolf using FEAR.
    * @param wolvesCount Number of wolves to buy.
    * Requirements:
    * - Contract must not be paused;
    * - Number of wolves to buy must be greater than zero;
    * - Number of wolves to buy must be less or equal to the remaining unowned wolves;
    * - Caller must have not less FEAR tokens than current FEAR Wolf price in FEAR multiplied by number of wolves to buy;
    * - Caller must allow the contract to operate their FEAR tokens (not less than current FEAR Wolf price in FEAR multiplied by number of wolves to buy).
    * Emits {WolvesBoughtWithFear} event on success.
    */
    function buyWolvesWithFear(uint16 wolvesCount, uint256 fearPrice, uint256 ethPrice, bytes calldata packedMuonData) public whenNotPaused nonReentrant {
        address caller = _msgSender();

        require(wolvesCount > 0, "Cannot buy zero wolves");
        require(wolvesCount <= batchMintingLimit, "Cannot buy more than 10 wolves at once");
        require(wolvesCount <= wolvesUnownedCount, "Not enough wolves left");

        (uint256[5] memory decodedData) = abi.decode(packedMuonData, (uint256[5]));
        
        SchnorrSign memory sign = SchnorrSign(decodedData[0], address(uint160(decodedData[1])), address(uint160(decodedData[2])));
        _verifyTSS(fearPrice, ethPrice, decodedData[4], _toBytes(decodedData[3]), sign);

        uint256 fearAmount = getFearWolfFearPrice(fearPrice, ethPrice).mul(wolvesCount);

        uint256 userBalance = fearContract.balanceOf(caller);
        require(userBalance >= fearAmount, "Insufficient balance");

        uint256 contractAllowance = fearContract.allowance(caller, address(this));
        require(contractAllowance >= fearAmount, "Insufficient allowance");

        fearContract.transferFrom(caller, address(this), fearAmount);
        fearWolfContract.setInitialOwner(caller, wolvesCount);

        wolvesUnownedCount -= wolvesCount;
        wolvesBoughtWithFearCount += wolvesCount;
        emit WolvesBoughtWithFear(caller, fearWolfPrice, wolvesCount, fearPrice, ethPrice, fearAmount);
    }

    
    //// ADMIN FUNCTIONS

    function setFearWolfPrice(uint256 _fearWolfPrice) external onlyRole(MANAGER_ROLE) {
        fearWolfPrice = _fearWolfPrice;
    }

    function setFearPurchaseDiscount(uint256 _fearPurchaseDiscount) external onlyRole(MANAGER_ROLE) {
        fearPurchaseDiscount = _fearPurchaseDiscount;
    }

    function giftWolves(address _address, uint16 wolvesCount) external whenNotPaused nonReentrant onlyRole(ADMIN_ROLE) {
        require(wolvesCount <= batchMintingLimit, "Cannot mint more than 10 wolves at once");
        require(wolvesCount <= wolvesUnownedCount, "Not enough wolves left");

        fearWolfContract.setInitialOwner(_address, wolvesCount);
        
        wolvesUnownedCount -= wolvesCount;
        wolvesGiftedCount += wolvesCount;
        emit WolvesGifted(_address, wolvesCount);
    }
}

