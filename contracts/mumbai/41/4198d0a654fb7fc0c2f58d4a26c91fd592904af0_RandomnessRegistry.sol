    RandomnessRequest storage randomnessRequest = _raffleNftIdToVrfRequest[
      raffleNftId
    ];

    require(
      randomnessRequest.randomWordFulfilled == false,
      'RANDOM_WORD_ALREADY_SAVED'
    );

    // Assuming only one random word was requested.
    randomnessRequest.randomResponseWord = randomWords[0];
    randomnessRequest.randomWordFulfilled = true;

    emit RandomWordFulfilled(raffleNftId, randomWords[0]);
  }
}

