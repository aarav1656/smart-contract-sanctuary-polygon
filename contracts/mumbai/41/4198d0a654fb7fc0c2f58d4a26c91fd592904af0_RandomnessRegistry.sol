  /// @inheritdoc IRandomnessRegistry
  uint8 public constant VRF_NUM_WORDS = 1;

  /// @inheritdoc IRandomnessRegistry
  uint8 public constant VRF_REQUEST_CONFIRMATIONS = 3;

  /// @inheritdoc IRandomnessRegistry
  uint32 public constant VRF_CALLBACK_GAS_LIMIT = 100_000; // TODO: confirm correct gas on tests

  /// @inheritdoc IRandomnessRegistry
  address public immutable LINK_TOKEN;

  // raffle => allowed
  mapping(address => bool) internal _allowedVrfRequesters;

  // vrf requestId => raffleId
  mapping(uint256 => uint256) internal _vrfRequestIdToRaffleNftId;

  // raffleId => vrf requestId
  mapping(uint256 => RandomnessRequest) internal _raffleNftIdToVrfRequest;

  /**
   * @param vrfWrapper Chainlink VRF wrapper contract address
   * @param linkToken LINK token address
   */
  constructor(address linkToken, address vrfWrapper)
    VRFV2WrapperConsumerBase(linkToken, vrfWrapper)
  {
    LINK_TOKEN = linkToken;
  }

  modifier onlyRaffle() {
    require(isVRFRequesterAllowed(msg.sender), 'CALLER_NOT_RAFFLE');
    _;
  }

  /// @inheritdoc IRandomnessRegistry
  function isVRFRequesterAllowed(address requester) public view returns (bool) {
    return _allowedVrfRequesters[requester];
  }

  /// @inheritdoc IRandomnessRegistry
  function updateVRFRequesters(Requester[] memory requesters)
    external
    onlyOwner
  {
    for (uint256 i; i < requesters.length; i++) {
      _allowedVrfRequesters[requesters[i].requester] = requesters[i].allowed;

      emit RequesterUpdated(requesters[i].requester, requesters[i].allowed);
    }
  }

  /// @inheritdoc IRandomnessRegistry
  function getRaffleIdFromVRFRequestId(uint256 vrfRequestId)
    external
    view
    returns (uint256)
  {
    return _vrfRequestIdToRaffleNftId[vrfRequestId];
  }

  /// @inheritdoc IRandomnessRegistry
  function getVRFRequestIdFromRaffleNftId(uint256 raffleNftId)
    external
    view
    returns (RandomnessRequest memory)
  {
    return _raffleNftIdToVrfRequest[raffleNftId];
  }

  /// @inheritdoc IRandomnessRegistry
  function requestRandomWord(uint256 raffleNftId)
    external
    onlyRaffle
    returns (uint256)
  {
    RandomnessRequest storage randomnessRequest = _raffleNftIdToVrfRequest[
      raffleNftId
    ];

    require(!randomnessRequest.randomWordRequested, 'VRF_ALREADY_REQUESTED');

    randomnessRequest.randomWordRequested = true;

    randomnessRequest.vrfRequestId = requestRandomness(
      VRF_CALLBACK_GAS_LIMIT,
      VRF_REQUEST_CONFIRMATIONS,
      VRF_NUM_WORDS
    );
    _vrfRequestIdToRaffleNftId[randomnessRequest.vrfRequestId] = raffleNftId;

    randomnessRequest.vrfRequestIdCost = VRF_V2_WRAPPER.calculateRequestPrice(
      VRF_CALLBACK_GAS_LIMIT
    );

    return randomnessRequest.vrfRequestId;
  }

