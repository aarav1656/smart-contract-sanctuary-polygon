        emit Transaction(account, amount, TransactionType.EXTERNAL_PURCHASE);
    }

    /**
     * @dev Allows caller to credit BLOOD to specified account.
     * @param account Address of account crediting the BLOOD to.
     * @param amount Amount of BLOOD to credit.
     * Requirements:
     * - Contract must not be paused;
     * - Caller must have 'CREDITOR_ROLE';
     * - Amount to buy must be greater than zero;
     * Emits {Transaction} event on success.
     */
    function credit(address account, uint256 amount) external whenNotPaused nonReentrant onlyRole(CREDITOR_ROLE) {
        require(amount > 0, "Zero amount");

        balance[account] = balance[account].add(amount);
        totalSupply = totalSupply.add(amount);

        earningsHistory[account][_getCurrentMonthIndex()] = earningsHistory[account][_getCurrentMonthIndex()].add(amount);

        emit Transaction(account, amount, TransactionType.CREDIT);
    }

    /**
     * @dev Allows caller to spend BLOOD from specified account.
     * @param account Address of account spending the BLOOD from.
     * @param amount Amount of BLOOD to spend.
     * Requirements:
     * - Contract must not be paused;
     * - Caller must have 'SPENDER_ROLE';
     * - Amount to buy must be greater than zero;
     * - Account must have balance greater or euqal to amount of BLOOD to spend;
     * Emits {Transaction} event on success.
     */
    function spend(address account, uint256 amount) external whenNotPaused nonReentrant onlyRole(SPENDER_ROLE) {
        require(amount > 0, "Zero amount");
        require(balance[account] >= amount, "Amount exceeds balance");

        balance[account] = balance[account].sub(amount);
        totalSupply = totalSupply.sub(amount);
        
        emit Transaction(account, amount, TransactionType.SPEND);
    }

    /**
     * @dev Allows caller to burn BLOOD.
     * @param amount Amount of BLOOD to burn.
     * Requirements:
     * - Contract must not be paused;
     * - Amount to buy must be greater than zero;
     * - Caller must have balance greater or euqal to amount of BLOOD to transfer;
     * Emits {Transaction} event on success.
     */
    function burn(uint256 amount) external whenNotPaused nonReentrant {
        address caller = _msgSender();

        require(amount > 0, "Zero amount");
        require(balance[caller] >= amount, "Amount exceeds balance");

        balance[caller] = balance[caller].sub(amount);
        emit Transaction(caller, amount, TransactionType.BURN);
    }


