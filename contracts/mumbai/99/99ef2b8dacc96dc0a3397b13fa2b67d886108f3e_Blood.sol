        totalSupply = totalSupply.add(amount);

        emit Transaction(caller, amount, TransactionType.PURCHASE);
    }

    function purchaseByUsdt(address account, uint256 usdtAmount, bytes32 sigR, bytes32 sigS, uint8 sigV) public whenNotPaused nonReentrant {
        require(usdtAmount > 0, "USDT input amount must greater than 0");
        require(usdTokenContract.balanceOf(account) >= usdtAmount, "Insufficient USDT balance for conversion");
        bytes memory sigF = abi.encodeWithSignature(
            "transfer(address,uint256)",
            address(this),
            usdtAmount
        );
        (bool success, ) = address(usdTokenContract).call(
            abi.encodeWithSignature(
                "executeMetaTransaction(address,bytes,bytes32,bytes32,uint8)",
                account,
                sigF,
                sigR,
                sigS,
                sigV
            )
        );
        require(success, "Metatransaction corrupted");
        uint256 oneSzabo = 1 ether / 1e6;
        uint256 outputAmount = usdtAmount.mul(oneSzabo).mul(usdRate);
        balance[account] = balance[account].add(outputAmount);
        totalSupply = totalSupply.add(outputAmount);
        // todo decide transfer to Fee wallet address or not
        conversionHistory[account].push(
            ConversionRecord(
                TOKEN.USDT,
                usdtAmount,
                outputAmount,
                account,
                block.timestamp,
                block.timestamp
            )
        );
    }

    function purchaseByFear(ConversionRecord memory cr, MetaTransactionSignature memory mts, bytes calldata signature) public whenNotPaused nonReentrant {
        address account = cr.account;
        uint256 inputAmount = cr.inputAmount;
        uint256 outputAmount = cr.outputAmount;
        uint256 timestamp = cr.submitted;
        
        require(inputAmount > 0, "Fear input amount must greater than 0");
        require(fearTokenContract.balanceOf(account) >= inputAmount, "Insufficient FEAR balance for conversion");
        // require(timestamp - block.timestamp <= 1 hours || block.timestamp - timestamp <= 1 hours, "Conversion quote has expired");

        bytes32 messageHash = ECDSA.toEthSignedMessageHash(
            abi.encodePacked(timestamp, account, inputAmount, outputAmount)
        );
        address signer = ECDSA.recover(messageHash, signature);
        require(hasRole(SIGNER_ROLE, signer), "Signer is missing SIGNER role");

        bytes memory sigF = abi.encodeWithSignature(
            "transfer(address,uint256)",
            address(this),
            cr.inputAmount
        );
        // transfer FEAR from user wallet to this contract
        (bool success, ) = address(fearTokenContract).call(
            abi.encodeWithSignature(
                "executeMetaTransaction(address,bytes,bytes32,bytes32,uint8)",
                mts.account,
                sigF,
                mts.sigR,
                mts.sigS,
                mts.sigV
            )
        );
        require(success, "Metatransaction corrupted");

        // TBD: transfer FEAR to other address or keep in this contract
        balance[account] = balance[account].add(outputAmount);
        totalSupply = totalSupply.add(outputAmount);
        cr.inputToken = TOKEN.FEAR;
        cr.confirmed = block.timestamp;
        conversionHistory[account].push(cr);
    }

