    /**
     * @dev Allows caller to transfer BLOOD to another account.
     * @param to Address of account to transfer the BLOOD to.
     * @param amount Amount of BLOOD to transfer.
     * Requirements:
     * - Contract must not be paused;
     * - Receiver address must be a non-zero address;
     * - Receiver address must be different than caller account address;
     * - Amount to buy must be greater than zero;
     * - Caller must have balance greater or euqal to amount of BLOOD to transfer;
     * Emits {Transaction} event on success.
     */
    function transfer(address to, uint256 amount) external whenNotPaused nonReentrant {
        address caller = _msgSender();
        require(to != address(0), "Transfer to zero address");
        require(caller != to, "Transfer to the same address");
        require(amount > 0, "Zero amount");
        require(balance[caller] >= amount, "Amount exceeds balance");

        balance[caller] = balance[caller].sub(amount);
        balance[to] = balance[to].add(amount);

        emit Transaction(caller, amount, TransactionType.TRANSFER_OUT);
        emit Transaction(to, amount, TransactionType.TRANSFER_IN);
    }


