     * Burn token from holder
     *
     * @param from    The holder of the token
     * @param amount  The amount of token to burn
     */
    function burn(address from, uint256 amount)
        external
        override
        whenNotPaused
        onlyRole(MINTER_ROLE)
    {
        _burn(from, amount);
    }

