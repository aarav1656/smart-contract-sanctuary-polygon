pragma solidity ^0.8.17;

import {IERC20} from "openzeppelin-contracts/contracts/token/ERC20/IERC20.sol";
import {ERC165Checker} from "openzeppelin-contracts/contracts/utils/introspection/ERC165Checker.sol";
import {Pausable} from "openzeppelin-contracts/contracts/security/Pausable.sol";

import {Access} from "./access/Access.sol";
import {IAsset} from "./assets/IAsset.sol";

import {ITransaction} from "./transaction/ITransaction.sol";
import {IWithdraw} from "./transaction/IWithdraw.sol";
import {AbstractWithdrawSignature} from "./transaction/AbstractWithdrawSignature.sol";

import {IInventoryFactory} from "./inventory/IInventoryFactory.sol";
import {InventoryImpl} from "./inventory/InventoryImpl.sol";

import {AbstractDisburse} from "./transaction/AbstractDisburse.sol";
import {IDepositSwapper} from "./deposit/IDepositSwapper.sol";

contract Transaction is ITransaction, Access, AbstractWithdrawSignature, AbstractDisburse, Pausable {
    using ERC165Checker for address;

    mapping(address => bool) private _masterSigner;
    mapping(address => bool) private _bannedUsers;
    mapping(address => bool) private _swapAssets;
    mapping(address => uint256) public nonces;

    address _inventoryFactoryAddr;
    address _pointContractAddr;
    address _treasuryAddr;
    address _depositAddr;

    // ex: 5.25% = 525 in basis points (parts per 10,000)
    uint256 public feePercent = 2000;

    event InventoryFactoryAddressChanged(address addr);
    event InventoryPointBurned(address user, uint256 amount);
    event MasterSignerAddressChanged(address addr);
    event MasterSignerAddressRemoved(address addr);
    event UserBanned(address user);
    event UserBanReleased(address user);
    event PointAddressChanged(address pointAddr);
    event TreasuryAddressChanged(address treasuryAddr);
    event FeePercentChanged(uint256 percent);
    event SwapAssetAdded(address asset);
    event SwapAssetRemoved(address asset);
    event DepositAddressChanged(address depositAddr);
    event DepositSwapExecuted(address recipient, address swapAsset, uint256 amount);

    error InvalidAddress();
    error InvalidMasterSigner();
    error InvalidMasterSignature();
    error InvalidRecipientSignature();
    error InvalidInventoryOwnerSignature();
    error InvalidInventoryFactoryAddress();
    error InvalidInventoryAddress();
    error InvalidERC20BalanceNotEnough(address user, uint256 amount);
    error InvalidNonce(address user, uint256 nonce);
    error InvalidWithdrawExpiration();
    error InvalidInterface();
    error InvalidSwapTokenAddress(address token);
    error UserHasBeenBanned(address user);
    error DataLengthMismatch();

    constructor(address masterSigner, address inventoryFactory, address point, address treasury)
        AbstractWithdrawSignature()
    {
        _masterSigner[masterSigner] = true;
        _inventoryFactoryAddr = inventoryFactory;
        _pointContractAddr = point;
        _treasuryAddr = treasury;

        _installAccessControl(msg.sender);
    }

    function pause() external onlyRole(OPERATOR_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(OPERATOR_ROLE) {
        _unpause();
    }

    function addSwapAsset(address asset) public onlyRole(SUPERADMIN_ROLE) {
        if (asset == address(0)) revert InvalidAddress();
        _swapAssets[asset] = true;
        emit SwapAssetAdded(asset);
    }

    function removeSwapAsset(address asset) public onlyRole(SUPERADMIN_ROLE) {
        if (asset == address(0)) revert InvalidAddress();
        _swapAssets[asset] = false;
        emit SwapAssetRemoved(asset);
    }

    function isSwapAssetRegistered(address asset) public view onlyRole(SUPERADMIN_ROLE) returns (bool) {
        if (asset == address(0)) revert InvalidAddress();
        return _swapAssets[asset];
    }

    function addMasterSigner(address signer) public onlyRole(SUPERADMIN_ROLE) {
        if (signer == address(0)) revert InvalidAddress();
        _masterSigner[signer] = true;
        emit MasterSignerAddressChanged(signer);
    }

    function removeMasterSigner(address signer) public onlyRole(SUPERADMIN_ROLE) {
        if (signer == address(0)) revert InvalidAddress();
        _masterSigner[signer] = false;
        emit MasterSignerAddressRemoved(signer);
    }

    function banUser(address user) public onlyRole(SUPERADMIN_ROLE) {
        if (user == address(0)) revert InvalidAddress();
        _bannedUsers[user] = true;
        emit UserBanned(user);
    }

    function releaseUser(address user) public onlyRole(SUPERADMIN_ROLE) {
        if (user == address(0)) revert InvalidAddress();
        _bannedUsers[user] = false;
        emit UserBanReleased(user);
    }

    function setInventoryFactoryAddress(address addr) external onlyRole(SUPERADMIN_ROLE) {
        if (addr == address(0)) revert InvalidAddress();
        if (!addr.supportsInterface(type(IInventoryFactory).interfaceId)) revert InvalidInterface();

        _inventoryFactoryAddr = addr;
        emit InventoryFactoryAddressChanged(addr);
    }

    function setPointContractAddress(address pointAddr) external onlyRole(SUPERADMIN_ROLE) {
        if (pointAddr == address(0)) revert InvalidAddress();
        if (!pointAddr.supportsInterface(type(IAsset).interfaceId)) revert InvalidInterface();

        _pointContractAddr = pointAddr;
        emit PointAddressChanged(pointAddr);
    }

    function setTreasuryContractAddress(address treasuryAddr) external onlyRole(SUPERADMIN_ROLE) {
        if (_treasuryAddr == address(0)) revert InvalidAddress();
        _treasuryAddr = treasuryAddr;
        emit TreasuryAddressChanged(treasuryAddr);
    }

    function setFeePercent(uint256 percent) external onlyRole(SUPERADMIN_ROLE) {
        feePercent = percent;
        emit FeePercentChanged(percent);
    }

    function setDepositContractAddress(address deposit) external onlyRole(SUPERADMIN_ROLE) {
        if (deposit == address(0)) revert InvalidAddress();
        if (!deposit.supportsInterface(type(IDepositSwapper).interfaceId)) revert InvalidInterface();

        _depositAddr = deposit;
        emit DepositAddressChanged(deposit);
    }

    function withdraw(
        IWithdraw.Payload memory payload,
        bytes memory masterSig,
        bytes memory recipientSig,
        bytes memory inventoryOwnerSig
    ) external whenNotPaused {
        if (block.timestamp > payload.expiration) revert InvalidWithdrawExpiration();
        if (_bannedUsers[payload.inventoryOwnerSigner]) revert UserHasBeenBanned(payload.inventoryOwnerSigner);
        if (_inventoryFactoryAddr == address(0)) revert InvalidInventoryFactoryAddress();
        if (!_swapAssets[payload.swapAsset]) revert InvalidSwapTokenAddress(payload.swapAsset);
        if (!_masterSigner[payload.masterSigner]) revert InvalidMasterSigner();
        if (!_validateNonce(payload.inventoryOwnerSigner, payload.nonce)) {
            revert InvalidNonce(payload.inventoryOwnerSigner, payload.nonce);
        }
        if (!verifySignature(payload, payload.masterSigner, masterSig)) revert InvalidMasterSignature();
        if (!verifySignature(payload, payload.recipientSigner, recipientSig)) revert InvalidRecipientSignature();
        if (!verifySignature(payload, payload.inventoryOwnerSigner, inventoryOwnerSig)) {
            revert InvalidInventoryOwnerSignature();
        }

        // need to validate if current user request to withdraw has a valid inventory
        // the inventory itself should be created at disbursement
        address inventory = IInventoryFactory(_inventoryFactoryAddr).getInventoryAddress(payload.inventoryOwnerSigner);
        if (inventory == address(0)) revert InvalidInventoryAddress();

        // need to make sure that current requested user's inventory has enough point to withdraw
        if (IERC20(_pointContractAddr).balanceOf(inventory) < payload.amount) {
            revert InvalidERC20BalanceNotEnough(payload.inventoryOwnerSigner, payload.amount);
        }

        // nonce added based on current payload.inventoryOwnerSigner
        _increaseNonce(payload.inventoryOwnerSigner);

        // start to burn user's point
        emit InventoryPointBurned(payload.inventoryOwnerSigner, payload.amount);
        InventoryImpl(inventory).burnPoints(payload.amount);

        // start to execute swap to deposit
        emit DepositSwapExecuted(payload.inventoryOwnerSigner, payload.swapAsset, payload.amount);
        IDepositSwapper(_depositAddr).swap(payload.recipientSigner, payload.swapAsset, payload.amount);
    }

    function disburse(address source, address[] calldata recipients, uint256[] calldata amounts)
        external
        override
        onlyRole(DISBURSE_ROLE)
    {
        if (recipients.length != amounts.length) revert DataLengthMismatch();

        _disburse(
            DisburseSettings(_inventoryFactoryAddr, _pointContractAddr, _treasuryAddr, feePercent),
            source,
            recipients,
            amounts
        );
    }

    function _increaseNonce(address owner) internal {
        uint256 current = nonces[owner];
        nonces[owner] = current + 1;
    }

    function _validateNonce(address owner, uint256 nonce) internal view returns (bool) {
        uint256 current = nonces[owner];
        return nonce == current + 1;
    }
}

