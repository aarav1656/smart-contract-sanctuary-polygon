import { IInventoryFactory } from "../inventory/IInventoryFactory.sol";
import { InventoryImpl } from "../inventory/InventoryImpl.sol";

abstract contract AbstractDisburse {

    struct DisburseSettings {
        address factoryAddress;
        address pointAddress;
        address treasuryAddress;
        uint256 feePercent;
    }

    event PointDisbursed(
        address source,
        address[] recipients,
        uint256[] amounts,
        uint256 fee
    );

    error InventoryNotFound(address addr);
    error InsufficientBalance(address addr);

    function _disburse(
        DisburseSettings memory settings,
        address source,
        address[] memory recipients,
        uint256[] memory amounts
    ) internal {

        address sourceInvt= IInventoryFactory(settings.factoryAddress).getInventoryAddress(source);
        if ( sourceInvt == address(0) ) { revert InventoryNotFound(source); }

        // check available balance
        uint256 total = sum(amounts);
        if ( total > IERC20(settings.pointAddress).balanceOf(sourceInvt)) { revert InsufficientBalance(sourceInvt); }

        // get new disburse amounts after fee
        (uint256[] memory amountsAfterFee, uint256 fee) = calculateDisburseWithFee(amounts, settings.feePercent);

        emit PointDisbursed(source, recipients, amountsAfterFee, fee);

        for (uint8 i = 0; i < recipients.length; i++) {
            address recipientInvt = IInventoryFactory(settings.factoryAddress).getInventoryAddress(recipients[i]);
            if ( recipientInvt == address(0) ) {
                recipientInvt = IInventoryFactory(settings.factoryAddress).createInventory(recipients[i], address(this));
                InventoryImpl(recipientInvt).grantRole(keccak256("INTERNAL"), address(this));
                InventoryImpl(recipientInvt).grantRole(keccak256("INTERNAL"), settings.factoryAddress);
            }

            InventoryImpl(sourceInvt).transferPoints(recipientInvt, amountsAfterFee[i]);
        }

        InventoryImpl(sourceInvt).transferPoints(settings.treasuryAddress, fee);
    }

    function sum(uint256[] memory values) public pure returns(uint256 result) {
        for (uint256 i = 0; i < values.length; i++) {
            result += values[i];
        }
    }

    function calculateDisburseWithFee(
        uint256[] memory amounts,
        uint256 feePercent
    ) public pure returns(uint256[] memory result, uint256 fee) {

        uint256[] memory fees = new uint256[](amounts.length);
        result = new uint256[](amounts.length);

        for (uint256 i = 0; i < amounts.length; i++) {
            fees[i] = (amounts[i] * feePercent) / 10000;
            result[i] = amounts[i] - fees[i];
        }

        fee = sum(fees);
    }

    function disburse(
        address source,
        address[] calldata recipients,
        uint256[] calldata amounts
    ) external virtual;
}

