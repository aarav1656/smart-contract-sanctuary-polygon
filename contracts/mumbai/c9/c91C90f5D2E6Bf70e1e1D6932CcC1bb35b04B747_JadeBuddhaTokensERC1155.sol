contract JadeBuddhaTokensERC1155 is 
    ERC1155Burnable, 
    ERC1155Pausable, 
    ERC1155Supply,
    Ownable, 
    BaseURI,
    JadeMetadata,
    JadeFactory,
    JadeAdditionalProbability,
    WithdrawableAccount
{
    /// @notice Proxy address of `JadeTokenERC20`
    address public DollarJadeProxyAddress; 

    /// @notice Chemicals compound for craft `Jade`
    uint256 public constant Ca = 0;
    uint256 public constant MgFe = 1;
    uint256 public constant Si4O11 = 2;
    uint256 public constant OH = 3;

    /// @notice `Jade` token initial id
    uint256 constant Jade = uint256(uint8(0xff));
    /// @notice `Jade` token total minted
    uint256 public jadeMinted = 0;

    /// @notice `Jade` metadata
    mapping(uint256=>uint40) private _jadeMetadata;

    /// @param owner Owner address of this contract
    /// @param baseURI Base for build token uri
    constructor(
        address owner,
        address dollarJadeProxy,
        address withdrawableAccount,
        uint256 probabilityBasePrice,
        string memory baseURI,
        address initialSupplyTo,
        uint256[] memory initialIds,
        uint256[] memory initialAmounts,
        bytes memory data
    ) 
    ERC1155('') 
    BaseURI(baseURI)
    WithdrawableAccount(withdrawableAccount) 
    JadeAdditionalProbability(probabilityBasePrice) 
    Ownable() {
        require(_checkCompoundIds(initialIds), "JadeBuddhaTokens: Wrong compounds ids");
        _mintBatch(
            initialSupplyTo,
            initialIds,
            initialAmounts,
            data
        );
        DollarJadeProxyAddress = dollarJadeProxy;
        transferOwnership(owner);
    }

    /// @notice Function to craft `Jade` from compounds
    /// @param ids Array of tokens id
    /// @param amounts Array of amount of tokens with id
    /// @param probability Probability of successful `Jade` crafting
    /// @param data Default is empty
    function createJade(
        uint256[] memory ids,
        uint256[] memory amounts,
        uint8 probability,
        bytes memory data
    ) external {
        require(ids.length == amounts.length, "JadeBuddhaTokens: Wrong array indexes");
        require(ids.length == 4 && amounts.length == 4, "JadeBuddhaTokens: Wrong tokens array length");
        require(_checkCompoundIds(ids), "JadeBuddhaTokens: Wrong compounds ids");
        require(_checkCompoundAmounts(ids, amounts), "JadeBuddhaTokens: Not enough tokens for this address");

        /// @dev Calculate chance of this generation
        uint8 jadeTier = JadeFactory._getTier(amounts);
        bool isGenerationSuccessful = JadeFactory._isGenerationSuccessful(jadeTier, probability);

        /// @dev Calculate & transfer DollarJade tokens to withdrawable account
        if(probability != 0) {
            uint256 dollarJadeAmounts = JadeAdditionalProbability.calculateAdditionalProbabilityPrice(probability);
            ManageERC20._transferFrom(
                DollarJadeProxyAddress, 
                msg.sender, 
                WithdrawableAccount.getWithdrawableAccount(),
                dollarJadeAmounts
            );
        }

        if(isGenerationSuccessful) {
            /// @dev Craft `Jade` token with random params
            (uint8 size, uint8 color, uint8 form, uint8 tier, uint8 energy) = JadeFactory._generateJadeParams(amounts);

            /// @dev Generate `Jade` token id
            uint256 jadeId = Jade + jadeMinted;
            jadeMinted++;
            
            /// @dev Mint new `Jade` nft token
            _mint(
                msg.sender,
                jadeId,
                1,
                data
            );
            emit JadeFactory.GenerateJadeEvent(msg.sender, true, size, color, form, tier, energy);
            
            /// @dev Burn used tokens
            _burnBatch(
                msg.sender,
                ids,
                amounts
            );
            
            /// @dev Save encoded `Jade` token metadata
            _jadeMetadata[jadeId] = JadeMetadata.encodeMetadata(
                size, color, form, tier, energy
            );
        } else {
            emit JadeFactory.GenerateJadeEvent(msg.sender, false, 0, 0, 0, 0, 0);
        }
    }

    /// @notice Function to get token uri
    /// @param id Token id
    /// @return Token uri
    function uri(uint256 id) public view override returns(string memory) {
        return(
            string(abi.encodePacked(
                BaseURI.baseURI(),
                Strings.toString(id),
                ".json"
            ))
        );
    }

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal virtual override(ERC1155Supply, ERC1155Pausable, ERC1155) {
        require(!paused(), "ERC1155Pausable: token transfer while paused");
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    /// @notice Check range of ids
    /// @param ids Array of tokens id
    /// @return Flag of all checks
    function _checkCompoundIds(uint256[] memory ids) internal view returns(bool) {
        for(uint16 i = 0; i < ids.length; i ++) {
            if(
                !(
                    ids[i] == Ca ||
                    ids[i] == MgFe ||
                    ids[i] == OH ||
                    ids[i] == Si4O11
                )
            ) {
                return false;
            }
        }
        return true;
    }


    /// @notice Check token balances of user
    /// @param ids Array of tokens id
    /// @return Flag of all checks
    function _checkCompoundAmounts(
        uint256[] memory ids,
        uint256[] memory amounts
    ) internal view returns(bool) {
        for(uint16 i = 0; i < ids.length; i++) {
            if(!(balanceOf(msg.sender, ids[i]) >= amounts[i])) {
                return false;
            }
        }
        return true;
    }

    /// @notice Get `Jade` encoded metadata
    /// @param id Token id
    /// @return Metadata
    function getJadeMetadata(uint256 id) public view returns(uint40) {
        return(_jadeMetadata[id]);
    }

    function setBaseURI(string memory baseURI) external onlyOwner {
        BaseURI._setBaseURI(baseURI);
    }

    function setWithdrawableAccount(address withdrawableAccount) external onlyOwner {
        WithdrawableAccount._setWithdrawableAccount(withdrawableAccount);
    }

    function setAdditionalProbabilityBasePrice(uint256 probabilityBasePrice) external onlyOwner {
        JadeAdditionalProbability._setAdditionalProbabilityBasePrice(probabilityBasePrice);
    }

}

