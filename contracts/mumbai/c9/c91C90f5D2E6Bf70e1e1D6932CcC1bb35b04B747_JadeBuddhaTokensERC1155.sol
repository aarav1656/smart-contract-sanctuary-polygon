abstract contract JadeFactory is ManageERC20, RandomGenerator {

    /// @notice Min tier param for `Jade`
    uint8 public constant MIN_TIER = 1;
    /// @notice Max tier param for `Jade`
    uint8 public constant MAX_TIER = 12;

    /// @notice Max chance of success generation
    uint8 constant private _maxProbability = 100;
    /// @notice Points to energy ratio
    uint8 constant private _pointsFactor = 3;

    /// @notice Propotion of tokens bunch
    uint8[] private _compoundBunch = [2,5,2,2];
    /// @notice Simple seeds for random generator in one transaction
    uint16[] private _seeds = [0,1,2,3];
    /// @notice Count of bunch for create `Jade` with a higher tier
    uint8[] private _bunchFactors = [1,4,9,16,25,36,49,64,81,100,121,150];
    /// @notice Possible energy values ​​in this tier
    uint8[][] private _energyFactors = [
        /// Common - 1, Common - 2, Common - 3
        [1,2,3],[4,5,6],[7,8,9],
        /// Uncommon - 4, Uncommon - 5, Uncommon - 6
        [10,11,12],[13,14,15],[16,17,18],
        // Rare - 7, Rare - 8
        [19,20,21],[22,23,24],
        // Epic - 9, Epic - 10
        [25,26,27],[28,29,30],
        // Legendary - 11, Legendary - 12
        [31,32,33],[35,35,35]
    ];

    /// @notice Event with information about `Jade` token generation proccess
    /// @param to Recepient address
    /// @param isSuccess Success flag of this generation
    /// @param size Size of this `Jade` token
    /// @param color Color of this `Jade` token
    /// @param form Form of this `Jade` token
    /// @param tier Tier of this `Jade` token
    /// @param energy Energy of this `Jade` token
    event GenerateJadeEvent(
        address to,
        bool isSuccess,
        uint8 size, 
        uint8 color, 
        uint8 form, 
        uint8 tier, 
        uint8 energy
    );

    /// @notice Internal function to get `Jade` params for metadata
    /// @param compounds Array of tokens
    /// @return Size of this `Jade` token
    /// @return Color of this `Jade` token
    /// @return Form of this `Jade` token
    /// @return Tier of this `Jade` token
    /// @return Energy of this `Jade` token
    function _generateJadeParams(uint256[] memory compounds) internal view returns(uint8, uint8, uint8, uint8, uint8) {
        /// @dev Calculate tier
        uint8 tier = _getTier(compounds);
        /// @dev Get possible energy factors
        uint8[] memory possibleEnergyFactors = _getEnergyFactors(tier - 1);
        /// @dev Get random energy factor from `possibleEnergyFactors`
        uint256 rnd = RandomGenerator.getRandom(uint16(possibleEnergyFactors.length), _seeds[1],0);
        uint8 energy = possibleEnergyFactors[uint8(rnd)];
        /// @dev Get possible summ of points
        uint8 paramsPoints = _getParamsPoints(energy);
        /// @dev Randomly distribute points
        (uint8 size, uint8 color, uint8 form) = _distributePoints(paramsPoints);
        return(size, color, form, tier, energy);
    }

    /// @notice Internal function to get success or failure flag
    /// @param tier Tier of `Jade` token
    /// @param probability Сhance modifier
    /// @return Success or failure flag
    function _isGenerationSuccessful(uint8 tier, uint8 probability) internal view returns(bool) {
        uint256 rnd = RandomGenerator.getRandom(_maxProbability, _seeds[0],0);
        return(
            rnd <= ((_maxProbability / 2) - (tier * 4)) + probability
        );
    }

    /// @notice Internal function to distribute points to `Jade` params
    /// @param paramsPoints Possible summ of points
    /// @return Size of this `Jade` token
    /// @return Color of this `Jade` token
    /// @return Form of this `Jade` token
    function _distributePoints(uint8 paramsPoints) internal view returns(uint8, uint8, uint8) {
        /// @dev limit = paramsPoints - 2, offset = 1
        uint256 rnd1 = RandomGenerator.getRandom(uint16(paramsPoints - 2), _seeds[2], 1);
        /// @dev limit = paramsPoints - rnd1 - 1, offset = 1;
        uint256 rnd2 = RandomGenerator.getRandom(uint16(paramsPoints - rnd1) - 1, _seeds[3], 1);
        /// @dev Add reserved points to params
        return(uint8(rnd1), uint8(rnd2), uint8((paramsPoints - rnd1) - rnd2));
    }

    /// @notice Get possible energy factors
    /// @param tier Tier of `Jade` token
    /// @return Array of possible energy factors
    function _getEnergyFactors(uint8 tier) internal view returns(uint8[] memory) {
        return(_energyFactors[tier]);
    }

    /// @notice Get possible summ of params points
    /// @param energy Energy of 'Jade' token
    /// @return Value of points
    function _getParamsPoints(uint8 energy) internal view returns(uint8) {
        return(energy * _pointsFactor);
    }

    /// @notice Calculate tier
    /// @param compounds Array of tokens
    /// @return Tier of `Jade` token
    function _getTier(uint256[] memory compounds) internal view returns(uint8) {
        uint8 tier;
        for(uint8 i = 0; i < compounds.length - 1; i++) {
            require(
                compounds[i] / _compoundBunch[i] == compounds[i + 1] / _compoundBunch[i + 1],
                "JadeFactory: Wrong bunch proportion"
            );
        }
        for(uint8 i = 0; i < MAX_TIER; i++) {
            if(compounds[0] / _compoundBunch[0] == _bunchFactors[i]) {
                tier = MIN_TIER + i;
            }
        }
        if(tier != 0) {
            return(tier);
        }
        else {
            revert("JadeFactory: Wrong bunch factor");
        }
    }

}

