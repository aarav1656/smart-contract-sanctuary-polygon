    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    )
        internal
        virtual
        override(ERC1155Upgradeable, ERC1155PausableUpgradeable) 
    {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);

        if (from == address(0)) {
            for (uint256 i = 0; i < ids.length; ++i) {
                _totalSupply[ids[i]] += amounts[i];
            }
        }

        if (to == address(0)) {
            for (uint256 i = 0; i < ids.length; ++i) {
                _totalSupply[ids[i]] -= amounts[i];
            }
        }
    }

    function _getFeesInToken(uint basePrice, address paymentToken)
        internal
        view
        returns (uint256)
    {
        uint256 feesInWei = _getFeesInWei(basePrice);
        
        // convert wei to token decimal
        uint256 tokenPerEth = IPriceEstimator(priceEstimator).getEstimatedERC20forETH(1, paymentToken)[0];
        
        //subtract uniswap 0.30% fees
        uint256 estTokenPerEth = tokenPerEth.sub(tokenPerEth.mul(uniswapFeePercentage).div(1000));

        // fees in token
        return feesInWei.mul(estTokenPerEth);
    }
    
    function _getFeesInWei(uint basePrice)
        internal
        view
        returns (uint256) 
    {
        //price should be estimated by 1 token because Uniswap algo changes price based on large amount
        uint256 tokenBits = 10 ** uint256(IERC20Extended(usdTokenAddress).decimals()); // 1e6 for USDT

        uint256 estFeesInWeiPerUnit = IPriceEstimator(priceEstimator).getEstimatedETHforERC20(tokenBits, usdTokenAddress)[0];
        
        //subtract uniswap 0.30% fees
        //uniswapFeePercentage is a percentage expressed in 1/10 (a tenth) of a percent hence we divide by 1000
        estFeesInWeiPerUnit = estFeesInWeiPerUnit.sub(estFeesInWeiPerUnit.mul(uniswapFeePercentage).div(1000));

        // fees in wei 
        return basePrice.mul(estFeesInWeiPerUnit).div(tokenBits);
    }

    // returns price in ERC20 token decimal
    function price(uint tokenID, uint numberOfTokens, address paymentTokenAddress)
        external
        view
        returns(uint256)
    {
        uint basePrice = prices[tokenID][paymentTokenAddress].mul(numberOfTokens);
        return _getFeesInToken(basePrice, paymentTokenAddress);
    }

