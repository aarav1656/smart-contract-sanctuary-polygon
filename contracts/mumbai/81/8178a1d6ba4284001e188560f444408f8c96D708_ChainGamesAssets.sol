            IERC20Extended(paymentToken).burnFrom(from, fee);
        } else {
            uint256 stakersAmount = fee.mul(STAKERS_PERCENTAGE).div(100);
            uint256 companyAmount = fee.mul(COMPANY_PERCENTAGE).div(100);
            uint256 daoAmount = fee.mul(DAO_PERCENTAGE).div(100);
            uint256 burnAmount = fee.mul(BURN_PERCENTAGE).div(100);

            IERC20Upgradeable(paymentToken).safeTransferFrom(from, feesWallet, stakersAmount);
            IERC20Upgradeable(paymentToken).safeTransferFrom(from, companyWallet, companyAmount);
            IERC20Upgradeable(paymentToken).safeTransferFrom(from, daoWallet, daoAmount);
            IERC20Extended(paymentToken).burnFrom(from, burnAmount);
        }
    }

