pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "@uniswap/lib/contracts/libraries/TransferHelper.sol";

contract Escrow is ChainlinkClient, ConfirmedOwner {
//0x1a2248859f196fe3Aa32c30408e41e6bFB4A5420
    address expedition;
    IERC20 public QoinToken;
    uint256 nonce = 0;
    uint256 public feeBalance;
    uint256 public totalBalance;
    uint256 public feePercentage;
    uint256 public sentTimeLimit;
    uint256 public acceptTimeLimit;

    using Chainlink for Chainlink.Request;
    bytes32 private jobId;
    uint256 private fee;
    string public baseUrlOrder = "";
    string public baseUrlResi = "";

    //for test only
    uint256 public statusCode;
    uint256 public orderNumber;

    enum OrderStatus {
        Open,
        Paid,
        OnShipping,
        Delivered,
        Complained,
        Completed,
        Cancelled
    }

    struct Complain {
        bool adminApproval;
        bool expeditionApproval;
        uint256 sellerPercentage;
        uint256 buyerPercentage;
    }

    struct Order {
        address seller;
        address buyer;
        uint256 price;
        OrderStatus orderStatus;
        string noResi;
        uint256 paymentTime;
        uint256 deliveredTime;
        string complainMessage;
        bool exist;
        bool isComplain;
    }

    mapping(uint256 => Order) order;
    mapping(uint256 => Complain) complainApproval;

    event RequestStatusCode(bytes32 indexed requestId, uint256 orderId, uint256 statusCode);
    event OrderRegistered(uint256 orderId, address seller);
    event OrderPaid(uint256 orderId, address buyer);
    event BuyerRefund(uint256 orderId, address buyer);
    event OrderDelivered(uint256 orderId, address expedition);
    event OrderComplained(uint256 orderId, address buyer);
    event OrderCompleted(uint256 orderId);
    event OrderCancelled(uint256 orderId);

    constructor(
        IERC20 _qoinTokenAddress, 
        address _chainlinkToken, 
        address _chainlinkOracle, 
        address _expedition,
        uint256 _sentTimeLimit, 
        uint256 _acceptTimeLimit
    ) ConfirmedOwner(msg.sender) {
        QoinToken = _qoinTokenAddress; //0x14d8BAA04Ee4587e700Fc1817561819415B2474A on mumbai
        setChainlinkToken(_chainlinkToken); //0x326C977E6efc84E512bB9C30f76E30c160eD06FB on goelri, 0x326C977E6efc84E512bB9C30f76E30c160eD06FB on mumbai
        setChainlinkOracle(_chainlinkOracle); //0xCC79157eb46F5624204f47AB42b3906cAA40eaB7 on goerli, 0x40193c8518BB267228Fc409a613bDbD8eC5a97b3 on mumbai
        jobId = "ca98366cc7314957b8c012c72f05aeeb"; 
        fee = (1 * LINK_DIVISIBILITY) / 10; // 0,1 * 10**18 (Varies by network and job)
        expedition = _expedition;
        sentTimeLimit = _sentTimeLimit;
        acceptTimeLimit = _acceptTimeLimit;
    }

    function setupBaseUrlResi(string memory _baseUrlResi) public onlyOwner returns(bool)
    {
        baseUrlResi = _baseUrlResi;
        return true;
    }

    function setupBaseUrlOrder(string memory _baseUrlOrder) public onlyOwner returns(bool)
    {
        baseUrlOrder = _baseUrlOrder;
        return true;
    }

    function getFeeAmount(uint256 amount) private view returns(uint256) {
        return amount * feePercentage / 100;
    }

    function setupSentTimeLimit(uint256 _timeLimit) public onlyOwner {
        require(_timeLimit > 0, "Time limit cannot 0");
        sentTimeLimit = _timeLimit;
    }

    function setupAcceptTimeLimit(uint256 _timeLimit) public onlyOwner {
        require(_timeLimit > 0, "Time limit cannot 0");
        acceptTimeLimit = _timeLimit;
    }

    function urlResi(string memory noResi) private view returns(string memory){
        return string.concat(baseUrlResi, noResi);
    }

    function urlOrder(string memory orderId) private view returns(string memory){
        return string.concat(baseUrlOrder, orderId);
    }

    /**
     * Create a Chainlink request to retrieve API response, find the target
     * data, then multiply by 1000000000000000000 (to remove decimal places from data).
     */
    function requestTrackingData() public returns (bytes32 requestId) {
        // require(order[orderId].approveResi == true, "You dont have eligible to request update chainlink");
        Chainlink.Request memory req = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfill.selector
        );

        // Set the URL to perform the GET request on
        // req.add("urlResi", urlResi(order[orderId].noResi));
        req.add("urlResi", baseUrlResi);

        req.add("pathResi", "status_code"); // Chainlink nodes 1.0.0 and later support this format

        // req.add("urlOrderId", urlOrder(Strings.toString(orderId)));

        // req.add("pathOrderId", "order_number");

        // Multiply the result by 1000000000000000000 to remove decimals
        int256 timesAmount = 10**18;
        req.addInt("times", timesAmount);
        // req.addInt("orderId", 111);

        // Sends the request
        return sendChainlinkRequest(req, fee);
    }

    /**
     * Receive the response in the form of uint256
     */
    function fulfill(bytes32 requestId, uint256 code)
        public
        recordChainlinkFulfillment(requestId)
    {
        emit RequestStatusCode(requestId, orderNumber, code);
        // order[orderNumber].status = code;
        // statusCode = code;
        // orderNumber = orderNumberId;
    }

    /**
     * Allow withdraw of Link tokens from the contract
     */
    function withdrawLinkToken() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(chainlinkTokenAddress());
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }

    // admin withdraw fee balance
    function withdrawFee(uint256 amount) public onlyOwner {
        require(amount <= feeBalance, "Input amount exceed fee balance");
        TransferHelper.safeTransfer(address(QoinToken), msg.sender, amount);
        feeBalance -= amount;
    }

    //utils for random number
    function random() private returns (uint256) {
        nonce += 1;
        return uint256(keccak256(abi.encodePacked(nonce)));
    }

    // seller create order
    function createOrder(uint256 _price) external returns (uint256) {
        uint256 orderId = random();
        order[orderId].seller = msg.sender;
        order[orderId].price = _price;
        order[orderId].orderStatus = OrderStatus.Open;
        order[orderId].exist = true;
        emit OrderRegistered(orderId, msg.sender);
        return orderId;
    }

    // seller cancel order
    function cancelOrder(uint256 orderId) external returns (uint256) {
        require(order[orderId].exist == true, "Order not found");
        require(order[orderId].orderStatus == OrderStatus.Open, "Order not open");
        require(order[orderId].seller == msg.sender, "You dont have eligible to cancel this order");

        order[orderId].orderStatus = OrderStatus.Cancelled;
        emit OrderCancelled(orderId);
        return orderId;
    }

    // buyer send an erc20 tokens to the escrow (this contract)
    function payOrder(
        uint256 orderId
    ) external returns (bool) {

        require(order[orderId].exist == true, "Order not found");
        require(order[orderId].orderStatus == OrderStatus.Open, "Order not open");

        TransferHelper.safeTransferFrom(address(QoinToken), msg.sender, address(this), order[orderId].price);
        totalBalance += order[orderId].price;
        order[orderId].buyer = msg.sender;
        order[orderId].orderStatus = OrderStatus.Paid;
        order[orderId].paymentTime = block.timestamp;
        emit OrderPaid(orderId, msg.sender);
        return true;
    }

    // buyer refund if seller not respon after 
    function refundBuyer(uint256 orderId) external returns (bool) {
        require(order[orderId].exist == true, "Order not found");
        require(order[orderId].orderStatus == OrderStatus.Paid, "Order not paid or already sent");
        require(
            block.timestamp >= order[orderId].paymentTime + sentTimeLimit, 
            "Order payment time has not exceeded the delivery time limit"
        );

        TransferHelper.safeTransfer(address(QoinToken), msg.sender, order[orderId].price);
        totalBalance -= order[orderId].price;
        order[orderId].buyer = address(0);
        order[orderId].orderStatus = OrderStatus.Open;
        order[orderId].paymentTime = 0;
        emit BuyerRefund(orderId, msg.sender);
        return true;
    }

    //seller setup no resi
    function setupResi(uint256 orderId, string memory noResi) external returns (bool)
    {
        require(order[orderId].exist == true, "Order not found");
        require(order[orderId].seller == msg.sender, "You dont have eligible to setup no resi for this order");
        if (order[orderId].isComplain) {
            require(
                order[orderId].orderStatus >= OrderStatus.Paid && order[orderId].orderStatus <= OrderStatus.Delivered, 
                "Order is not in complain"
            );
        } else {
            require(order[orderId].orderStatus == OrderStatus.Paid, "Order not paid or already sent");
        }
        order[orderId].orderStatus = OrderStatus.OnShipping;
        order[orderId].noResi = noResi;
        return true;
    }

    // buyer complain
    function complainOrder(uint256 orderId, string memory complainMessage) external returns (bool) {
        require(order[orderId].exist == true, "Order not found");
        require(order[orderId].buyer == msg.sender, "You dont have eligible to complain this order");
        require(!order[orderId].isComplain, "Order already in complain");
        require(
            order[orderId].orderStatus == OrderStatus.OnShipping || order[orderId].orderStatus == OrderStatus.Delivered,
            "You cannot complain this order due to this order status"
        );

        order[orderId].isComplain = true;
        order[orderId].complainMessage = complainMessage;
        emit OrderComplained(orderId, msg.sender);
        return true;
    }

    // expedition party update shipping status to delivered
    function deliveredOrder(uint256 orderId) external returns (bool) {
        require(order[orderId].exist == true, "Order not found");
        require(expedition == msg.sender, "You dont have eligible to update this order");
        require(order[orderId].orderStatus == OrderStatus.OnShipping, "Order not on shipping");

        order[orderId].orderStatus = OrderStatus.Delivered;
        order[orderId].deliveredTime = block.timestamp;
        emit OrderDelivered(orderId, msg.sender);
        return true;
    }

    // buyer confirm accept order
    function confirmAccept(uint256 orderId) external returns (bool) {
        require(order[orderId].exist == true, "Order not found");
        require(!order[orderId].isComplain, "Order is in complain");
        require(order[orderId].buyer == msg.sender, "You dont have eligible to confirm accept this order");
        require(
            order[orderId].orderStatus == OrderStatus.Delivered,
            "Order not delivered or already delivered"
        );

        uint256 amount = order[orderId].price - getFeeAmount(order[orderId].price);
        TransferHelper.safeTransfer(address(QoinToken), order[orderId].seller, amount);
        feeBalance += getFeeAmount(order[orderId].price);
        totalBalance -= order[orderId].price;
        order[orderId].orderStatus = OrderStatus.Completed;
        emit OrderCompleted(orderId);
        return true;
    }

    // seller release order when buyer not confirm accept after 
    function releaseOrder(uint256 orderId) external returns (bool) {
        require(order[orderId].exist == true, "Order not found");
        require(!order[orderId].isComplain, "Order is in complain");
        require(order[orderId].seller == msg.sender, "You dont have eligible to release this order");
        require(
            order[orderId].orderStatus == OrderStatus.Delivered,
            "Order not delivered or already delivered"
        );
        require(
            block.timestamp >= order[orderId].deliveredTime + acceptTimeLimit, 
            "Order payment time has not exceeded the delivery time limit"
        );

        uint256 amount = order[orderId].price - getFeeAmount(order[orderId].price);
        TransferHelper.safeTransfer(address(QoinToken), order[orderId].seller, amount);
        feeBalance += getFeeAmount(order[orderId].price);
        totalBalance -= order[orderId].price;
        order[orderId].orderStatus = OrderStatus.Completed;
        emit OrderCompleted(orderId);
        return true;
    }

    // qoin admin address as owner contract set complain resolution
    function setComplainSolution(uint256 orderId, uint256 sellerPercentage, uint256 buyerPercentage) external onlyOwner returns (bool) {
        require(order[orderId].exist == true, "Order not found");
        require(order[orderId].isComplain, "Order is not in complain");

        complainApproval[orderId].sellerPercentage = sellerPercentage;
        complainApproval[orderId].buyerPercentage = buyerPercentage;
        return true;
    }
    
    function approveComplainSolution(uint256 orderId, bool approval) external {
        require(order[orderId].exist == true, "Order not found");
        require(order[orderId].isComplain, "Order is not in complain");
        require(expedition == msg.sender || owner() == msg.sender, "You dont have eligible to approve this complain");

        if (msg.sender == expedition) complainApproval[orderId].expeditionApproval = approval;
        else complainApproval[orderId].adminApproval = approval;

        if (complainApproval[orderId].adminApproval && complainApproval[orderId].expeditionApproval) {
            uint256 amount = order[orderId].price - getFeeAmount(order[orderId].price);
            uint256 forSeller = amount * complainApproval[orderId].sellerPercentage / 100;
            uint256 forBuyer = amount * complainApproval[orderId].buyerPercentage / 100;
            TransferHelper.safeTransfer(address(QoinToken), order[orderId].seller, forSeller);
            TransferHelper.safeTransfer(address(QoinToken), order[orderId].buyer, forBuyer);
            feeBalance += getFeeAmount(order[orderId].price);
            totalBalance -= order[orderId].price;
            order[orderId].isComplain = false;
            order[orderId].orderStatus = OrderStatus.Completed;
            emit OrderCompleted(orderId);
        }
    }

    // retrieve order
    function checkOrder(uint256 orderId)
        external
        view
        returns (Order memory)
    {
        require(order[orderId].exist == true, "Order not found");
        return (
            order[orderId]
        );
    }
}

