contract MarketPlace is MarketPlaceStorage, AccessControlUpgradeable, IERC1155ReceiverUpgradeable, OwnableUpgradeable, ReentrancyGuardUpgradeable, IMarketPlace {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    /**
     * @notice Initializer
     * @param _treasury Address that collects marketplace fees
     * @param _mpFees marketplace fees
     */
    function initialize(address _treasury, uint256 _mpFees) external initializer {
        OwnableUpgradeable.__Ownable_init();

        treasury = _treasury;
        marketPlaceFees = _mpFees;

        // whitelists native coin
        whitelistedPaymentTokens[address(0)] = true;

        // add deployer as admin
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());

        nextSellNFTId = 1;
        nextSell1155Id = 1; // starting from 1
    }

    /**
     * @notice set a new address to collect marketplace fees (onlyOwner)
     * @param _newTreasury new trasury address
     */
    function setNewTreasury(address _newTreasury) external onlyOwner {
        require(_newTreasury != address(0), "Address not allowed");
        treasury = _newTreasury;
    }

    /**
     * @notice set a new marketplace fees (scaled by 1000000) (onlyOwner)
     * @param _newMPFees new marketplace fees
     */
    function setMarketPlaceFee(uint256 _newMPFees) external onlyOwner {
        marketPlaceFees = _newMPFees;
    }

    /**
     * @notice sell a NFT (ERC721)
     * @param _collection collection address
     * @param _tokenId NFT token ID
     * @param _price single item price
     * @param _paymentToken payment token used (if 0x000... native token will be used)
     */
    function sell721(address _collection, uint256 _tokenId, uint256 _price, address _paymentToken) external nonReentrant {
        require (is721Whitelisted[_collection], "Collection not whitelisted");
        require (IERC721Upgradeable(_collection).ownerOf(_tokenId) == _msgSender(), "Not owner");
        require (whitelistedPaymentTokens[_paymentToken], "Invalid payment token");

        Sell memory sell;

        // check if same token id already in a sell orders by owner
        uint256 lastOwnerID = sellOrdersNFTByOwner[_msgSender()].length;
        for (uint256 i = 1; i < lastOwnerID; i++) {
            uint256 idx = sellOrdersNFTByOwner[_msgSender()][i];
            sell = sellOrdersNFTById[idx];
            if (sell.collection == _collection && sell.tokenId == _tokenId && sell.active) {
                revert("Same collection token ID already in a sell order");
            }
        }

        sell = Sell({
            id: nextSellNFTId,
            paymentToken: _paymentToken,
            price: _price,
            amount: 1,
            tokenId: _tokenId,
            owner: _msgSender(),
            collection: _collection,
            active: true
        });

        sellOrdersNFTByOwner[_msgSender()].push(sell.id);
        sellOrdersByCollection[_collection].push(sell.id);
        sellOrdersNFTById[nextSellNFTId] = sell;
        emit NewNFTSellOrder(sell.id);

        nextSellNFTId ++;
    }

    /**
     * @notice Remove NFT sell order, not checking if a collection is whitelisted
     * @param _index order index
     */
    function cancelSell721(uint256 _index) external nonReentrant {
        require (_index < nextSellNFTId, "Invalid index");

        Sell storage sell = sellOrdersNFTById[_index];
        require (sell.owner == _msgSender(), "Not owner");
        sell.active = false;

        // Update sell orders by owner
        uint256 ownerOrderLen = sellOrdersNFTByOwner[_msgSender()].length;
        for (uint256 i = 0; i < ownerOrderLen; i++) {
            if (sellOrdersNFTByOwner[_msgSender()][i] == _index) {
                if (ownerOrderLen == 1)
                    delete sellOrdersNFTByOwner[_msgSender()];
                else {
                    sellOrdersNFTByOwner[_msgSender()][i] = sellOrdersNFTByOwner[_msgSender()][ownerOrderLen - 1];
                    sellOrdersNFTByOwner[_msgSender()].pop();
                }
                break;
            }
        }

        // Update sell orders in collection
        uint256 collLen = sellOrdersByCollection[sell.collection].length;
        for (uint256 i = 0; i < collLen; i++) {
            if (sellOrdersByCollection[sell.collection][i] == _index) {
                if (collLen == 1) 
                    delete sellOrdersByCollection[sell.collection];
                else {
                    sellOrdersByCollection[sell.collection][i] = sellOrdersByCollection[sell.collection][collLen - 1];
                    sellOrdersByCollection[sell.collection].pop();
                }
                break;
            }
        }
        emit SellOrderNFTCancelled(sell.id);
    }

    /**
     * @notice buy a NFT (ERC721), not checking if a collection is whitelisted
     * @param _index order index
     */
    function buy721(uint256 _index) external payable nonReentrant {
        require (_index < nextSellNFTId, "Invalid index");

        Sell storage sell = sellOrdersNFTById[_index];
        require(sell.active, "Not on sale");
        
        // Close sale
        sell.active = false;
        // royalty fees 
        address receiver; 
        uint256 royaltyAmount;
        if (has721Royalties[sell.collection]) {
            (receiver, royaltyAmount) = ITokenNFT(sell.collection).royaltyInfo(sell.price);
        }
        

        // Check payment 
        if (sell.paymentToken == address(0)) {
            processNativePayment(sell.price, sell.owner, receiver, royaltyAmount);
        } else {
            processPayment(sell.paymentToken, sell.price, sell.owner, receiver, royaltyAmount);
        }
        
        // Transfer token
        IERC721Upgradeable(sell.collection).transferFrom(sell.owner, _msgSender(), sell.tokenId);
        emit NewNFTBuyOrder(sell.id);
    }

    /**
     * @notice sell one or more NFT (ERC1155)
     * @param _collection collection address
     * @param _tokenId NFT token ID inside the collection
     * @param _amount tokens amount to be sold
     * @param _price single item price
     * @param _paymentToken Payment Token used (if 0x000... native token will be used)
     */
    function sell1155(address _collection, uint256 _tokenId, uint256 _amount, uint256 _price, address _paymentToken) external nonReentrant {
        require (is1155Whitelisted[_collection], "Collection not whitelisted");
        // require (IERC1155Upgradeable(_collection).balanceOf(_msgSender(), _tokenId) > 0, "Does not have items");
        require (whitelistedPaymentTokens[_paymentToken], "Invalid payment token");
        require (_amount > 0, "Cannot sell zero items");

        Sell memory sell;

        // check if token id already sold in a sell orders by owner
        uint256 userBal = IERC1155Upgradeable(_collection).balanceOf(_msgSender(), _tokenId);
        require(userBal >= _amount + (seller1155CollectionTotalAmounts[_msgSender()][_collection][_tokenId]), "Not enough tokens to sell");

        sell = Sell({
            id: nextSell1155Id,
            paymentToken: _paymentToken,
            price: _price,
            amount: _amount,
            tokenId: _tokenId,
            owner: _msgSender(),
            collection: _collection,
            active: true
        });

        sellOrders1155ByOwner[_msgSender()].push(sell.id);
        sellOrdersByCollection[_collection].push(sell.id);
        sellOrders1155ById[nextSell1155Id] = sell;

        seller1155CollectionTotalAmounts[_msgSender()][_collection][_tokenId] += _amount;
        nextSell1155Id ++;
        emit New1155SellOrder(sell.id, sell.amount);
    }

    /**
     * @notice Remove NFT (ERC1155) sell order, not checking if a collection is whitelisted
     * @param _index order index
     */
    function cancelSell1155(uint256 _index) external nonReentrant {
        require (_index < nextSell1155Id, "Invalid index");

        Sell storage sell = sellOrders1155ById[_index];
        require (sell.owner == _msgSender(), "Not owner");
        sell.active = false;

        seller1155CollectionTotalAmounts[_msgSender()][sell.collection][sell.tokenId] -= sell.amount;

        // Update sell orders by owner
        uint256 ownerOrderLen = sellOrders1155ByOwner[_msgSender()].length;
        for (uint256 i = 0; i < ownerOrderLen; i++) {
            if (sellOrders1155ByOwner[_msgSender()][i] == _index) {
                if (ownerOrderLen == 1)
                    delete sellOrders1155ByOwner[_msgSender()];
                else {
                    sellOrders1155ByOwner[_msgSender()][i] = sellOrders1155ByOwner[_msgSender()][ownerOrderLen - 1];
                    sellOrders1155ByOwner[_msgSender()].pop();
                }
                break;
            }
        }

        // Update sell orders in collection
        uint256 collLen = sellOrdersByCollection[sell.collection].length;
        for (uint256 i = 0; i < collLen; i++) {
            if (sellOrdersByCollection[sell.collection][i] == _index) {
                if (collLen == 1) 
                    delete sellOrdersByCollection[sell.collection];
                else {
                    sellOrdersByCollection[sell.collection][i] = sellOrdersByCollection[sell.collection][collLen - 1];
                    sellOrdersByCollection[sell.collection].pop();
                }
                break;
            }
        }
        emit SellOrder1155Cancelled(sell.id, sell.amount);
    }

    /**
     * @notice buy a NFT (ERC1155), not checking if a collection is whitelisted
     * @param _index order index
     * @param _buyAmount tokens amount to be bought
     */
    function buy1155(uint256 _index, uint256 _buyAmount) external payable nonReentrant {
        require (_index < nextSell1155Id, "Invalid index");

        Sell storage sell = sellOrders1155ById[_index];
        require (sell.active, "Not on sale");
        require(sell.amount >= _buyAmount, "Not enough tokens to buy");

        // Close sale
        if (sell.amount > _buyAmount) {
            sell.amount = sell.amount - _buyAmount;
        } else {
            sell.amount = 0;
            sell.active = false;
        }

        uint256 buyPrice = sell.price * _buyAmount;
        
        // royalty fees 
        address receiver; 
        uint256 royaltyAmount;
        if (has1155Royalties[sell.collection]) {
            (receiver, royaltyAmount) = IToken1155(sell.collection).royaltyInfo(sell.price);
            royaltyAmount = royaltyAmount * _buyAmount;
        }

        // Check payment 
        if (sell.paymentToken == address(0)) {
            processNativePayment(buyPrice, sell.owner, receiver, royaltyAmount);
        } else {
            processPayment(sell.paymentToken, buyPrice, sell.owner, receiver, royaltyAmount);
        }

        seller1155CollectionTotalAmounts[sell.owner][sell.collection][sell.tokenId] -= _buyAmount;
        
        // Transfer token
        IERC1155Upgradeable(sell.collection).safeTransferFrom(sell.owner, _msgSender(), sell.tokenId, _buyAmount, "");
        emit New1155BuyOrder(sell.id, _buyAmount);
    }

    /**
     * @notice Returns the list of active orders of a specific collection
     * @param _collection collection address
     * @return sellOrdersByCollection[_collection] sell orders array for this collection address
     */
    function getSellOrders(address _collection) external view returns (uint256[] memory) {
        return sellOrdersByCollection[_collection];
    }

    /**
     * @notice Returns the list of whitelisted ERC721 collections
     * @return whitelisted721Collections NFT whitelisted collections array
     */
    function getWhitelistedCollections721() external view returns (address[] memory) {
        return whitelisted721Collections;
    }

    /**
     * @notice Returns the list of whitelisted ERC1155 collections
     * @return whitelisted1155Collections NFT (ERC1155) whitelisted collections array
     */
    function getWhitelistedCollections1155() external view returns (address[] memory) {
        return whitelisted1155Collections;
    }

    // PRIVILEGED METHODS
    /**
     * @notice Add payment token to whitelist (DEFAULT_ADMIN_ROLE)
     * @param _token token address to be whitelisted
     */
    function addPaymentTokenToWhitelist(address _token) external onlyRole(DEFAULT_ADMIN_ROLE) {
        whitelistedPaymentTokens[_token] = true;
    }

    /**
     * @notice Remove payment token to whitelist (DEFAULT_ADMIN_ROLE)
     * @param _token token address to be removed from whitelist
     */
    function removePaymentTokenToWhitelist(address _token) external onlyRole(DEFAULT_ADMIN_ROLE) {
        whitelistedPaymentTokens[_token] = false;
    }

    /**
     * @notice Add ERC721 or ERC1155 collection to whitelist (DEFAULT_ADMIN_ROLE), reverting if token is not erc721 or erc1155
     * @param _token token to be whitelisted
     * @param _hasRoyalties indicetes if token has royalties info or not
     */
    function addCollectionToWhitelist(address _token, bool _hasRoyalties) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        if (IERC721Upgradeable(_token).supportsInterface(0x80ac58cd)) {
            require(!is721Whitelisted[_token], "Collection is already whitelisted");
            is721Whitelisted[_token] = true;
            has721Royalties[_token] = _hasRoyalties;
            whitelisted721Collections.push(_token);
        } else if (IERC1155Upgradeable(_token).supportsInterface(0xd9b67a26)) {
            require(!is1155Whitelisted[_token], "Collection is already whitelisted");
            is1155Whitelisted[_token] = true;
            has1155Royalties[_token] = _hasRoyalties;
            whitelisted1155Collections.push(_token);
        } else {
            revert("Collection type cannot be whitelisted");
        }  
        emit CollectionAdded(_token);
    }

    /**
     * @notice Remove collection from whitelist, no other orders accepted for this collection (DEFAULT_ADMIN_ROLE)
     * @param _index collection index to be removed
     * @param _is721 true if the collections is an ERC721, false if it is an ERC1155
     */
    function removeCollectionFromWhitelist(uint256 _index, bool _is721) external onlyRole(DEFAULT_ADMIN_ROLE) {
        address token;

        if (_is721) {
            require (_index < whitelisted721Collections.length, "Invalid index");
            token = whitelisted721Collections[_index];
            if (IERC721Upgradeable(token).supportsInterface(0x80ac58cd)) {
                uint256 lastOwnerID = sellOrdersByCollection[token].length;
                Sell memory sell;
                for (uint256 i = 0; i < lastOwnerID; i++) {
                    uint256 idx = sellOrdersByCollection[token][i];
                    sell = sellOrdersNFTById[idx];
                    if (sell.active) {
                        revert("ERC721 collection cannot be removed from whitelist");
                    }
                }

                is721Whitelisted[token] = false;

                if (whitelisted721Collections.length == 1) {
                    delete whitelisted721Collections;
                } else {
                    uint256 last = (whitelisted721Collections.length) - 1;
                    
                    delete whitelisted721Collections[_index];
                    whitelisted721Collections[_index] = whitelisted721Collections[last];
                }
            }
            emit CollectionRemoved(token);
        } else {
            require (_index < whitelisted1155Collections.length, "Invalid index");
            token = whitelisted1155Collections[_index];
            if (IERC1155Upgradeable(token).supportsInterface(0xd9b67a26)) {
                uint256 lastOwnerID = sellOrdersByCollection[token].length;
                Sell memory sell;
                for (uint256 i = 0; i < lastOwnerID; i++) {
                    uint256 idx = sellOrdersByCollection[token][i];
                    sell = sellOrders1155ById[idx];
                    if (sell.active) {
                        revert("ERC1155 collection cannot be removed from whitelist");
                    }
                }

                is1155Whitelisted[token] = false;
                
                if (whitelisted1155Collections.length == 1) {
                    delete whitelisted1155Collections;
                } else {
                    uint256 last = (whitelisted1155Collections.length) - 1;
                    
                    delete whitelisted1155Collections[_index];
                    whitelisted1155Collections[_index] = whitelisted1155Collections[last];
                }
            } 
            emit CollectionRemoved(token);
        } 
    }

    /**
     * @notice ERC1155 Receiver function
     * @return hash bytes4 to accept ERC1155 interface
     */
    function onERC1155Received(address operator, address from, uint256 id, uint256 value, bytes memory data) external pure override returns (bytes4) {
        operator;
        from;
        id;
        value;
        data;
        return bytes4(keccak256("onERC1155Received(address,address,uint256,uint256,bytes)"));
    }

    /**
     * @notice ERC1155 Batch Receiver function
     * @return hash bytes4 to accept ERC1155 interface
     */
    function onERC1155BatchReceived(address operator, address from, uint256[] memory ids, uint256[] memory values, bytes memory data) external pure override returns (bytes4) {
        operator;
        from;
        ids;
        values;
        data;
        return bytes4(keccak256("onERC1155BatchReceived(address,address,uint256[],uint256[],bytes)"));
    }

    // INTERNAL METHODS
    /**
     * @notice process native token payment
     * @param _price price to be paid
     * @param _seller seller address
     * @param _creator creator address
     * @param _royalties royalties amount
     */
    function processNativePayment(uint256 _price, address _seller, address _creator, uint256 _royalties) internal {
        require (msg.value >= _price, "Not enough funds");

        // uint256 biPercentFee;
        // if (_isNFT)
        //     biPercentFee = ITokenNFT(_collection).getFeesPercent();
        // else
        //     biPercentFee = IToken1155(_collection).getFeesPercent();
        // Platform Fees
        bool success;
        uint256 platformFee;
        if (marketPlaceFees > 0) {
            platformFee = _price * marketPlaceFees / PERCENT_DIVIDER;
            // process platform fee payment
            (success, ) = (treasury).call{value: platformFee}("");
            require(success, "Transfer failed to treasury.");
            // payable(treasury).transfer(platformFee);
        }

        if (_royalties > 0) {
            // royalty fees to creator
            (success, ) = (_creator).call{value: _royalties}("");
            require(success, "Transfer failed to creator.");
            // payable(_creator).transfer(_royalties);
        }

        // transfer payment
        uint256 sellerAmount = _price - platformFee - _royalties;
        (success, ) = (_seller).call{value: sellerAmount}("");
        require(success, "Transfer failed to seller.");
        // payable(_seller).transfer(sellerAmount);

        // Refund excess funds
        uint256 remainingFunds = msg.value - _price;
        if (remainingFunds > 0) {
            (success, ) = (_msgSender()).call{value: remainingFunds}("");
            require(success, "Transfer failed to buyer.");
            // payable(_msgSender()).transfer(remainingFunds);
        }
    }

    /**
     * @notice process other tokens payment
     * @param _token payment token address
     * @param _price price to be paid
     * @param _seller seller address
     * @param _creator creator address
     * @param _royalties royalties amount
     */
    function processPayment(address _token, uint256 _price, address _seller, address _creator, uint256 _royalties) internal {
        IERC20Upgradeable(_token).safeTransferFrom(_msgSender(), address(this), _price);

        // Fees
        // uint256 biPercentFee;
        // if (_isNFT)
        //     biPercentFee = ITokenNFT(_collection).getFeesPercent();
        // else
        //     biPercentFee = IToken1155(_collection).getFeesPercent();
        uint256 platformFee;
        if (marketPlaceFees > 0) {
            platformFee = _price * marketPlaceFees / PERCENT_DIVIDER;
            // process fee payment
            IERC20Upgradeable(_token).safeTransfer(treasury, platformFee);
        }
        if (_royalties > 0) {
            // royalty fees to creator
            IERC20Upgradeable(_token).safeTransfer(_creator, _royalties);
        }

        // transfer payment
        uint256 sellerAmount = _price - platformFee - _royalties;
        IERC20Upgradeable(_token).safeTransfer(_seller, sellerAmount);
    }
}

