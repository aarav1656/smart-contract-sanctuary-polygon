pragma solidity 0.8.17;

contract MarketPlaceStorage {
    uint256 public constant PERCENT_DIVIDER = 1000000;  // percentage divider, 6 decimals

    struct Sell {
        uint256 id;     // order ID, starting from 1
        address paymentToken; // token is address(0), it means native coin
        uint256 price; // sell price. For ERC1155 it's the bundle price
        uint256 amount; // 1 for ERC721, 1 or more for ERC1155
        uint256 tokenId;
        address owner; // address that creates the listing
        address collection;  // erc721 or erc1155 address
        bool active;
    }

    // Marketplace variables
    address public treasury;
    // MarketPlace Fee 
    uint256 public marketPlaceFees;

    mapping(address => bool) public whitelistedPaymentTokens;
    mapping(address => uint256[]) public sellOrdersByCollection;  //collection --> sell orders array

    mapping(address => uint256[]) public sellOrdersNFTByOwner;  //NFT owner --> NFT sell orders array
    mapping(address => uint256[]) public sellOrders1155ByOwner;  //1155 owner --> 1155 sell orders array

    mapping(uint256 => Sell) public sellOrdersNFTById;
    mapping(uint256 => Sell) public sellOrders1155ById;

    mapping(address => mapping(address => mapping(uint256 => uint256))) public seller1155CollectionTotalAmounts;  //mapping for 1155 already in a sell order

    // ERC721 assets variables
    mapping(address => bool) public is721Whitelisted;
    mapping(address => bool) public has721Royalties;
    address[] whitelisted721Collections;
    uint256 public nextSellNFTId;

    // ERC1155 assets variables
    mapping(address => bool) public is1155Whitelisted;
    mapping(address => bool) public has1155Royalties;
    address[] whitelisted1155Collections;
    uint256 public nextSell1155Id;
}

