    /**
     * @dev Set the settings for a particular lootbox
     */
    function createLootBoxSettings(
        LootBoxSettingParam memory lootBoxSettingParam
    ) external {
        lastId++;
        bool _isERC721;
        require(
            isERC721(lootBoxSettingParam._nftAddress) ||
                isERC1155(lootBoxSettingParam._nftAddress),
            "LootBox#createLootBoxSettings: Invalid nft address"
        );

        if (isERC721(lootBoxSettingParam._nftAddress)) {
            _isERC721 = true;
        }

        require(
            lootBoxSettingParam._quantityPerOpen[0] <=
                lootBoxSettingParam._quantityPerOpen[1] &&
                lootBoxSettingParam._quantityPerOpen[1] <= maxOpenLootBox,
            "LootBox#createLootBoxSettings: WRONG_QUANTITY_RANGE"
        );

        require(
            lootBoxSettingParam._classes.length <= maxClassRarity,
            "LootBox#createLootBoxSettings: WRONG_CLASSES_RANGE"
        );

        // Initialize class remaining quantity to zero each class
        uint256[] memory _classRemainingQuantity = new uint256[](
            lootBoxSettingParam._classes.length
        );

        LootBoxSettings memory settings = LootBoxSettings({
            owner: _msgSender(),
            keyId: lootBoxSettingParam._keyId,
            lootBoxType: lootBoxSettingParam._lootBoxType,
            minQuantityPerOpen: lootBoxSettingParam._quantityPerOpen[0],
            maxQuantityPerOpen: lootBoxSettingParam._quantityPerOpen[1],
            classRemainingQuantity: _classRemainingQuantity,
            classes: lootBoxSettingParam._classes,
            nftAddress: lootBoxSettingParam._nftAddress,
            isERC721: _isERC721,
            remainingQuantity: lootBoxSettingParam._remainingQuantity,
            price: lootBoxSettingParam._price,
            startTime: lootBoxSettingParam._dateTime[0],
            endTime: lootBoxSettingParam._dateTime[1],
            currency: IERC20Upgradeable(lootBoxSettingParam._currency),
            status: true
        });

        lootBoxToSettings[lastId] = settings;

        emit CreatedLootBox(lastId, lootBoxSettingParam._keyId, settings);
    }

    /**
     * @dev Deposit NFT token to created lootbox
     */
    function depositLootBox(LootBoxDepositParam memory lootBoxDepositParam)
        external
        validLootBox(lootBoxDepositParam._lootBoxId)
    {
        LootBoxSettings memory _settings = lootBoxToSettings[
            lootBoxDepositParam._lootBoxId
        ];
        uint256 _amount = 0;
        require(
            _settings.owner == _msgSender(),
            "LootBox#depositLootBox: User is not lootbox owner"
        );
        require(_settings.status, "LootBox#depositLootBox: LOOTBOX_CANCELLED");
        require(
            depositedAmount[lootBoxDepositParam._lootBoxId] <
                _settings.remainingQuantity,
            "LootBox#depositLootBox: LOOTBOX_DEPOSITED"
        );
        require(
            lootBoxDepositParam._tokenIds.length == _settings.classes.length,
            "LootBox#depositLootBox: Invalid tokenIds length"
        );

        for (uint256 i = 0; i < _settings.classes.length; i++) {
            if (_settings.isERC721) {
                for (
                    uint256 j = 0;
                    j < lootBoxDepositParam._tokenIds[i].length;
                    j++
                ) {
                    _addToken721IdToClass(
                        _settings.nftAddress,
                        lootBoxDepositParam._tokenIds[i][j],
                        _msgSender(),
                        _settings.classes[i],
                        lootBoxDepositParam._lootBoxId
                    );
                    _amount++;
                }
                // Update remaining quantity to class
                lootBoxToSettings[lootBoxDepositParam._lootBoxId]
                    .classRemainingQuantity[i] += lootBoxDepositParam
                    ._tokenIds[i]
                    .length;
            } else {
                require(
                    lootBoxDepositParam._tokenIds.length ==
                        lootBoxDepositParam._amount1155.length,
                    "LootBox#createLootBoxSettings: Invalid input nft1155"
                );
                require(
                    lootBoxDepositParam._tokenIds[i].length ==
                        lootBoxDepositParam._amount1155[i].length,
                    "LootBox#createLootBoxSettings: Invalid input nft1155"
                );

                for (
                    uint256 j = 0;
                    j < lootBoxDepositParam._tokenIds[i].length;
                    j++
                ) {
                    _addToken1155IdToClass(
                        _settings.nftAddress,
                        lootBoxDepositParam._tokenIds[i][j],
                        lootBoxDepositParam._amount1155[i][j],
                        _msgSender(),
                        _settings.classes[i],
                        lootBoxDepositParam._lootBoxId
                    );
                    _amount += lootBoxDepositParam._amount1155[i][j];
                    // Update remaining quantity to class
                    lootBoxToSettings[lootBoxDepositParam._lootBoxId]
                        .classRemainingQuantity[i] += lootBoxDepositParam
                        ._amount1155[i][j];
                }
            }
        }

        require(
            depositedAmount[lootBoxDepositParam._lootBoxId] + _amount <=
                _settings.remainingQuantity,
            "LootBox#createLootBoxSettings: Invalid token amount"
        );

        depositedAmount[lootBoxDepositParam._lootBoxId] += _amount;

        emit DepositedLootBox(
            lootBoxDepositParam._lootBoxId,
            lootBoxDepositParam._tokenIds,
            lootBoxDepositParam._amount1155,
            _amount
        );
    }

    /**
     * @dev Remove a lootBox.
     * @param _lootBoxId The LootBox to set remove
     */
    function removeLootBox(uint256 _lootBoxId) public validLootBox(_lootBoxId) {
        LootBoxSettings memory settings = lootBoxToSettings[_lootBoxId];

        require(
            lootBoxToSettings[_lootBoxId].status,
            "LootBox#open: LOOTBOX_CANCELLED"
        );
        require(
            settings.owner == _msgSender() || _msgSender() == owner(),
            "LootBox#removeLootBox: User is not owner lootbox"
        );

        for (uint256 i = 0; i < settings.classes.length; i++) {
            uint256[] memory tokenIds = getTokensAtClass(
                _lootBoxId,
                settings.classes[i]
            );
            if (isERC721(settings.nftAddress)) {
                for (uint256 j = 0; j < tokenIds.length; j++) {
                    _removeTokenId721FromClass(
                        settings.nftAddress,
                        _lootBoxId,
                        settings.classes[i],
                        tokenIds[j],
                        settings.owner
                    );
                }
            } else if (isERC1155(settings.nftAddress)) {
                for (uint256 j = 0; j < tokenIds.length; j++) {
                    _removeTokenId1155FromClass(
                        settings.nftAddress,
                        _lootBoxId,
                        settings.classes[i],
                        tokenIds[j],
                        lootBoxTokenIdClassToAmount[_lootBoxId][tokenIds[j]][
                            settings.classes[i]
                        ],
                        settings.owner
                    );
                }
            }
        }
        lootBoxToSettings[_lootBoxId].status = false;

        emit RemovedLootBox(_lootBoxId, _msgSender());
    }

