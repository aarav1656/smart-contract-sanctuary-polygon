    ) external view returns (uint256) {
        (, bool _success) = getClassIndex(_lootBoxId, _classId);
        if (_success) {
            return lootBoxToClassTokenIds[_lootBoxId][_classId].at(_index);
        }
        return 0;
    }

    /**
     * @dev Get all token in a class and lootBox.
     * @param _lootBoxId The lootBox id
     * @param _classId The class id
     */
    function getTokensAtClass(uint256 _lootBoxId, uint256 _classId)
        public
        view
        returns (uint256[] memory)
    {
        uint256[] memory _tokenIds;
        (, bool _success) = getClassIndex(_lootBoxId, _classId);
        if (_success) {
            _tokenIds = lootBoxToClassTokenIds[_lootBoxId][_classId].values();
        }
        return _tokenIds;
    }

    /**
     * @dev Get class probabilities.
     * @param _lootBoxId The lootBox id
     * @param _classId The class id
     */
    function getClassProbabilities(uint256 _lootBoxId, uint256 _classId)
        external
        view
        returns (uint256)
    {
        LootBoxSettings memory settings = lootBoxToSettings[_lootBoxId];
        (uint256 _index, bool _success) = getClassIndex(_lootBoxId, _classId);
        if (_success && settings.remainingQuantity > 0) {
            return
                (settings.classRemainingQuantity[_index] *
                    PERCENT_BASIS_POINT) / settings.remainingQuantity;
        }
        return 0;
    }

    function getClassIndex(uint256 _lootBoxId, uint256 _classId)
        public
        view
        returns (uint256, bool)
    {
        LootBoxSettings memory settings = lootBoxToSettings[_lootBoxId];
        for (uint256 i = 0; i < settings.classes.length; i++) {
            if (settings.classes[i] == _classId) {
                return (i, true);
            }
        }
        return (0, false);
    }

    /**
     * @dev Get nftAddress.
     * @param _lootBoxId The lootBox id
     */
    function getNftAddressOfLootBox(uint256 _lootBoxId)
        public
        view
        returns (address)
    {
        LootBoxSettings memory settings = lootBoxToSettings[_lootBoxId];

        return settings.nftAddress;
    }

    /**
     * @dev estimate the cost of opening lootboxs
     */
    function estimateCost(
        uint256 _lootBoxId,
        uint256 _amount,
        uint256 _discountPercent
    ) external view returns (uint256) {
        LootBoxSettings memory settings = lootBoxToSettings[_lootBoxId];

        if (!settings.status) {
            return 0;
        }

        if (_discountPercent > PERCENT_BASIS_POINT) {
            _discountPercent = PERCENT_BASIS_POINT;
        }

        return
            (settings.price *
                _amount *
                (PERCENT_BASIS_POINT + xUserFeeLootBox - _discountPercent)) /
            PERCENT_BASIS_POINT;
    }

