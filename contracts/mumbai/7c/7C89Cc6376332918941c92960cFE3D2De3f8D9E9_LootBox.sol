    /**
     * @dev Open a lootbox manually and send what's inside to _toAddress
     * Convenience method for contract owner.
     */
    function open(
        uint256 _lootBoxId,
        address _toAddress,
        uint256 _amount,
        uint256 _discountPercent,
        uint256 _nonce,
        bytes calldata _signature
    ) external payable whenNotPaused nonReentrant {
        // Load settings for this box lootBox
        LootBoxSettings memory settings = lootBoxToSettings[_lootBoxId];

        require(
            lootBoxToSettings[_lootBoxId].status,
            "LootBox#open: LOOTBOX_CANCELLED"
        );
        require(
            depositedAmount[_lootBoxId] >= settings.remainingQuantity,
            "LootBox#open: LOOTBOX_NOT_DEPOSITED"
        );
        require(
            block.timestamp > settings.startTime,
            "LootBox#open: NOT_IN_DURATION"
        );
        require(
            block.timestamp < settings.endTime,
            "LootBox#open: NOT_IN_DURATION"
        );
        require(
            settings.minQuantityPerOpen <= _amount,
            "LootBox#open: OPEN_TOO_LESS"
        );
        require(
            settings.maxQuantityPerOpen > 0,
            "LootBox#open: TIER_NOT_ALLOWED"
        );
        require(
            settings.remainingQuantity >= _amount,
            "LootBox#open: NOT_ENOUGH_QUANTITY"
        );
        require(
            settings.maxQuantityPerOpen >= _amount,
            "LootBox#open: OPEN_TOO_MANY"
        );

        //amountOpenLootBox
        require(
            settings.maxQuantityPerOpen >= amountOpenLootBox[_lootBoxId][msg.sender] + _amount,
            "LootBox#open: OPEN_TOO_MANY"
        );
        amountOpenLootBox[_lootBoxId][msg.sender] += _amount;

        if (settings.lootBoxType == LootBoxType.GENERAL) {
            if (
                !verifyMessage(
                    _lootBoxId,
                    _toAddress,
                    _amount,
                    _discountPercent,
                    _nonce,
                    _signature
                )
            ) {
                _discountPercent = 0;
            } else {
                _discountPercent = _discountPercent > PERCENT_BASIS_POINT
                    ? _discountPercent = PERCENT_BASIS_POINT
                    : _discountPercent;
            }
        } else {
            require(
                verifyMessage(
                    _lootBoxId,
                    _toAddress,
                    _amount,
                    _discountPercent,
                    _nonce,
                    _signature
                ),
                "LootBox#open: User not in whiteList"
            );
        }

        // lootBox discount
        // Stack too deep
        uint256 cost = (settings.price *
            _amount *
            (PERCENT_BASIS_POINT + xUserFeeLootBox - _discountPercent)) /
            PERCENT_BASIS_POINT;

        if (address(settings.currency) == address(0)) {
            // native currency
            require(msg.value == cost, "LootBox#open: WRONG_FEE");
            if (_discountPercent < PERCENT_BASIS_POINT) {
                AddressUpgradeable.sendValue(
                    payable(settings.owner),
                    (settings.price *
                        _amount *
                        (PERCENT_BASIS_POINT - _discountPercent)) /
                        PERCENT_BASIS_POINT
                );
            }
        } else {
            settings.currency.transferFrom(msg.sender, address(this), cost);
            if (_discountPercent < PERCENT_BASIS_POINT) {
                settings.currency.transfer(
                    settings.owner,
                    (settings.price *
                        _amount *
                        (PERCENT_BASIS_POINT - _discountPercent)) /
                        PERCENT_BASIS_POINT
                );
            }
        }

        uint256 totalMinted = 0;

        randomizer.getRandomNumber();

        uint256[] memory issuedNfts = new uint256[](_amount);

        while (totalMinted < _amount) {
            uint256 index = _pickRandomClass(
                settings.remainingQuantity,
                settings.classRemainingQuantity
            );
            uint256 nft = _sendTokenWithClass(
                _lootBoxId,
                settings.classes[index],
                _toAddress
            );
            issuedNfts[totalMinted] = nft;
            totalMinted += 1;
            // Update remaining quantity to re-calculate probabilities
            settings.classRemainingQuantity[index] -= 1;
            settings.remainingQuantity -= 1;
        }

        lootBoxToSettings[_lootBoxId] = settings; // Update quantities in storage

        // Event emissions
        emit LootBoxOpened(_lootBoxId, _toAddress, _amount, issuedNfts);
    }

    function withdraw(address _tokenAddress) public onlyOwner {
        if (_tokenAddress == address(0)) {
            // native currency
            uint256 balance = address(this).balance;
            require(balance > 0, "LootBox#withdraw: NO_BALANCE");
            payable(msg.sender).transfer(balance);
        } else {
            IERC20Upgradeable withDrawToken = IERC20Upgradeable(_tokenAddress);
            uint256 balance = withDrawToken.balanceOf(address(this));
            require(balance > 0, "LootBox#withdraw: NO_BALANCE");
            withDrawToken.transfer(
                msg.sender,
                withDrawToken.balanceOf(address(this))
            );
        }
    }

    /////
    // HELPER FUNCTIONS
    /////

    function verifyMessage(
        uint256 _lootBoxId,
        address _toAddress,
        uint256 _amount,
        uint256 _discountPercent,
        uint256 _nonce,
        bytes memory signature
    ) public view returns (bool) {
        if (signature.length == 0) return false;
        bytes32 dataHash = encodeData(
            _lootBoxId,
            _toAddress,
            _amount,
            _discountPercent,
            _nonce
        );
        bytes32 signHash = ECDSAUpgradeable.toEthSignedMessageHash(dataHash);
        address recovered = ECDSAUpgradeable.recover(signHash, signature);
        return recovered == verifier;
    }

    function encodeData(
        uint256 _lootBoxId,
        address _toAddress,
        uint256 _amount,
        uint256 _discountPercent,
        uint256 _nonce
    ) public view returns (bytes32) {
        uint256 id;
        assembly {
            id := chainid()
        }
        return
            keccak256(
                abi.encode(
                    id,
                    _lootBoxId,
                    _toAddress,
                    _amount,
                    _discountPercent,
                    _nonce
                )
            );
    }

    function isERC1155(address _contractAddr) public view returns (bool) {
        return _contractAddr.supportsInterface(IID_IERC1155);
    }

    function isERC721(address _contractAddr) public view returns (bool) {
        return _contractAddr.supportsInterface(IID_IERC721);
    }

    // Returns the tokenId sent to _toAddress
    function _sendTokenWithClass(
        uint256 _lootBoxId,
        uint256 _class,
        address _toAddress
    ) internal returns (uint256) {
        uint256 result;
        
        uint256 tokenId = _pickRandomIdForClass(_lootBoxId, _class);
        address _nftAddress = getNftAddressOfLootBox(_lootBoxId);
        // if loot box is in eth and bsc
        // no nft contract is deployed so the system will mint the token on polygon
        if (isERC721(_nftAddress)) {
            _removeTokenId721FromClass(
                _nftAddress,
                _lootBoxId,
                _class,
                tokenId,
                _toAddress
            );
        } else {
            _removeTokenId1155FromClass(
                _nftAddress,
                _lootBoxId,
                _class,
                tokenId,
                1,
                _toAddress
            );
        }

        result = tokenId;
        
        return result;
    }

    /**
     * @dev Pick random class for open
     * @param _remainingQuantity remaining quantity of lootbox
     * @param _classRemainingQuantity remaining quantity of each class in lootbox
     * @return uint256 class index
     */

    function _pickRandomClass(
        uint256 _remainingQuantity,
        uint256[] memory _classRemainingQuantity
    ) internal returns (uint256) {
        // Classes probabilities
        uint256[] memory remainingClassProbabilities = new uint256[](
            _classRemainingQuantity.length
        );
        // Index of classes have token exists
        uint256[] memory remainingClassIndex = new uint256[](
            _classRemainingQuantity.length
        );
        uint256 length;

        // Calculate probabilities
        for (uint256 i = 0; i < _classRemainingQuantity.length; i++) {
            if (_classRemainingQuantity[i] > 0) {
                remainingClassIndex[length] = i;
                remainingClassProbabilities[length] =
                    (_classRemainingQuantity[i] * PERCENT_BASIS_POINT) /
                    _remainingQuantity;
                length++;
            }
        }
        uint256 totalProbability = PERCENT_BASIS_POINT;
        uint256 value = uint16(randomizer.random().mod(INVERSE_BASIS_POINT));
        // Start at top class (length - 1)
        // skip (0), we default to it
        for (uint256 i = length - 1; i > 0; i--) {
            totalProbability -= remainingClassProbabilities[i];
            if (value > totalProbability) {
                return remainingClassIndex[i];
            }
        }

        return remainingClassIndex[0];
    }

    function _pickRandomIdForClass(uint256 _lootBoxId, uint256 _class)
        internal
        returns (uint256)
    {
        uint256[] memory tokenIds = getTokensAtClass(_lootBoxId, _class);

        uint256 randIndex = randomizer.random().mod(tokenIds.length);

        return tokenIds[randIndex];
    }

    function _addToken721IdToClass(
        address _token,
        uint256 _tokenId,
        address _owner,
        uint256 _class,
        uint256 _lootBoxId
    ) internal {
        nftToTokenIds[_token].add(_tokenId);
        lootBoxToClassTokenIds[_lootBoxId][_class].add(_tokenId);

        IERC721Upgradeable(_token).transferFrom(_owner, address(this), _tokenId);
    }

    function _addToken1155IdToClass(
        address _token,
        uint256 _tokenId,
        uint256 _amount,
        address _owner,
        uint256 _class,
        uint256 _lootBoxId
    ) internal {
        nftToTokenIds[_token].add(_tokenId);
        lootBoxToClassTokenIds[_lootBoxId][_class].add(_tokenId);

        lootBoxTokenIdClassToAmount[_lootBoxId][_tokenId][_class] += _amount;
        IERC1155Upgradeable(_token).safeTransferFrom(
            _owner,
            address(this),
            _tokenId,
            _amount,
            ""
        );
    }

    function _removeTokenId721FromClass(
        address _token,
        uint256 _lootBoxId,
        uint256 _class,
        uint256 _tokenId,
        address _owner
    ) internal {
        nftToTokenIds[_token].remove(_tokenId);
        lootBoxToClassTokenIds[_lootBoxId][_class].remove(_tokenId);
        IERC721Upgradeable(_token).transferFrom(address(this), _owner, _tokenId);
    }

    function _removeTokenId1155FromClass(
        address _token,
        uint256 _lootBoxId,
        uint256 _class,
        uint256 _tokenId,
        uint256 _amount,
        address _owner
    ) internal {
        require(
            lootBoxTokenIdClassToAmount[_lootBoxId][_tokenId][_class] >=
                _amount,
            "LootBox#_removeTokenId1155FromClass: Not enough amount"
        );
        lootBoxTokenIdClassToAmount[_lootBoxId][_tokenId][_class] -= _amount;
        if (lootBoxTokenIdClassToAmount[_lootBoxId][_tokenId][_class] == 0) {
            nftToTokenIds[_token].remove(_tokenId);
            lootBoxToClassTokenIds[_lootBoxId][_class].remove(_tokenId);
        }
        IERC1155Upgradeable(_token).safeTransferFrom(
            address(this),
            _owner,
            _tokenId,
            _amount,
            ""
        );
    }

    /**
     * @dev Triggers stopped state.
     */
    function pause() external onlyOwner {
        _pause();
    }

    /**
     * @dev Returns to normal state.
     */
    function unpause() external onlyOwner {
        _unpause();
    }
