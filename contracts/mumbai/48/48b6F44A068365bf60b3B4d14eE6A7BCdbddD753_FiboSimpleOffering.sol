import "./simpleOfferingTypes.sol";

/**
 * @title a simplified primary offering for asset tokens
 * @notice manages a primary offering, allowing users to claim tokens on a first-come first-serve basis
 */
contract FiboSimpleOffering is
    AccessControlUpgradeable,
    PausableUpgradeable,
    FiboMetatxReceiver,
    SimpleOfferingState
{
    using SafeMathUpgradeable for uint256;

    /**
     * @notice emitted whenever the offering transitions to a new phase
     * see `SimpleOfferingPhase` for a description of the various phases
     * @param phase the new phase of the offering
     */
    event PhaseTransition(SimpleOfferingPhase phase);

    /**
     * @notice emitted whenever the offering's mutable configuration is updated
     * @param newConfig a full copy of the new configuration object
     */
    event OfferingConfigured(SimpleOfferingConfigMutable newConfig);

    /**
     * @notice emitted whenever someone purchases shares from this offering
     * @param buyer the address of the user buying shares
     * @param shares the number of shares purchased
     */
    event SharesReceived(address indexed buyer, uint256 shares);

    uint256 private constant _CLEARING_FEE_DENOMINATOR = 1e18;
    bytes32 public constant PHASE_MANAGEMENT_ROLE = keccak256("PHASE_MANAGEMENT_ROLE");
    bytes32 public constant SPONSOR_ROLE = keccak256("SPONSOR_ROLE");
    bytes32 public constant TRANSFERRER_ROLE = keccak256("TRANSFERRER_ROLE");

    /// @custom:oz-upgrades-unsafe-allow constructor
    // the ERC2771 base class has a constructor that we have to call, but it's harmless
    // because we override its `isTrustedForwarder` function and so the effects of this
    // constructor are never actually used
    constructor() ERC2771ContextUpgradeable(address(0)) {}

    // `AccessControlUpgradeable` inherits the base `Context` class so we need to explicitly specify that
    // we want to use the overridden implementation from `ERC2771Context`, which pulls from calldata
    // using the EIP-2771 spec
    function _msgSender()
        internal
        view
        virtual
        override(ContextUpgradeable, ERC2771ContextUpgradeable)
        returns (address sender)
    {
        return ERC2771ContextUpgradeable._msgSender();
    }

    function _msgData()
        internal
        view
        virtual
        override(ContextUpgradeable, ERC2771ContextUpgradeable)
        returns (bytes calldata)
    {
        return ERC2771ContextUpgradeable._msgData();
    }

    function pause() external onlyRole(DEFAULT_ADMIN_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(DEFAULT_ADMIN_ROLE) {
        _unpause();
    }

    function initialize(
        address _admin,
        address _forwarder,
        SimpleOfferingConfigImmutable memory _config
    ) public initializer {
        __AccessControl_init();
        __Pausable_init();

        address[] memory trustedForwarders = new address[](1);
        trustedForwarders[0] = _forwarder;
        __FiboMetatxReceiver_init(trustedForwarders);

        configImmutable = _config;

        _grantRole(DEFAULT_ADMIN_ROLE, _admin);
        _grantRole(PHASE_MANAGEMENT_ROLE, _admin);

        _grantRole(SPONSOR_ROLE, configImmutable.sponsor);
        _grantRole(PHASE_MANAGEMENT_ROLE, configImmutable.sponsor);
        _grantRole(TRANSFERRER_ROLE, configImmutable.sponsor);
    }

    modifier onlyPhase(SimpleOfferingPhase phase) {
        require(status.phase == phase, "incorrect phase");
        _;
    }

    function _startPhase(SimpleOfferingPhase phase) private {
        if (phase != status.phase) {
            status.phase = phase;
            emit PhaseTransition(phase);
        }
    }

    /**
     * @notice initialize the configuration parameters for an offering
     * this must be called before any other operations
     * @param _config the configuration options for the offering (see struct documentation for details)
     */
    function configureOffering(SimpleOfferingConfigMutable calldata _config)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        require(
            (status.phase == SimpleOfferingPhase.Setup) ||
                (status.phase == SimpleOfferingPhase.Funding),
            "already started"
        );
        require(_config.clearingFee <= _CLEARING_FEE_DENOMINATOR, "clearing fee too high");

        configMutable = _config;

        // if we are reducing the number of shares being offered, then refund any surplus to the sponsor
        uint256 tokenBalance = sharesRemaining();
        if (tokenBalance > configMutable.offeringShares) {
            uint256 refundShares = tokenBalance - configMutable.offeringShares;
            require(
                IERC20Upgradeable(configImmutable.offeringToken).transfer(
                    configImmutable.sponsor,
                    refundShares
                ),
                "failed to refund sponsor"
            );
        }

        emit OfferingConfigured(configMutable);

        _startPhase(SimpleOfferingPhase.Funding);
    }

    function sharesRemaining() public view returns (uint256 shares) {
        return IERC20Upgradeable(configImmutable.offeringToken).balanceOf(address(this));
    }

    /**
     * @notice deposit the offered shares into the contract so that it can immediately satisfy all purchase requests
     * this function must be called by the offering's sponsor, who must have already approved the transfer of the offering token to this contract
     * this function cannot be called until the offering has been configured
     * as an alternative to this function, any account can transfer shares of the offering token directly to this contract
     */
    function fundOffering() external onlyPhase(SimpleOfferingPhase.Funding) {
        uint256 tokenBalance = sharesRemaining();
        if (tokenBalance < configMutable.offeringShares) {
            uint256 fundingNeeded = configMutable.offeringShares - tokenBalance;
            require(
                IERC20Upgradeable(configImmutable.offeringToken).transferFrom(
                    configImmutable.sponsor,
                    address(this),
                    fundingNeeded
                ),
                "funding failed"
            );
        }
    }

    /**
     * @notice opens up the offering so that anybody can purchase shares
     * only the contract deployer or the offering sponsor can call this function
     * this function cannot be called until the offering has been funded
     */
    function startBidding()
        external
        onlyRole(PHASE_MANAGEMENT_ROLE)
        onlyPhase(SimpleOfferingPhase.Funding)
    {
        require(sharesRemaining() >= configMutable.offeringShares, "not funded");
        _startPhase(SimpleOfferingPhase.Active);
    }

    function _transferPurchaserFunds(
        address buyer,
        address recipient,
        uint256 amount
    ) internal returns (bool) {
        // if the purchaser has approved this contract directly, then issue a direct transfer
        IERC20Upgradeable bidToken = IERC20Upgradeable(configMutable.bidToken);
        if (bidToken.allowance(buyer, address(this)) >= amount) {
            return bidToken.transferFrom(buyer, recipient, amount);
        }

        if (
            configMutable.moneyMover != address(0) &&
            bidToken.allowance(buyer, configMutable.moneyMover) >= amount
        ) {
            return
                IFiboMoneyMover(configMutable.moneyMover).transfer(
                    configMutable.bidToken,
                    buyer,
                    recipient,
                    amount
                );
        }

        revert("no purchaser approval");
    }

    function _transferShares(address buyer, uint256 shares) internal {
        require(shares > 0, "shares must be positive");

        uint256 balance = sharesRemaining();
        require(shares <= balance, "not enough shares");

        require(
            IERC20Upgradeable(configImmutable.offeringToken).transfer(buyer, shares),
            "property transfer failed"
        );

        emit SharesReceived(buyer, shares);
    }

    /**
     * @notice purchases shares at the offering's asking price
     * performs all relevant transfers between the buyer and the sponsor
     * this function cannot be called until `startBidding` has been called
     * @dev this function does *not* perform any approval or other authorization checks;
     * those are deferred to the transfer agent (assuming the offered token uses the transfer agent)
     * @param shares the number of shares to purchase
     */
    function purchaseShares(uint256 shares)
        external
        onlyPhase(SimpleOfferingPhase.Active)
        whenNotPaused
    {
        (bool valid, uint256 paymentAmount) = shares.tryMul(configMutable.askingPrice);
        require(valid, "payment amount overflowed");

        address buyer = _msgSender();

        if (configMutable.clearingFee > 0) {
            (bool feeValid, uint256 treasuryFee) = paymentAmount.tryMul(configMutable.clearingFee);
            require(feeValid, "treasury fee overflowed");

            treasuryFee = treasuryFee / _CLEARING_FEE_DENOMINATOR;
            if (treasuryFee > 0) {
                paymentAmount -= treasuryFee;
                require(
                    _transferPurchaserFunds(buyer, configMutable.treasury, treasuryFee),
                    "treasury payment failed"
                );
            }
        }

        require(
            _transferPurchaserFunds(buyer, configImmutable.sponsor, paymentAmount),
            "payment failed"
        );

        _transferShares(buyer, shares);
    }

    function sendShares(address buyer, uint256 shares)
        external
        onlyPhase(SimpleOfferingPhase.Active)
        onlyRole(TRANSFERRER_ROLE)
        whenNotPaused
    {
        _transferShares(buyer, shares);
    }

    /**
     * @notice ends the offering early, even if not all shares have been sold
     * returns all remaining shares to the sponsor
     * only the sponsor or offering deployer can call this function
     */
    function endOffering() external onlyRole(PHASE_MANAGEMENT_ROLE) {
        require(status.phase != SimpleOfferingPhase.Complete, "offering already complete");
        uint256 sharesToFlush = sharesRemaining();
        if (sharesToFlush > 0) {
            require(
                IERC20Upgradeable(configImmutable.offeringToken).transfer(
                    configImmutable.sponsor,
                    sharesToFlush
                ),
                "flushing failed"
            );
        }
        _startPhase(SimpleOfferingPhase.Complete);
    }
}

