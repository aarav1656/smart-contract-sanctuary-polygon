import "@openzeppelin/contracts-upgradeable/metatx/ERC2771ContextUpgradeable.sol";

abstract contract FiboMetatxReceiver is ERC2771ContextUpgradeable {
    event ForwarderTrusted(address forwarder);
    event ForwarderUntrusted(address forwarder);

    mapping(address => bool) private _trustedForwarders;

    function __FiboMetatxReceiver_init(address[] memory trustedForwarders)
        internal
        onlyInitializing
    {
        for (uint256 i = 0; i < trustedForwarders.length; ++i) {
            _trustForwarder(trustedForwarders[i]);
        }
    }

    function isTrustedForwarder(address forwarder) public view virtual override returns (bool) {
        return _trustedForwarders[forwarder];
    }

    // these functions are not permissioned; it is up to the implementing contract
    // to ensure that access to them is appropriately restricted
    function _trustForwarder(address forwarder) internal {
        _trustedForwarders[forwarder] = true;
        emit ForwarderTrusted(forwarder);
    }

    function _untrustForwarder(address forwarder) internal {
        _trustedForwarders[forwarder] = false;
        emit ForwarderUntrusted(forwarder);
    }
}

