/**
 * @notice the different phases that an offering can be in
 * these phases can only progress forwards
 * Setup: the offering is pending configuration parameters; must call `configureOffering` to progress
 * Funding: the offering is pending funding of the offering token; must fund and then call `startBidding` to progress
 * Active: the offering has shares available for purchase
 * Complete: the offering has ended and purchases are no longer available
 */
enum SimpleOfferingPhase {
    Setup,
    Funding,
    Active,
    Complete
}

struct SimpleOfferingConfigImmutable {
    /// @notice the token being offered
    address offeringToken;
    /// @notice the address of the user offering these tokens
    address sponsor;
}

struct SimpleOfferingConfigMutable {
    /// @notice the address where we should send any fee withholdings or forfeited deposits
    address treasury;
    /// @notice the token which is used for deposits and payments
    address bidToken;
    /// @notice total number of shares to be sold
    uint256 offeringShares;
    /// @notice price per share (denominated in `bidToken`)
    uint256 askingPrice;
    /// @notice the proportion of the clearing price that should go to the treasury, with a denominator of 1e18
    /// in other words, each percentage point would be 1e16, or each basis point 1e14
    /// a 2.5% fee would be expressed as 250e14
    uint256 clearingFee;
    /// @notice the address of the money mover contract to use for
    /// initiating payments from purchasers.  if set to zero, no money
    /// mover will be used
    address moneyMover;
}

struct SimpleOfferingStatus {
    /// @notice the current phase of the offering
    SimpleOfferingPhase phase;
}

