        address recipient = _msgSender();
        if (
            recipient.code.length > 0 ||
            (balanceOf(recipient) + amount) > maxPerWallet
        ) revert InvalidCall();

        if ((minted[recipient] < maxFreePerWallet)) {
            //find out how much left is free
            uint256 freeLeft = maxFreePerWallet - minted[recipient];
            //if some of the quantity still needs to be paid
            if (
                freeLeft < amount &&
                // and what is sent is less than what needs to be paid
                ((amount - freeLeft) * cost) > msg.value
            ) revert InvalidCall();
        } else if ((amount * cost) > msg.value) revert InvalidCall();
        _mintLoop(recipient, amount);
    }

    function _mintLoop(address to, uint256 amount) internal {
        minted[to] += amount;
        for (uint256 i = 0; i < amount; i++) {
            uint256 newId = _currentId++;
            _mintOne(to, newId);
        }
    }
}