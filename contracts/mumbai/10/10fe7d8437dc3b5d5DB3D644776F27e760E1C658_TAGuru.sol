pragma solidity ^0.8.19;
contract TAGuru is ERC20{

address owner;

struct candidate{
    string name;
    string email;
    bytes32 password;
    uint256 phoneNumber;
    string cvIpfs;
}

struct admin{
    string name;
    string email;
    bytes32 password;
    uint256 phoneNumber;
}

//Questions asked by chatbot and answers of candidate
    struct QnA{
        string[] quesAns;
        string qnaIpfs;
    }

    mapping(address => candidate) private cand;
    mapping(address => admin) private admn;
    mapping(address => bytes32) private salt;
    mapping(address => bool) private signedUp;
    mapping(address => QnA) public candQuesAns;   //To store qna of candidate
  //  mapping(address => bytes32) public candCv;  //To store Cv of Candidate

    event NewCv(address indexed candidate);

    constructor () ERC20("TAGuru","TAG"){
        _mint(msg.sender, 100000000000000000000000);
        owner = msg.sender;
    }

    modifier onlyTaGuru(){
        require(msg.sender == owner, "Call: TA Guru Only!");
        _;
    }

    //signup fields for candidate/admin
    function signUpCandidate(string memory _name, uint256 _phoneNumber, string memory _email, string memory _password, bool _isCand) external returns(bool,bytes32){
        require(!signedUp[msg.sender],"You're already Signed Up!");
        if(_isCand){
            candidate storage cnd = cand[msg.sender];
            cnd.name = _name;
            salt[msg.sender] = keccak256(abi.encodePacked(block.timestamp, msg.sender));
            cnd.password = keccak256(abi.encodePacked(stringToBytes32(_password),salt[msg.sender]));
            cnd.email = _email;
            cnd.phoneNumber = _phoneNumber;
            return (true,cnd.password);
        }
        else{
            admin storage adm = admn[msg.sender];
            adm.name =  _name;
            salt[msg.sender] = keccak256(abi.encodePacked(block.timestamp, msg.sender));
            adm.password = keccak256(abi.encodePacked(stringToBytes32(_password),salt[msg.sender]));
            adm.email = _email;
            adm.phoneNumber = _phoneNumber;
            return (true,adm.password);
        }
        signedUp[msg.sender] = true;
       // return (true,adm.password);
    }

//Update Candidate/Admin password
    function updtCndPass(string memory _newPass, bool _isCand) external returns (bool){
        require(signedUp[msg.sender],"Signup first!");
        if(_isCand){
        candidate storage cnd = cand[msg.sender];
        salt[msg.sender] = keccak256(abi.encodePacked(block.timestamp, msg.sender));
        cnd.password = keccak256(abi.encodePacked(stringToBytes32(_newPass),salt[msg.sender]));
        }
        else{
            admin storage adm = admn[msg.sender];
            salt[msg.sender] = keccak256(abi.encodePacked(block.timestamp, msg.sender));
            adm.password = keccak256(abi.encodePacked(stringToBytes32(_newPass),salt[msg.sender]));
        }
        return true;
    }

    //verify the username and password of admin/candidate
    function verifyDetailsCnd(string memory _email,string memory _password, bool _isCand) public view returns(string memory,string memory,uint){
        if(_isCand){
            candidate storage cnd = cand[msg.sender];
            bytes32 hashedPassword = keccak256(abi.encodePacked(stringToBytes32(_password),salt[msg.sender]));
            //require(((keccak256(abi.encodePacked(_email)) == keccak256(abi.encodePacked(cnd.email))) && hashedPassword == cnd.password),"Login: credentials unmatched!");
            if((keccak256(abi.encodePacked(_email))) == (keccak256(abi.encodePacked(cnd.email))) && (hashedPassword == cnd.password)) 
            return(cnd.name,cnd.email,cnd.phoneNumber);
            else
            revert("Login: credentials unmatched!");
            
        }
        else{
            admin storage adm = admn[msg.sender];
            bytes32 _pass = stringToBytes32(_password);
            bytes32 hashedPassword = keccak256(abi.encodePacked(_pass,salt[msg.sender]));
            //require(((keccak256(abi.encodePacked(_email)) == keccak256(abi.encodePacked(adm.email))) && hashedPassword == adm.password),"Login: credentials unmatched!");
            if(((keccak256(abi.encodePacked(_email)) == keccak256(abi.encodePacked(adm.email))) && hashedPassword == adm.password))
                return(adm.name,adm.email,adm.phoneNumber);
                else
                 revert("Login: credentials unmatched!");
        }
    }

    function stringToBytes32(string memory str) internal pure returns (bytes32 result) {
    bytes memory temp = bytes(str);
    if (temp.length == 0) {
        return 0x0;
    }
    assembly {
        result := mload(add(temp, 32))
    }
    }

    function inputCvDet(string memory _cvIpfs, QnA memory _qna) public returns(bool){
        require(signedUp[msg.sender],"Sign Up First!");
        candidate storage cnd = cand[msg.sender];
        cnd.cvIpfs = _cvIpfs;
        setCandQna(_qna);
        emit NewCv(msg.sender);
        return true;
    }

    function updateCvDet(string memory _cvIpfs) public returns(bool){
        require(signedUp[msg.sender],"SignUp First!");
        candidate storage cnd = cand[msg.sender];
        cnd.cvIpfs = _cvIpfs;
        return true;
    }

//Storing questions and answers of candidate in his address
    function setCandQna(QnA memory _qna) internal returns(bool){
        QnA storage qna = candQuesAns[msg.sender];
        qna.quesAns = _qna.quesAns;
        qna.qnaIpfs = _qna.qnaIpfs;
        return true;
    }

    function displayCv() public view returns(string memory){
        return (cand[msg.sender].cvIpfs);
    }

    function accDetailsCnd() public view returns(candidate memory _cnd){
        return cand[msg.sender];
    }

    function accDetailsAdm() public view returns(admin memory _adm){
        return admn[msg.sender];
    }

    function getCandQuesAns() public view returns(QnA memory _qna){
        return candQuesAns[msg.sender];
    }

    // function getCandCv() public view returns(bytes32 _cv){
    //     return candCv[msg.sender];
    // }

