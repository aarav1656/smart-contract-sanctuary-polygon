    function performUpkeep(bytes calldata performData) external override {
        uint256 data = abi.decode(performData, (uint256));
        if (data == 1) {
            getWinningNumber();
        } else if (data == 2) {
            setNumber();
        } else if (data == 3) {
            addWinnerstodistibution();
        } else if (data == 4) {
            distribute();
            startSpin();
        }
    }

