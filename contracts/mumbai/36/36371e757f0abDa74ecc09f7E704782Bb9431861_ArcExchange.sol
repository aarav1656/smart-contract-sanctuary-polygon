import "@openzeppelin/contracts-0.8/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts-0.8/utils/Counters.sol";
import "@openzeppelin/contracts-0.8/token/ERC20/IERC20.sol";
import "../utils/AccessProtected-0.8.sol";

contract ArcExchange is AccessProtected {
    event Exchanged(
        address indexed seller,
        address tokenA,
        uint256 tokenAId,
        address indexed buyer,
        address tokenB,
        uint256 tokenBId
    );

    event Withdraw(address token, uint256 amount, uint256 timestamp);

    function exchange(
        address seller,
        address tokenA,
        uint256 tokenAId,
        address buyer,
        address tokenB,
        uint256 tokenBId
    ) external onlyAdmin returns (bool) {
        IERC721 tkA = IERC721(tokenA);
        IERC721 tkB = IERC721(tokenB);
        require(
            tkA.ownerOf(tokenAId) == address(this),
            "ArcExchange: Token not owned by exchange"
        );

        require(tkB.ownerOf(tokenBId) == buyer, "ArcExchange: Invalid buyer");
        require(
            tkB.getApproved(tokenBId) == address(this),
            "ArcExchange: Invalid buyer approval"
        );

        tkA.transferFrom(address(this), buyer, tokenAId);
        tkB.transferFrom(buyer, seller, tokenBId);

        emit Exchanged(seller, tokenA, tokenAId, buyer, tokenB, tokenBId);
        return true;
    }
}

