contract TwoStepSwap {
    function swapInputForPairedToken(
        address inputToken_,
        address platformToken_,
        address routerAddress_,
        uint256 value_
    ) internal returns (uint256 amountReceived) {
        IFixedRateToken platformToken = IFixedRateToken(platformToken_);
        IUniswapV2Router02 router = IUniswapV2Router02(routerAddress_);
        address[] memory path = new address[](2);
        path[0] = inputToken_;
        path[1] = platformToken.pair();
        uint[] memory outputs = router.getAmountsOut(value_, path);
        uint[] memory values = router.swapExactTokensForTokens(
            value_,
            outputs[1],
            path,
            address(this),
            block.timestamp + 60
        );
        return values[1];
    }

    function swapPairedTokenForInput(
        address inputToken_,
        address platformToken_,
        address routerAddress_,
        uint256 value_
    ) internal returns (uint256 amountReceived) {
        IFixedRateToken platformToken = IFixedRateToken(platformToken_);
        IUniswapV2Router02 router = IUniswapV2Router02(routerAddress_);
        address[] memory path = new address[](2);
        path[0] = platformToken.pair();
        path[1] = inputToken_;
        uint[] memory outputs = router.getAmountsOut(value_, path);
        uint[] memory values = router.swapExactTokensForTokens(
            value_,
            outputs[1],
            path,
            address(this),
            block.timestamp + 60
        );
        return values[1];
    }

    function permitAndTransferTokens(
        address inputToken_,
        address owner_,
        uint256 value_,
        uint256 deadline_,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) internal {
        IERC20Permit permitabble = IERC20Permit(inputToken_);
        permitabble.permit(owner_, address(this), value_, deadline_, v, r, s);
        IERC20 erc20Input = IERC20(inputToken_);
        erc20Input.transferFrom(owner_, address(this), value_);
    }

    function withdrawInternalToTokenWithPermit(
        address inputToken_,
        address platformToken_,
        address routerAddress_,
        uint256 value_,
        // Permit params
        address owner_,
        uint256 deadline_,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public returns (uint256) {
        // Withdraw FixedRate => FixedRate.pair()
        uint256 pairAmountReceived = IFixedRateToken(platformToken_)
            .withdrawWithPermit(owner_, value_, deadline_, v, r, s);
        // Swap FixedRate.pair() => inputToken
        IERC20(IFixedRateToken(platformToken_).pair()).approve(
            routerAddress_,
            value_
        );
        uint inputAmountReceived = swapPairedTokenForInput(
            inputToken_,
            platformToken_,
            routerAddress_,
            pairAmountReceived
        );
        // Transfer inputToken => owner_
        IERC20(inputToken_).transfer(owner_, inputAmountReceived);
    }

    // This function will:
    // Swap inputToken for platformToken.pair()
    // Deposit platformToken.pair() on platformToken contract for user
    // This will enable it to be gasless
    function swapToInternalWithPermit(
        address inputToken_,
        address platformToken_,
        address routerAddress_,
        uint256 value_,
        // Permit params
        address owner_,
        uint256 deadline_,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public {
        // Input token => Token to swap
        // Platform token => Internal platform paired token
        IFixedRateToken platformToken = IFixedRateToken(platformToken_);
        // Move token from owner to contract through permit
        permitAndTransferTokens(
            inputToken_,
            owner_,
            value_,
            deadline_,
            v,
            r,
            s
        );
        // Approve router to move inputToken_ and swap for paired token
        IERC20(inputToken_).approve(routerAddress_, value_);
        uint256 valueReceivedFromSwap = swapInputForPairedToken(
            inputToken_,
            platformToken_,
            routerAddress_,
            value_
        );
        // Contract now owns platformToken.pair()
        // We need to approve the platform contract and execute the deposit
        IERC20(platformToken.pair()).approve(
            platformToken_,
            valueReceivedFromSwap
        );
        // Deposit in behalf of user
        platformToken.depositFor(valueReceivedFromSwap, owner_);
    }
}