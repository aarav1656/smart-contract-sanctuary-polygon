// Note: ERC2771Context must be inherited first to ensure that the immutable variable is initialized before it is read. 
// Source: https://forum.openzeppelin.com/t/erc2771context-typeerror-immutable-variables-cannot-be-read-during-contract-creation-time/8513/8

contract RouletteGame is ERC2771Context, Tournament {
    uint8 constant MAX_BET_NUM = 37;

    uint256 public betId = 0; // track the request sent to Chainlink VRF
    mapping(uint256 => FullBet) fullBook; //track full bets

	// TODO: Discussion of separation deployment
    RouletteRandomNumFulfiller public rndNumCtx; // common rnd num generator contract
    DCLWearablePayout public payoutContract;

    event BetPlaced(uint256 betId, address playerAddr, uint256 userSeed);
    event BetResult(uint256 betId, uint8 winningNum, uint256 payout);
    event PayoutContractSet(address);

    struct FullBet {
        uint32 compId;
        address playerAddr;
        IndividualBet[] bets;
        uint32 userSeed;
    }

    struct IndividualBet {
        uint256[] numbers;
        uint256 amount;
    }

    constructor(uint64 _subscriptionId, address _dclWearable, MinimalForwarder forwarder) ERC2771Context(address(forwarder)) {
        if (_subscriptionId == 0) {
            revert ZeroSubscriptionId();
        }
        if (_dclWearable == address(0)) {
            revert ZeroDCLWearableAddress();
        }
        payoutContract = new DCLWearablePayout(_dclWearable);
    }

    function setRandomNumContract(address _rndNumCtx) public onlyRole(DEFAULT_ADMIN_ROLE) {
        rndNumCtx = RouletteRandomNumFulfiller(_rndNumCtx);
    }

	// Returns ERC2771Recipient._msgData() since ERC2771Context is the right most contract with function _msgData()
    function _msgData() internal view override (Context, ERC2771Context) returns (bytes calldata) {
        return super._msgData();
    }

	// Returns ERC2771Recipient._msgSender() since ERC2771Context is the right most contract with function _msgSender()
    function _msgSender() internal view override (Context, ERC2771Context) returns (address) {
        return super._msgSender();
    }

    /**
     * Place bet on a specific competition
     * Uses relayer instead of direct wallet call
     */
    function placeFullBet(
        uint32 _compId,
        uint32 _userSeed,
        IndividualBet[] calldata _bets
    ) public compExists(_compId) {
        address playerAddr = _msgSender();

        Player storage _playerDetails = playerRecord[_compId][playerAddr];

        // Ensure competition started and hasn't ended
        if (!isCompOngoing(_compId)) {
            revert CompetitionIsNotOngoing();
        }

        // ensure bet can be placed
        for (uint256 i = 0; i < _bets.length; i++) {
            require(_bets[i].amount > 0, "Cannot bet amount less than 1");
            require(
                _playerDetails.balance >= _bets[i].amount,
                "Insufficient funds"
            );
            _playerDetails.balance = _playerDetails.balance - _bets[i].amount;
        }

        // request random number from RandomNumGenerator contract, with auto incrementing betId
        rndNumCtx.requestRandomWords(betId);

        _placeFullBet(_compId, _userSeed, playerAddr, _bets);
    }

    /**
     * Place bet on a specific competition, on specific number
     */
    function _placeFullBet(
        uint32 _compId,
        uint32 _userSeed,
        address playerAddr,
        IndividualBet[] calldata _bets
    ) internal {
        betId += 1;

        // track the betID for this particular bet
        for (uint256 i = 0; i < _bets.length; i++) {
            fullBook[betId].bets.push(_bets[i]);
        }
        fullBook[betId].compId = _compId;
        fullBook[betId].playerAddr = playerAddr;
        fullBook[betId].userSeed = _userSeed;

        emit BetPlaced(betId, playerAddr, _userSeed);
    }

    /**
     * Gets called by random number generator contract asynchronously
     */
    function fulfillRandomNumber(uint256 _betId, uint256 _randomNum) public {
        require(msg.sender == address(rndNumCtx), "Unauthorized!");

        // console.log("Random num fulfilled");
        _computeFullBetResult(_betId + 1, _randomNum);
    }

    /**
     * Compute bet result for a bet
     */
    function _computeFullBetResult(uint256 _betId, uint256 _randomNum)
        internal
    {
        // fetch bet details
        FullBet memory _betDetails = fullBook[_betId];
        address _playerAddr = _betDetails.playerAddr;
        uint32 _userSeed = _betDetails.userSeed;
        IndividualBet[] memory _bets = _betDetails.bets;

        // compute winning number
        uint8 _winningNum = uint8(
            ((_randomNum % 100) + _userSeed) % (MAX_BET_NUM + 1)
        );

        // console.log("Winning Num %s", _winningNum);
        uint256 payout = 0;
        for (uint256 i = 0; i < _bets.length; i++) {
            payout += _calculatePayout(
                _bets[i].numbers,
                _bets[i].amount,
                _winningNum
            );
        }
        // console.log("Payout %s", payout);

        if (payout > 0) {
            // console.log("Minting %s", payout);
            payoutContract.mint(_playerAddr, payout);
        }

        emit BetResult(_betId, _winningNum, payout);
    }

    function _calculatePayout(
        uint256[] memory _betNumbers,
        uint256 _betAmount,
        uint256 _winningNum
    ) internal pure returns (uint256) {
        uint256 betNumbersLength = _betNumbers.length;
        for (uint256 i = 0; i < betNumbersLength; i++) {
            if (_betNumbers[i] == _winningNum) {
                return (_betAmount * (MAX_BET_NUM / betNumbersLength));
            }
        }
        return 0;
    }

}

