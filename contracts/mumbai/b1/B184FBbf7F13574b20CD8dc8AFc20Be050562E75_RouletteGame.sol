pragma solidity ^0.8.7;

import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

error ZeroTimeDuration();
error ZeroStartingBalance();

error RegistrationIsNotStarted();
error RegistrationAlreadyEnabled();
error RegistrationIsNotOngoing();
error RegistrationOngoing();

error CompetitionAlreadyStarted();
error CompetitionDoesNotExist();
error CompetitionIsNotOngoing();
error CompetitionOngoing();

error PlayerAlreadyRegistered();

bytes32 constant ORGANIZER_ROLE = keccak256("ORGANIZER_ROLE");

contract Tournament is AccessControl {

    enum Stages {
        WaitingForRegistration,
        RegistrationOngoing,
        WaitingForCompetition,
        CompetitionOngoing,
        CompetitionEnded
    }

    using Counters for Counters.Counter;

    struct Competition {
        address[] players;
        uint startoutBalance;
        uint regDuration; //time duration in seconds
        uint compDuration;
        uint regStartTime; //time from UNIX timestamp
        uint compStartTime;
    }

    struct Player {
        uint32 compId;
        bool registered;
        uint256 balance;
        uint32 winCount;
    }


    Counters.Counter private _competitionsCount;

    mapping(uint => Competition) public competitionInfo; // competition details
    mapping(uint32 => mapping(address => Player)) playerRecord; // player record for a specific competition

    event CompetitionAdded(uint competitionId);
    event RegistrationEnabled(uint competitionId);
    event PlayerRegistered(uint competitionId, address playerAddress);
    event CompetitionStarted(uint competitionId);
    event RegistrationExtended(uint competitionId, uint from, uint to);
    event CompetitionExtended(uint competitionId, uint from, uint to);

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    /**
     * Add a new competition
     */
    function addCompetition(
        uint _startingBal,
        uint _regDuration,
        uint _compDuration
    ) public onlyRole(ORGANIZER_ROLE) {
        if (_regDuration == 0 || _compDuration == 0) {
            revert ZeroTimeDuration();
        }
        if (_startingBal == 0) {
            revert ZeroStartingBalance();
        }

        Competition memory _comp = Competition(
            new address[](0),
            _startingBal,
            _regDuration,
            _compDuration,
            0,
            0
        );

        uint competitionId = _competitionsCount.current();
        _competitionsCount.increment();
        competitionInfo[competitionId] = _comp;
        emit CompetitionAdded(competitionId);
    }

    function totalCompetitions() public view returns (uint)  {
        return _competitionsCount.current();
    }

    /**
     * Enable players registration from current time, for regDuration sec
     */
    function enableRegistration(uint _compId)
        public
        onlyRole(ORGANIZER_ROLE)
        compExists(_compId)
    {
        Competition storage _c = competitionInfo[_compId];

        if (_c.regStartTime != 0) {
            revert RegistrationAlreadyEnabled();
        }
        if (_c.compStartTime != 0) {
            revert CompetitionAlreadyStarted();
        }

        _c.regStartTime = block.timestamp;
        emit RegistrationEnabled(_compId);
    }

    /**
     * Register player. Note: Players should register themselves
     */
    function registerPlayer(uint32 _compId) public compExists(_compId) {
        address newPlayer = _msgSender();

        Competition storage _c = competitionInfo[_compId];

        if (!isRegOngoing(_compId)) {
            revert RegistrationIsNotOngoing();
        }

        if( playerRecord[_compId][newPlayer].registered) {
            revert PlayerAlreadyRegistered();
        }

        _c.players.push(newPlayer);
        playerRecord[_compId][newPlayer].registered = true;
        playerRecord[_compId][newPlayer].balance = _c.startoutBalance;
        playerRecord[_compId][newPlayer].compId = _compId;

        emit PlayerRegistered(_compId, newPlayer);
    }

    /**
     * Start a roulette competition by admin.
     */
    function startCompetition(uint32 _compId)
        public
        onlyRole(ORGANIZER_ROLE)
        compExists(_compId)
    {
        Competition storage _c = competitionInfo[_compId];

        // TODO: should this start even if player count < 3??

        // ensure that registration period has ended
        if (_c.regStartTime == 0) {
            revert RegistrationIsNotStarted();
        }
        if (isRegOngoing(_compId)) {
            revert RegistrationOngoing();
        }

		if (_c.compStartTime != 0) {
            revert CompetitionAlreadyStarted();
        }

        _c.compStartTime = block.timestamp;
        emit CompetitionStarted(_compId);
    }


    /**
     TODO: Extend registration from current time?
     * Extend registration duration while the registration is ongoing OR
     * the registration period is ended but number of players is insufficient to compute winners
     */
     
    function extendRegistration(uint _compId, uint _extendedDuration)
        public
        onlyRole(ORGANIZER_ROLE)
        compExists(_compId)
    {
        Competition storage _c = competitionInfo[_compId];

        if (_extendedDuration == 0) {
            revert ZeroTimeDuration();
        }

        if (_c.regStartTime == 0) {
            revert RegistrationIsNotStarted();
        }

        if (_c.compStartTime != 0) {
            revert CompetitionAlreadyStarted();
        }

        bool registrationOngoing = isRegOngoing(_compId);

		uint prevRegDeadline = _c.regStartTime + _c.regDuration;
        if (registrationOngoing) {
            _c.regDuration += _extendedDuration;
        } else if (_c.players.length < 3) {
            _c.regDuration = block.timestamp - _c.regStartTime + _extendedDuration;
        } else {
            revert RegistrationIsNotOngoing();
        }
        uint newRegDeadline = _c.regStartTime + _c.regDuration;

        emit RegistrationExtended(_compId, prevRegDeadline, newRegDeadline);

    }

    /**
     * Extend competition duration while the competition is ongoing
     */
    function extendCompetition(uint32 _compId, uint256 newEndTime)
        public
        onlyRole(ORGANIZER_ROLE)
        compExists(_compId)
    {
        require(isCompOngoing(_compId), "Competition is not ongoing");

        Competition storage _c = competitionInfo[_compId];
        require(
            newEndTime > block.timestamp,
            "New competition end date is in the past"
        );

        _c.compDuration = newEndTime - _c.compStartTime;
    }


    /**
     * Ensure that the comptition with given id exists
     */
    modifier compExists(uint _compId) {
        if (competitionInfo[_compId].startoutBalance == 0) {
            revert CompetitionDoesNotExist();
        }
        _;
    }

    /**
     *   Helper function for checking if registration is ongoing
     */
    function isRegOngoing(uint _compId) public view returns (bool) {
        Competition memory _c = competitionInfo[_compId];

        uint _regStartTime = _c.regStartTime;
        uint _currentTime = block.timestamp;
        uint _regEndTime = _regStartTime + _c.regDuration;

        // console.log(
        //     "Current time: %s AND Reg end time: %s",
        //     _currentTime,
        //     _regEndTime
        // );

        return (_currentTime >= _regStartTime && _currentTime < _regEndTime);
    }

    /**
     *   Helper function for checking if competition is ongoing
     */
    function isCompOngoing(uint _compId) public view returns (bool) {
        Competition memory _c = competitionInfo[_compId];
        uint _currentTime = block.timestamp;
        uint _compStartTime = _c.compStartTime;
        uint _compEndTime = _compStartTime + _c.compDuration;

        // console.log(
        //     "Current time: %s AND Comp end time: %s",
        //     _currentTime,
        //     _compEndTime
        // );

        return (_currentTime >= _compStartTime && _currentTime < _compEndTime);
    }

    function getCurrentStage(uint _compId)  public view compExists(_compId) returns (Stages stage) {
        Competition memory _c = competitionInfo[_compId];
        uint _currentTime = block.timestamp;
        uint _regStartTime = _c.regStartTime;
        uint _regEndTime = _regStartTime + _c.regDuration;
        uint _compStartTime = _c.compStartTime;
        uint _compEndTime = _compStartTime + _c.compDuration;

        if (_regStartTime == 0) {
            stage = Stages.WaitingForRegistration;
        } else if (_currentTime >= _regStartTime && _currentTime < _regEndTime) {
            stage = Stages.RegistrationOngoing;
        } else if (_currentTime > _regEndTime && _currentTime > _compStartTime) {
            stage = Stages.WaitingForCompetition;
        } else if (_currentTime >= _compStartTime && _currentTime < _compEndTime) {
            stage = Stages.CompetitionOngoing;
        } else if (_currentTime > _compEndTime) {
            stage = Stages.CompetitionEnded;
        }
    }

    /**
     * View function for getting players' details for a competition
     */
    function getPlayerDetails(uint32 _compId, address _playerAddr)
        public
        view
        returns (Player memory)
    {
        return playerRecord[_compId][_playerAddr];
    }

    function getCompetitionInfo(uint32 _compId) public view returns (Competition memory) {
        return competitionInfo[_compId];
    }

}

