        uint reserveTokenAmount = getReserveMintReward(_tokenAmount);
        require(totalSupply() + _tokenAmount <= _maxSupply, "ERC20: Could not exceed maximum supply");
        _mint(_receiver, _tokenAmount);
        emit Minted(_receiver, _tokenAmount, reserveTokenAmount);
