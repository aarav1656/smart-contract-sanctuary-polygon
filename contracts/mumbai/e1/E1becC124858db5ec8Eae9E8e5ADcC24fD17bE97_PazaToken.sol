import "./ContinuousToken.sol";
import "../interfaces/IPazaToken.sol";
import "contracts/BasicMetaTransaction.sol";
//TODO - Do we need burn functionality?
// TODO - Mint is internal

contract PazaToken is
    Initializable,
    IPazaToken,
    ContinuousToken,
    PausableUpgradeable,
    AccessControlUpgradeable,
    BasicMetaTransaction
{
    using SafeMath for uint256;

    IERC20Upgradeable public reserveToken;

    uint256 private _reserveBalance;
    uint256 private THRESHOLD_SUPPLY;

    uint256 private taxRate; //should be upto 10000 basis points; for example, 2% should be initiated as 200
    uint256 private _taxCollected;
    address public adminWallet;
    bytes32 public constant ONLY_FACTORY = keccak256("ONLY_FACTORY");

    function initialize(
        string memory _name,
        string memory _symbol,
        uint256 _initialSupply,
        address _reserveToken,
        uint256 _taxRate,
        address _adminWallet
    ) public initializer {
        uint256 _A = 100;
        uint256 _B = 500000000;
        uint256 _C = 5038000000000000;
        uint256 _K = 50501287112;
        uint256 _C1 = 25e20;
        uint256 _C2 = 1e13;
        uint256 _initialReserveBalance = 20415233844802200;

        __Ownable_init();
        __Pausable_init();
        __ContinuousToken_init(
            _name,
            _symbol,
            _initialSupply,
            _A,
            _B,
            _C,
            _K,
            _C1,
            _C2
        );
        // __UUPSUpgradeable_init();

        reserveToken = IERC20Upgradeable(_reserveToken);
        _reserveBalance = _initialReserveBalance;
        taxRate = _taxRate;
        THRESHOLD_SUPPLY = 10710000000e18;
        adminWallet = _adminWallet;
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    fallback() external {
        revert("Cannot call fallback function.");
    }

    modifier validation(address _address) {
        require(_address != address(0), "zero address");
        _;
    }

    // function _authorizeUpgrade(address) internal override onlyOwner {}

    function pause() public onlyRole(DEFAULT_ADMIN_ROLE) {
        _pause();
    }

    function unpause() public onlyRole(DEFAULT_ADMIN_ROLE) {
        _unpause();
    }

    function setFactory(address _factory)
        public
        onlyRole(DEFAULT_ADMIN_ROLE)
        validation(_factory)
    {
        _grantRole(ONLY_FACTORY, _factory);
    }

    function setAdminRole(address _admin)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
        validation(_admin)
    {
        _setupRole(DEFAULT_ADMIN_ROLE, _admin);
    }

    function setAdminWallet(address _wallet)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
        validation(_wallet)
    {
        adminWallet = _wallet;
    }

    //_reserveTokenAmount is amount of USDC

    function buy(
        uint256 _reserveTokenAmount,
        address _sender,
        address _receiver
    ) public whenNotPaused {
        uint256 totalSupplyCached = totalSupply();
        uint256 tokenAmount = getContinuousMintReward(_reserveTokenAmount);
        uint256 totalSupplyAfterBuying = totalSupplyCached + tokenAmount;

        if (
            (totalSupplyCached < THRESHOLD_SUPPLY) &&
            (totalSupplyAfterBuying > THRESHOLD_SUPPLY)
        ) {
            mint(tokenAmount, _sender, _receiver);
        } else {
            _continuousBuy(_reserveTokenAmount, _receiver);
            _reserveBalance += _reserveTokenAmount;
            SafeERC20Upgradeable.safeTransferFrom(
                IERC20Upgradeable(reserveToken),
                _sender,
                address(this),
                _reserveTokenAmount
            );
        }
    }

    //_tokenAmount is paza token amount

    function mint(
        uint256 _tokenAmount,
        address _sender,
        address _receiver
    ) public whenNotPaused {
        uint256 returnAmount;
        uint256 totalSupplyCached = totalSupply();
        uint256 totalSupplyAfterMinting = totalSupplyCached + _tokenAmount;

        if (
            (totalSupplyCached < THRESHOLD_SUPPLY) &&
            (totalSupplyAfterMinting > THRESHOLD_SUPPLY)
        ) {
            uint256 amountA = _continuousMint(
                THRESHOLD_SUPPLY - totalSupplyCached,
                _receiver
            );
            uint256 amountB = _continuousMint(
                totalSupplyAfterMinting - THRESHOLD_SUPPLY,
                _receiver
            );
            returnAmount = amountA + amountB;
            _reserveBalance += amountB;
        } else {
            returnAmount = _continuousMint(_tokenAmount, _receiver);
            _reserveBalance += returnAmount;
        }
        SafeERC20Upgradeable.safeTransferFrom(
            IERC20Upgradeable(reserveToken),
            _sender,
            address(this),
            returnAmount
        );
    }

    //_tokenAmount is Paza Token

    function burn(uint256 _tokenAmount, address _sender, address _receiver) public whenNotPaused {
        uint256 returnAmount;
        uint256 totalSupplyCached = totalSupply();
        uint256 totalSupplyAfterBurning = totalSupplyCached - _tokenAmount;

        if (
            (totalSupplyCached > THRESHOLD_SUPPLY) &&
            (totalSupplyAfterBurning < THRESHOLD_SUPPLY)
        ) {
            uint256 amountA = _continuousBurn(
                totalSupplyCached - THRESHOLD_SUPPLY, _receiver
            );
            uint256 amountB = _continuousBurn(
                THRESHOLD_SUPPLY - totalSupplyAfterBurning, _receiver
            );
            returnAmount = amountA + amountB;
            _reserveBalance -= amountA;
        } else {
            returnAmount = _continuousBurn(_tokenAmount, _receiver);
            _reserveBalance -= returnAmount;
        }
        uint256 _tax = returnAmount.mul(taxRate).div(1e2);
        uint256 returnAmountAfterTax = returnAmount.sub(_tax);
        _taxCollected += _tax;
        SafeERC20Upgradeable.safeTransfer(
            IERC20Upgradeable(reserveToken),
            _sender,
            returnAmountAfterTax
        );
    }

    // _reserveTokenAmount is USDC amount

    function sell(uint256 _reserveTokenAmount, address _sender, address _receiver) public whenNotPaused {
        uint256 totalSupplyCached = totalSupply();
        uint256 tokenAmount = getContinuousBurnRefund(_reserveTokenAmount);
        uint256 totalSupplyAfterSelling = totalSupplyCached - tokenAmount;

        if (
            (totalSupplyCached > THRESHOLD_SUPPLY) &&
            (totalSupplyAfterSelling < THRESHOLD_SUPPLY)
        ) {
            burn(tokenAmount, _sender, _receiver);
        } else {
            _continuousSell(_reserveTokenAmount,_sender);
            _reserveBalance -= _reserveTokenAmount;
            uint256 _tax = _reserveTokenAmount.mul(taxRate).div(1e2);
            uint256 _reserveTokenAmountAfterTax = _reserveTokenAmount.sub(_tax);
            _taxCollected += _tax;
            SafeERC20Upgradeable.safeTransfer(
                IERC20Upgradeable(reserveToken),
                _msgSender(),
                _reserveTokenAmountAfterTax
            );
        }
    }

    function reserveBalance()
        public
        view
        virtual
        override(IPazaToken, SigmoidBondingCurve)
        returns (uint256)
    {
        return _reserveBalance;
    }

    function taxCollected() public view returns (uint256) {
        return _taxCollected;
    }

    function withdraw(uint256 amount)
        public
        virtual
        onlyRole(DEFAULT_ADMIN_ROLE)
        returns (bool)
    {
        uint256 reserveActualBalance = IERC20Upgradeable(reserveToken)
            .balanceOf(address(this));
        require(reserveActualBalance > 0);

        if (amount < reserveActualBalance) reserveActualBalance = amount;

        SafeERC20Upgradeable.safeTransfer(
            IERC20Upgradeable(reserveToken),
            adminWallet,
            reserveActualBalance
        );
        emit USDCExtracted(reserveActualBalance);
        return true;
    }


    function _msgSender()
        internal
        view
        override(ContextUpgradeable, BasicMetaTransaction)
        returns (address sender)
    {
        if (msg.sender == address(this)) {
            bytes memory array = msg.data;
            uint256 index = msg.data.length;
            assembly {
                // Load the 32 bytes word from memory with the address on the lower 20 bytes, and mask those.
                sender := and(
                    mload(add(array, index)),
                    0xffffffffffffffffffffffffffffffffffffffff
                )
            }
        } else {
            return msg.sender;
        }
    }

    /**
     * @dev Emitted when USDC raised from sale is transferred to owner
     */
    event USDCExtracted(uint256 amount);
}

