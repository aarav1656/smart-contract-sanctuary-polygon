pragma solidity ^0.8.2;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "./SogaHeroesSales.sol";
import "./SogaSales.sol";
import "./SogaBorrowNFT.sol";

contract SogaDiscounts is ReentrancyGuard, ERC1155Holder, AccessControl {
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    address internal constant salesLEContract = 0x5394630E949285c57BA074f4E778c0a492f945E7;
    address internal sogaBorrowNFTAddress; 
    //User address => Contract address => NFT Id => Coin => Price with discount
    /*mapping(address => mapping(address => mapping(uint256 => mapping(string => uint256))))
        public users;*/

    mapping(bytes32 => uint256) private users;

    mapping(address => mapping(uint256 => bool)) public nfts;
    mapping(string => address) private tokens;
    mapping(string => uint8) private tokensNum;
    //borrowNFTId => nftContractAddress => itemId => borrowed
    //mapping(uint256 => mapping(address => mapping(uint256 => bool))) public borrowed;
    //nftContractAddress => itemId => borrowNFTId
    mapping(address => mapping(uint256 => uint256)) public borrowed;
    uint8 internal discount_num;
    uint8 internal discount_den;
    address payable internal operator;

    constructor(address _operator, address borrowNFT) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(OPERATOR_ROLE, msg.sender);
        _grantRole(OPERATOR_ROLE, _operator);
        operator = payable(_operator);
        sogaBorrowNFTAddress = borrowNFT;
        discount_num = 1;
        discount_den = 2;
        tokensNum["matic"] = 1;
    }

    // Function to receive Ether. msg.data must be empty
    receive() external payable {}

    // Fallback function is called when msg.data is not empty
    fallback() external payable {}

    function setSogaBorrowNFT(address _sogaBorrowNFTAddress) 
        public 
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        sogaBorrowNFTAddress = _sogaBorrowNFTAddress;
    }

    function setOperator(address _operator)
        public
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        operator = payable(_operator);
        _grantRole(OPERATOR_ROLE, _operator);
    }

    function setDiscount(uint8 num, uint8 den)
        public
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        discount_num = num;
        discount_den = den;
    }

    function setCoins(
        string memory name,
        uint8 num,
        address erc20ContractAddress
    ) public onlyRole(DEFAULT_ADMIN_ROLE) {
        tokens[name] = erc20ContractAddress;
        tokensNum[name] = num;
    }

    function uploadNFT(address salesContract, uint256 itemId) public onlyRole(DEFAULT_ADMIN_ROLE) {
        nfts[salesContract][itemId] = true;
    }

    function setUserDiscount(
        uint256 itemId,
        address salesContract,
        address userAddr,
        string memory coin,
        uint256 price
    ) public payable onlyRole(OPERATOR_ROLE) {
        //require(keccak256(bytes(coin)) == keccak256(bytes("matic")), "Please, use setUserDiscountERC20() function instead");   
        //users[userAddr][salesContract][itemId][coin] = price;
        users[keccak256(bytes(abi.encodePacked(userAddr, salesContract, itemId, coin)))] = price;
        if (nfts[salesContract][itemId]) {
            (bool success, ) = operator.call{value: msg.value}("");
            require(success, "Failed to send Amount (Matic) to Operator");
        } else {
            if (salesContract == salesLEContract) {
                SogaSalesOracle(salesContract).createMarketSale{value: msg.value}(itemId, true);
            } else {
                SogaHeroesSales(salesContract).createMarketSale{value: msg.value}(itemId, 1);
            }
            nfts[salesContract][itemId] = true;
        }
    }

/*
    function setUserDiscountERC20(
        uint256 itemId,
        address salesContract,
        address userAddr,
        string memory coin,
        uint256 price,
        uint256 amount
    ) public onlyRole(OPERATOR_ROLE) {
        require(keccak256(bytes(coin)) != keccak256(bytes("matic")), "Please use setUserDiscount() function instead");
        users[userAddr][salesContract][itemId][coin] = price;
        IERC20 ERC20Token = IERC20(tokens[coin]);
        ERC20Token.transferFrom(msg.sender, address(this), amount);
        ERC20Token.approve(salesContract, amount);
        SogaHeroesSales(salesContract).createMarketSaleERC20(itemId, tokensNum[coin], amount);
    }
*/

    //Coins:: 0: usdc, 1: matic, >=2: soga
    function purchase(
        uint256 itemId,
        string memory coin,
        address nftContract,
        address salesContract,
        uint256 origPrice
    ) public payable nonReentrant {
        require(keccak256(bytes(coin)) == keccak256(bytes("matic")), "Please, use purchaseERC20() function instead");
        /*require(
            msg.value == users[msg.sender][salesContract][itemId][coin],
            "You have not discount"
        );*/
        require(
            msg.value == users[keccak256(bytes(abi.encodePacked(msg.sender, salesContract, itemId, coin)))],
            "You have not discount with MATIC"
        );
        require(
            msg.value >= (origPrice * discount_num) / discount_den,
            "Too discount with MATIC!"
        );

        //MATIC
        (bool success, ) = operator.call{value: msg.value}("");
        require(success, "Failed to send Amount (Matic) to Operator");
        
        IERC1155(nftContract).safeTransferFrom(
            address(this),
            msg.sender,
            itemId,
            1,
            ""
        );
        delete (nfts[salesContract][itemId]);
        //delete (users[msg.sender][salesContract][itemId][coin]);
        delete (users[keccak256(bytes(abi.encodePacked(msg.sender, salesContract, itemId, coin)))]);
    }

    function purchaseERC20(
        uint256 itemId,
        string memory coin,
        address nftContract,
        address salesContract,
        uint256 origPrice,
        uint256 amount
    ) public {
        require(keccak256(bytes(coin)) != keccak256(bytes("matic")), "Please, use purchase() function instead");
        /*require(
            amount == users[msg.sender][salesContract][itemId][coin],
            "You have not discount"
        );*/
        require(
            amount == users[keccak256(bytes(abi.encodePacked(msg.sender, salesContract, itemId, coin)))],
            "You have not discount with ERC20"
        );
        require(
            amount >= (origPrice * discount_num) / discount_den,
            "Too discount with ERC20!"
        );

        //USDC, SOGA, ...
        IERC20 ERC20Token = IERC20(tokens[coin]);
        ERC20Token.transferFrom(msg.sender, operator, amount);
        
        IERC1155(nftContract).safeTransferFrom(
            address(this),
            msg.sender,
            itemId,
            1,
            ""
        );
        delete (nfts[salesContract][itemId]);
        //delete (users[msg.sender][salesContract][itemId][coin]);
        delete (users[keccak256(bytes(abi.encodePacked(msg.sender, salesContract, itemId, coin)))]);
    }

    function purchaseNFT(
        uint256 nftBorrowId,
        uint256 itemId,
        string memory coin,
        address nftContract,
        address salesContract,
        uint256 price,
        bool toPurchase
    ) public payable nonReentrant {
        require(keccak256(bytes(coin)) != keccak256(bytes("matic")), "Please, use purchase() function instead");
        /*require(
            msg.value == users[msg.sender][salesContract][itemId][coin],
            "You have not discount"
        );*/
        require(
            price == users[keccak256(bytes(abi.encodePacked(msg.sender, salesContract, itemId, coin)))],
            "You have not discount with NFT"
        );
        require(
            SogaBorrowNFT(sogaBorrowNFTAddress).balanceOf(msg.sender, nftBorrowId) >= 1,
            "You are not the owner of the this borrow NFT"
        );
        
        if (toPurchase) {
            require(
                msg.value == users[keccak256(bytes(abi.encodePacked(msg.sender, salesContract, itemId, coin)))],
                "You have not discount with NFT to Purchase"
            );
            require(
                borrowed[nftContract][itemId] == nftBorrowId,
                "It must be borrowed before"
            );
            //MATIC
            (bool success, ) = operator.call{value: msg.value}("");
            require(success, "Failed to send Amount (Matic) to Operator");
            IERC1155(nftContract).safeTransferFrom(
                address(this),
                msg.sender,
                itemId,
                1,
                ""
            );
            SogaBorrowNFT(sogaBorrowNFTAddress).burn(msg.sender, nftBorrowId, 1);
            delete (nfts[salesContract][itemId]);
            //delete (users[msg.sender][salesContract][itemId][coin]);
            delete (users[keccak256(bytes(abi.encodePacked(msg.sender, salesContract, itemId, coin)))]);
            delete (borrowed[nftContract][itemId]);
        } else {
            //borrowNFTId => nftContractAddress => itemId => borrowed
            borrowed[nftContract][itemId] = nftBorrowId;
        }
    }

    function isBorrowed(address nftContract, uint256 itemId) public view returns (uint256) {
        uint256 nftBorrowId = borrowed[nftContract][itemId];
        if (nftBorrowId > 0) {
            return nftBorrowId;
        } else {
            return 0;
        }
    }

    function withdrawERC20(
        address payable to,
        uint256 amount,
        string memory coin
    ) public onlyRole(DEFAULT_ADMIN_ROLE) {
        IERC20 SogaToken = IERC20(tokens[coin]);
        require(
            amount <= SogaToken.balanceOf(address(this)),
            "Funds not enough"
        );
        if (amount == 0) {
            amount = SogaToken.balanceOf(address(this));
        }
        SogaToken.transfer(to, amount);
    }

    function withdrawMATIC(address payable to, uint256 amount)
        public
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        require(amount <= getBalance(), "Funds not enough");
        if (amount == 0) {
            amount = getBalance();
        }
        to.transfer(amount);
    }

    function withdrawNFT(
        address to,
        uint256 id,
        address nftContract
    ) public onlyRole(DEFAULT_ADMIN_ROLE) {
        IERC1155(nftContract).safeTransferFrom(address(this), to, id, 1, "");
    }

    function getBalance() public view returns (uint256) {
        return address(this).balance;
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC1155Receiver, AccessControl)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}

