pragma solidity ^0.8.0;

import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/VRFV2WrapperConsumerBase.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";

contract BettingGame is VRFV2WrapperConsumerBase {
    bytes32 internal keyHash;
    uint256 internal fee;
    uint256 public randomResult;
    uint256 public lastUpdateTime;
    address payable public admin;
    address payable public treasury;
    uint32 callbackGasLimit;
    uint256 public adminFee;
    uint256 public betTime;

    uint public constant DECIMAL_FACTOR = 100_00;

    struct Bet {
        uint256 amount;
        uint256 choice;
    }

    mapping(address => Bet) public bet;
    mapping(uint256 => uint256) public choiceBetAmount;
    mapping(address => uint256) public reward;

    address vrfV2Wrapper;

    address[] public betters;

    modifier onlyVrfV2Wrapper() {
        require(msg.sender == vrfV2Wrapper, "only VFRC can call this function");
        _;
    }

    modifier onlyAdmin() {
        require(msg.sender == admin, "caller is not the admin");
        _;
    }

    event BetPlaced(address user, uint256 choice, uint256 amount);
    event ResultGenerated(uint256 result);
    event RewardsDistributed(uint256 lastUpdateTime, uint256 totalBetAmount);
    event Claimed(address claimer, uint256 claimAmount);

    constructor(
        address _vrfV2Wrapper,
        uint256 _fee,
        address link,
        bytes32 _keyHash,
        uint32 _callbackGasLimit,
        uint256 _adminfee,
        address _treasury,
        uint256 _betTime
    ) VRFV2WrapperConsumerBase(link, _vrfV2Wrapper) {
        keyHash = _keyHash;
        fee = _fee;
        lastUpdateTime = block.timestamp;
        admin = payable(msg.sender);
        callbackGasLimit = _callbackGasLimit;
        vrfV2Wrapper = _vrfV2Wrapper;
        adminFee = _adminfee;
        treasury = payable(_treasury);
        betTime = _betTime;
    }

    function placeBet(uint256 choice) external payable {
        require(choice == 0 || choice == 1, "Invalid choice");
        require(msg.value > 0, "cannot bet less than 0");
        uint256 totalAdminFee = ((msg.value * adminFee) / DECIMAL_FACTOR);
        (bool sent1, ) = payable(treasury).call{value: totalAdminFee}("");
        require(sent1, "failed to send fee to admin");
        betters.push(msg.sender);
        bet[msg.sender] = Bet(msg.value - totalAdminFee, choice);
        choiceBetAmount[choice] = choiceBetAmount[choice] += msg.value;
        emit BetPlaced(msg.sender, choice, msg.value);
    }

    function generateRandomNumber() public {
        require(
            LINK.balanceOf(address(this)) >= fee,
            "Not enough LINK to fulfill request"
        );
        require(
            block.timestamp >= lastUpdateTime + betTime,
            "Can only generate a new number every 5 minutes"
        );
        lastUpdateTime = block.timestamp;
        requestRandomness(callbackGasLimit, 3, 1);
    }

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        randomResult = _randomWords[0] % 2;
        emit ResultGenerated(randomResult);
        distributeRewards();
    }

    function distributeRewards() public payable onlyVrfV2Wrapper {
        uint256 totalBetAmount = choiceBetAmount[0] + choiceBetAmount[1];
        for (uint256 i = 0; i < betters.length; i++) {
            if (bet[betters[i]].choice == randomResult) {
                reward[betters[i]] +=
                    (totalBetAmount * bet[betters[i]].amount) /
                    choiceBetAmount[randomResult];
            }
            delete bet[betters[i]];
            delete betters;
        }
        emit RewardsDistributed(lastUpdateTime, totalBetAmount);
    }

    function claimReward() public {
        require(reward[msg.sender] > 0, "no reward to claim");
        (bool sent, ) = payable(msg.sender).call{value: reward[msg.sender]}("");
        require(sent, "failed to send reward");
        emit Claimed(msg.sender, reward[msg.sender]);
    }

    function withdrawLink(uint256 amount) external onlyAdmin {
        require(LINK.transfer(msg.sender, amount), "Error, unable to transfer");
    }

    function withdrawEther(uint256 amount) external payable onlyAdmin {
        require(
            address(this).balance >= amount,
            "Error, contract has insufficent balance"
        );
        admin.transfer(amount);
    }

    function setAdminFee(uint256 _fee) external onlyAdmin {
        fee = _fee;
    }

    function setAdmin(address _admin) external onlyAdmin {
        admin = payable(_admin);
    }

    function setTreasury(address _treasury) external onlyAdmin {
        treasury = payable(_treasury);
    }

    function setLinkFee(uint256 _linkFee) external onlyAdmin {
        fee = _linkFee;
    }

    function setbetTime(uint256 _betTime) external onlyAdmin {
        betTime = _betTime;
    }
}