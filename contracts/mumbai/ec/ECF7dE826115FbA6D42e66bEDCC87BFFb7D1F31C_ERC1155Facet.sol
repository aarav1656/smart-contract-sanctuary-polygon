library LibFactoryStorage {
    /*
     *  Events
     */
    event ContractInstantiation(address sender, address instantiation);

    bytes32 constant STORAGE_POSITION =
        keccak256("diamond.standard.factory.storage");

    struct Storage {
        mapping(address => bool) isInstantiation;
        mapping(address => address[]) instantiations;
    }

    /// @dev Returns the draft diamond storage
    /// @return ds The draft diamond storage pointer
    function dstorage() internal pure returns (Storage storage ds) {
        bytes32 position = STORAGE_POSITION;
        assembly {
            ds.slot := position
        }
    }

    /// @dev Registers contract in factory registry.
    /// @param instantiation Address of contract instantiation.
    function register(address instantiation) internal {
        dstorage().isInstantiation[instantiation] = true;
        dstorage().instantiations[msg.sender].push(instantiation);

        emit ContractInstantiation(msg.sender, instantiation);
    }
}

