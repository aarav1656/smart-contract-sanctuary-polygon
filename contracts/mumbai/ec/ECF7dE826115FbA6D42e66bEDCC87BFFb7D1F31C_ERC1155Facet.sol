/**
 * @title MultiMint ERC1155
 * @author Jonathan Giamporcaro, Alexander Zimin, Viktor Voitenko
 * @notice Functionality for multi-minting tokens on pre-sale and public sale phases. Implemented shared revenue mechanism
 */
contract MultiMint1155 is ERC1155, Signable, PaymentSplitter {
    // Phase States: None - can't mint, Pre Sale - only mint with sign, Main Sale - only regular mint
    enum Phase {
        NONE,
        PRE_SALE,
        MAIN_SALE
    }

    // Current phase of the contract
    Phase private _phase;

    // Address where all money from the contract will go if the owner of the contract will call withdraw function
    // TODO: Check before final upload
    address private constant WITHDARAWAL_ADDRESS =
        0xC55dA65c626Bad25532bE0d4f6B44aBFD733A152;

    // Base contract URI
    string private baseContractURI;

    /// @notice Default token price if we didn't specify price for specified token
    /// @return default mint price token price
    uint256 public defaultMintPrice = 0.3 ether;

    /// @notice Mint prices, can be configured
    /// @return supply per specified token
    mapping(uint256 => uint256) public mintPrices;

    /// @notice Default max mint for an account on the public sale if specific mint for token is not specified.
    /// @return default number of mints
    uint256 public defaultMaxMint = 5;

    /// @notice Max mint amounts, can be configured
    /// @return list of tokens with their's max amounts
    mapping(uint256 => uint256) public maxMintPerToken;

    /// @notice Max supply per token
    /// @return supply per specified token
    mapping(uint256 => uint256) public maxSupplyPerToken;

    /// @notice Current supply per token
    /// @return supply per specified token
    mapping(uint256 => uint256) public currentSupplyPerToken;

    /// @notice Proxy contract for tracking afterTokenTransfer call
    /// @return proxy contract address
    IProxyTracking public proxyTrackingContract;

    /// @notice Number of already minted tokens per account
    /// @return mapping
    mapping(address => mapping(uint256 => uint256)) public minted;

    // OKOKOK
    event OwnerMint(address to, uint256[] tokenIds, uint256[] amounts);

    // OKOKOK
    event Mint(address to, uint256[] tokenIds, uint256[] amounts, Phase phase);

    // Modifier is used to check if the phase rule is met
    modifier phaseRequired(Phase phase_) {
        if (phase_ != _phase) revert Errors.MintNotAvailable();
        _;
    }

    // Modifier is used to check if at least a minimal amount of money was sent
    modifier checkCosts(
        uint256[] calldata tokenIds,
        uint256[] calldata amounts
    ) {
        if (msg.value < getTotalPrice(tokenIds, amounts))
            revert Errors.InsufficientFunds();
        _;
    }

    // Modifier is used to check whether address is externally owned
    modifier externalAddressRequired() {
        if (_msgSender().code.length > 0) {
            revert Errors.ContractCantMint();
        }
        _;
    }

    /**
     * @notice Initialize the contract. Call once upon deploy.
     * @param _uri Used as the URI for all token types by relying on ID substitution, e.g. https://token-cdn-domain/{id}.json
     * @param _baseContractURI Need to clarify(?)
     * @param _payees Payees addresses must be same length as shares
     * @param _shares Corresponding by indexes payees shares.
     */
    constructor(
        string memory _uri,
        string memory _baseContractURI,
        address _owner,
        address[] memory _payees,
        uint256[] memory _shares
    ) ERC1155(_uri) PaymentSplitter(_payees, _shares) Signable(_owner) {
        baseContractURI = _baseContractURI;
    }

    /**
     * @notice Contract owner can call this function to mint `amounts` of specified tokens into account with the address `to`
     * @param to Address on which tokens will be minted
     * @param tokenIds Tokens
     * @param amounts Amounts of corresponding tokens by indexes
     * @param data Additional data for compatibility with ERC1155
     */
    function ownerMint(
        address to,
        uint256[] calldata tokenIds,
        uint256[] calldata amounts,
        bytes memory data
    ) external onlyOwner {
        _mintLogic(to, tokenIds, amounts, true, data); // vvvcheck
        emit OwnerMint(to, tokenIds, amounts);
    }

    /**
     * @notice Function used to do minting on pre-sale phase (with signature) - used for Pre-Sale
     * @param tokenIds Tokens
     * @param amounts Amounts of corresponding tokens by indexes
     * @param signature User signature
     * @param data Additional data for compatibility with ERC1155
     */
    function preSaleMint(
        uint256[] calldata tokenIds,
        uint256[] calldata amounts,
        bytes calldata signature,
        bytes memory data
    )
        external
        payable
        checkCosts(tokenIds, amounts)
        phaseRequired(Phase.PRE_SALE)
        externalAddressRequired
    {
        // event -
        if (
            !_verify(
                signer(),
                _hash(_msgSender(), tokenIds, amounts),
                signature
            )
        ) {
            revert Errors.InvalidSignature();
        }

        _mintLogic(_msgSender(), tokenIds, amounts, false, data);
        emit Mint(_msgSender(), tokenIds, amounts, Phase.PRE_SALE);
    }

    /**
     * @notice Mint specified amount of tokens to the sender address - used for Public Sale
     * @param tokenIds Tokens
     * @param amounts Amounts of corresponding tokens by indexes
     * @param data Additional data for compatibility with ERC1155
     */
    function mint(
        uint256[] calldata tokenIds,
        uint256[] calldata amounts,
        bytes memory data
    )
        external
        payable
        checkCosts(tokenIds, amounts)
        phaseRequired(Phase.MAIN_SALE)
        externalAddressRequired
    {
        _mintLogic(_msgSender(), tokenIds, amounts, false, data);
        emit Mint(msg.sender, tokenIds, amounts, Phase.MAIN_SALE);
    }

    /**
     * @notice Contract owner can call this function to withdraw all money from the contract into a defined wallet
     */
    function withdrawAll() external onlyOwner {
        uint256 balance = address(this).balance;
        if (balance == 0) revert Errors.NothingToWithdraw();

        (bool success, ) = WITHDARAWAL_ADDRESS.call{value: balance}("");
        if (!success) revert Errors.WithdrawFailed();
    }

    /**
     * @notice Set default max mint amount for all tokens
     * @param defaultMaxMint_ default max mint amount
     */
    function setDefaultMaxMint(uint256 defaultMaxMint_) external onlyOwner {
        if (defaultMaxMint == 0) {
            revert Errors.InvalidMintMaxAmount();
        }
        defaultMaxMint = defaultMaxMint_;
    }

    /**
     * @notice Set max supply specified token.
     * @param tokenIds_ Token Ids
     * @param maxMints_ Max mints of corresponding tokens by indexes
     */
    function setMaxMintPerToken(
        uint256[] calldata tokenIds_,
        uint256[] calldata maxMints_
    ) external onlyOwner {
        if (tokenIds_.length != maxMints_.length) {
            revert Errors.MismatchTokenIdsAndValues();
        }
        for (uint256 i; i < tokenIds_.length; ) {
            maxMintPerToken[tokenIds_[i]] = maxMints_[i];
            unchecked {
                i++;
            }
        }
    }

    /**
     * @notice Set max supply specified token.
     * @param tokenIds_ Token Ids
     * @param maxSupplies_ Supplies of corresponding tokens by indexes
     */
    function setMaxSupplyPerToken(
        uint256[] calldata tokenIds_,
        uint256[] calldata maxSupplies_
    ) external onlyOwner {
        if (tokenIds_.length != maxSupplies_.length) {
            revert Errors.MismatchTokenIdsAndValues();
        }
        for (uint256 i; i < tokenIds_.length; ) {
            maxSupplyPerToken[tokenIds_[i]] = maxSupplies_[i];
            unchecked {
                i++;
            }
        }
    }

    /**
     * @notice Set default mint price for any token.
     * @param defaultMintPrice_ Default price
     */
    function setDefaultMintPrice(uint256 defaultMintPrice_) external onlyOwner {
        if (defaultMintPrice_ == 0) {
            revert Errors.InvalidMintPrice();
        }
        defaultMintPrice = defaultMintPrice_;
    }

    /**
     * @notice Set mint prices for specified tokens. Override default mint price for specified tokens
     * @param tokenIds_ Token Ids
     * @param mintPrices_ Prices of corresponding tokens by indexes
     */
    function setMintPricePerToken(
        uint256[] calldata tokenIds_,
        uint256[] calldata mintPrices_
    ) external onlyOwner {
        if (tokenIds_.length != mintPrices_.length) {
            revert Errors.MismatchTokenIdsAndValues();
        }

        for (uint256 i; i < tokenIds_.length; ) {
            if (mintPrices_[i] == 0) {
                revert Errors.InvalidMintPrice();
            }
            mintPrices[tokenIds_[i]] = mintPrices_[i];
            unchecked {
                i++;
            }
        }
    }

    /**
     * @notice Contract owner can call this function to set the proxy tracking contract address.
     * (which gets a call of afterTokenTransfer function of the original contract)
     * @param proxyTrackingContract_ Proxy contract address
     */
    function setProxyTrackingContract(
        IProxyTracking proxyTrackingContract_
    ) external onlyOwner {
        proxyTrackingContract = proxyTrackingContract_;
    }

    /**
     * @notice Set contract URI
     * @dev need to check for what
     * @param baseContractURI_ Base contract URI
     */
    // vvvcheck
    function setContractURI(
        string calldata baseContractURI_
    ) external onlyOwner {
        if (bytes(baseContractURI_).length == 0)
            revert Errors.InvalidBaseContractURL();

        baseContractURI = baseContractURI_;
    }

    /**
     * @notice Sets a new URI for all token types, by relying on the token type ID
     * @param uri_ Used as the URI for all token types by relying on ID substitution, e.g. https://token-cdn-domain/{id}.json
     */
    function setURI(string calldata uri_) external onlyOwner {
        if (bytes(uri_).length == 0) {
            revert Errors.InvalidBaseURI();
        }
        _setURI(uri_);
    }

    /**
     * @notice Set current phase
     * @param phase_ Phase
     * @dev set pre-sale, main sale or none
     */
    function setPhase(Phase phase_) external onlyOwner {
        _phase = phase_;
    }

    /**
     * @notice Return contract URI
     * @dev Need to check it
     * @return Contract URI
     */
    function contractURI() external view returns (string memory) {
        // vvvcheck - what is this?
        return baseContractURI;
    }

    /**
     * @notice Current phase: none, pre-sale or main sale
     * @return Current phase: pre-sale, main sale or none
     */
    function phase() external view returns (Phase) {
        return _phase;
    }

    /**
     * @notice Burn specified amount of token ID from the sender address
     * @param tokenId, Token
     * @param amount, amounts of token ID will be burned
     */
    function burn(uint256 tokenId, uint256 amount) external {
        if (balanceOf(_msgSender(), tokenId) < amount) {
            revert Errors.InsufficientBalance();
        }
        _burn(_msgSender(), tokenId, amount);
    }

    /**
     * @notice Get price of specified token depends on it's amount
     * @param tokenId Token
     * @param amount Amounts of token
     * @return Token Price
     */
    function getTokenPrice(
        uint256 tokenId,
        uint256 amount
    ) public view returns (uint256) {
        uint256 priceOfOneItem = mintPrices[tokenId] > 0
            ? mintPrices[tokenId]
            : defaultMintPrice;
        return priceOfOneItem * amount;
    }

    /**
     * @notice Calculate total price of specified tokens depends on their's amounts
     * @param tokenIds List of tokens
     * @param amounts Amounts of corresponding tokens by indexes
     * @return totalPrice Total price
     */
    function getTotalPrice(
        uint256[] memory tokenIds,
        uint256[] memory amounts
    ) public view returns (uint256 totalPrice) {
        for (uint256 i; i < tokenIds.length; ) {
            totalPrice += getTokenPrice(tokenIds[i], amounts[i]);
            unchecked {
                i++;
            }
        }
    }

    /**
     * @notice Maximum mint per token
     * @param tokenId, Token
     * @return Max mint amount per token
     */
    function getMaxMintPerToken(uint256 tokenId) public view returns (uint256) {
        return
            maxMintPerToken[tokenId] > 0
                ? maxMintPerToken[tokenId]
                : defaultMaxMint;
    }

    function _mintLogic(
        address to,
        uint256[] memory tokenIds,
        uint256[] memory amounts,
        bool isOwnerMint,
        bytes memory data
    ) internal {
        if (tokenIds.length != amounts.length) {
            revert Errors.MismatchTokenIdsAndValues();
        }

        for (uint256 i; i < tokenIds.length; ) {
            if (
                currentSupplyPerToken[tokenIds[i]] + amounts[i] >
                maxSupplyPerToken[tokenIds[i]]
            ) {
                revert Errors.SupplyLimitReached();
            }
            if (
                !isOwnerMint &&
                (minted[to][tokenIds[i]] + amounts[i] >
                    getMaxMintPerToken(tokenIds[i]))
            ) {
                revert Errors.AccountMaxMintAmountExceeded();
            }
            super._mint(to, tokenIds[i], amounts[i], data);

            unchecked {
                minted[to][tokenIds[i]] += amounts[i];
                currentSupplyPerToken[tokenIds[i]] += amounts[i];
                ++i;
            }
        }
    }

    function _burn(
        address from,
        uint256 tokenId,
        uint256 amount
    ) internal virtual override {
        super._burn(from, tokenId, amount);
        unchecked {
            minted[from][tokenId] -= amount;
            currentSupplyPerToken[tokenId] -= amount;
        }
    }

    function _verify(
        address signer,
        bytes32 hash,
        bytes calldata signature
    ) private pure returns (bool) {
        return signer == ECDSA.recover(hash, signature);
    }

    function _hash(
        address account,
        uint256[] memory tokenIds,
        uint256[] memory amounts
    ) private pure returns (bytes32) {
        return
            ECDSA.toEthSignedMessageHash(
                keccak256(abi.encodePacked(account, tokenIds, amounts))
            );
    }
}

