pragma solidity 0.8.11;

import "./utils/AccessProtected.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract BettingPools is AccessProtected, ReentrancyGuard {
    using Address for address;
    using SafeERC20 for IERC20;
    using Counters for Counters.Counter;

    IERC20 public bund;
    address public grader;
    address public protocolFeeCollector;
    Counters.Counter private globalPoolID;
    Counters.Counter public globalBetsID;

    constructor(
        IERC20 _bundToken,
        address _grader,
        address _protocolFeeCollector
    ) {
        bund = _bundToken;
        grader = _grader;
        protocolFeeCollector = _protocolFeeCollector;
    }

    enum matchStatus {
        NotStarted,
        TeamAWon,
        TeamBWon,
        Draw,
        Cancelled
    }

    struct Pool {
        uint256 poolID;
        string poolName;
        string[] matchIds;
        uint256 startTime;
        uint256 endTime;
        uint256 entryFee;
        uint256 protocolFee;
        uint256 winnerPercentage;
        uint256 maxParticipants;
        bool isArchived;
        bool rewardsCalculated;
    }

    struct Match {
        string espn_id;
        string name;
        string teamA;
        string teamB;
        matchStatus status;
    }

    struct Bet {
        uint256 poolID;
        address user;
        uint256 selectionID;
        bool isActive;
        uint256 score;
    }

    mapping(string => bool) public matchExists;
    mapping(string => Match) public allMatches;
    mapping(uint256 => Pool) public allPools;
    mapping(string => mapping(uint256 => bool)) public isMatchInPool;
    mapping(uint256 => uint256) public poolBetCount;
    mapping(uint256 => address[]) public poolToAddress;
    mapping(address => mapping(uint256 => bool)) public addressBettingInPool;
    mapping(uint256 => mapping(address => Bet)) public poolBetByUser;
    mapping(uint256 => mapping(string => uint256)) public poolSelections;
    mapping(uint256 => mapping(uint256 => address[]))
        public poolToScoreToAdddress;

    modifier ifPoolNotArchived(uint256 poolID) {
        require(allPools[poolID].isArchived == false, "Pool is archived");
        _;
    }

    modifier ifPoolActive(uint256 poolID) {
        require(
            block.timestamp > allPools[poolID].startTime &&
                block.timestamp < allPools[poolID].endTime,
            "Pool is not active"
        );
        _;
    }

    modifier ifPoolNotStarted(uint256 poolID) {
        require(
            block.timestamp < allPools[poolID].startTime,
            "Pool has already started"
        );
        _;
    }

    modifier ifPoolEnded(uint256 poolID) {
        require(
            block.timestamp > allPools[poolID].endTime,
            "Pool has already ended"
        );
        _;
    }

    modifier poolHasNoBets(uint256 poolID) {
        require(
            poolBetCount[poolID] == 0,
            "Pool already has active bets placed"
        );
        _;
    }

    modifier onlyGraderOrAdmin() {
        require(
            msg.sender == grader || isAdmin(msg.sender),
            "Caller is neither admin nor grader"
        );
        _;
    }

    event matchAdded(string indexed espn_id);
    event poolAdded(
        uint256 indexed poolID,
        uint256 indexed matchCount,
        uint256 indexed winPercentage,
        uint256 start_time,
        uint256 end_time
    );
    event poolArchived(uint256 poolID);
    event betPlaced(
        uint256 indexed poolID,
        address indexed better,
        uint256[] selections
    );
    event matchGraded(
        string indexed espn_id,
        uint256 indexed statusCode,
        address indexed grader
    );
    event emergencyWithdrawal(
        address indexed withdrawnTo,
        uint256 indexed amount
    );

    function changeGrader(address _grader) external onlyAdmin {
        grader = _grader;
    }

    function batchAddMatches(
        string[] memory espn_ids,
        string[] memory match_names,
        string[] memory teamAs,
        string[] memory teamBs
    ) external nonReentrant onlyAdmin {
        for (uint256 i = 0; i < espn_ids.length; i++) {
            allMatches[espn_ids[i]] = Match(
                espn_ids[i],
                match_names[i],
                teamAs[i],
                teamBs[i],
                matchStatus.NotStarted
            );
            matchExists[espn_ids[i]] = true;
            emit matchAdded(espn_ids[i]);
        }
    }

    function addPoolData(
        string memory pool_name,
        uint256 entry_fee,
        uint256 protocol_fee,
        uint256 bet_start_time,
        uint256 bet_end_time,
        string[] memory match_ids,
        uint256 max_participants,
        uint256 winnerPercentage
    ) external nonReentrant onlyAdmin returns (uint256) {
        globalPoolID.increment();
        //Add check for match exist
        require(
            bet_end_time > bet_start_time,
            "Betting start time is greater than end time"
        );
        for (uint256 i = 0; i < match_ids.length; i++) {
            require(
                matchExists[match_ids[i]],
                "One or more matches does not exist"
            );
            isMatchInPool[match_ids[i]][globalPoolID.current()] = true;
        }
        allPools[globalPoolID.current()] = Pool(
            globalPoolID.current(),
            pool_name,
            match_ids,
            bet_start_time,
            bet_end_time,
            entry_fee,
            protocol_fee,
            winnerPercentage,
            max_participants,
            false,
            false
        );
        emit poolAdded(
            globalPoolID.current(),
            match_ids.length,
            winnerPercentage,
            bet_start_time,
            bet_end_time
        );
        return globalPoolID.current();
    }

    function updatePool(
        uint256 poolID,
        string memory _poolName,
        uint256 _entryFee,
        uint256 _protocolFee
    ) external nonReentrant ifPoolNotStarted(poolID) ifPoolNotArchived(poolID) {
        Pool memory currentPool = allPools[poolID];
        currentPool.poolName = _poolName;
        currentPool.entryFee = _entryFee;
        currentPool.protocolFee = _protocolFee;
        allPools[poolID] = currentPool;
    }

    function archivePool(uint256 poolId)
        external
        nonReentrant
        poolHasNoBets(poolId)
    {
        allPools[poolId].isArchived = true;
        emit poolArchived(poolId);
    }

    function placeBets(
        uint256 pool_id,
        string[] memory match_ids,
        uint256[] memory selections
    )
        external
        payable
        nonReentrant
        ifPoolNotArchived(pool_id)
        ifPoolActive(pool_id)
    {
        require(pool_id <= globalPoolID.current(), "Invalid poolID");
        require(
            match_ids.length == selections.length,
            "Calldata size mismatch"
        );
        require(
            addressBettingInPool[msg.sender][pool_id] == false,
            "User already has a live bet for this pool"
        );
        require(
            msg.value == allPools[pool_id].protocolFee,
            "Insufficient matic sent to the contract"
        );
        uint256 selectionID = globalBetsID.current();
        Bet memory userBet = Bet(pool_id, msg.sender, selectionID, true, 0);
        for (uint256 i = 0; i < match_ids.length; i++) {
            require(
                isMatchInPool[match_ids[i]][pool_id],
                "One of the matches is not in the pool"
            );
            require(
                selections[i] == 0 || selections[i] == 1,
                "User selection is invalid"
            );
            poolSelections[selectionID][match_ids[i]] = selections[i];
        }
        poolBetByUser[pool_id][msg.sender] = userBet;
        poolToAddress[pool_id].push(msg.sender);
        addressBettingInPool[msg.sender][pool_id] = true;
        poolBetCount[pool_id] = poolBetCount[pool_id] + 1;
        // transfer funds
        bund.safeTransferFrom(
            msg.sender,
            address(this),
            allPools[pool_id].entryFee
        );
        globalBetsID.increment();
    }

    function cancelBet(uint256 pool_id)
        external
        nonReentrant
        ifPoolActive(pool_id)
    {
        require(
            addressBettingInPool[msg.sender][pool_id] = true,
            "User does not have an active bet"
        );
        addressBettingInPool[msg.sender][pool_id] = false;
        poolBetByUser[pool_id][msg.sender].isActive = false;
        bund.safeTransfer(msg.sender, allPools[pool_id].entryFee);
        poolBetCount[pool_id] = poolBetCount[pool_id] - 1;
    }

    function calculateScore(Bet memory userBet, string[] memory match_ids)
        private
        view
        returns (uint256)
    {
        uint256 userScore = 0;
        uint256 userSelectionID = userBet.selectionID;
        for (uint256 i = 0; i < match_ids.length; i++) {
            uint256 matchSelection = poolSelections[userSelectionID][
                match_ids[i]
            ];
            if (
                (matchSelection == 0 &&
                    allMatches[match_ids[i]].status == matchStatus.TeamAWon) ||
                (matchSelection == 1 &&
                    allMatches[match_ids[i]].status == matchStatus.TeamBWon)
            ) {
                userScore += 1;
            }
        }
        return userScore;
    }

    function calculateReward(uint256 pool_id) external nonReentrant onlyAdmin {
        require(pool_id <= globalPoolID.current(), "Invalid poolID");
        address[] memory poolAddresses = poolToAddress[pool_id];
        uint256 maxScore = allPools[pool_id].matchIds.length;
        for (uint256 i = 0; i < poolAddresses.length; i++) {
            if (
                addressBettingInPool[poolAddresses[i]][pool_id] &&
                poolBetByUser[pool_id][poolAddresses[i]].isActive
            ) {
                uint256 userScore = calculateScore(
                    poolBetByUser[pool_id][msg.sender],
                    allPools[pool_id].matchIds
                );
                poolToScoreToAdddress[pool_id][userScore].push(poolAddresses[i]);
            }
        }
        for (uint256 score = maxScore; score >=0; score--) {

        }
        allPools[pool_id].rewardsCalculated = true;
    }

    function claimReward(uint256 pool_id) external nonReentrant {
        require(pool_id <= globalPoolID.current(), "Invalid poolID");
        
    }

    function updateMatchStatus(string memory matchID, uint256 statusCode)
        external
        nonReentrant
        onlyGraderOrAdmin
    {
        require(statusCode <= 4, "Status Code invalid");
        allMatches[matchID].status = matchStatus(statusCode);
        emit matchGraded(matchID, statusCode, msg.sender);
    }

    function emergencyWithdraw() external nonReentrant onlyAdmin {
        uint256 balance = bund.balanceOf(address(this));
        bund.safeTransfer(msg.sender, balance);
        emit emergencyWithdrawal(msg.sender, balance);
    }

    function withdrawProtocolFee() external nonReentrant onlyAdmin {
        uint256 balance = address(this).balance;
        (bool sent, ) = protocolFeeCollector.call{value: balance}("");
        require(sent, "Failed to send Matic");
    }

    receive() external payable {}
}

