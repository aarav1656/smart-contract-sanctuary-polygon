pragma solidity 0.8.17;

import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Multicall.sol";
import "./interfaces/IItemLocker.sol";

contract ItemFactory is AccessControl {
    event NewItemCollectionDeployed(uint256 _type, address _itemCollection);
    event ImplementationSet(uint256 _type, address _implementation);

    mapping(uint256 => address) implementations;

    uint256 private salt;
    IItemLocker public itemLocker;

    constructor(address _admin) {
        _setupRole(DEFAULT_ADMIN_ROLE, _admin);
    }

    function setItemLocker(
        IItemLocker _itemLocker
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        itemLocker = _itemLocker;
    }

    function createItemCollection(
        uint256 _type,
        bytes memory _data
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        address _implementation = implementations[_type];
        require(_implementation != address(0), "Implementation does not exist");
        address _createdContract = Clones.cloneDeterministic(
            _implementation,
            bytes32(salt)
        );
        Address.functionCall(_createdContract, _data);
        salt++;
        if (address(itemLocker) != address(0)) {
            itemLocker.setItem(_createdContract);
        }

        emit NewItemCollectionDeployed(_type, _createdContract);
    }

    function setImplementation(
        uint256 _type,
        address _impl
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        implementations[_type] = _impl;
    }
}

