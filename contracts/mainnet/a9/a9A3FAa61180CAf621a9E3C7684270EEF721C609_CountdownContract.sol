pragma solidity ^0.8.0;



interface IWmatic {
    function deposit() external payable;
}

contract CountdownContract {
    using SafeMath for uint256;
    address payable public owner;
    address public otherContract;
    uint256 public countDownEnd;
    uint256 public balance;
    uint256 public numTransfers;
    uint256 public roundNum;
    address public winner;

    struct Transfer {
        address to;
        uint256 value;
        uint256 date;
    }
    Transfer[] public transfers;

    event Deposit(address indexed from, uint256 value);
    event TransferMade(address indexed to, uint256 value, uint256 date);
    event WinnerSet(address indexed winner);

    constructor(address _otherContract, uint256 _countDownEnd) {
        owner = payable(msg.sender);
        otherContract = _otherContract;
        countDownEnd = _countDownEnd;
        balance = 0;
        numTransfers = 0;
        roundNum = 0;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only owner can call this function.");
        _;
    }

    modifier onlyOtherContract() {
        require(msg.sender == otherContract, "Only other contract can call this function.");
        _;
    }

    modifier onlyOwnerOrContract() {
    require(msg.sender == owner || msg.sender == otherContract, "Only owner or contract can call this function.");
    _;
    }

    function setCountDownEnd(uint256 _countDownEnd) public onlyOwner {
        countDownEnd = _countDownEnd;
    }

    function getBalance() public view returns (uint256) {
        return balance;
    }

    receive() external payable {
        balance = balance.add(msg.value);
    }

    function transfer(address payable _to) public onlyOwnerOrContract {
        require(balance > 0, "Insufficient balance.");
        require(block.timestamp >= countDownEnd, "Countdown is still running.");

        uint256 transferAmount = balance;
        balance = 0;

        _to.transfer(transferAmount);

        transfers.push(Transfer(_to, transferAmount, block.timestamp));
        numTransfers++;
        emit TransferMade(_to, transferAmount, block.timestamp);
    }

    function setOtherContract(address _otherContract) public onlyOwner {
        otherContract = _otherContract;
    }

    function setRoundNum(uint256 _roundNum) public onlyOwner {
        roundNum = _roundNum;
    }

    function getTransfersLength() public view returns (uint256) {
        return transfers.length;
    }

    function getTransfer(uint256 _index) public view returns (address, uint256, uint256) {
        require(_index < transfers.length, "Invalid transfer index.");

        Transfer memory transferData = transfers[_index];
        return (transferData.to, transferData.value, transferData.date);
    }

    function getRemainingTime() public view returns (uint256) {
        if (block.timestamp >= countDownEnd) {
            return 0;
        } else {
            return countDownEnd - block.timestamp;
        }
    }

    function setWinner(address _winner) public onlyOwner {
        winner = _winner;
        emit WinnerSet(_winner);
    }

    function claim() public {
        require(msg.sender == winner, "Only winner can claim.");
        require(balance > 0, "Insufficient balance.");
        uint256 withdrawAmount = balance;
        balance = 0;
        winner = address(0);
        payable(address(msg.sender)).transfer(withdrawAmount);
    }
}