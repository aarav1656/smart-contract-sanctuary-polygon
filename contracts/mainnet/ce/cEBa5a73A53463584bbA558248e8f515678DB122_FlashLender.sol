contract FlashLender is ReentrancyGuard, Ownable {
    using SafeMath for uint256;

    string public version = "0.1";
    uint256 public fee;
    address[] lendingToken;

    constructor(
        uint256 _fee // if you want fee like in aave set to 10009
    ) public {
        fee = _fee;
    }

    function addLendingToken(address token, uint256 amount) external {
        IERC20(token).transferFrom(msg.sender, address(this), amount);
        lendingToken.push(token);
    }

    function flashloan(
        address receiverAddress,
        address[] calldata assets,
        uint256[] calldata amounts,
        uint256[] calldata modes,
        address onBehalfOf,
        bytes calldata params,
        uint16 referralCode
    ) external nonReentrant returns (bool) {
        uint256[] memory initBalances;
        for (uint256 i = 0; i < assets.length; i++) {
            initBalances[i] = (IERC20(assets[i]).balanceOf(address(this)));

            IERC20(assets[i]).transfer(receiverAddress, amounts[i]);
        }
        {
            uint256[] memory premiums;

            // Call the arbitrageur's execute arbitrage method.
            require(
                IFlashLoanReceiver(receiverAddress).executeOperation(
                    assets,
                    amounts,
                    premiums,
                    msg.sender,
                    params
                ),
                "Receiver does not implement executeOperation"
            );
        }

        for (uint256 i = 0; i < assets.length; i++) {
            IERC20(assets[i]).transferFrom(
                receiverAddress,
                address(this),
                amounts[i]
            );
            require(
                (initBalances[i] * fee) / 10000 <=
                    IERC20(assets[i]).balanceOf(address(this)),
                "Funds have not return"
            );
        }
    }

    /**
     * @dev Allow the owner to set the fee.
     * @param _fee Fee to borrow, as a percentage of principal borrowed. 18 decimals of precision (e.g., 10^18 = 100% fee).
     */
    function setFee(uint256 _fee) external onlyOwner {
        fee = _fee;
    }
}

