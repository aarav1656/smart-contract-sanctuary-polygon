contract LegacyExtension is ReentrancyGuard, Pausable {
    mapping(address => bool) isWhitelist;
    IERC1155 internal legacy;
    address legacyStore;
    address owner;

    constructor(IERC1155 _Legacy, address _legacyStore) {
        legacy = _Legacy;
        legacyStore = _legacyStore;
        owner = msg.sender;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only Owner!");
        _;
    }

    function whitelistSend() external whenNotPaused nonReentrant {
        require(isWhitelist[msg.sender] == true);
        legacy.safeTransferFrom(legacyStore, msg.sender, 0, 1, "");
        isWhitelist[msg.sender] = false;
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function pause() external onlyOwner {
        _pause();
    }

    function editWhitelist(address[] memory whitelisted) external onlyOwner {
        for (uint256 i; i < whitelisted.length; ++i) {
            isWhitelist[whitelisted[i]] = true;
        }
    }

    function setOwner(address newOwner) external onlyOwner {
        owner = newOwner;
    }
}