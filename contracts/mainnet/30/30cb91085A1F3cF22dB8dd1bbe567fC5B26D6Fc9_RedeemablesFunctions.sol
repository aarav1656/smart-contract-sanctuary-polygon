pragma solidity ^0.8.0;

import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./Redeemables1155.sol";

import "./IRedeemablesStorage.sol";
import "./IXP.sol";

import "@openzeppelin/contracts-upgradeable/metatx/ERC2771ContextUpgradeable.sol";
import "@openzeppelin/contracts/metatx/MinimalForwarder.sol";

contract RedeemablesFunctions is 
  ERC2771ContextUpgradeable,
  Pausable,
  Ownable 
  {
  using SafeMath for uint256;

  event PurchasedRedeemable(
    bytes32 redeemableId,
    bytes32 projectId,
    bytes32 xpUpdateId,
    uint256 points,
    uint256 amount,
    address redeemer
  );

  event EarnedRedeemable(
    bytes32 redeemableId,
    bytes32 projectId,
    uint256 points,
    uint256 amount,
    address redeemer
  );

  address public storageContract;
  address public xpContract;

  uint256 public fee = 0;

  mapping(bytes32 => mapping(address => bool)) redeemablesEarned;

  constructor(address _storageContract, address _xpContract, MinimalForwarder _trustedForwarder)
    ERC2771ContextUpgradeable(address(_trustedForwarder))
  {
    storageContract = _storageContract;
    xpContract = _xpContract;
  }

  fallback() external payable {}

  function setFee(uint256 _fee) external onlyOwner {
    fee = _fee;
  }

  function pause() external onlyOwner whenNotPaused {
    _pause();
  }

  function unpause() external onlyOwner whenPaused {
    _unpause();
  }

  function _msgSender()
    internal
    view
    virtual
    override(Context, ERC2771ContextUpgradeable)
    returns (address sender)
  {
    sender = ERC2771ContextUpgradeable._msgSender();
  }

  function _msgData()
    internal
    view
    virtual
    override(Context, ERC2771ContextUpgradeable)
    returns (bytes calldata)
  {
    return ERC2771ContextUpgradeable._msgData();
  }

  function purchaseRedeemable(
    bytes32 _xpUpdateId,
    bytes32 _redeemableId,
    bytes32 _projectId
  ) public payable whenNotPaused {
    if (fee > 0) {
      require(msg.value >= fee, "Must pay redemption fee.");
    }

    require(
      IRedeemablesStorage(storageContract).getRedeemableProjectId(
        _redeemableId
      ) == _projectId,
      "Incorrect project ID."
    );

    uint256 amount;
    Status status;
    string memory scoreType;
    string memory actionName;
    uint256 points;
    address contract1155Address;
    uint256 token;
    address creator;

    (
      ,
      token,
      amount,
      ,
      creator,
      points,
      actionName,
      scoreType,
      contract1155Address,
      status,

    ) = IRedeemablesStorage(storageContract).getRedeemable(_redeemableId);

    require(amount > 0, "No redeemables left.");

    require(
      ERC1155(contract1155Address).balanceOf(creator, token) > 0,
      "No redeemables left."
    );

    require(
      status == Status.ActivePurchase,
      "Redeemable is not available for purchase."
    );

    require(
      IXP(xpContract).getScore(_projectId, scoreType, _msgSender()) >= points,
      "XP is lower than required amount."
    );

    ERC1155(contract1155Address).safeTransferFrom(
      creator,
      _msgSender(),
      token,
      1,
      ""
    );

    IXP(xpContract).updateScore(
      _xpUpdateId,
      _projectId,
      actionName,
      scoreType,
      _msgSender()
    );

    _updateRedeemableAmount(_redeemableId, amount);

    emit PurchasedRedeemable(
      _redeemableId,
      _projectId,
      _xpUpdateId,
      points,
      amount.sub(1),
      _msgSender()
    );
  }

  function earnRedeemable(bytes32 _redeemableId, bytes32 _projectId)
    public
    payable
    whenNotPaused
  {
    if (fee > 0) {
      require(msg.value >= fee, "Must pay redemption fee.");
    }

    require(
      IRedeemablesStorage(storageContract).getRedeemableProjectId(
        _redeemableId
      ) == _projectId,
      "Incorrect project ID."
    );
    require(
      redeemablesEarned[_redeemableId][_msgSender()] == false,
      "You have already claimed this redeemable"
    );
    uint256 amount;
    Status status;
    string memory scoreType;
    uint256 points;
    address contract1155Address;
    uint256 token;
    address creator;
    (
      ,
      token,
      amount,
      ,
      creator,
      points,
      ,
      scoreType,
      contract1155Address,
      status,

    ) = IRedeemablesStorage(storageContract).getRedeemable(_redeemableId);
    require(amount > 0, "No redeemables left.");
    require(
      ERC1155(contract1155Address).balanceOf(creator, token) > 0,
      "No redeemables left."
    );
    require(
      status == Status.ActiveEarn,
      "Redeemable is not available to earn."
    );
    require(
      IXP(xpContract).getScore(_projectId, scoreType, _msgSender()) >= points,
      "XP is lower than required amount."
    );
    ERC1155(contract1155Address).safeTransferFrom(
      creator,
      _msgSender(),
      token,
      1,
      ""
    );
    redeemablesEarned[_redeemableId][_msgSender()] = true;
    _updateRedeemableAmount(_redeemableId, amount);
    emit EarnedRedeemable(
      _redeemableId,
      _projectId,
      points,
      amount.sub(1),
      _msgSender()
    );
  }

  function _updateRedeemableAmount(bytes32 _redeemableId, uint256 _amount)
    internal
  {
    uint256 amount = _amount.sub(1);
    IRedeemablesStorage(storageContract).updateRedeemableAmount(
      _redeemableId,
      amount
    );

    if (amount == 0) {
      IRedeemablesStorage(storageContract).updateRedeemableStatus(
        _redeemableId,
        Status.Ended
      );
    }
  }

  function withdraw() external onlyOwner {
    uint256 amount = address(this).balance;

    (bool success, ) = _msgSender().call{value: amount}("");
    require(success, "Failed to send.");
  }

  function getBalance() public view returns (uint256) {
    return address(this).balance;
  }
}

