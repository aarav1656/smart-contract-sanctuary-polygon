  function createRedeemable(
    bytes32 _redeemableId,
    bytes32 _projectId,
    uint256 _token,
    uint256 _amount,
    string memory _name,
    uint256 _points,
    string memory _actionName,
    string memory _scoreType,
    address _contract,
    address _creator,
    bool _requiresPurchase
  ) external;

  function removeRedeemable(bytes32 _redeemableId) external;

  function pauseRedeemable(bytes32 _redeemableId) external;

  function updateRedeemableAction(
    bytes32 _redeemableId,
    uint256 _points,
    string memory _actionName,
    string memory _scoreType
  ) external;

  function updateRedeemableAmount(bytes32 _redeemableId, uint256 _amount)
    external;

  function updateRedeemableStatus(bytes32 _redeemableId, Status _status)
    external;

  function getRedeemableProjectId(bytes32 _redeemableId)
    external
    view
    returns (bytes32 _projectId);

  function getRedeemable(bytes32 _redeemableId)
    external
    view
    returns (
      bytes32 _projectId,
      uint256 _token,
      uint256 _amount,
      string memory _name,
      address _creator,
      uint256 _points,
      string memory _actionName,
      string memory _scoreType,
      address _contract,
      Status _status,
      bool _requiresPurchase
    );
}

