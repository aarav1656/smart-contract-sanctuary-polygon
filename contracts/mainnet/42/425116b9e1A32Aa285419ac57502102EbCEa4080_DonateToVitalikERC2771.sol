import {
    ERC2771Context
} from "@gelatonetwork/relay-context/contracts/vendor/ERC2771Context.sol";

import {Address} from "@openzeppelin/contracts/utils/Address.sol";
import {_MSG_SENDER, VITALIK} from "./constants/Addresses.sol";

// Importing GelatoRelayContext gives access to:
// 1. onlyGelatoRelayModifier
// 2. payment methods, i.e. _transferRelayFee
// 3. _getFeeCollector(), _getFeeToken(), _getFee()
contract DonateToVitalikERC2771 is ERC2771Context {
    using Address for address payable;

    constructor(address _trustedForwarder) ERC2771Context(_trustedForwarder) {}

    function sendToVitalikERC2771() external {
        // Payment to Gelato
        require(_msgSender() == _MSG_SENDER, "Not correct _msgSender()");

        // transfer of tokens
        payable(VITALIK).sendValue(10000000000000000);
    }
}

