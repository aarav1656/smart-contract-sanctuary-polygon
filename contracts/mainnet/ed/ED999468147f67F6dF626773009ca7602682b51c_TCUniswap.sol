        bytes memory path,
        address tokenIn,
        uint256 amountIn,
        address tokenOut,
        uint256 minAmountOut
    ) external nonReentrant returns (uint256 amountOut) {
        (address decodedTokenIn, address decodedTokenOut) = path.decodeTokens();
        require(decodedTokenIn == tokenIn, "Invalid First Token");
        require(decodedTokenOut == tokenOut, "Invalid Last Token");
        amountOut = swap(path, amountIn, minAmountOut, msg.sender);
