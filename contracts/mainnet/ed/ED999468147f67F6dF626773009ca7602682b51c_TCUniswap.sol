    using TCPath for bytes;

    address public constant SWAP_ROUTER_ADDRESS =
        0xE592427A0AEce92De3Edee1F18E0157C05861564;
    ISwapRouter internal constant SWAP_ROUTER =
        ISwapRouter(SWAP_ROUTER_ADDRESS);

    address public constant QUOTER_ADDRESS =
        0x61fFE014bA17989E743c5F6cB21bF9697530B21e;
    IQuoterV2 internal constant QUOTER = IQuoterV2(QUOTER_ADDRESS);

    event Swapped(
        bytes path,
        address tokenIn,
        uint256 amountIn,
        address tokenOut,
        uint256 amountOut,
        address sender,
        uint256 timestamp
    );

    function swap(
        bytes memory path,
        uint256 amountIn,
        uint256 minAmountOut,
        address recipient
    ) public nonReentrant returns (uint256 amountOut) {
        (address tokenIn, address tokenOut) = path.decodeTokens();
        IERC20(tokenIn).transferFrom(recipient, address(this), amountIn);
        IERC20(tokenIn).approve(SWAP_ROUTER_ADDRESS, amountIn);

        ISwapRouter.ExactInputParams memory params = ISwapRouter
            .ExactInputParams({
                path: path,
                recipient: recipient,
                deadline: block.timestamp,
                amountIn: amountIn,
                amountOutMinimum: minAmountOut
            });

        // Executes the swap.
        amountOut = SWAP_ROUTER.exactInput(params);
        emit Swapped(
            path,
            tokenIn,
            amountIn,
            tokenOut,
            amountOut,
            recipient,
            block.timestamp
        );
    }

