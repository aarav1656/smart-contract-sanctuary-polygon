pragma solidity 0.8.15;

import '@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol';
import '@openzeppelin/contracts/security/ReentrancyGuard.sol';
import './Libraries/TransferHelper.sol';

contract ClaimContract is ReentrancyGuard {
    struct Claimer {
        address claimerAddress;
        uint256 amount;
        bool isClaimed;
    }

    struct ClaimerInputData {
        address claimerAddress;
        uint256 amount;
    }

    address private _token;
    address private _owner;
    uint256 private _totalAmount;
    mapping(address => Claimer) private _claimers;

    event Claimed(address indexed claimer, address token, uint256 amount);

    constructor(address _tokenAddress, ClaimerInputData[] memory _claimersInput) {
        require(IERC20Metadata(_tokenAddress).totalSupply() != 0, 'Error: invalid token');
        uint len = _claimersInput.length;
        require(len != 0, 'Error: invalid claimers list');
        uint256 totalAmount = 0;
        for (uint i = 0; i < len; ++i) {
            _claimers[_claimersInput[i].claimerAddress] = Claimer({
                claimerAddress: _claimersInput[i].claimerAddress,
                amount: _claimersInput[i].amount,
                isClaimed: false
            });
            totalAmount += _claimersInput[i].amount;
        }
        require(totalAmount != 0, 'Error: invalid claim amount');
        _totalAmount = totalAmount;
        _token = _tokenAddress;
        _owner = msg.sender;
    }

    function claim() external nonReentrant {
        Claimer storage claimer = _claimers[msg.sender];
        require(!claimer.isClaimed, 'Error: already claimed');
        require(claimer.amount != 0, 'Error: nothing to claim');
        require(
            IERC20Metadata(_token).allowance(_owner, address(this)) >= _totalAmount,
            'Error: owner must approve tokens'
        );

        claimer.isClaimed = true;
        uint256 tempAmount = claimer.amount;
        claimer.amount = 0;
        _totalAmount -= tempAmount;

        TransferHelper.safeTransferFrom(_token, _owner, msg.sender, tempAmount);
        emit Claimed(msg.sender, _token, tempAmount);
    }
}

