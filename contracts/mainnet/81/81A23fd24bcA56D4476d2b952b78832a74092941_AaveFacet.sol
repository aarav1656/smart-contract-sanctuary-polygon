interface IProtocolDataProvider {
    function getUserReserveData(address reserve, address user) external view returns (uint256 currentATokenBalance);

    function getReserveConfigurationData(
        address asset
    )
        external
        view
        returns (
            uint256 decimals,
            uint256 ltv,
            uint256 liquidationThreshold,
            uint256 liquidationBonus,
            uint256 reserveFactor,
            bool usageAsCollateralEnabled,
            bool borrowingEnabled,
            bool stableBorrowRateEnabled,
            bool isActive,
            bool isFrozen
        );
}

interface IPriceOracle {
    function latestAnswer() external view returns (int256);

    function decimals() external view returns (uint256);
}

contract AaveFacet is Modifiers {
    function getAaveRewards(
        address[] memory _tokens
    ) public view returns (uint256[] memory _rewardsLending, uint256[] memory _rewardsBorrowing) {
        _rewardsLending = new uint256[](_tokens.length);
        _rewardsBorrowing = new uint256[](_tokens.length);

        (, int256 maticPrice, , , ) = AggregatorV3Interface(s.priceFeeds[MATIC]).latestRoundData();

        for (uint256 i = 0; i < _tokens.length; i++) {
            (, int256 tokenPrice, , , ) = AggregatorV3Interface(s.priceFeeds[_tokens[i]]).latestRoundData();

            // Lending Data
            {
                IERC20Metadata token_ = IERC20Metadata(s.aTokensV2[_tokens[i]]);
                uint256 totalSupply = formatDecimals(address(token_), token_.totalSupply());

                (uint256 emissionPerSecond, , ) = IAaveIncentives(AAVE_INCENTIVES).assets(address(token_));

                if (emissionPerSecond > 0) {
                    _rewardsLending[i] =
                        (emissionPerSecond * uint256(maticPrice) * 365 days * 1 ether) /
                        (totalSupply * uint256(tokenPrice));
                }
            }

            // Borrowing Data
            {
                IERC20Metadata token_ = IERC20Metadata(s.vTokensV2[_tokens[i]]);
                uint256 totalSupply = formatDecimals(address(token_), token_.totalSupply());

                (uint256 emissionPerSecond, , ) = IAaveIncentives(AAVE_INCENTIVES).assets(address(token_));

                if (emissionPerSecond > 0) {
                    _rewardsBorrowing[i] =
                        (emissionPerSecond * uint256(maticPrice) * 365 days * 1 ether) /
                        (totalSupply * uint256(tokenPrice));
                }
            }
        }
    }

    function getAaveBalanceV2(address token, address account) public view returns (uint256) {
        address _token = token == MATIC ? WMATIC : token;
        (, , , , , , , , bool isActive, ) = IProtocolDataProvider(AAVE_DATA_PROVIDER).getReserveConfigurationData(
            _token
        );

        if (!isActive) return 0;

        return IProtocolDataProvider(AAVE_DATA_PROVIDER).getUserReserveData(_token, account);
    }

    function _getOraclePrice(address oracle) internal view returns (uint256) {
        uint amount = uint(IPriceOracle(oracle).latestAnswer());
        uint decimals = IPriceOracle(oracle).decimals();

        if (decimals == 18) return amount;
        else return (amount * 1 ether) / (10 ** decimals);
    }

    function getAaveRewardsV3(address asset) external view returns (uint amtUsdPerYear, address[] memory rewards) {
        IAaveRewardsController rewardsController = IAaveRewardsController(0x929EC64c34a17401F460460D4B9390518E5B473e);

        rewards = rewardsController.getRewardsByAsset(asset);

        address reward;
        address oracle;
        uint price;
        uint emissionsPerSecond;
        uint distributionEnd;

        for (uint i = 0; i < rewards.length; i++) {
            reward = rewards[i];

            oracle = rewardsController.getRewardOracle(reward);
            price = _getOraclePrice(oracle);
            (, emissionsPerSecond, , distributionEnd) = rewardsController.getRewardsData(asset, reward);

            if (distributionEnd > block.timestamp) {
                amtUsdPerYear += (emissionsPerSecond * price * 365 days) / 1 ether;
            }
        }
    }
}

