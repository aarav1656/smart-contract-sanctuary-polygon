import "v3-periphery/interfaces/ISwapRouter.sol";
import "v3-periphery/libraries/TransferHelper.sol";
import "solmate/auth/Owned.sol";

contract IBANovich is Owned {
  ISwapRouter public constant swapRouter = ISwapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);
  address public immutable EURE;
  address public immutable DPI;
  uint24 public constant feeTier = 3000;

  mapping(bytes32 => uint256) public balances;
  mapping(bytes32 => bool) public isOrderProcessed;

  event Deposit(bytes32 indexed depositor, uint256 amount);
  event Withdraw(bytes32 indexed depositor, uint256 amount);

  error orderAlreadyProcessed();

  modifier orderNotProcessed(bytes32 orderId) {
    if (isOrderProcessed[orderId]) {
      revert orderAlreadyProcessed();
    }
    isOrderProcessed[orderId] = true;
    _;
  }

  constructor(address _EURE, address _DPI) Owned(msg.sender) {
    EURE = _EURE;
    DPI = _DPI;
    TransferHelper.safeApprove(EURE, address(swapRouter), type(uint256).max);
    TransferHelper.safeApprove(DPI, address(swapRouter), type(uint256).max);
  }

  function deposit(
    bytes32 orderId,
    bytes32 depositor,
    uint256 amount
  ) external onlyOwner orderNotProcessed(orderId) {
    TransferHelper.safeTransferFrom(EURE, owner, address(this), amount);
    uint256 amountOut = swap42(EURE, DPI, amount, address(this));
    balances[depositor] += amountOut;
    emit Deposit(depositor, amount);
  }

  function withdraw(
    bytes32 orderId,
    bytes32 depositor
  ) external onlyOwner orderNotProcessed(orderId) returns (uint256 amountOut) {
    amountOut = swap42(DPI, EURE, balances[depositor], owner);
    delete balances[depositor];
    emit Withdraw(depositor, amountOut);
  }

  function swap42(
    address tokenIn,
    address tokenOut,
    uint256 amountIn,
    address recipient
  ) internal returns (uint256 amountOut) {
    ISwapRouter.ExactInputSingleParams memory params = ISwapRouter.ExactInputSingleParams({
      tokenIn: tokenIn,
      tokenOut: tokenOut,
      fee: feeTier,
      recipient: recipient,
      deadline: block.timestamp,
      amountIn: amountIn,
      amountOutMinimum: 0,
      sqrtPriceLimitX96: 0
    });
    amountOut = swapRouter.exactInputSingle(params);
  }
}