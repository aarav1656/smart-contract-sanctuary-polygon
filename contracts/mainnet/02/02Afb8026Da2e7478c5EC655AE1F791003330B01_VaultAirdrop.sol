contract VaultAirdrop is Ownable {
    struct Allocation {
        address accountAddress;
        uint256 amount;
    }

    IERC4626 public vault;
    uint256 public totalAssetAmount;
    uint256 public totalSharesAmount;

    constructor(address _vault) {
        vault = IERC4626(_vault);
        IERC20(vault.asset()).approve(_vault, type(uint256).max);
    }

    /**
     * @dev Requirement: Exact amount of main token should be transferred to the contract before calling this function
     *
     */
    function deposit() external onlyOwner {
        totalAssetAmount = IERC20(vault.asset()).balanceOf(address(this));
        vault.deposit(totalAssetAmount, address(this));
        totalSharesAmount = IERC20(address(vault)).balanceOf(address(this));
    }

    /**
     * @dev Requirement: deposit() function should be called before distributing shares.
     *  Function will revert if the amount of shares to be distributed to accounts is greater than contract's balance
     *  of shares.
     *
     */
    function distributeShares(
        Allocation[] calldata _allocations
    ) external onlyOwner {
        uint256 length = _allocations.length;
        IERC20 vaultToken = IERC20(address(vault));

        for (uint256 i = 0; i < length; ) {
            uint256 amount = (((_allocations[i].amount * 1e18) /
                totalAssetAmount) * totalSharesAmount) / 1e18;
            vaultToken.transfer(_allocations[i].accountAddress, amount);

            unchecked {
                ++i;
            }
        }
    }

    function recoverERC20(address _tokenAddress) external onlyOwner {
        IERC20 token = IERC20(_tokenAddress);
        token.transfer(owner(), token.balanceOf(address(this)));
    }
}

