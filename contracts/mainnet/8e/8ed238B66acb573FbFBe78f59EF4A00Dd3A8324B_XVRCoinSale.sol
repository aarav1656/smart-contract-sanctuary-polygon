    }

    function toPaddedString(uint256 value, uint256 outputLength)
        internal
        pure
        returns (string memory)
    {
        uint256 numberLength = Math.log10(value) + 1;
        uint256 padLength = outputLength - numberLength;

        bytes memory buffer = new bytes(padLength);

        for (uint256 i = 0; i < padLength; i++) {
            buffer[i] = "0";
        }

        return string(abi.encodePacked(buffer, value.toString()));
    }
