            purchasedAmount = usdSent * tokenPrice;
        }

        emit BuyTokens(msg.sender, value, usdSent, purchasedAmount);

        return purchasedAmount;
    }

    // this function takes in the purchased amount of tokens
    // and returns the new amount of tokens (with affiliate bonus)
    // it also transfers the right percentage of tokens to the influencer
    function _proceedWithAffiliation(
        uint256 purchasedAmount,
        address influencer,
        uint256 influencerPercentage, // 10000 = 100%
        uint256 extraPercentage, // 10000 = 100%
        bytes32 r,
        bytes32 s,
        uint8 v
    ) internal returns (uint256) {
        // Check if the signature is valid
        // message = `${influencerAddress}${influencerPercentage}${extraPercentage}`
        // length = 42 + 5 + 5 = 52
        bytes32 msgHash = keccak256(
            abi.encodePacked(
                "\x19Ethereum Signed Message:\n52",
                influencer.toHexString(),
                toPaddedString(influencerPercentage, 5),
                toPaddedString(extraPercentage, 5)
            )
        );
        address signer = ECDSA.recover(msgHash, v, r, s);
        require(signer == owner(), "Invalid affiliation signature");

        // Transfer the right percentage of tokens to the influencer
        // (ignore the return value because we don't care if the transfer fails)
        uint256 influencerAmount = (msg.value * influencerPercentage) / 10000;
        bool _ignored = payable(influencer).send(influencerAmount);
        _ignored = _ignored;

        // Return the new amount of tokens (with affiliate bonus)
        uint256 extraAmount = (purchasedAmount * extraPercentage) / 10000;
        return purchasedAmount + extraAmount;
    }

