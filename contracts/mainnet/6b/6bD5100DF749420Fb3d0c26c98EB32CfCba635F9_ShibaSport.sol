    uint256 public minBetAmount; // minimum betting amount (denominated in wei)

    mapping(address => bool) private operators;
    mapping(uint256 => address) private providersIds;

    event NewProvider(
        address sportAddress,
        uint256 league,
        uint256 sportType,
        string leagueName
    );
    event RemoveProvider(address sportAddress);
    event Bet(
        address player,
        uint256 betAmount,
        address provider,
        uint256 gameIndex,
        uint256 betType
    );

    constructor(address _link, address _bank) {
        operators[msg.sender] = true;
        linkToken = IERC20(_link);
        bank = IShibaBank(_bank);
        minBetAmount = 5000 ether;
        treasuryFee = 300;
    }

    //---------- Modifiers ------------//
    modifier onlyOperator() {
        require(operators[_msgSender()], "Only Operator");
        _;
    }

    modifier onlySportProvider() {
        require(sportsProviders.contains(_msgSender()), "Only Sport Provider");
        _;
    }

    modifier notContract() {
        require(!_isContract(msg.sender), "Contract not allowed");
        require(msg.sender == tx.origin, "Proxy contract not allowed");
        _;
    }

    function unsafeInc(uint256 x) private pure returns (uint256) {
        unchecked {
            return x + 1;
        }
    }

    /**
     * @notice Check if an address is a contract
     */
    function _isContract(address _addr) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(_addr)
        }
        return size > 0;
    }

    function isOperator(address _operator) external view returns (bool) {
        return operators[_operator];
    }

    function getSportProviderLength() external view returns (uint256) {
        return sportsProviders.length();
    }

    function getSportProviderAtIndex(uint256 _index)
        external
        view
        returns (address)
    {
        return sportsProviders.at(_index);
    }

    function editSportProvider(
        address _sport,
        bool _add,
        uint256 _league,
        uint256 _sportType,
        string calldata _leagueName
    ) external onlyOwner {
        if (_add) {
            providersIds[_sportType] = _sport;
            sportsProviders.add(_sport);
            emit NewProvider(_sport, _league, _sportType, _leagueName);
        } else {
            delete providersIds[_sportType];
            sportsProviders.remove(_sport);
            emit RemoveProvider(_sport);
        }
    }

    function createEventsOfGames(uint256 _epoch, uint256[] memory _ids)
        external
        override
        onlyOperator
    {
        uint256 gamesLength = _ids.length;

        if (gamesLength > 0) {
            for (uint256 i = 0; i < gamesLength; i = unsafeInc(i)) {
                address provider = providersIds[_ids[i]];
                if (provider != address(0)) {
                    IShibaSportGame game = IShibaSportGame(provider);
                    game.createEvents(_epoch);
                }
            }
        }
    }

    function createEventsOfAllGames(uint256 _epoch)
        external
        override
        onlyOperator
    {
        uint256 providersLength = sportsProviders.length();

        for (uint256 i = 0; i < providersLength; i = unsafeInc(i)) {
            IShibaSportGame game = IShibaSportGame(sportsProviders.at(i));
            game.createEvents(_epoch);
        }
    }

    function updateEventsOfGames(uint256 _epoch, uint256[] memory _ids)
        external
        override
        onlyOperator
    {
        require(_epoch <= block.timestamp, "Invalid timestamp");

        uint256 gamesLength = _ids.length;

        if (gamesLength > 0) {
            for (uint256 i = 0; i < gamesLength; i = unsafeInc(i)) {
                address provider = providersIds[_ids[i]];
                if (provider != address(0)) {
                    IShibaSportGame game = IShibaSportGame(provider);
                    game.updateEvents(_epoch);
                }
            }
        }
    }

    function updateEventsOfAllGames(uint256 _epoch)
        external
        override
        onlyOperator
    {
        require(_epoch <= block.timestamp, "Invalid timestamp");

        uint256 providersLength = sportsProviders.length();

        for (uint256 i = 0; i < providersLength; i = unsafeInc(i)) {
            IShibaSportGame game = IShibaSportGame(sportsProviders.at(i));
            game.updateEvents(_epoch);
        }
    }

    function betInGame(
        uint256 _betAmount,
        address _provider,
        uint256 _gameIndex,
        uint256 _betType
    ) external override nonReentrant whenNotPaused notContract {
        require(_betAmount >= minBetAmount, "Amount too low");

        IShibaSportGame game = IShibaSportGame(_provider);
        game.bet(_betAmount, _gameIndex, msg.sender, _betType);
        bank.spendCredits(msg.sender, _betAmount, false);

        emit Bet(msg.sender, _betAmount, _provider, _gameIndex, _betType);
    }

    function claimGame(
        address _provider,
        uint256 _gameIndex,
        uint256 _betIndex
    ) external nonReentrant whenNotPaused {
        IShibaSportGame game = IShibaSportGame(_provider);
        game.claim(msg.sender, _gameIndex, _betIndex);
    }

    function distributionOfGames() external override onlyOperator {
        uint256 providersLength = sportsProviders.length();
        uint256 treasuryAmount;

        for (uint256 i = 0; i < providersLength; i = unsafeInc(i)) {
            IShibaSportGame game = IShibaSportGame(sportsProviders.at(i));
            treasuryAmount += game.distribution(treasuryFee);
        }

        if (treasuryAmount > 0) {
            bank.loseCredits(treasuryAmount);
        }
    }

    function bankDistribution(
        address _player,
        uint256 _baseAmount,
        uint256 _amount,
        bool _win
    ) external override onlySportProvider {
        if (_win) {
            bank.winCredits(_player, _amount, _baseAmount);
        } else {
            bank.loseCredits(_amount);
        }
    }

    function fundGame(uint256 _amount, uint256 _index)
        external
        override
        onlyOwner
    {
        linkToken.transfer(sportsProviders.at(_index), _amount);
    }

    function fundGames(uint256 _amount) external override onlyOwner {
        uint256 providersLength = sportsProviders.length();
        uint256 amountPerGame = _amount / providersLength;

        for (uint256 i = 0; i < providersLength; i = unsafeInc(i)) {
            linkToken.transfer(sportsProviders.at(i), amountPerGame);
        }
    }

    function setTreasuryFee(uint256 _treasuryFee) external onlyOwner {
        require(_treasuryFee <= MAX_TREASURY_FEE, "Treasury fee too high");
        treasuryFee = _treasuryFee;
    }

    function setMinBetAmount(uint256 _minBetAmount) external onlyOwner {
        require(_minBetAmount != 0, "Must be superior to 0");
        minBetAmount = _minBetAmount;
    }

    function setOperator(address _operator, bool _set) external onlyOwner {
        operators[_operator] = _set;
    }

    /**
     * @notice Function for pause and unpause the contract.
     */
    function togglePause() external onlyOwner {
        paused() ? _unpause() : _pause();
    }

    function getTreasuryFee() external view override returns (uint256) {
        return treasuryFee;
    }
}