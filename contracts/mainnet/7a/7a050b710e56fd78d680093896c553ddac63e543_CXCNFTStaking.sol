// File: contracts/CyberStaking.sol


pragma solidity ^0.8.0;



interface CXCNFT {
    function balanceOf(address wallet, uint256 tokenID) external view returns (uint256 balance);
    function safeTransferFrom(address from, address to, uint256 tokenID, uint256 amount, bytes memory data) external;
}

contract CXCNFTStaking is ERC1155Holder {

    using SafeMath for uint256;
    address private immutable cyberMaster = 0xfd35157936dBdA64034D83eA93Fa6F861006fd03;
    address private immutable nftContract = 0xD876c35F4E37E6B1f8744909eC4fbD0a3d0180bc;

    uint256 public startTime;
    uint256 public lastDistribute;
    uint256 private immutable timeStep = 1 days;

    uint256 private totalStaked;
    mapping(address => mapping(uint256 => uint256)) private stakedTokenByID;

    uint256 public unclaimedCounter = 0;
    mapping(uint256 => address[]) private dailyScorer;
    mapping(uint256 => uint256) public dailyRewardPool;
    mapping(uint256 => uint256) public dailyBaseReward;
    mapping(address => mapping(uint256 => uint256)) public myDailyScore;

    event Funds(uint256 day, address from, uint256 amount, uint256 timestamp);

    receive() external payable {
        uint256 day = getCurDay();
        dailyRewardPool[day] += msg.value;
        emit Funds(day, msg.sender, msg.value, block.timestamp);
    }

    fallback() external payable {}

    constructor (
        uint256 _startTime
    ) {
        startTime = _startTime;
        lastDistribute = _startTime;
    }

    function stakeToken(uint256 tokenID, uint256 amount) external {
        require(CXCNFT(nftContract).balanceOf(msg.sender, tokenID) > 0, "No NFT available for staking.");
        CXCNFT(nftContract).safeTransferFrom(msg.sender, address(this), tokenID, amount, "0x");
        stakedTokenByID[msg.sender][tokenID] += amount;
        totalStaked += amount;
    }

    function unstakeToken(uint256 tokenID, uint256 amount) external {
        require(stakedTokenByID[msg.sender][tokenID] - amount >= 0, "No staked NFT found for this token ID.");
        uint256 today = getCurDay();
        require(myDailyScore[msg.sender][today] == 0, "Cannot unstake any token until tomorrow.");
        CXCNFT(nftContract).safeTransferFrom(address(this), msg.sender, tokenID, amount, "0x");
        stakedTokenByID[msg.sender][tokenID] -= amount;
        totalStaked -= amount;
    }

    function setDailyScore() external {
        uint256 today = getCurDay();
        require(myDailyScore[msg.sender][today] == 0, "This wallet already set a score for today.");
        for (uint256 i = 1; i <= 101; i++) {
            myDailyScore[msg.sender][today] += stakedTokenByID[msg.sender][i];
        }
        dailyScorer[today].push(msg.sender);
    }

    function calculateBaseReward() external {
        if (block.timestamp >= lastDistribute.add(timeStep)) {
            uint256 today = getCurDay();
            dailyBaseReward[today.sub(1)] = dailyRewardPool[today.sub(1)].div(totalStaked);
            lastDistribute = startTime.add(today.mul(timeStep));
        }
    }

    function claim() external {
        uint256 today = getCurDay();
        require(myDailyScore[msg.sender][today.sub(1)] > 0, "No reward available.");
        uint256 claimable = myDailyScore[msg.sender][today.sub(1)].mul(dailyBaseReward[today.sub(1)]);
        require(dailyRewardPool[today.sub(1)] >= claimable, "Insufficinet balance for this claim.");
        (bool claimReward, ) = payable(msg.sender).call{value: claimable}("");
        require(claimReward, "Claim reward failed.");
        myDailyScore[msg.sender][today.sub(1)] = 0;
        dailyRewardPool[today.sub(1)] -= claimable;
    }

    function transferUnclaimedReward() external {
        require(getCurDay() > 2, "Unclaimed reward not yet valid.");
        uint256 totalUnclaimed = 0;
        for (uint256 i = unclaimedCounter; i < getCurDay().sub(2); i++) {
            totalUnclaimed += dailyRewardPool[i];
            dailyRewardPool[i] = 0;
            unclaimedCounter++;
        }
        (bool transferUnclaimed, ) = payable(cyberMaster).call{value: totalUnclaimed}("");
        require(transferUnclaimed, "Transfer unclaimed reward failed.");
    }

    function getCurDay() public view returns(uint256) {
        return (block.timestamp.sub(startTime)).div(timeStep);
    }

    function getTotalStaked() public view returns(uint256) {
        return totalStaked;
    }

    function getStakedTokenByID(address wallet, uint256 tokenID) public view returns(uint256) {
        return stakedTokenByID[wallet][tokenID];
    }

    function getScorerByDay(uint256 day) public view returns(address[] memory) {
        return dailyScorer[day];
    }

}