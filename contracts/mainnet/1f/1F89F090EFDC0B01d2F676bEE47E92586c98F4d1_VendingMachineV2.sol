pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./interfaces/IERC1155MinterCreator.sol";
import "./interfaces/IVendingMachineV2.sol";

contract VendingMachineV2 is IVendingMachineV2, Ownable, Pausable {
  using SafeMath for uint256;

  address public manager;
  mapping(address => mapping(uint256 => Item)) public items;
  mapping(address => mapping(uint256 => uint256)) public totalMints;
  mapping(address => mapping(uint256 => mapping(address => uint256))) public mintsPerWallet;

  constructor() {
    manager = _msgSender();
  }

  function pause() external onlyOwner {
    _pause();
  }

  function unpause() external onlyOwner {
    _unpause();
  }

  function setManager(address _manager) external onlyOwner {
    manager = _manager;
  }

  function setItem(
    address _contractAddress,
    uint256 _tokenId,
    Item calldata item
  ) external onlyOwner {
    items[_contractAddress][_tokenId] = item;
  }

  function setMintable(
    address _contractAddress,
    uint256 _tokenId,
    bool _mintable
  ) external onlyOwner {
    Item storage item = items[_contractAddress][_tokenId];
    item.mintable = _mintable;
  }

  function mint(
    address _contractAddress,
    uint256 _tokenId,
    uint256 _amount
  ) external payable whenNotPaused {
    address minter = _msgSender();

    Item memory item = items[_contractAddress][_tokenId];
    uint256 totalPrice = item.price.mul(_amount);
    uint256 totalShare = item.share.mul(_amount);

    // Check mintable.
    require(item.mintable, "not mintable");

    // Check price.
    require(msg.value == totalPrice, "insufficient amount of eth");
    require(totalPrice >= totalShare, "share must be less than or equal to price");

    // Check amount.
    if (item.totalMax != 0) {
      require(totalMints[_contractAddress][_tokenId].add(_amount) <= item.totalMax, "too many mints in total");
    }
    if (item.walletMax != 0) {
      require(mintsPerWallet[_contractAddress][_tokenId][minter].add(_amount) <= item.walletMax, "too many mints per wallet");
    }

    // Check timestamps.
    require(item.startDate == 0 || item.startDate <= block.timestamp, "before start date");
    require(item.endDate == 0 || block.timestamp < item.endDate, "after end date");

    if (totalPrice != 0) {
      uint256 managerShare = totalPrice.sub(totalShare);
      (bool successManager, ) = manager.call{value: managerShare}("");
      require(successManager, "failed to send to manager");
    }

    if (totalShare != 0) {
      require(item.partner != address(0), "partner is not set");
      (bool successPartner, ) = item.partner.call{value: totalShare}("");
      require(successPartner, "failed to send to partner");
    }

    IERC1155MinterCreator(_contractAddress).mint(minter, _tokenId, _amount, new bytes(0));

    totalMints[_contractAddress][_tokenId] = totalMints[_contractAddress][_tokenId].add(_amount);
    mintsPerWallet[_contractAddress][_tokenId][minter] = mintsPerWallet[_contractAddress][_tokenId][minter].add(_amount);
  }

  function setCreator(
    address _contractAddress,
    address _to,
    uint256[] memory _ids
  ) external onlyOwner {
    IERC1155MinterCreator(_contractAddress).setCreator(_to, _ids);
  }

  function directMint(
    address _contractAddress,
    address _to,
    uint256 _id,
    uint256 _quantity,
    bytes memory _data
  ) external onlyOwner {
    IERC1155MinterCreator(_contractAddress).mint(_to, _id, _quantity, _data);
  }

  function setTotalMints(
    address _contractAddress,
    uint256 _tokenId,
    uint256 _value
  ) external onlyOwner {
    totalMints[_contractAddress][_tokenId] = _value;
  }

  function setMintsPerWallet(
    address _contractAddress,
    uint256 _tokenId,
    address _minter,
    uint256 _value
  ) external onlyOwner {
    mintsPerWallet[_contractAddress][_tokenId][_minter] = _value;
  }
}

