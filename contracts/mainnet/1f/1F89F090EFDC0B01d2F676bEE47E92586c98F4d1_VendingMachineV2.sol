pragma solidity ^0.8.9;

interface IVendingMachineV2 {
  struct Item {
    bool mintable;
    uint256 totalMax;
    uint256 walletMax;
    uint256 startDate;
    uint256 endDate;
    uint256 price;
    address partner;
    uint256 share;
  }

  function mint(
    address _contractAddress,
    uint256 _tokenId,
    uint256 _amount
  ) external payable;

  function setCreator(
    address _to,
    address _contractAddress,
    uint256[] memory _tokenIds
  ) external;
}

