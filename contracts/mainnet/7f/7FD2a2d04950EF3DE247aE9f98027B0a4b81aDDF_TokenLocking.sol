contract TokenLocking is Ownable, Pausable {

    using SafeMath for uint256;
    address public token;

  struct Account {
    address user_address;
    uint256 stake_amt;
    uint256 return_amt;
    uint256 current_timestamp;
    uint256 release_timestamp;
  }

  
  mapping(address => Account) private userTx;

    constructor(address _token) public {
       token = _token;
    }

    function getToken() external view returns (address) {
        return token;
    }

    function deposit (uint256 amount, uint256 return_amt, uint256 release_timestamp ) external {
      userTx[msg.sender] = Account(
        msg.sender,
        amount,
        return_amt,
        block.timestamp,
        release_timestamp
      );
      IBEP20(token).transferFrom(msg.sender, address(this),amount);
    }
    
    function withdraw (uint256 amount) public onlyOwner whenNotPause payable returns (bool){
        Account storage data = userTx[msg.sender];
        if(data.release_timestamp < block.timestamp)
        {
          address payable to = address(uint160(data.user_address));
          IBEP20(token).transfer(to, amount);
        }
    }

