pragma solidity ^0.8.4;

import "@openzeppelin/contracts/finance/VestingWallet.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import "@openzeppelin/contracts/access/IAccessControlEnumerable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./CGuysV1AccessControlled.sol";

contract CGuysV1Vesting is VestingWallet, CGuysV1AccessControlled {

    IUniswapV2Router02 public uniswapRouter;
    address internal constant UNISWAP_ROUTER_ADDRESS = 0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff; // QuickSwap

    address tokenIn = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174; // USDC POLYGON
    address tokenOut = 0x5500B442Bbc4A688eafFb1909f11aed087b74B5f; // CGUY POLYGON

    //    address tokenIn = 0xe11A86849d99F524cAC3E7A0Ec1241828e332C62; // USDC MUMBAI
    //    address tokenOut = 0x1e6E33341b87874d42D4D681ba5A5301423cF9DB; // CGUY MUMBAI

    constructor(
        address beneficiaryAddress,
        uint64 startTimestamp,
        uint64 durationSeconds,
        address _authority
    )
    VestingWallet(
        beneficiaryAddress,
        startTimestamp,
        durationSeconds)
    CGuysV1AccessControlled(_authority){
        uniswapRouter = IUniswapV2Router02(UNISWAP_ROUTER_ADDRESS);
    }

    receive() external payable override {}

    function getEstimatedTokenExchange(uint amount) public view returns (uint[] memory) {
        address[] memory path = new address[](2);
        path[0] = tokenIn;
        path[1] = tokenOut;
        return uniswapRouter.getAmountsOut(amount, path);
    }

    function performeSwap(uint amountIn, uint amountOutMin) external onlyPerceval {
        address[] memory path = new address[](2);
        path[0] = tokenIn;
        path[1] = tokenOut;
        require(IERC20(tokenIn).approve(UNISWAP_ROUTER_ADDRESS, amountIn), 'approve failed.');
        uniswapRouter.swapExactTokensForTokens(amountIn, amountOutMin, path, address(this), block.timestamp);
    }
}

