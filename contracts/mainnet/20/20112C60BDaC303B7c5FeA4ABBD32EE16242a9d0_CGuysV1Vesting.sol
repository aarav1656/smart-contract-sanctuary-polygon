        require(authority.hasRole(TRISTAN, msg.sender), UNAUTHORIZED);
        _;
    }

    function isArthur() public view returns (bool) {
        return authority.hasRole(ARTHUR, msg.sender);
    }

    function isLancelot() public view returns (bool) {
        return authority.hasRole(LANCELOT, msg.sender);
    }

    function isPerceval() public view returns (bool) {
        return authority.hasRole(PERCEVAL, msg.sender);
    }

    function isTristan() public view returns (bool) {
        return authority.hasRole(TRISTAN, msg.sender);
    }
}

