        require(authority.hasRole(ARTHUR, msg.sender), UNAUTHORIZED);
        _;
    }

    modifier onlyLancelot() {
        require(authority.hasRole(LANCELOT, msg.sender), UNAUTHORIZED);
        _;
    }

    modifier onlyPerceval() {
        require(authority.hasRole(PERCEVAL, msg.sender), UNAUTHORIZED);
        _;
