    function getBundle(uint256 tokenId)
        external
        view
        override
        exists(tokenId)
        returns (address[] memory)
    {
        require(_exists(tokenId), Errors.NFCS_TOKEN_HAS_NOT_BUNDLE);
        return _tokenBundle[tokenId];
    }

