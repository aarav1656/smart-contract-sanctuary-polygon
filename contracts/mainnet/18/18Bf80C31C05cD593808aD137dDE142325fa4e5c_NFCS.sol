    constructor() {
        _disableInitializers();
    }

    function initialize(address _addressBook) public initializer {
        __ERC721_init("NFCS", "NFCS");
        __Pausable_init();
        __Ownable_init();
        __ERC721Enumerable_init();
        __UUPSUpgradeable_init();
        addressBook = IAddressBook(_addressBook);
    }

