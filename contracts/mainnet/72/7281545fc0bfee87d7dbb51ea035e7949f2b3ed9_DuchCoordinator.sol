        emit LoanAuctionCreated(
            nftCollateralAddress,
            nftCollateralTokenId,
            address(loanAuction),
            auctionStartTime,
            auctionDuration,
            principal,
            maxIRatePerSecond,
            loanTerm,
            denominatedToken,
            debtor
        );
    }

