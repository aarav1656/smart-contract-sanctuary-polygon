import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "./Whitelist.sol";
import "./Permissions.sol";

contract WhitelistMerkle is Whitelist {
  mapping(address => mapping(uint256 => bytes32)) private merkleWhitelists;

  event WhitelistUpdated(
    address indexed collection,
    uint256 indexed productId,
    bytes32 newMerkleRootHash
  );

  bytes32 public constant WHITELIST_MANAGER = keccak256("WHITELIST_MANAGER");
  IERC721 public NFTWhitelist;

  constructor(address permissionsAddress) {
    permissions = Permissions(permissionsAddress);
  }

  Permissions public permissions;

  function setNFTWhitelistCollection(address erc721Address)
    external
    hasAccess(WHITELIST_MANAGER)
  {
    NFTWhitelist = IERC721(erc721Address);
  }

  function setPermissions(address permissionsAddress)
    external
    hasAccess(WHITELIST_MANAGER)
  {
    permissions = Permissions(permissionsAddress);
  }

  modifier hasAccess(bytes32 access) {
    require(
      permissions.addressHasAccess(access, msg.sender),
      "UNAUTHORIZED_ACCESS"
    );
    _;
  }

  function setMerkleRootForProduct(
    address collection,
    uint256 productId,
    bytes32 merkleRootHash
  ) public hasAccess(WHITELIST_MANAGER) {
    merkleWhitelists[collection][productId] = merkleRootHash;

    emit WhitelistUpdated(collection, productId, merkleRootHash);
  }

  function setMerkleRootForCollection(
    address collection,
    bytes32 merkleRootHash
  ) external {
    //Safety checks inside the next function call
    setMerkleRootForProduct(collection, 0, merkleRootHash);
  }

  function getMerkleRoot(address collection, uint256 productId)
    public
    view
    returns (bytes32)
  {
    mapping(uint256 => bytes32) storage merkle = merkleWhitelists[collection];
    bytes32 merkleRoot = merkle[productId];
    if (merkleRoot == 0) {
      merkleRoot = merkle[0];
    }

    return merkleRoot;
  }

  function verifyAddress(
    address collection,
    uint256 productId,
    address senderAddress,
    bytes32[] calldata merkleProof
  ) private view returns (bool) {
    bytes32 merkleRoot = getMerkleRoot(collection, productId);
    if (merkleRoot == 0) {
      return true;
    }

    bytes32 leaf = keccak256(abi.encodePacked(senderAddress));
    return MerkleProof.verifyCalldata(merkleProof, merkleRoot, leaf);
  }

  function isWhitelisted(
    address collection,
    uint256 productId,
    address senderAddress,
    bytes32[] calldata merkleProof
  ) external view override returns (bool) {
    if (
      address(NFTWhitelist) != address(0) &&
      NFTWhitelist.balanceOf(senderAddress) > 0
    ) {
      return true;
    }

    return verifyAddress(collection, productId, senderAddress, merkleProof);
  }

  function whitelistNeeded(address collection, uint256[] calldata productIds)
    external
    view
    override
    returns (bool)
  {
    if (getMerkleRoot(collection, 0) != 0) {
      return true;
    }

    for (uint256 i; i < productIds.length; i++) {
      if (getMerkleRoot(collection, productIds[i]) != 0) {
        return true;
      }
    }

    return false;
  }
}

