    function listItem(
        address nftToken,
        uint256 tokenId,
        uint256 amount,
        string memory name,
        string memory description,
        string memory imageURI,
        string memory externalURL,
        string memory itemType,
        uint256 price,
        bool stakingWalletRequired,
        uint16 maxPurchasePerWallet
    ) external onlyModerator {
        require(price > 0, "CryptoDadsMarketplace: ZERO_PRICE");
        require(amount > 0, "CryptoDadsMarketplace: ZERO_AMOUNT");

        _createItemListing(
            _msgSender(),
            nftToken,
            tokenId,
            amount,
            name,
            description,
            imageURI,
            externalURL,
            itemType,
            price,
            stakingWalletRequired,
            maxPurchasePerWallet
        );
    }

    function _checkAndAssignCustomization(
        string memory itemType,
        uint256 marketItemId,
        address addressToAdd
    ) private {
        if (
            keccak256(abi.encodePacked("CUSTOMIZE-DAD")) ==
            keccak256(abi.encodePacked(itemType)) &&
            marketItemId != 0
        ) {
            // add a dad customization to the user
            _addCustomizationToAddress(
                addressToAdd,
                marketItemId,
                DadOrMoms.DAD
            );
        }
        if (
            keccak256(abi.encodePacked("CUSTOMIZE-MOM")) ==
            keccak256(abi.encodePacked(itemType)) &&
            marketItemId != 0
        ) {
            // add a mom customization to the user
            _addCustomizationToAddress(
                addressToAdd,
                marketItemId,
                DadOrMoms.MOM
            );
        }
    }

    function _createItemListing(
        address seller,
        address nftToken,
        uint256 tokenId,
        uint256 amount,
        string memory name,
        string memory description,
        string memory imageURI,
        string memory externalURL,
        string memory itemType,
        uint256 price,
        bool stakingWalletRequired,
        uint16 maxPurchasePerWallet
    ) private {
        lastItemId += 1;
        marketItems[lastItemId] = MarketItem(
            seller,
            nftToken,
            tokenId,
            amount,
            name,
            description,
            externalURL,
            itemType,
            price,
            imageURI,
            stakingWalletRequired,
            maxPurchasePerWallet
        );

        emit ItemListed(
            _msgSender(),
            nftToken,
            tokenId,
            amount,
            name,
            itemType,
            price,
            stakingWalletRequired,
            maxPurchasePerWallet
        );
    }

    /**
     * @notice to update an item previously listed
     * @dev seller(nft owner)s call this function
     * @param marketItemID the ID of the item already in the market
     * @param nftToken nft token address (either 721 or 1155)
     * @param tokenId  token id of nft token
     * @param amount amount of nfts (valid only when nftToken is 1155 = !is721)
     * @param nameDescriptionImageURIExternalURIitemType The name, description, image URI, external URI, and itemType of the item
     * @param price amount of paymentToken to purchase nft
     * @param stakingWalletRequired whether or not a person is required to have a staked mom or dad in the purchasing wallet (TODO)
     * @param maxPurchasePerWallet max amount a single wallet can purchase
     * emit {ItemListed} event
     */
    function updateMarketItem(
        uint256 marketItemID,
        address nftToken,
        uint256 tokenId,
        uint256 amount,
        string[] memory nameDescriptionImageURIExternalURIitemType,
        uint256 price,
        bool stakingWalletRequired,
        uint16 maxPurchasePerWallet
    ) external onlyModerator {
        MarketItem storage item = marketItems[marketItemID];
        if (item.amount > 0 && amount == 0) {
            emit ItemUnlisted(marketItemID);
        }
        require(
            nameDescriptionImageURIExternalURIitemType.length == 5,
            "Cryptodads - Need 5 entries in nameDescriptionImageURIExternalURIitemType field"
        );
        item.nftToken = nftToken;
        item.tokenId = tokenId;
        item.amount = amount;
        item.name = nameDescriptionImageURIExternalURIitemType[0];
        item.description = nameDescriptionImageURIExternalURIitemType[1];
        item.imageURI = nameDescriptionImageURIExternalURIitemType[2];
        item.externalURL = nameDescriptionImageURIExternalURIitemType[3];
        item.itemType = nameDescriptionImageURIExternalURIitemType[4];
