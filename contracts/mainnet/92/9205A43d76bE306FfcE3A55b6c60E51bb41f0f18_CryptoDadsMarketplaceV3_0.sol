     */
    function createRaffle(
        string memory _name,
        string memory _description,
        string memory _imageURI,
        string memory _externalURL,
        string memory _itemType,
        uint256 _maxParticipants,
        uint256 _maxWinners,
        uint256 _endTimestamp,
        uint256 _price
    ) external onlyModerator returns (uint256) {
        _createItemListing(
            _msgSender(),
            address(0),
            0,
            0,
            _name,
            _description,
            _imageURI,
            _externalURL,
            _itemType,
            _price,
            false,
            0
        );

        lastRaffleId += 1;

        RaffleItem storage raffle = raffleItems[lastRaffleId];

        raffle.name = _name;
        raffle.description = _description;
        raffle.imageURI = _imageURI;
        raffle.externalURL = _externalURL;
        raffle.itemType = _itemType;
        raffle.price = _price;
        raffle.maxParticipants = _maxParticipants;
        raffle.maxWinners = _maxWinners;
        raffle.endTimestamp = _endTimestamp;
        raffle.marketItemId = lastItemId;

        emit RaffleCreated(
            _name,
            _itemType,
            lastRaffleId,
            _price,
            _name,
            _itemType
        );

        return lastRaffleId;
    }

