        returns (bool)
    {
        require(
            lastRaffleId >= _raffleId,
            "CryptoDadsMarketplace: NON_EXISTENT"
        );
        RaffleItem storage raffle = raffleItems[_raffleId];
        return raffle.participants[addr];
    }

