    function canRunRaffle(uint256 _raffleId) external view returns (bool) {
        require(
            lastRaffleId >= _raffleId,
            "CryptoDadsMarketplace: NON_EXISTENT"
        );
        RaffleItem storage raffle = raffleItems[_raffleId];
        return
            (raffle.winners.length == 0 ||
                raffle.participantsCount <= raffle.maxParticipants) &&
            block.timestamp < raffle.endTimestamp;
    }

    function determineRaffleWinners(uint256 _raffleId) internal {
        require(
            lastRaffleId >= _raffleId,
            "CryptoDadsMarketplace: NON_EXISTENT"
        );

        RaffleItem storage raffle = raffleItems[_raffleId];

        require(
            raffle.winners.length == 0,
            "CryptoDadsMarketplace: RAFFLE_ALREADY_RUN"
        );

        uint256 shuffleEntropy = getPseudorandom(_raffleId) %
            raffle.addresses.length;

        // Generate int array equal to length addresses and randomly shuffle it with entropy
        uint256[] memory shuffledParticipants = shuffle(
            raffle.addresses.length,
            shuffleEntropy
        );

        raffle.shuffleEntropy = shuffleEntropy;

        // Set winners from shuffle
        if (raffle.addresses.length < raffle.maxWinners) {
            // Everyones a winner!
            for (uint256 i = 0; i < raffle.addresses.length; i++) {
                raffle.winners.push(raffle.addresses[i]);
                _checkAndAssignCustomization(
                    raffle.itemType,
                    raffle.marketItemId,
                    raffle.addresses[i]
                );
            }
        } else {
            for (uint256 i = 0; i < raffle.maxWinners; i++) {
                raffle.winners.push(
                    raffle.addresses[shuffledParticipants[i] - 1]
                );
                _checkAndAssignCustomization(
                    raffle.itemType,
                    raffle.marketItemId,
                    raffle.addresses[shuffledParticipants[i] - 1]
                );
            }
        }

        // Emit raffle event winner
        emit RaffleWinners(
            raffle.name,
            raffle.itemType,
            _raffleId,
            raffle.winners,
            raffle.name,
            raffle.itemType
        );

        rafflesDrawn++;
    }

    function joinRaffle(uint256 id) public {
        address participant = _msgSender();
        RaffleItem storage raffle = raffleItems[id];

        require(
            IERC20Upgradeable(paymentToken).balanceOf(participant) >=
                raffle.price,
            "CryptoDadsMarketplace: NOT_ENOUGH_FUNDS"
        );

        require(
            raffle.winners.length == 0,
            "CryptoDadsMarketplace: NO_WINNERS"
        );

        require(
            raffle.participantsCount < raffle.maxParticipants,
            "CryptoDadsMarketplace: MAX_PARTICIPANTS"
        );

        require(
            block.timestamp <= raffle.endTimestamp,
            "CryptoDadsMarketplace: TOO_LATE"
        );

        // Transfer tokens to marketplace owner (vault)
        IERC20Upgradeable(paymentToken).transferFrom(
            participant,
            payable(tokenSafe),
            raffle.price
        );

        raffle.participants[participant] = true;
        raffle.addresses.push(participant);
        raffle.participantsCount++;
        raffleEntries[participant].push(id);

        emit RaffleJoined(id, participant, raffle.name);
    }

    // https://gist.github.com/cleanunicorn/d27484a2488e0eecec8ce23a0ad4f20b
    function shuffle(uint256 size, uint256 entropy)
        public
        pure
        returns (uint256[] memory)
    {
        uint256[] memory result = new uint256[](size);

        // Initialize array.
        for (uint256 i = 0; i < size; i++) {
            result[i] = i + 1;
        }

        // Set the initial randomness based on the provided entropy.
        bytes32 random = keccak256(abi.encodePacked(entropy));

        // Set the last item of the array which will be swapped.
        uint256 last_item = size - 1;

        // We need to do `size - 1` iterations to completely shuffle the array.
        for (uint256 i = 1; i < size - 1; i++) {
            // Select a number based on the randomness.
            uint256 selected_item = uint256(random) % last_item;

            // Swap items `selected_item <> last_item`.
            uint256 aux = result[last_item];
            result[last_item] = result[selected_item];
            result[selected_item] = aux;

            // Decrease the size of the possible shuffle
            // to preserve the already shuffled items.
            // The already shuffled items are at the end of the array.
            last_item--;

            // Generate new randomness.
            random = keccak256(abi.encodePacked(random));
        }

        return result;
    }

    /// @notice Manually runs a raffle by raffle id
    function runRaffleWinnersManually(uint256 _raffleId)
        external
        onlyModerator
    {
        determineRaffleWinners(_raffleId);
    }

    /// @notice Manually sets raffle winners by raffle id, if needed to be done offchain
    function setRaffleWinnersManually(
        uint256 _raffleId,
        address[] calldata addresses
    ) external onlyModerator {
        require(
            lastRaffleId >= _raffleId,
            "CryptoDadsMarketplace: NON_EXISTENT"
        );

        RaffleItem storage raffle = raffleItems[_raffleId];

        // Set winners from shuffle
        for (uint256 i = 0; i < addresses.length; i++) {
            raffle.winners.push(addresses[i]);
        }

        // Emit raffle event winner
        emit RaffleWinners(
            raffle.name,
            raffle.itemType,
            _raffleId,
            raffle.winners,
            raffle.name,
            raffle.itemType
        );

        rafflesDrawn++;
    }

    /* Good enough for now, we can switch to chainlink vrf2 when support for upgradeable contracts is easier */
    function getPseudorandom(uint256 _raffleId) private view returns (uint256) {
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        address(this),
                        block.difficulty,
                        block.number,
                        block.timestamp,
                        blockhash(block.number - 1),
                        _raffleId
                    )
                )
            );
    }

