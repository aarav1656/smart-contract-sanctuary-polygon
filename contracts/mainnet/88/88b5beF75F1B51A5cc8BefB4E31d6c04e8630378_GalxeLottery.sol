import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import {SafeERC20, IERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

/**
 * @title LunarLottery contract, selects winners from a list using chainlink VRF
 * @notice This contract receives a merkle root where the leafs of the tree are the address and the number of tickets held by that address.
 * Then using chainlink vrf for getting random numbers it gives prizes to the winners by providing the address and the number of the ticket held by the address by providing a proof of inclusion in the tree.
 *
 */

contract GalxeLottery is ReentrancyGuard {
    using SafeERC20 for IERC20;

    enum LotteryState {
        NOT_STARTED,
        AWAITING_VRF,
        VRF_DRAWN,
        LOTTERY_ENDED
    }
    LotteryState state = LotteryState.NOT_STARTED;
    uint32 constant NUMBER_PRIZES = 3;
    bytes32 public immutable merkleRoot;
    uint256 public immutable totalNumberOfTickets;
    address public immutable ChainLinkVRF;
    address public immutable prizeTokenAddress;
    address public immutable owner;
    uint256 public deployTime;
    uint256[NUMBER_PRIZES] public prizes;

    uint256[NUMBER_PRIZES] public numbersDraw;

    struct VRFRequest {
        uint256 id;
        uint256 blockNumber;
    }
    VRFRequest public vrfRequest;

    struct WinningPlayerInfo {
        address player;
        uint256 firstTicketNumber;
        uint256 lastTicketNumber;
    }
    WinningPlayerInfo[] public winners;

    constructor(
        bytes32 _merkleRoot,
        uint256 _totalNumberOfTickets,
        address _ChainLinkVRF,
        uint256[NUMBER_PRIZES] memory _prizes,
        address _prizeTokenAddress,
        address _owner
    ) {
        merkleRoot = _merkleRoot;
        totalNumberOfTickets = _totalNumberOfTickets;
        ChainLinkVRF = _ChainLinkVRF;
        prizes = _prizes;
        prizeTokenAddress = _prizeTokenAddress;
        owner = _owner;
        deployTime = block.timestamp;
    }

    error OnlyCoordinatorCanFulfill(address have, address want);
    error InvalidState(LotteryState have, LotteryState want);
    error NotDrawTime(uint256 have, uint256 want);
    error InsufficentFunds(uint256 have, uint256 want);
    error NotEnoughRedrawTime(uint256 have, uint256 want);
    error NotWinningTicket(uint256 first, uint256 last, uint256 want);
    error AlreadyWon();

    event VRFRequestMade(uint256 requestID);
    event RandomNumbersReceived();
    event PrizeGiven(
        address winner,
        uint256 positon,
        uint256 prizeAmount,
        address tokenAddress,
        uint256 randomNumber
    );

    /**
     * @dev function to give prize to the winners, prizes must be given in order of first to last based on the results of the VRF.
     * A proof of the ticket numbers of the address must be provided and calculate root must match that of the contract.
     * @param winner address of winner
     * @param firstTicketNumber number of first ticket held by address
     * @param lastTicketNumber number of last tikcet held by address
     * @param proof proof of inclusion in the merkle tree
     */
    function givePrize(
        address winner,
        uint256 firstTicketNumber,
        uint256 lastTicketNumber,
        bytes32[] calldata proof
    ) external nonReentrant {
        if (state != LotteryState.VRF_DRAWN) {
            revert InvalidState(state, LotteryState.VRF_DRAWN);
        }
        uint256 currentNumberOfTickets = totalNumberOfTickets;
        uint256 shiftedFirstTicketNumber = firstTicketNumber;
        uint256 shiftedLastTicketNumber = lastTicketNumber;
        uint256 numberPrizesGiven = winners.length;

        for (uint256 i = 0; i < numberPrizesGiven; i++) {
            uint256 ticketsTakenOut = winners[i].lastTicketNumber -
                winners[i].firstTicketNumber +
                1;

            currentNumberOfTickets -= ticketsTakenOut;

            if (winners[i].firstTicketNumber < firstTicketNumber) {
                shiftedFirstTicketNumber -= ticketsTakenOut;
                shiftedLastTicketNumber -= ticketsTakenOut;
            }
            if (winners[i].player == winner) {
                revert AlreadyWon();
            }
        }

        uint256 RoundWinningTicket = (numbersDraw[numberPrizesGiven] %
            currentNumberOfTickets) + 1;

        if (
            !(RoundWinningTicket >= shiftedFirstTicketNumber &&
                RoundWinningTicket <= shiftedLastTicketNumber)
        ) {
            revert NotWinningTicket(
                shiftedFirstTicketNumber,
                shiftedLastTicketNumber,
                RoundWinningTicket
            );
        }

        bytes32 leaf = keccak256(
            bytes.concat(
                keccak256(
                    abi.encode(winner, firstTicketNumber, lastTicketNumber)
                )
            )
        );

        require(MerkleProof.verify(proof, merkleRoot, leaf), "Invalid proof");

        IERC20(prizeTokenAddress).safeTransfer(
            winner,
            prizes[numberPrizesGiven]
        );
        winners.push(
            WinningPlayerInfo(winner, firstTicketNumber, lastTicketNumber)
        );
        if (winners.length == NUMBER_PRIZES) {
            state = LotteryState.LOTTERY_ENDED;
        }

        emit PrizeGiven(
            winner,
            numberPrizesGiven + 1,
            prizes[numberPrizesGiven],
            prizeTokenAddress,
            numbersDraw[numberPrizesGiven]
        );
    }

    /**
     * @dev function to request RNG from chainlink, can only be called if contract has enough balance to give prizes to winners
     */
    function drawRandomNumbers() external {
        if (state != LotteryState.NOT_STARTED) {
            revert InvalidState(state, LotteryState.NOT_STARTED);
        }
        uint256 totalPrize;
        for (uint256 i = 0; i < prizes.length; i++) {
            totalPrize += prizes[i];
        }
        uint256 balance = IERC20(prizeTokenAddress).balanceOf(address(this));
        if (balance < totalPrize) {
            revert InsufficentFunds(balance, totalPrize);
        }
        uint256 id = _requestRandomWords();
        vrfRequest = VRFRequest(id, block.number);
        state = LotteryState.AWAITING_VRF;

        emit VRFRequestMade(id);
    }

    /**
     * @dev function to redraw random numbers in case of chainlink failling to respond.
     */
    function redrawRandomNumbers() external {
        if (state != LotteryState.AWAITING_VRF) {
            revert InvalidState(state, LotteryState.AWAITING_VRF);
        }
        if (block.number < vrfRequest.blockNumber + 1000) {
            revert NotEnoughRedrawTime(
                block.number,
                vrfRequest.blockNumber + 1000
            );
        }
        uint256 id = _requestRandomWords();
        vrfRequest = VRFRequest(id, block.number);
    }

    /** @dev function called by Chainlink VRF with random numbers
     * @param requestId id provided when the request was made
     * @param randomWords array of random numbers
     */
    function rawFulfillRandomWords(
        uint256 requestId,
        uint256[] memory randomWords
    ) external {
        if (msg.sender != ChainLinkVRF) {
            revert OnlyCoordinatorCanFulfill(msg.sender, ChainLinkVRF);
        }
        fulfillRandomWords(requestId, randomWords);
    }

    function fulfillRandomWords(
        uint256 requestId,
        uint256[] memory randomWords
    ) internal {
        for (uint256 i = 0; i < randomWords.length; i++) {
            numbersDraw[i] = randomWords[i];
        }
        state = LotteryState.VRF_DRAWN;

        emit RandomNumbersReceived();
    }

    function emergencyWithdraw(
        address token,
        uint256 amount,
        address to
    ) external {
        if (msg.sender != owner) {
            revert();
        }
        if (block.timestamp < deployTime + (3600 * 24 * 7)) {
            revert();
        }
        if (token == address(0)) {
            (bool success, ) = payable(to).call{value: amount}("");
            if (!success) {
                revert();
            }
        } else {
            IERC20(token).safeTransfer(to, amount);
        }
    }

    /**
     * @dev function to send the request for randomness to chainlink
     */
    function _requestRandomWords() internal returns (uint256 s_requestId) {
        s_requestId = VRFCoordinatorV2Interface(ChainLinkVRF)
            .requestRandomWords(
                0xd729dc84e21ae57ffb6be0053bf2b0668aa2aaf300a2a7b2ddf7dc0bb6e875a8,
                576,
                50,
                2500000,
                NUMBER_PRIZES
            );
    }
}

