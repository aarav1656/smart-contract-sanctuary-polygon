import {
    BaseVault,
    IBhavishAdministrator,
    IBhavishPrediction,
    IBhavishSDKImpl,
    IVaultProtector
} from "./BaseVault.sol";
import { IBhavishERC20SDK, IBhavishSDK } from "../Interface/IBhavishERC20SDK.sol";
import { AccessControl } from "@openzeppelin/contracts/access/AccessControl.sol";
import { SafeERC20 } from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

/**
 * @title Bhavish NoLoss Balancer Vault
 * This works on noloss currency only
 */
contract BhavishNoLossBalancerVault is AccessControl, BaseVault {
    using SafeERC20 for IERC20;

    IBhavishERC20SDK public bhavishSDK;
    IERC20 public bgnToken;
    IERC20 public brnToken;
    address public ADMIN_ADDR;

    constructor(
        IERC20 _asset, // This is underlying/wrapped/BGN Token
        IERC20 _rewardAsset, // This is BRN Token
        IBhavishAdministrator _bhavishAdmin, // Bhavish Admin Address
        IBhavishERC20SDK _bhavishSDK, // Bhavish SDK Address
        bytes32 _underlying,
        bytes32 _strike,
        string memory _supportedCurrency,
        IVaultProtector _protector
    ) BaseVault(_bhavishAdmin, _supportedCurrency, _underlying, _strike, _protector) {
        bhavishSDK = _bhavishSDK;
        bgnToken = _asset;
        brnToken = _rewardAsset;
        ADMIN_ADDR = msg.sender;

        address approvalAddr = IBhavishSDKImpl(address(bhavishSDK)).predictionMap(_underlying, _strike);
        bgnToken.safeApprove(approvalAddr, type(uint256).max);
    }

    function totalAssets() public view override returns (uint256) {
        return bgnToken.balanceOf(ADMIN_ADDR);
    }

    function getPredictionMarketAddr() internal override returns (address) {
        return IBhavishSDKImpl(address(bhavishSDK)).predictionMap(assetPair.underlying, assetPair.strike);
    }

    function _performPrediction(
        uint256 _roundId,
        bool _nextPredictionUp,
        uint256 _predictAmount
    ) internal override {
        bhavishSDK.predict(
            IBhavishSDK.PredictionStruct(assetPair.underlying, assetPair.strike, _roundId, _nextPredictionUp),
            ADMIN_ADDR,
            address(this),
            _predictAmount / 2
        );

        bhavishSDK.predict(
            IBhavishSDK.PredictionStruct(assetPair.underlying, assetPair.strike, _roundId, !_nextPredictionUp),
            ADMIN_ADDR,
            address(this),
            _predictAmount / 2
        );
    }

    function performClaim(uint256[] calldata _roundIds) external override onlyOperator(msg.sender) {
        uint256 totalBetAmount = 0;
        uint256 beforeBalance = bgnToken.balanceOf(ADMIN_ADDR);

        for (uint256 i = 0; i < _roundIds.length; i++) {
            IBhavishPrediction.RoundState rStatus = getPredictionRoundStatus(_roundIds[i]);
            if (!claimRefundMap[_roundIds[i]] && rStatus == IBhavishPrediction.RoundState.ENDED) {
                totalBetAmount += getRoundBetAmount(_roundIds[i]);
                claimRefundMap[_roundIds[i]] = true;
            }
        }

        bhavishSDK.claim(
            IBhavishSDK.PredictionStruct(assetPair.underlying, assetPair.strike, 0, false),
            _roundIds,
            ADMIN_ADDR
        );

        uint256 claimedAmount = bgnToken.balanceOf(ADMIN_ADDR) - beforeBalance;
        // win or loss
        vaultDeposit.totalDeposit = vaultDeposit.totalDeposit + claimedAmount - totalBetAmount;
    }

    function performRefund(uint256[] calldata _roundIds) external override onlyOperator(msg.sender) {
        uint256 totalBetAmount = 0;
        uint256 beforeBalance = bgnToken.balanceOf(address(this));

        for (uint256 i = 0; i < _roundIds.length; i++) {
            IBhavishPrediction.RoundState rStatus = getPredictionRoundStatus(_roundIds[i]);
            if (!claimRefundMap[_roundIds[i]] && rStatus == IBhavishPrediction.RoundState.CANCELLED) {
                totalBetAmount += getRoundBetAmount(_roundIds[i]);
                bhavishSDK.refundUsers(
                    IBhavishSDK.PredictionStruct(assetPair.underlying, assetPair.strike, 0, false),
                    _roundIds[i]
                );
                claimRefundMap[_roundIds[i]] = true;
            }
        }

        uint256 totalRefundAmount = bgnToken.balanceOf(address(this)) - beforeBalance;
        vaultDeposit.totalDeposit = vaultDeposit.totalDeposit + totalRefundAmount - totalBetAmount;
    }

    function _safeTransfer(address to, uint256 value) internal override {
        bgnToken.safeTransfer(to, value);
    }

    function depositAsset(
        address _user,
        uint256 _amount,
        address _provider
    ) external whenNotPaused nonReentrant {
        require(_amount > 0, "Invalid Deposit Amount");
        _depositToVault(_user, _amount, _provider);

        bgnToken.safeTransferFrom(_user, address(this), _amount);
    }

    function withdrawAsset(address _user, uint256 shares) external nonReentrant {
        uint256 _amount = convertToAssets(shares);

        require(_amount <= bgnToken.balanceOf(address(this)), "cannot withdraw > contract balance");

        _withdrawFromVault(_user, shares);
        vaultDeposit.userDeposits[_user] = convertToAssets(vaultDeposit.userShares[_user]);
    }

    function transferRewards() external nonReentrant {
        brnToken.safeTransfer(ADMIN_ADDR, brnToken.balanceOf(address(this)));
    }
}

