pragma solidity 0.7.6;

import "./interfaces/IReserve.sol";
import "./interfaces/IUniswapV2Pair.sol";
import "../interfaces/AggregatorV3Interface.sol";
import "../interfaces/IPriceGetter.sol";
import "../dependencies/openzeppelin/contracts/SafeMath.sol";

contract MLDPriceGetter is IPriceGetter {
  using SafeMath for uint256;

  IUniswapV2Pair public immutable uniswapV2Pair;
  AggregatorV3Interface public immutable priceFeed;

  constructor() {
    uniswapV2Pair = IUniswapV2Pair(0x5A1A7f1111A4700F809EFea4FE0Dc7B8dbFecF43); // Uniswap V2 Pair MLD/WMATIC
    priceFeed = AggregatorV3Interface(0x0d4a11d5EEaaC28EC3F61d100daF4d40471f1852);  // Chainlink: MATIC/USD Price Feed
  }

  function getPrice() public view override returns (uint256 price) {
    (, int256 answer, , , ) = priceFeed.latestRoundData();
    uint256 reserve0 = IReserve(uniswapV2Pair.token0()).balanceOf(address(uniswapV2Pair));
    uint256 reserve1 = IReserve(uniswapV2Pair.token1()).balanceOf(address(uniswapV2Pair));
    uint8 decimals0 = IReserve(uniswapV2Pair.token0()).decimals();
    uint8 decimals1 = IReserve(uniswapV2Pair.token1()).decimals();
    price = reserve0.mul(uint256(answer)).mul(10 ** uint256(decimals1)).div(reserve1).div(10 ** uint256(decimals0));
  }
}