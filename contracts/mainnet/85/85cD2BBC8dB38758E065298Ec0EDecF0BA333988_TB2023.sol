        prizePayout = _prizePayout;
    }

       function getBalance() public view returns (uint256) {
        return address(this).balance;
    }

    function buy(uint256 _amount) public payable {
         require(!paused, "Game is closed");
            uint256 payout;
            uint256 payoutTeam;
         uint256 totalPrice = _amount * ticketPrice;
        require(
            msg.value >= totalPrice,
            "Insufficient amount"
        );
         payout = totalPrice.mul(prizePayout).div(100);
         payoutTeam = totalPrice.mul(100-prizePayout).div(100);
        
        Participant storage participant = participants[msg.sender];
        // register new participant if he/she does not exist
        if (participant.id == 0) {
            participantAddresses.push(msg.sender);
            participant.id = participantAddresses.length;
            participant.tickets = 0;
        }

        participant.tickets += _amount;

        for (uint256 i = 0; i < _amount; i++) {
            tickets.push(msg.sender);
            soldTickets++;
        }
        terraPrize += payout;
        teamPrize += payoutTeam;
        emit Buy(msg.sender, _amount);
    }

   function endGame() public onlyOwner{
        paused=true;     
        draw();
        unclaimedPrizes[winners[0]] += terraPrize.mul(prize1share).div(100);
        unclaimedPrizes[winners[1]] += terraPrize.mul(prize2share).div(100);
        unclaimedPrizes[winners[2]] += terraPrize.mul(prize3share).div(100);
        unclaimedPrizesTotal += terraPrize;
        emit Win(winners,terraPrize);
    }

    /// @notice Players can claim prize if they have a winner tickets
    function claim() public returns (bool) {
        uint256 prize = unclaimedPrizes[msg.sender];
        if (prize > 0) {
            unclaimedPrizes[msg.sender] = 0; // It is important to set this to zero because the recipient
            unclaimedPrizesTotal -= prize;
            payable(msg.sender).transfer(prize);

            emit Claim(msg.sender, prize);
        }
        return true;
    }

    /// @notice Select winner aggiornare la randomizzazione
    function draw() internal onlyOwner { //change internal
      
        expand(random());
       
       luckyTicket1 = expandedValues[0].mod(soldTickets)+1;
       winners[0]=tickets[luckyTicket1-1];
       
       luckyTicket2 = expandedValues[1].mod(soldTickets)+1;
       while(luckyTicket2==luckyTicket1){
           expand(random());//change
           luckyTicket2 = expandedValues[1].mod(soldTickets)+1;
           }

       winners[1]=tickets[luckyTicket2-1];

       luckyTicket3 = expandedValues[2].mod(soldTickets)+1;
       while(luckyTicket3==luckyTicket1 || luckyTicket3==luckyTicket2){
           expand(random());//change
           luckyTicket3 = expandedValues[2].mod(soldTickets)+1;}
       winners[2]=tickets[luckyTicket3-1];

    }

    /// @notice Generate random number
    function random() internal view virtual returns (uint256) {//change internal
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        block.difficulty,
                        block.timestamp,
                        participantAddresses
                    )
                )
            );
    }
    function expand(uint256 _randomResult) internal {//change internal
    expandedValues = new uint256[](3);
    for (uint256 i = 0; i < 3; i++) {
        expandedValues[i] = uint256(keccak256(abi.encode(_randomResult, i)));
    }
    }

