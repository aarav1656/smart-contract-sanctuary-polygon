contract CoinGacha is Minter,Random{
    constructor(address _target) Minter(_target,1155) {
    }
    function settings(
        uint256 _start, uint256 _end, uint256 _limit
    ) external onlyAdmin{
        setGachaTarget(_start, _end);
        setMaximumIssueLimit(_limit);
    }

    uint256 internal totalIssues_ = 0;//発行済みの枚数（ERC1155の場合はアイテム数じゃなくて、全アイテムの合計枚数）
    function getTotalIssues() external view returns(uint256){
        return totalIssues_;
    }
    uint256 internal maximumIssueLimit_ = 0;//発行上限
    function getMaximumIssueLimit() external view returns(uint256){
        return maximumIssueLimit_;
    }
    function setMaximumIssueLimit(uint256 _limit) public onlyAdmin{
        maximumIssueLimit_ = _limit;
    }

    modifier mintable2(uint256 _amount){
        checkMintable(_amount);
        _;
    }
    function checkMintable(uint256 _amount) internal view mintable{
        if (_amount <= 0) revert("The value less than or equal to 0 cannot be specified for the \"amount\".");
        if (maximumIssueLimit_ != 0 && maximumIssueLimit_ < totalIssues_ + _amount) revert("It will exceed the maximum issue limit.");
    }

    uint256 public gachaStartID_ = 0;
    uint256 public gachaEndID_   = 0;
    function setGachaTarget(uint256 _start, uint256 _end) public onlyAdmin{
        gachaStartID_ = _start;
        gachaEndID_   = _end;
    }
    
    IMint1155   internal coin_;
    uint256     internal coin_id_;
    uint256     internal coin_price_ = 1;

    function setCoinContract(address _token, uint256 _id, uint256 _price) external virtual onlyAdmin{
        coin_ = IMint1155(_token);
        coin_id_ = _id;
        coin_price_ = _price;
    }
    modifier hasCoin(address _holder, uint256 _amount) virtual{
        require(coin_.balanceOf(_holder, coin_id_) >= _amount, "You don't have enough tokens.");
        _;
    }


    IERC20  private weth_;
    uint256 private weth_price_;
    address private remittanceAddress_;//送金先

    function setPrice(address _token, uint256 _price, address _remittance) external onlyAdmin{
        weth_ = IERC20(_token);
        weth_price_ = _price;
        remittanceAddress_ = _remittance;
    }
    modifier hasWeth(address _holder, uint256 _amount){
        require(weth_.balanceOf(_holder) >= _amount, "You don't have enough tokens.");
        _;
    }


    function mint_with_coin(address _to, uint256 _amount) external virtual mintable2(_amount) hasCoin(_to, coin_price_*_amount){
        coin_.burn(_to, coin_id_, coin_price_*_amount);

        gachaMint(_to, _amount);
    }
    function mint_with_weth(address _to, uint256 _amount) external mintable2(_amount) hasWeth(_to, weth_price_*_amount) {
        uint256 price = _amount * weth_price_;
        require(weth_.balanceOf(_to) >= price, "You don't have enough tokens.");
        require(weth_.transferFrom(_to, remittanceAddress_, price), "Failed to transfer.");

        gachaMint(_to, _amount);
    }

    event event_mint(uint256[]);
    function gachaMint(address _to, uint256 _amount) internal mintable2(_amount){
        uint256[] memory get = new uint256[](_amount);
        uint r = block.timestamp;

        if (_amount == 1){
            uint256 id;
            (id, r) = rand(r, gachaStartID_,gachaEndID_);
            get[0] = id;
            target1155_.mint(_to, id, 1);
        }else{
            uint256 len = gachaEndID_ - gachaStartID_ + 1;
            uint256[] memory memo = new uint256[](len);
            uint256 getCount = 0;
            r = rand(r);
            for (uint256 i=0; i<_amount; i++){
                uint256 id = (r % len) + gachaStartID_;
                get[getCount++] = id;
                memo[id - gachaStartID_]++;
                r = rand_next(r);
            }
            uint256 mintLength = 0;
            for (uint256 i=0; i<memo.length; i++){
                if (memo[i] > 0){
                    mintLength++;
                }
            }
            uint256[] memory ids = new uint256[](mintLength);
            uint256[] memory ams = new uint256[](mintLength);
            uint256 memoIndex = 0;
            for (uint256 i=0; i<memo.length; i++){
                if (memo[i] > 0){
                    ids[memoIndex] = i + gachaStartID_;
                    ams[memoIndex] = memo[i];
                    memoIndex++;
                }
            }
            target1155_.mint_batch(_to, ids, ams);
        }
        totalIssues_ += _amount;
        emit event_mint(get);
    }

    //必要な情報をjsonで返す
    function getSettings() external view returns(string memory){
        string memory r1 = string(abi.encodePacked(
            '{"onSale": ',
            checkMintable() ? "1" : "0",
            ', "minted": ',
            Strings.toString(totalIssues_),
            ', "mintLimit": ',
            Strings.toString(maximumIssueLimit_)
        ));
        string memory r2 = string(abi.encodePacked(
            ', "coin_price": ',
            Strings.toString(coin_price_),
            ', "weth_price": ',
            Strings.toString(weth_price_),
            '}'
        ));
        return string(abi.encodePacked(r1,r2));
    }
}