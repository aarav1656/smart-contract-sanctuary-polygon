interface ITrueCoorest {

    event ProjectStatusUpdated(bytes32 indexed _requestId ,string projectId, uint256 lastMonthStatus, uint256 previousMonthStatus, uint256 year, uint256 month);
    event statusUpdated(bool isUpdated);

    /// @dev This function send multiple requests to chainlink oracle to retrive the satus for each project 
    /// @param _projectIds project Ids to be updated
    /// @param _year parameter sent with the request (the year of which to get the status)
    /// @param _month parameter sent with the request (the month of which to get the status)
    function updateProjectStatus(string[] memory _projectIds, int256 _year, int256 _month) external;

    /// @dev sets the job Id 
    /// @param _jobId the jobId specified for fetching project status
    function setJobId(bytes32 _jobId) external ;

    /// @dev gets the history of a project by Id 
    /// @param _projectId the project Id
    function getProjectHistory(string memory _projectId) external view returns (uint256, uint256) ;

    /// @dev withdraw Link tokens from the smartcontract to the admin wallet
    function withdrawLink() external;

    /// @dev pause the Smart contract
    function pause() external;

    /// @dev unpause the Smart contract
    function unpause() external;
}

