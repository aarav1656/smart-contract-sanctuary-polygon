pragma solidity ^0.8.7;

interface ICoorest {
    /// @dev This emits when CCO2 tokens have been claimed.
    /// @param to Contains the receiver of the CCO2 tokens
    /// @param tokenIDs Contains the list of token IDs for which the CCO2 tokens have been claimed
    /// @param amounts Contains the list of amounts claimed for each token ID from tokenIDs
    /// @param claimDate The timestamp of the claim
    event CO2Claimed(
        address indexed to,
        uint256[] tokenIDs,
        uint256[] amounts,
        uint256 claimDate
    );

    /// @dev This emits merkle root is set
    /// @param merkleRoot merkle root after altering the DB
    event merkleRootSet(bytes32 merkleRoot);

    /// @dev This emits when an address is changed
    /// @param _address the new address
    event addressSet(address _address);

    /// @dev This emits PoCC ID
    /// @param poccID merkle root after altering the DB
    event returnedPoccID(uint256 poccID);

    /// @notice Set the CCO2 contract address for (the CCO2 ERC-20 tokens)
    /// @param _co2ContractAddress The address of CCO2 smart contract
    function setCO2ContractAddress(address _co2ContractAddress) external;

    /// @notice Set the address of the NFTree contract address (the ERC-1155 contract address)
    /// @param _nftContractAddress The address of NFTree smart contract
    function setNFTreesContractAddress(address _nftContractAddress) external;

    /// @notice Set the POCC contract address (for the POCC ERC-721 tokens)
    /// @param _poccContractAddress The address of PoCC smart contract
    function setPOCCContractAddress(address _poccContractAddress) external;

    /// @notice Set the TrueCoorest contract address (chainlink interactions)
    /// @param _trueCoorestAddress The address of TrueCoorest smart contract
    function setTrueCoorestContractAddress(address _trueCoorestAddress)
        external;

    /// @notice Gets the last claim dates of a list of NFTrees
    /// @param _nftreesIds The list of NFTrees IDs for which to get the last claim dates
    function getNftreeIdToLastClaimDate(uint256[] memory _nftreesIds)
        external
        returns (uint256[] memory);

    /// @notice Claim CCO2 tokens for the specified tokens.
    /// For each tree we will store the date of the last claim.
    /// When the user is trying to claim tokens for a tree, we will calculate the number of
    /// CCO2 tokens from either the last claim date (if one exists) or from the plant date.
    /// @dev The function must ensure that the caller owns the token for which CCO2 is claimed, and
    /// must throw if any of the tokens is not owned by the caller.
    /// @param _treeIDs The list of token IDs for which to claim the tokens
    /// @param _projectIds The list of project IDs of which the NFTree belongs to
    /// @param _plantDates Plant Dates for each corresponding tree
    /// @param _co2TokensPerYear Absorption rate for each corresponding tree
    /// @param _proofs Proofs for each leafe
    function claimCO2(
        uint256[] memory _treeIDs,
        string[] memory _projectIds,
        uint256[] memory _plantDates,
        uint256[] memory _co2TokensPerYear,
        bytes32[][] memory _proofs
    ) external payable;

    /// @notice burn CCO2 tokens and mint POCC (compensate CCO2)
    /// @param _amountCO2 The amount of cco2 to compensate
    /// @param _reason The reason for compensation
    /// @param _owner The owner of the certificate
    function mintPOCC(
        uint256 _amountCO2,
        string memory _reason,
        string memory _owner
    ) external payable returns (uint256);

    /// @dev pause the Smart contract
    function pause() external;

    /// @dev unpause the Smart contract
    function unpause() external;
}

