pragma solidity ^0.8.7;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/MerkleProofUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";

import "./interfaces/ICoorest.sol";
import "./interfaces/ITrueCoorest.sol";

/// error is thrown when there is a problem with project status
/// @param projectId The project ID
/// @param lastMonthStatus the project status for the last month
/// @param previousMonthStatus the project status for the previous Month
error InvalidProjectStatus(
    string projectId,
    uint256 lastMonthStatus,
    uint256 previousMonthStatus
);

contract Coorest is
    ICoorest,
    Initializable,
    PausableUpgradeable,
    AccessControlUpgradeable,
    UUPSUpgradeable
{
    using SafeERC20Upgradeable for ICCO2;

    ICCO2 public cco2;
    IPOCC public pocc;
    IERC1155 public nftree;
    bytes32 public merkleRoot;

    uint256 constant MILLISECONDS_IN_YEAR = 31536e6;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");

    mapping(uint256 => uint256) public nftreeIdToLastClaimDate;

    ITrueCoorest public trueCoorest;

    // INITIALIZER
    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    // constructor()  {}

    function initialize(
        // bytes32 _merkleRoot,
        address _nftreeContractAddress,
        address _co2ContractAddress,
        address _poccContractAddress,
        address _trueCoorestAddress
    ) external initializer {
        __AccessControl_init();
        __UUPSUpgradeable_init();

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(ADMIN_ROLE, msg.sender);
        _grantRole(UPGRADER_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);

        ensureIsNotZeroAddr(_nftreeContractAddress);
        ensureIsNotZeroAddr(_co2ContractAddress);
        ensureIsNotZeroAddr(_poccContractAddress);

        // merkleRoot = _merkleRoot;
        nftree = IERC1155(_nftreeContractAddress);
        cco2 = ICCO2(_co2ContractAddress);
        pocc = IPOCC(_poccContractAddress);
        trueCoorest = ITrueCoorest(_trueCoorestAddress);
    }

    function setMerkleRoot(bytes32 _merkleRoot) external onlyRole(ADMIN_ROLE) {
        merkleRoot = _merkleRoot;
        emit merkleRootSet(merkleRoot);
    }

    function setNFTreesContractAddress(address _nftreeContractAddress)
        external
        override
        onlyRole(ADMIN_ROLE)
    {
        ensureIsNotZeroAddr(_nftreeContractAddress);

        nftree = IERC1155(_nftreeContractAddress);
        emit addressSet(address(nftree));
    }

    function setCO2ContractAddress(address _co2ContractAddress)
        external
        override
        onlyRole(ADMIN_ROLE)
    {
        ensureIsNotZeroAddr(_co2ContractAddress);

        cco2 = ICCO2(_co2ContractAddress);
        emit addressSet(address(cco2));
    }

    function setPOCCContractAddress(address _poccContractAddress)
        external
        override
        onlyRole(ADMIN_ROLE)
    {
        ensureIsNotZeroAddr(_poccContractAddress);
        pocc = IPOCC(_poccContractAddress);
        emit addressSet(address(pocc));
    }

    function setTrueCoorestContractAddress(address _trueCoorestAddress)
        external
        override
        onlyRole(ADMIN_ROLE)
    {
        ensureIsNotZeroAddr(_trueCoorestAddress);
        trueCoorest = ITrueCoorest(_trueCoorestAddress);
        emit addressSet(address(pocc));
    }

    // GETTERS

    function getNftreeIdToLastClaimDate(uint256[] memory _nftreesIds)
        external
        view
        override
        returns (uint256[] memory)
    {
        uint256[] memory lastClaimDates = new uint256[](_nftreesIds.length);

        for (uint256 i = 0; i < _nftreesIds.length; i++) {
            lastClaimDates[i] = nftreeIdToLastClaimDate[_nftreesIds[i]];
        }
        return lastClaimDates;
    }

    // CCO2 FUNCTIONS
    function _claimCO2ForTree(
        uint256 _treeID,
        string memory _projectId,
        uint256 _co2TokensPerYear,
        uint256 _lastClaimDate
    ) internal returns (uint256) {
        checkProjectStatus(_projectId);

        uint256 newClaimDate = block.timestamp;

        // Calculate and newCO2ToEmit and update lastClaimDate
        uint256 delta = newClaimDate - _lastClaimDate;
        uint256 newCO2ToEmit = uint256(
            _co2TokensPerYear * uint256(delta) * 1000 * (10**uint256(18))
        ) / uint256(MILLISECONDS_IN_YEAR);

        require(newCO2ToEmit > 0, "Coorest::Can't claim 0 CO2");

        nftreeIdToLastClaimDate[_treeID] = newClaimDate;

        uint256 mintedAmount = cco2.mint(msg.sender, newCO2ToEmit);

        return (mintedAmount);
    }

    function claimCO2(
        uint256[] memory _treeIDs,
        string[] memory _projectIds,
        uint256[] memory _plantDates,
        uint256[] memory _co2TokensPerYear,
        bytes32[][] memory _proofs
    ) external payable override whenNotPaused {
        require(
            _treeIDs.length == _projectIds.length &&
                _treeIDs.length == _co2TokensPerYear.length &&
                _co2TokensPerYear.length == _plantDates.length &&
                _plantDates.length == _proofs.length,
            "Coorest::Params lengh mismatch"
        );
        bytes32 leaf;
        for (uint256 i = 0; i < _treeIDs.length; i++) {
            leaf = keccak256(
                abi.encodePacked(
                    _treeIDs[i],
                    _projectIds[i],
                    _plantDates[i],
                    _co2TokensPerYear[i]
                )
            );
            require(_verify(leaf, _proofs[i]), "Coorest::Invalid merkle proof");
            require(
                nftree.balanceOf(msg.sender, _treeIDs[i]) != 0,
                "Coorest::This wallet has no NFTree of that Id"
            );
        }

        uint256[] memory amounts = new uint256[](_treeIDs.length);

        for (uint256 i = 0; i < _treeIDs.length; i++) {
            if (nftreeIdToLastClaimDate[_treeIDs[i]] == 0) {
                amounts[i] = _claimCO2ForTree(
                    _treeIDs[i],
                    _projectIds[i],
                    _co2TokensPerYear[i],
                    _plantDates[i]
                );
            } else {
                amounts[i] = _claimCO2ForTree(
                    _treeIDs[i],
                    _projectIds[i],
                    _co2TokensPerYear[i],
                    nftreeIdToLastClaimDate[_treeIDs[i]]
                );
            }
        }

        emit CO2Claimed(msg.sender, _treeIDs, amounts, block.timestamp);
    }

    // POCC functions
    function mintPOCC(
        uint256 _amountCO2,
        string memory _reason,
        string memory _owner
    ) external payable override whenNotPaused returns (uint256) {
        require(_amountCO2 > 0, "Coorest::Amount should be greater than 0");
        uint256 burnedAmount = cco2.burn(msg.sender, _amountCO2);
        uint256 poccID = pocc.safeMint(
            msg.sender,
            burnedAmount,
            _reason,
            _owner
        );
        emit returnedPoccID(poccID);
        return (poccID);
    }

    // PAUSER

    function pause() external override onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() external override onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    // HELPER FUNCTIONS
    /// @dev this function checks if the status for a project Id is mint
    ///      else it reverts with the satus of the last 2 months
    function checkProjectStatus(string memory _projectId) internal view {
        (uint256 lastMonthStatus, uint256 previousMonthStatus) = trueCoorest
            .getProjectHistory(_projectId);
        // ProjectHistory memory project = ProjectHistory(lastMonthStatus, previousMonthStatus);
        if (lastMonthStatus == 1 && previousMonthStatus == 1) {
            return;
        } else {
            revert InvalidProjectStatus({
                projectId: _projectId,
                lastMonthStatus: lastMonthStatus,
                previousMonthStatus: previousMonthStatus
            });
        }
    }

    function _verify(bytes32 _leaf, bytes32[] memory _proof)
        internal
        view
        returns (bool)
    {
        return MerkleProofUpgradeable.verify(_proof, merkleRoot, _leaf);
    }

    function ensureIsNotZeroAddr(address _addr) private pure {
        require(_addr != address(0), "Coorest::Zero address");
    }

    // UUPS UPGRADE
    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyRole(UPGRADER_ROLE)
    {}
}

// Dependencies Interfaces

interface IPOCC {
    /// @dev This returns PoCC ID
    /// @param _to The wallet address to mint PoCC to
    /// @param _burnedAmount The amount of CO2 compensated
    /// @param _reason The reason for compensation
    function safeMint(
        address _to,
        uint256 _burnedAmount,
        string memory _reason,
        string memory _owner
    ) external returns (uint256);
}

interface ICCO2 {
    /// @dev This mints CCO2 Tokens
    /// @param _to The wallet address to mint CCO2 to
    /// @param _cco2Amount The amount of CO2 to mint
    function mint(address _to, uint256 _cco2Amount) external returns (uint256);

    /// @dev This burns CCO2 Tokens
    /// @param _from merkle root after altering the DB
    /// @param _cco2Amount merkle root after altering the DB
    function burn(address _from, uint256 _cco2Amount)
        external
        returns (uint256);
}

interface IERC1155 {
    /// @dev Returns the amount of tokens of token type `id` owned by `account`.
    /// @param account The wallet address to mint CCO2 to
    /// @param id The amount of CO2 to mint
    function balanceOf(address account, uint256 id)
        external
        view
        returns (uint256);
}

