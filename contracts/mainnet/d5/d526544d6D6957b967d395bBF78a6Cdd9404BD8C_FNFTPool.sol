import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import "@openzeppelin/contracts/access/Ownable.sol";
import "./IFDFERC20.sol";
import "./IFNFT.sol";
import "./IFSetting.sol";

contract FNFTPool is Ownable{
    using SafeMath for uint256;

    uint private unlocked = 1;

    modifier lock() {
        require(unlocked == 1, 'FDFStaking: LOCKED');
        unlocked = 0;
        _;
        unlocked = 1;
    }

    struct UserInfo {
        uint256 bonus;
        uint256 debt;
    }
    uint256 public depositTotal;
    uint256 public debtTotal;

    uint256 private constant timeStep = 1 days;

    uint256 private lastDay;
    uint256 private lastTime;
    uint256 public startTime;

    mapping(address => UserInfo) public users;
    mapping(uint256=>address[]) public dayUsers;

    uint256 public constant FDFBalance = 100000e18;
    uint256 public constant FDFMarketValueUSDT = 1000e6;


    event WithdrawToken(address _user,uint256 amount);

    event DistributePoolRewards(uint256 day, uint256 time);

    address private setting;

    constructor(address setting_) {
        require(setting_ != address(0),"setting is err");
        setting = setting_;
        startTime = block.timestamp;
        lastTime = startTime;
        IFSetting(setting).setInit(7,address(this));

        _transferOwnership(IFSetting(setting).safeAdmin());
    }

    function setSetting(address setting_) external onlyOwner{
        setting = setting_;
    }

    function withdrawToken() external lock {

        _updatePool();

        UserInfo storage userInfo = users[msg.sender];
        uint256 amountWith = userInfo.bonus.sub(userInfo.debt);
        userInfo.debt = userInfo.debt.add(amountWith);
        debtTotal = debtTotal.add(amountWith);

        bool success = IFDFERC20(IFSetting(setting).usdt()).transfer(msg.sender,amountWith);
        emit WithdrawToken(msg.sender,amountWith);
        require(success,"usdt error");
    }

    function _updatePool() private {
        (uint256 avgAmount,uint256 nowDay,uint256 pendingAmount,address[] memory dayAddrs) = pendingAvgAmount();
        if (avgAmount == 0 || dayAddrs.length == 0) {
            return;
        }

        for (uint256 i = 0; i < dayAddrs.length; i++) {
           if (dayAddrs[i] == address(0)) {
               break;
           }
           users[dayAddrs[i]].bonus = users[dayAddrs[i]].bonus.add(avgAmount);
           dayUsers[lastDay].push(dayAddrs[i]);
        }

        depositTotal = depositTotal.add(pendingAmount);
        lastDay = nowDay;
        lastTime = block.timestamp;
    }

    function pendingAvgAmount() public view returns(uint256 avgAmount,uint256 nowDay,uint256 pendingAmount,address[] memory dayAddrs) {
        IFSetting fs = IFSetting(setting);
        IFDFERC20 usdt = IFDFERC20(fs.usdt());
        IFDFERC20 fdf = IFDFERC20(fs.fdf());
        IFNFT nft = IFNFT(fs.fnft());


        uint256 total = nft.totalSupply();
        uint256 balance = usdt.balanceOf(address(this));

        if (balance == 0 || total == 0) {
            return(0,0,0,dayAddrs);
        }
        pendingAmount = balance.add(debtTotal).sub(depositTotal);
        if (pendingAmount <= 0) {
            return(0,0,0,dayAddrs);
        }

        nowDay = getCurDay();
        if (nowDay <= lastDay) {
            return(0,0,0,dayAddrs);
        }
        address idoAddr = fs.FDFStaking();
        uint256 actual = total;
        uint256 index=0;
        dayAddrs = new address[](total);
        for (uint256 i=nft.startTokenId(); i<total; i++) {
            address userAddr = nft.ownerOf(i);
            if (address(0) == userAddr || userAddr == idoAddr) {
                actual--;
                continue;
            }
            uint256 userBalance = fdf.balanceOf(userAddr);
            if (userBalance < FDFBalance) {
                actual--;
                continue;
            }
            if (fs.FDFToUSDTAmount(userBalance) < FDFMarketValueUSDT) {
                actual--;
                continue;
            }
            dayAddrs[index] = userAddr;
            index++;
        }

        return (pendingAmount.div(actual),nowDay,pendingAmount,dayAddrs);
    }


    function checkUser(address _userAddr) private view returns(bool) {
        IFSetting fs = IFSetting(setting);
        address idoAddr = fs.FDFStaking();
        if (address(0) == _userAddr || _userAddr == idoAddr) {
            return false;
        }
        uint256 nftBalance = IFNFT(fs.fnft()).balanceOf(_userAddr);
        if (nftBalance < 1) {
            return false;
        }
        uint256 balance = IFDFERC20(fs.fdf()).balanceOf(_userAddr);
        if (balance < FDFBalance) {
            return false;
        }
        uint256 usdtValue = fs.FDFToUSDTAmount(balance);
        if (usdtValue < FDFMarketValueUSDT) {
            return false;
        }
        return true;
    }

    function pendingWith(address _userAddr) public view returns(uint256) {

        uint256 amountBouns = users[_userAddr].bonus;
        uint256 amountWith = amountBouns.sub(users[_userAddr].debt);

        if (!checkUser(_userAddr)) {
            return amountWith;
        }

        (uint256 avgAmount,,,) = pendingAvgAmount();

        if (avgAmount == 0) {
            return amountWith;
        }

        uint256 userNFTtotal = IFNFT(IFSetting(setting).fnft()).balanceOf(_userAddr);

        return amountWith.add(avgAmount.mul(userNFTtotal));
    }

    function balanceOf() public view returns(uint256) {
        return IFDFERC20(IFSetting(setting).usdt()).balanceOf(address(this));
    }

    function getCurDay() public view returns(uint256) {
        return (block.timestamp.sub(startTime)).div(timeStep);
    }

    function getLastTime() external view returns(uint256) {
        return lastTime;
    }
}

