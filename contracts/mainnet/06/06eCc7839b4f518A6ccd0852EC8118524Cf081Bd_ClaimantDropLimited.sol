pragma solidity ^0.8.0;

import "./ClaimantDrop.sol";

contract ClaimantDropLimited is ClaimantDrop {
    struct Times {
        uint128 startTime;
        uint128 endTime;
    }

    Times public times;

    modifier onlyActive() {
        require(
            block.timestamp > times.startTime &&
                block.timestamp < times.endTime,
            "outside of mint window"
        );
        _;
    }

    function init(bytes calldata data) public payable override {
        (
            uint128 startTime,
            uint128 endTime,
            address proxy,
            address claimantNFT_
        ) = abi.decode(data, (uint128, uint128, address, address));

        require(nft == VibeERC721(address(0)), "Already initialized");
        claimantNFT = claimantNFT_;
        times = Times(startTime, endTime);
        nft = VibeERC721(proxy);
    }

    function _mint(uint256 tokenId) internal override onlyActive {
        require(
            ClaimantNFT(claimantNFT).ownerOf(tokenId) == msg.sender,
            "must own tokenId(s) of claimant NFT"
        );
        nft.mintWithId(msg.sender, tokenId);
    }
}

