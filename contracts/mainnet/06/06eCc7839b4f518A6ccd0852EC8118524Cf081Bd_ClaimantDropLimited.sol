pragma solidity ^0.8.0;

import "../tokens/VibeERC721.sol";

interface ClaimantNFT {
    function ownerOf(uint256 token) external view returns (address);
}

contract ClaimantDrop {
    address public claimantNFT;
    VibeERC721 public nft;


    function init(bytes calldata data) public payable virtual {
        (address proxy, address claimantNFT_) = abi.decode(
            data,
            (address, address)
        );

        require(nft == VibeERC721(address(0)), "Already initialized");

        claimantNFT = claimantNFT_;
        nft = VibeERC721(proxy);
    }

    function mint(uint256 tokenId) public payable {
        _mint(tokenId);
    }

    function mintMultiple(uint256[] calldata tokenIds) public payable {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            _mint(tokenIds[i]);
        }
    }


    function _mint(uint256 tokenId) internal virtual {
        require(
            ClaimantNFT(claimantNFT).ownerOf(tokenId) == msg.sender,
            "must own tokenId(s) of claimant NFT"
        );
        nft.mintWithId(msg.sender, tokenId);
    }
}

