contract RewardDistributor {
    using SafeMath for uint256;

    address public _token;
    address public owner;

    struct Share {
        uint256 amount;
        uint256 totalExcluded;
        uint256 totalRealised;
    }

    IERC20 public REWARD;

    address[] shareholders;
    mapping(address => uint256) shareholderIndexes;
    mapping(address => uint256) shareholderClaims;

    mapping(address => Share) public shares;

    uint256 public totalShares;
    uint256 public totalDividends;
    uint256 public totalDistributed;
    uint256 public dividendsPerShare;
    uint256 public dividendsPerShareAccuracyFactor = 10**36;

    uint256 public minPeriod = 30 * 60;
    uint256 public minDistribution = 1 * (10**9);

    uint256 currentIndex;

    bool initialized;
    modifier initialization() {
        require(!initialized);
        _;
        initialized = true;
    }

    modifier onlyToken() {
        require(msg.sender == _token || msg.sender == owner);
        _;
    }

    constructor(address rewardToken, address _owner) {
        REWARD = IERC20(rewardToken);
        _token = msg.sender;
        owner = _owner;
    }

    receive() external payable {}

    function setDistributionCriteria(uint256 _minPeriod, uint256 _minDistribution ) external onlyToken {
        minPeriod = _minPeriod;
        minDistribution = _minDistribution;
    }

    function purge(address receiver) external onlyToken {
        uint256 balance = REWARD.balanceOf(address(this));
        uint256 balanceEth = address(this).balance;
        if(balanceEth > 0) {
            payable(receiver).transfer(balanceEth);
        }
        REWARD.transfer(receiver, balance);
    }

    function setShare(address shareholder, uint256 amount) external onlyToken {
        if (shares[shareholder].amount > 0) {
            distributeReward(shareholder);
        }

        if (amount > 0 && shares[shareholder].amount == 0) {
            addShareholder(shareholder);
        } else if (amount == 0 && shares[shareholder].amount > 0) {
            removeShareholder(shareholder);
        }

        totalShares = totalShares.sub(shares[shareholder].amount).add(amount);
        shares[shareholder].amount = amount;
        shares[shareholder].totalExcluded = getCumulativeDividends(
            shares[shareholder].amount
        );
    }

    function deposit(uint256 amount) external onlyToken {
        totalDividends = totalDividends.add(amount);
        dividendsPerShare = dividendsPerShare.add(
            dividendsPerShareAccuracyFactor.mul(amount).div(totalShares)
        );
    }

    function process(uint256 gas) external onlyToken {
        uint256 shareholderCount = shareholders.length;

        if (shareholderCount == 0) {
            return;
        }

        uint256 gasUsed = 0;
        uint256 gasLeft = gasleft();

        uint256 iterations = 0;

        while (gasUsed < gas && iterations < shareholderCount) {
            if (currentIndex >= shareholderCount) {
                currentIndex = 0;
            }

            if (shouldDistribute(shareholders[currentIndex])) {
                distributeReward(shareholders[currentIndex]);
            }

            gasUsed = gasUsed.add(gasLeft.sub(gasleft()));
            gasLeft = gasleft();
            currentIndex++;
            iterations++;
        }
    }

    function shouldDistribute(address shareholder) internal view returns (bool) {
        return
            shareholderClaims[shareholder] + minPeriod < block.timestamp &&
            getUnpaidEarnings(shareholder) > minDistribution;
    }

    function distributeReward(address shareholder) internal {
        if (shares[shareholder].amount == 0) {
            return;
        }

        uint256 amount = getUnpaidEarnings(shareholder);
        if (amount > 0) {
            totalDistributed = totalDistributed.add(amount);
            REWARD.transfer(shareholder, amount);
            shareholderClaims[shareholder] = block.timestamp;
            shares[shareholder].totalRealised = shares[shareholder]
                .totalRealised
                .add(amount);
            shares[shareholder].totalExcluded = getCumulativeDividends(
                shares[shareholder].amount
            );
        }
    }

    function claimReward() external {
        distributeReward(msg.sender);
    }

    function claimRewardManual(address shareHolder) external onlyToken {
        distributeReward(shareHolder);
    }

    function getUnpaidEarnings(address shareholder) public view returns (uint256){
        if (shares[shareholder].amount == 0) {
            return 0;
        }

        uint256 shareholderTotalDividends = getCumulativeDividends(
            shares[shareholder].amount
        );
        uint256 shareholderTotalExcluded = shares[shareholder].totalExcluded;

        if (shareholderTotalDividends <= shareholderTotalExcluded) {
            return 0;
        }

        return shareholderTotalDividends.sub(shareholderTotalExcluded);
    }

    function getHolderDetails(address holder) public view returns (
            uint256 lastClaim,
            uint256 unpaidEarning,
            uint256 totalReward,
            uint256 holderIndex
        ) {
            lastClaim = shareholderClaims[holder];
            unpaidEarning = getUnpaidEarnings(holder);
            totalReward = shares[holder].totalRealised;
            holderIndex = shareholderIndexes[holder];
    }

    function getCumulativeDividends(uint256 share) internal view returns (uint256) { 
        return
            share.mul(dividendsPerShare).div(dividendsPerShareAccuracyFactor);
    }

    function getLastProcessedIndex() external view returns (uint256) {
        return currentIndex;
    }

    function getNumberOfTokenHolders() external view returns (uint256) {
        return shareholders.length;
    }

    function getShareHoldersList() external view returns (address[] memory) {
        return shareholders;
    }

    function totalDistributedRewards() external view returns (uint256) {
        return totalDistributed;
    }

    function addShareholder(address shareholder) internal {
        shareholderIndexes[shareholder] = shareholders.length;
        shareholders.push(shareholder);
    }

    function removeShareholder(address shareholder) internal {
        shareholders[shareholderIndexes[shareholder]] = shareholders[
            shareholders.length - 1
        ];
        shareholderIndexes[
            shareholders[shareholders.length - 1]
        ] = shareholderIndexes[shareholder];
        shareholders.pop();
    }
}

contract P2PSwapLv4NobleStack is Context, Ownable 
{
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    using SafeERC20 for ISocietyKey;
    using SafeERC20 for IPOS;

    mapping(address => uint256) private balanceOf;
    uint256 public swapRate = 1; // swap ratio between pos and whitelisted token 1 POS:1 IERC20 if swapRate 2 then 1POS:2 IERC20
    IPOS public posToken;
    ISocietyKey public societyKey;
    uint256 public posToKey = 1; 

    RewardDistributor public distributor;
    uint256 public gasLimit = 500000;

    mapping(address => bool) whitelisted;
    bool whitelistMode = true;

    address[] validTokens;

    modifier onlyWhitelisted() {
        if(whitelistMode){
            require(whitelisted[_msgSender()], "caller is not whitelisted");
        }
        _;
    }

    receive() external payable{}

    constructor (
        address _posToken,
        address _keyToken,
        address[] memory _validTokens
    )
    {
        distributor = new RewardDistributor(_keyToken, _msgSender());

        posToken = IPOS(_posToken);
        societyKey = ISocietyKey(_keyToken);

        for(uint256 i; i < _validTokens.length; i++) {
            validTokens.push(_validTokens[i]);
        }

    }


    function listValidTokens() external view returns(address[] memory)
    {
        return validTokens;
    }

    function addValidToken(address _token) 
    external 
    onlyOwner 
    {
        require(!_checkIfValidToken(_token), "IERC20 token is already a valid token");
        validTokens.push(_token);
        _rewardDeposit();
    }

    function removeValidToken(address _token)
    external
    onlyOwner
    {
        require(_checkIfValidToken(_token), "IERC20 token is not in a valid list");
        uint256 _tokenIndex = _getTokenIndex(_token);
        validTokens[_tokenIndex] = validTokens[validTokens.length - 1];
        validTokens.pop();
        _rewardDeposit();
    }

    function _getTokenIndex(address _token)
    internal
    view 
    returns(uint256)
    {
        uint256 index;
        for(uint256 i; i < validTokens.length; i++){
            if(_token == validTokens[i]){
                index = i;
                break;
            }
        }
        return index;
    }

    function _checkIfValidToken(address _token)
    internal 
    view 
    returns(bool)
    {
        bool isValid;
        for(uint256 i; i < validTokens.length; i++){
            if(_token == validTokens[i]){
                isValid = true;
                break;
            }
        }
        return isValid;
    }

    function deposit(uint256 _amount)
    external
    onlyWhitelisted
    {
        posToken.transferFrom(_msgSender(), address(this), _amount);
        _rewardDeposit();
        balanceOf[_msgSender()] += _amount;
        distributor.setShare(_msgSender(), balanceOf[_msgSender()]);
    }

    function swap(uint256 _amount, address _token)
    external
    {
        require(_checkIfValidToken(_token), "swap token is not valid token");
        _rewardDeposit();
        uint256 _amountPos = _amount.div(swapRate);
        IERC20(_token).safeTransferFrom(_msgSender(), address(this), _amount);
        societyKey.mint(address(this), _amountPos.mul(posToKey));
        posToken.transfer(_msgSender(), _amountPos);
    }

    function withdrawERC20(address _token, uint256 _amount)
    external
    onlyOwner 
    {
        _rewardDeposit();
        IERC20(_token).safeTransfer(_msgSender(), _amount);
    }

    function getAmountReceive(uint256 _amount)
    external
    view 
    returns(uint256)
    {
        return _amount.div(swapRate);
    }

    function withdrawPOS(uint256 _amount)
    external
    {
        require(balanceOf[_msgSender()] >= _amount, "Deposit amount is less");
        balanceOf[_msgSender()] -= _amount;
        _rewardDeposit();
        distributor.setShare(_msgSender(), balanceOf[_msgSender()]);
        posToken.transfer(_msgSender(), _amount);
    }

    function withdrawSocietyKey(uint256 _amount)
    external
    {
        require(balanceOfSocietyKey(_msgSender()) >= _amount, "Deposit amount less than required");
        balanceOf[_msgSender()] = balanceOf[_msgSender()].sub(_amount.div(posToKey));
        _rewardDeposit();
        distributor.setShare(_msgSender(), balanceOf[_msgSender()]);
        societyKey.transfer(_msgSender(), _amount);
    }

    function balanceOfPos(address depositor)
    external
    view 
    returns(uint256)
    {
        return balanceOf[depositor];
    }

    function balanceOfSocietyKey(address depositor)
    public
    view 
    returns(uint256)
    {
        return balanceOf[depositor].mul(posToKey);
    }

    function _rewardDeposit()
    internal
    {
        uint256 _balanceInit = societyKey.balanceOf(address(this));
        posToken.claim(address(this));
        uint256 _balanceFinal = societyKey.balanceOf(address(this));
        uint256 _balanceUsable = _balanceFinal.sub(_balanceInit);
        if(_balanceUsable != 0 && societyKey.transfer(address(distributor), _balanceUsable)){
            distributor.deposit(_balanceUsable);
        }
        distributor.process(gasLimit);
    }

    function updateWhitelist(address _account, bool _whitelist)
    external
    onlyOwner
    {
        whitelisted[_account] = _whitelist;
    }

    function updateWhitelistMode(bool _mode)
    external
    onlyOwner 
    {
        whitelistMode = _mode;
    }

    function updateGasLimit(uint256 _gasLimit)
    external
    onlyOwner 
    {
        gasLimit = _gasLimit;
    }

    function manualDistributeReward()
    external
    onlyOwner
    {
        _rewardDeposit();
    }

    function claimRewardManual(address _shareHolder)
    external
    {
        distributor.claimRewardManual(_shareHolder);
    }

}