/// @title TroopToken
/// @notice TimelockController from OZ, not actually upgradeable, but intended
///     to be deployed behind a proxy.
contract TroopToken is ITypeAndVersion, UUPSUpgradeable, ERC20VotesUpgradeable {
    /// @notice The Troop that controls this ERC-20 token
    address public troop;

    // Reserved
    // slither-disable-next-line shadowing-state
    uint256[49] public __gap;

    function init(
        string memory name_,
        string memory symbol_
    ) external initializer {
        __UUPSUpgradeable_init(); // NB: noop
        __ERC20_init(name_, symbol_);
        __ERC20Permit_init(name_);
        __ERC20Votes_init();
        troop = msg.sender;
    }

    /// @notice See {ITypeAndVersion-typeAndVersion}
    function typeAndVersion()
        external
        pure
        virtual
        override
        returns (string memory)
    {
        return "TroopToken 1.0.0";
    }

