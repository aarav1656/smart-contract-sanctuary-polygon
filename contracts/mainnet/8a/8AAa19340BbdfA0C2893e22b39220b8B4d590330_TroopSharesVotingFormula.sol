    /// @param account Account to burn tokens from. Account must explicitly
    ///     give allowance to the operator (Troop contract) to burn tokens.
    /// @param amount Amount of tokens to burn
    function burnFrom(address account, uint256 amount) public virtual {
        require(_msgSender() == troop, "Only Troop can burn");
        _spendAllowance(account, _msgSender(), amount);
        _burn(account, amount);
    }

    /// @notice Delegate Troop tokens to `delegatee` on behalf of `delegator`.
    ///     This action may only be performed by the Troop contract.
    /// @param delegator Account to take token-based voting power from
    /// @param delegatee Account to delegate Troop token-based voting power to
    function delegateFor(address delegator, address delegatee) public virtual {
        require(
            _msgSender() == troop,
            "Only Troop can delegate on behalf of member"
        );
        _delegate(delegator, delegatee);
    }
}

