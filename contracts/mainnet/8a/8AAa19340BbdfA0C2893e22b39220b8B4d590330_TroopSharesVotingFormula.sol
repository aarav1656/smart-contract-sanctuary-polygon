        // );
        // if (followModule != address(0)) {
        // bool hasFollowNFT = IERC721Enumerable(followNFT_).balanceOf(
        //     account
        // ) > 0;
        // bool isAllowlistedMember = hasFollowNFT &&
        //     AllowlistedFollowModule(followModule).isFollowing(
        //         lensProfileId,
        //         account,
        //         IERC721Enumerable(followNFT_).tokenOfOwnerByIndex(
        //             account,
        //             0
        //         )
        //     );
        // if (!isAllowlistedMember) {
        //     return 0;
