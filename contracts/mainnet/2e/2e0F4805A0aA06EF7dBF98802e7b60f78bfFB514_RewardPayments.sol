pragma solidity ^0.8.0;

import "./ClaimsVerdictList.sol";
import "./ContractFactory.sol";
import "./PermissionsV2.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract RewardPayments is
    PermissionsV2,
    ReentrancyGuard,
    Pausable,
    ClaimsVerdictList,
    ContractFactory
{
    using SafeERC20 for IERC20;
    using Counters for Counters.Counter;

    // Dependent contracts of RewardPayments contract
    IERC20 private erc20;
    IClaimsCore private claimsCore;
    IClaimsFee private claimsFee;

    // RewardPayments state variables

    Counters.Counter private paymentCycle;
    mapping(string => bool) private erc20Symbols;
    string[] public erc20SymbolsList;
    uint16 public constant MAX_ERC20_SYMBOLS = 256; // Lets keep max supported erc20 symbols to 256
    address payable private feeWallet;
    uint256 public maxClaimAmountPerRequest;

    constructor(
        address _regAddr,
        address _feeWallet,
        uint256 _maxClaimAmountPerRequest,
        string[] memory _erc20Symbols
    ) ContractFactory(_regAddr) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(CLAIMS_ADMIN_ROLE, msg.sender);

        // State variables initialization
        require(_erc20Symbols.length <= MAX_ERC20_SYMBOLS, "too many ERC20 symbols");
        for (uint16 i = 0; i < _erc20Symbols.length; i++) {
            if (!erc20Symbols[_erc20Symbols[i]]) {
                erc20Symbols[_erc20Symbols[i]] = true;
                erc20SymbolsList.push(_erc20Symbols[i]);
            }
        }

        feeWallet = payable(_feeWallet);
        maxClaimAmountPerRequest = _maxClaimAmountPerRequest;
    }

    // Get claim submission fee

    function getClaimSubmissionFee(uint256 amount, string memory erc20Symbol)
        external
        returns (uint256 feeAmount)
    {
        claimsFee = ContractFactory.ClaimsFee();
        feeAmount = claimsFee.getFeeInNativeCurrency(amount, erc20Symbol, msg.sender);
    }

    // Payment cycle number operations

    function getPaymentCycleNumber() external view returns (uint256 paymentCycleNumber) {
        paymentCycleNumber = _getPaymentCycleNumber();
    }

    function _getPaymentCycleNumber() private view returns (uint256 paymentCycleNumber) {
        paymentCycleNumber = paymentCycle.current();
    }

    function setNextPaymentCycleNumber() external claimsOrVerdictAdmin {
        paymentCycle.increment();
    }

    // Set max claim amount per request

    function setMaxClaimAmountPerRequest(uint256 _maxClaimAmountPerRequest)
        external
        onlyClaimsAdmin
    {
        maxClaimAmountPerRequest = _maxClaimAmountPerRequest;
    }

    // Verdict roots (Merle Tree root) operations for payment cycles

    function setVerdictRoot(bytes32 root) external claimsOrVerdictAdmin {
        uint256 _paymentCycleNumber = _getPaymentCycleNumber();
        require(_paymentCycleNumber > 0, "payment cycle need to be greater than 1");
        _paymentCycleNumber = _paymentCycleNumber - 1;
        setRoot(_paymentCycleNumber, root);
    }

    // Useful in case the claims admin wants to update the root of a payment cycle manually
    function setVerdictRoot2(uint256 _paymentCycleNumber, bytes32 root) external onlyClaimsAdmin {
        require(_paymentCycleNumber > 0, "payment cycle need to be greater than 1");
        setRoot(_paymentCycleNumber, root);
    }

    function getVerdictRoot(uint256 paymentCycleNumber)
        external
        view
        onlyClaimsAdmin
        returns (bytes32 root)
    {
        root = getRoot(paymentCycleNumber);
    }

    // Rewards claim operations

    function generateClaim(uint256 amount, string memory erc20Symbol)
        external
        payable
        whenNotPaused
        nonReentrant
        returns (uint256 tokenId)
    {
        require(amount <= maxClaimAmountPerRequest, "exceeded per request max claim amount");
        require(erc20Symbols[erc20Symbol], "unsupported erc20 symbol");
        claimsFee = ContractFactory.ClaimsFee();
        uint256 expectedFee = claimsFee.getFeeInNativeCurrency(amount, erc20Symbol, msg.sender);

        if (msg.value < expectedFee) {
            uint256 percentSlip = claimsFee.percentSlip();
            uint256 percentUnder = 100 - (100 * msg.value) / expectedFee;
            require(percentUnder <= percentSlip, "insufficient claim submission fee");
        }

        // TO DO - If msg.value greater than expectedFee - refund the balance to the sender

        Amount memory claimAmount = Amount(erc20Symbol, amount);
        Amount memory feePaid = Amount(claimsFee.nativeTokenSymbol(), msg.value);

        claimsCore = ContractFactory.ClaimsCore();
        tokenId = claimsCore.mintNft(msg.sender, claimAmount, feePaid, paymentCycle.current());
    }

    /* @dev - need to call ClaimsCore.approve(<address_of_RewardPayments>, tokenId)
    before calling submitClaim. This is required to burn the tokenId if the claim
    approval is proved successfully */

    function submitClaim(
        bytes32[] memory proof,
        string memory leafSource,
        uint256 tokenId
    ) external whenNotPaused nonReentrant {
        bool approvalStatus;
        uint256 amount;

        claimsCore = ContractFactory.ClaimsCore();
        ClaimAttributes memory claim = claimsCore.getClaimAttributes(tokenId);

        require(claim.requestedBy == msg.sender, "not claim owner");
        require(claim.redeemedDate == 0, "claim amount redeemed already");

        (approvalStatus, amount) = isApproved(
            tokenId,
            claim.amount.symbol,
            claim.paymentCycleNumber,
            proof,
            leafSource
        );

        /* If claim approval is proved, burn the NFT associated with the claim
        and transfer claim amount (ERC20) to the user's address */

        if (approvalStatus) {
            erc20 = ContractFactory.ERC20(claim.amount.symbol);
            require(
                erc20.balanceOf(address(this)) > amount,
                concatenate("insufficent ERC20 balance for ", claim.amount.symbol)
            );

            claimsCore.burnNft(msg.sender, tokenId);
            erc20.safeTransfer(msg.sender, amount);
        }
    }

    function getClaimAttributes(uint256 tokenId)
        external
        returns (
            address requestedBy,
            uint256 requestedDate,
            uint256 amount,
            string memory amountSymbol,
            uint256 feePaid,
            string memory feeSymbol,
            uint256 cycleNumber,
            uint256 redeemedDate,
            address redeemedBy
        )
    {
        claimsCore = ContractFactory.ClaimsCore();
        ClaimAttributes memory claim = claimsCore.getClaimAttributes(tokenId);

        requestedBy = claim.requestedBy;
        requestedDate = claim.requestedDate;
        amount = claim.amount.total;
        amountSymbol = claim.amount.symbol;
        feePaid = claim.feePaid.total;
        feeSymbol = claim.feePaid.symbol;
        cycleNumber = claim.paymentCycleNumber;
        redeemedDate = claim.redeemedDate;
        redeemedBy = claim.redeemedBy;
    }

    function getSubmittedClaims(address from) external returns (uint256[] memory tokenIds) {
        claimsCore = ContractFactory.ClaimsCore();
        tokenIds = claimsCore.getSubmittedClaims(from);
    }

    // Emergency and maintenance operations

    function pause() external onlyClaimsAdmin {
        _pause();
    }

    function unpause() external onlyClaimsAdmin {
        _unpause();
    }

    // submission fee collected operations

    function getFeeCollected() external view onlyClaimsAdmin returns (uint256 feeCollected) {
        feeCollected = address(this).balance;
    }

    function transferFeeCollected() external nonReentrant onlyClaimsAdmin {
        require(feeWallet != address(0), "fee wallet not set");
        require(address(this).balance > 0, "not enough fee collected");

        feeWallet.transfer(address(this).balance);
    }

    // Transfer contract's ERC20 tokens to treasury wallet
    function transferERC20Tokens(string memory erc20Symbol) external nonReentrant onlyClaimsAdmin {
        require(erc20Symbols[erc20Symbol], "unsupported erc20 symbol");
        require(feeWallet != address(0), "fee wallet not set");
        erc20 = ContractFactory.ERC20(erc20Symbol);
        uint256 balance = erc20.balanceOf(address(this));
        erc20.safeTransfer(feeWallet, balance);
    }

    // supported ERC20 symbols operation

    function addERC20Symbol(string memory _erc20Symbol) external onlyClaimsAdmin {
        require(
            erc20SymbolsList.length <= MAX_ERC20_SYMBOLS - 1,
            "max limit already reached for ERC20 symbols"
        );
        if (!erc20Symbols[_erc20Symbol]) {
            erc20Symbols[_erc20Symbol] = true;
            erc20SymbolsList.push(_erc20Symbol);
        }
    }

    function getERC20Symbols() external view onlyClaimsAdmin returns (string[] memory symbols) {
        symbols = erc20SymbolsList;
    }
}

