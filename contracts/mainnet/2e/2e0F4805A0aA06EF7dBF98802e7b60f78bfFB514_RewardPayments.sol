pragma solidity ^0.8.0;

import "./Types.sol";
import "../util/Strings.sol";
import "../util/MerkleVerify.sol";

/**
 * Implements claims verdict list support based on merkle trees. The user's
 * address, nft token id (representing claim) and amount can be configured on
 * cloud database. The root of the merkle tree for
 * this data is configured in the contract and is then used along with proof
 * presented by the client to check on the approval of the claim.
 */

abstract contract ClaimsVerdictList is MerkleVerify, StringsF {
    // Emitted whenever claim approval is verified
    event ClaimsVedictVerification(uint256 tokenId, bool verificationStatus);

    // payment cycle number to root of verdict merkle tree lookup
    mapping(uint256 => bytes32) public verdictRoots;

    constructor() {}

    // Set merkle root for target payment cycle number
    function setRoot(uint256 paymentCycleNumber, bytes32 root) internal {
        verdictRoots[paymentCycleNumber] = root;
    }

    // Fetches merkle root for target payment cycle number
    function getRoot(uint256 paymentCycleNumber) internal view returns (bytes32) {
        return verdictRoots[paymentCycleNumber];
    }

    // Called for enofrcement of whose claim got approved
    function isApproved(
        uint256 tokenId,
        string memory erc20Symbol,
        uint256 paymentCycleNumber,
        bytes32[] memory proof,
        string memory leafSource
    ) internal returns (bool approved, uint256 amount) {
        require(verdictRoots[paymentCycleNumber] != bytes32(0x0), "Merkle root not found");

        // to check that "<address>:<tokenId>:<amount>:<erc20_symbol>" is present in the merkele tree.
        if (!verify(proof, verdictRoots[paymentCycleNumber], leafSource)) {
            return (false, 0);
        }

        // verify the sender is really in the claimed "<address>:<tokenId>:<amount>:<erc20_symbol>"
        string[] memory pairs = split(leafSource, ":", 4);
        require(pairs.length == 4, "expecting <address>:<tokenId>:<amount>:<erc20_symbol>");

        // convert address to string and compare with msg.sender
        uint256 _tokenId = parseInt(pairs[1]);

        if (
            compare(toUpper(addressToString(msg.sender)), toUpper(pairs[0])) &&
            _tokenId == tokenId &&
            compare(toUpper(erc20Symbol), toUpper(pairs[3]))
        ) {
            approved = true;
        }
        amount = parseInt(pairs[2]);

        emit ClaimsVedictVerification(tokenId, approved);
    }
}

