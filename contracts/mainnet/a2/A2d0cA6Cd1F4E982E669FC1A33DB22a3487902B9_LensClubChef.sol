/// @title LensClubChef
/// @author kevincharm
/// @notice
/// LensClubChef is the master of LensClub. He can make LensClub and he is a fair guy.
///
/// Note that it's ownable and the owner wields tremendous power. The ownership
/// will be transferred to a governance smart contract once LensClub is sufficiently
/// distributed and the community can show to govern itself.
///
/// Have fun reading it. Hopefully it's bug-free. Alhamdulillah.
contract LensClubChef is
    ITypeAndVersion,
    ILensClubChef,
    UUPSUpgradeable,
    AdminGuarded,
    MerkleVerifier
{
    using Sets for Sets.Set;

    /// @notice LensHub proxy
    address public lensHubProxy;
    /// @notice LensClub master copy/singleton to use as implementation
    address public lensClubMasterCopy;
    /// @notice Nonce used for deploying safe proxies
    uint256 public nonce;
    /// @notice Linked list of deployed clubs
    Sets.Set private clubs;
    /// @notice Fee to create a Lens Club
    uint256 public creationFee;
    /// @notice Fee recipient
    address payable public feeRecipient;
    /// @notice Fee payable for performing some actions, called externally
    ///     by LensClubs
    uint256 public actionFee;

    constructor() {
        _disableInitializers();
    }

    function init(
        address lensHubProxy_,
        address lensClubMasterCopy_,
        bytes32 whitelistMerkleRoot,
        address payable feeRecipient_,
        uint256 initialCreationFee,
        uint256 initialActionFee
    ) public initializer {
        __AdminGuarded_init();
        __UUPSUpgradeable_init(); // NB: noop
        __MerkleVerifier_init(whitelistMerkleRoot);

        lensHubProxy = lensHubProxy_;
        lensClubMasterCopy = lensClubMasterCopy_;
        creationFee = initialCreationFee;
        actionFee = initialActionFee;
        feeRecipient = feeRecipient_;

        // Init clubs LL
        clubs.init();
    }

    /// @notice See {ITypeAndVersion-typeAndVersion}
    function typeAndVersion()
        public
        pure
        virtual
        override
        returns (string memory)
    {
        return "LensClubChef 0.1.0";
    }

    /// @notice See {UUPSUpgradeable-_authorizeUpgrade}
    /// solhint-disable-next-line no-empty-blocks
    function _authorizeUpgrade(address) internal virtual override onlyAdmin {}

    /// @notice Update the whitelist merkle root that allows users to create
    ///     new Troops. Restricted to admins.
    /// @param newMerkleRoot New merkle root representing the whitelist
    function updateWhitelist(bytes32 newMerkleRoot) public onlyAdmin {
        _updateMerkleRoot(newMerkleRoot);
    }

    function setCreationFee(uint256 newCreationFee) external onlyAdmin {
        uint256 oldCreationFee = creationFee;
        creationFee = newCreationFee;
        emit CreationFeeChanged(oldCreationFee, newCreationFee);
    }

    function setActionFee(uint256 newActionFee) external onlyAdmin {
        uint256 oldActionFee = actionFee;
        actionFee = newActionFee;
        emit ActionFeeChanged(oldActionFee, newActionFee);
    }

    function setFeeRecipient(
        address payable newFeeRecipient
    ) external onlyAdmin {
        address oldFeeRecipient = feeRecipient;
        feeRecipient = newFeeRecipient;
        emit FeeRecipientChanged(oldFeeRecipient, newFeeRecipient);
    }

    function createLensProfile(
        string memory handle,
        address to
    ) private returns (uint256) {
        // Caution: Must be whitelisted by deployed Lens Hub
        DataTypes.CreateProfileData memory profileData;
        profileData.to = to;
        profileData.handle = handle;
        profileData.imageURI = ""; // TODO: Default LensClub profile image
        profileData.followModule = address(0);
        profileData.followModuleInitData = bytes("");
        profileData.followNFTURI = "";
        return ILensHub(lensHubProxy).createProfile(profileData);
    }

    function _createClub(
        uint256 lensProfileId,
        address[] calldata owners
    ) internal returns (address) {
        IERC721 lensProfileNFT = IERC721(lensHubProxy);
        address profileOwner = lensProfileNFT.ownerOf(lensProfileId);
        require(
            profileOwner == address(this) ||
                lensProfileNFT.isApprovedForAll(profileOwner, address(this)),
            "Lens profile NFT not approved"
        );

        // Deploy LensClub proxy
        address payable lensClubProxy = payable(
            new ERC1967Proxy(lensClubMasterCopy, bytes(""))
        );
        LensClub(lensClubProxy).init(lensHubProxy, lensProfileId, owners);
        // Remove factory as an owner
        LensClub(lensClubProxy).removeUser(address(this));
        // Keep track of created clubs
        clubs.add(lensClubProxy);

        // Transfer existing lens profile to deployed
        lensProfileNFT.transferFrom(profileOwner, lensClubProxy, lensProfileId);

        emit LensClubCreated(lensProfileId, lensClubProxy);
        return lensClubProxy;
    }

    function _takeFee() internal {
        if (msg.value < creationFee) {
            revert InsufficientFeePayment(msg.value);
        }
        (bool success, ) = feeRecipient.call{value: msg.value}("");
        if (!success) {
            revert FeeTransferFailed(feeRecipient, msg.value);
        }
        emit FeePaid(msg.value);
    }

    function createClubWithExistingLensProfile(
        uint256 lensProfileId,
        address[] calldata owners
    ) external payable returns (address) {
        _takeFee();
        return _createClub(lensProfileId, owners);
    }

    function createClub(
        string calldata handle,
        address[] calldata owners
    ) external payable returns (address) {
        _takeFee();
        uint256 lensProfileId = createLensProfile(handle, address(this));
        return _createClub(lensProfileId, owners);
    }

    function isClub(address club) external view returns (bool) {
        return clubs.has(club);
    }

    function getClubsCount() external view returns (uint256) {
        return clubs.size;
    }

    /// @notice This is a YOLO method because I didn't have time to write an
    ///     indexer. Blz forgive me for I have sinned.
    /// @dev This will be removed in the future. (lol)
    function __sqlana_getClubs() external view returns (address[] memory out) {
        uint256 size = clubs.size;
        if (size == 0) {
            return new address[](0);
        }

        out = new address[](size);
        address element = clubs.tail();
        for (uint256 i; i < size; ++i) {
            out[size - i - 1] = element;
            element = clubs.prev(element);
        }
        return out;
    }

    /// @notice Update the LensClub mastercopy
    /// @param newMasterCopy New implementation
    function updateLensClubMasterCopy(
        address newMasterCopy
    ) external onlyAdmin {
        address oldMasterCopy = lensClubMasterCopy;
        lensClubMasterCopy = newMasterCopy;
        emit LensClubMasterCopyUpdated(oldMasterCopy, newMasterCopy);
    }

    /// @notice Update an existing LensClub to the latest mastercopy
    /// @param club Address of LensClub
    /// @param initData post-upgrade calldata, if any
    function updateLensClub(
        address payable club,
        bytes calldata initData
    ) external onlyAdmin {
        if (!clubs.has(club)) {
            revert ClubDoesNotExist(club);
        }

        address payable masterCopy = payable(lensClubMasterCopy);
        if (
            keccak256(bytes(LensClub(club).typeAndVersion())) ==
            keccak256(bytes(LensClub(masterCopy).typeAndVersion()))
        ) {
            revert LensClubAlreadyUpToDate(club);
        }

        if (initData.length > 0) {
            LensClub(club).upgradeToAndCall(masterCopy, initData);
        } else {
            LensClub(club).upgradeTo(masterCopy);
        }
    }

    // TODO: Remove for prod
    function rescueLensProfile(
        address payable club,
        address to
    ) external onlyAdmin {
        LensClub(club).rescueLensProfile(to);
    }
}

