/// @title LensClub
/// @author kevincharm
contract LensClub is ITypeAndVersion, UUPSUpgradeable, Permissioned {
    using UnstructuredStorage for bytes32;

    /// @notice Action types; these values also serve as permission bit
    ///     positions which are used for bitmasking (see {Permissioned})
    /// @dev Important notes:
    ///     * APPEND ONLY!
    ///     * Do not re-order enum members
    enum ActionType {
        ChangePermissions /** 0th bit, special permission */,
        Upgrade,
        SetFollowModule,
        SetDispatcher,
        SetProfileImage,
        SetFollowNFTURI,
        Post,
        Comment,
        Mirror,
        Follow,
        Collect
    }

    // keccak256("lensclub.lens_club.lens_club_factory") - 1
    bytes32 internal constant LENS_CLUB_FACTORY_SLOT =
        0xb639086319c3629b77ba9371295249c318c1fc2ffec37a9a9ca467c371bc1ec8;

    // keccak256("lensclub.lens_club.lens_hub_proxy") - 1
    bytes32 internal constant LENS_HUB_PROXY_SLOT =
        0x3ce17a4cffbbd153240e60098b2cf87ff49d241d3b265a2742eca209b87c4bc9;

    // keccak256("lensclub.lens_club.lens_profile_id") - 1
    bytes32 internal constant LENS_PROFILE_ID_SLOT =
        0xcde222a9ec12629ba0d8207d3897c08cd548302a4a97bffaeac7777267932f92;

    event FeePaid(uint256 amountPaid);
    event ActionExecuted(ActionType indexed action);
    error InsufficientFeePayment(uint256 amountPaid, uint256 amountRequired);
    error FeeTransferFailed(address recipient, uint256 feeAmount);

    constructor() {
        _disableInitializers();
    }

    receive() external payable {}

    /// @notice Initialiser; must be called be the factory.
    function init(
        address lensHubProxy_,
        uint256 lensProfileId_,
        address[] memory owners_
    ) public initializer {
        __Permissioned_init();

        LENS_CLUB_FACTORY_SLOT.store(_msgSender());
        LENS_HUB_PROXY_SLOT.store(lensHubProxy_);
        LENS_PROFILE_ID_SLOT.store(lensProfileId_);

        for (uint256 i; i < owners_.length; ++i) {
            setPermission(owners_[i], uint8(ActionType.ChangePermissions));
        }
    }

    /// @notice See {ITypeAndVersion-typeAndVersion}
    function typeAndVersion()
        public
        pure
        virtual
        override
        returns (string memory)
    {
        return "LensClub 1.0.0";
    }

    /// @notice See {UUPSUpgradeable-_authorizeUpgrade}
    function _authorizeUpgrade(address) internal virtual override {
        require(
            _msgSender() == getLensClubFactory(),
            "Only upgradeable by factory"
        );
    }

    function getLensHubProxy() public view returns (address) {
        return LENS_HUB_PROXY_SLOT.loadAddress();
    }

    function getLensClubFactory() public view returns (address) {
        return LENS_CLUB_FACTORY_SLOT.loadAddress();
    }

    function getLensProfileId() public view returns (uint256) {
        return LENS_PROFILE_ID_SLOT.loadUint256();
    }

    /// @notice Take fee from transaction unless caller is the factory itself
    function _takeActionFee() internal override {
        if (_msgSender() == getLensClubFactory()) {
            return;
        }

        uint256 actionFee = ILensClubChef(getLensClubFactory()).actionFee();
        if (msg.value < actionFee && address(this).balance < actionFee) {
            revert InsufficientFeePayment(msg.value, actionFee);
        }

        address payable feeRecipient = ILensClubChef(getLensClubFactory())
            .feeRecipient();
        (bool success, ) = feeRecipient.call{value: actionFee}("");
        if (!success) {
            revert FeeTransferFailed(feeRecipient, actionFee);
        }
        emit FeePaid(actionFee);
    }

    function _setFollowModule(
        uint256 profileId,
        address followModule,
        bytes calldata followModuleInitData
    ) internal {
        _takeActionFee();
        ILensHub(getLensHubProxy()).setFollowModule(
            profileId,
            followModule,
            followModuleInitData
        );
    }

    function setFollowModule(
        uint256 profileId,
        address followModule,
        bytes calldata followModuleInitData
    ) external payable onlyPermissioned(uint8(ActionType.SetFollowModule)) {
        _setFollowModule(profileId, followModule, followModuleInitData);
    }

    function _setDispatcher(uint256 profileId, address dispatcher) internal {
        _takeActionFee();
        ILensHub(getLensHubProxy()).setDispatcher(profileId, dispatcher);
    }

    function setDispatcher(
        uint256 profileId,
        address dispatcher
    ) external payable onlyPermissioned(uint8(ActionType.SetDispatcher)) {
        _setDispatcher(profileId, dispatcher);
    }

    function _setProfileImageURI(
        uint256 profileId,
        string calldata imageURI
    ) internal {
        _takeActionFee();
        ILensHub(getLensHubProxy()).setProfileImageURI(profileId, imageURI);
    }

    function setProfileImageURI(
        uint256 profileId,
        string calldata imageURI
    ) external payable onlyPermissioned(uint8(ActionType.SetProfileImage)) {
        _setProfileImageURI(profileId, imageURI);
    }

    function _setFollowNFTURI(
        uint256 profileId,
        string calldata followNFTURI
    ) internal {
        _takeActionFee();
        ILensHub(getLensHubProxy()).setFollowNFTURI(profileId, followNFTURI);
    }

    function setFollowNFTURI(
        uint256 profileId,
        string calldata followNFTURI
    ) external payable onlyPermissioned(uint8(ActionType.SetFollowNFTURI)) {
        _setFollowNFTURI(profileId, followNFTURI);
    }

    function _post(
        DataTypes.PostData calldata vars
    ) internal returns (uint256) {
        _takeActionFee();
        return ILensHub(getLensHubProxy()).post(vars);
    }

    function post(
        DataTypes.PostData calldata vars
    )
        external
        payable
        onlyPermissioned(uint8(ActionType.Post))
        returns (uint256)
    {
        return _post(vars);
    }

    function _comment(
        DataTypes.CommentData calldata vars
    ) internal returns (uint256) {
        _takeActionFee();
        return ILensHub(getLensHubProxy()).comment(vars);
    }

    function comment(
        DataTypes.CommentData calldata vars
    )
        external
        payable
        onlyPermissioned(uint8(ActionType.Comment))
        returns (uint256)
    {
        return _comment(vars);
    }

    function _mirror(
        DataTypes.MirrorData calldata vars
    ) internal returns (uint256) {
        _takeActionFee();
        return ILensHub(getLensHubProxy()).mirror(vars);
    }

    function mirror(
        DataTypes.MirrorData calldata vars
    )
        external
        payable
        onlyPermissioned(uint8(ActionType.Mirror))
        returns (uint256)
    {
        return _mirror(vars);
    }

    function _follow(
        uint256[] calldata profileIds,
        bytes[] calldata datas
    ) internal returns (uint256[] memory) {
        _takeActionFee();
        return ILensHub(getLensHubProxy()).follow(profileIds, datas);
    }

    function follow(
        uint256[] calldata profileIds,
        bytes[] calldata datas
    )
        external
        payable
        onlyPermissioned(uint8(ActionType.Follow))
        returns (uint256[] memory)
    {
        return _follow(profileIds, datas);
    }

    function _collect(
        uint256 profileId,
        uint256 pubId,
        bytes calldata data
    ) internal returns (uint256) {
        _takeActionFee();
        return ILensHub(getLensHubProxy()).collect(profileId, pubId, data);
    }

    function collect(
        uint256 profileId,
        uint256 pubId,
        bytes calldata data
    )
        external
        payable
        onlyPermissioned(uint8(ActionType.Collect))
        returns (uint256)
    {
        return _collect(profileId, pubId, data);
    }

    function rescueLensProfile(address to) external {
        require(_msgSender() == getLensClubFactory(), "not authorised");
        IERC721(getLensHubProxy()).safeTransferFrom(
            address(this),
            to,
            getLensProfileId()
        );
    }
}

