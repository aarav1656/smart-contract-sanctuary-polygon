import "./interfaces/IStableSwapCurve.sol";
import "./lib/UniswapTools.sol";
import "./interfaces/ISwapHelper.sol";

address constant QUICKSWAP_ROUTER = 0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff;

address constant USDT = 0xc2132D05D31c914a87C6611C10748AEb04B58e8F;
address constant USDC = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174;
address constant DAI = 0x8f3Cf7ad23Cd3CaDbD9735AFf958023239c6A063;

address constant QUICK = 0x831753DD7087CaC61aB5644b308642cc1c33Dc13;

address constant CURVE_ATRICRYPTO3_ZAP = 0x1d8b86e3D88cDb2d34688e87E72F388Cb541B7C8;
uint constant COINS_COUNT = 3;

contract SwapHelperPolygon is ISwapHelper {
    using SafeERC20 for IERC20;

    mapping (address => uint256) private coinIndexByAddress;

    constructor() {
        IStableSwapCurve _pool = IStableSwapCurve(CURVE_ATRICRYPTO3_ZAP);
        for (uint i=0; i<COINS_COUNT; i++) {
            address token = _pool.underlying_coins(i);
            coinIndexByAddress[token] = i;
        }
    }

    function swap(address from, address to, address recipient)
        public
        override
        returns (uint256)
    {
        IERC20 coinFromContract = IERC20(from);
        uint256 amount = coinFromContract.balanceOf(address(this));

        if (address(from) == address(to)) {
            coinFromContract.safeTransfer(recipient, amount);
            return amount;
        }

        if (from == QUICK) {
            return UniswapTools.swap(QUICKSWAP_ROUTER, QUICK, to, amount, recipient);
        }

        IStableSwapCurve _pool = IStableSwapCurve(CURVE_ATRICRYPTO3_ZAP);

        coinFromContract.safeIncreaseAllowance(address(_pool), amount);

        IERC20 coinToContract = IERC20(to);

        uint256 beforeAmount = coinToContract.balanceOf(address(this));

        uint256 coinFrom = coinIndexByAddress[from];
        uint256 coinTo = coinIndexByAddress[to];

        uint256 dyAmount = _pool.get_dy_underlying(coinFrom, coinTo, amount) * 99 / 100;

        _pool.exchange_underlying(coinFrom, coinTo, amount, dyAmount);

        uint256 swappedAmount = coinToContract.balanceOf(address(this)) - beforeAmount;

        IERC20(to).safeTransfer(recipient, swappedAmount);

        return swappedAmount;
    }
}