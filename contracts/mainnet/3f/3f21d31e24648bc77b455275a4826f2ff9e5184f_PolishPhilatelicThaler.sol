/**
 * @title Polish Crypto Stamp
 * @notice Philatelic Thaler - The token for redeeming crypto stamps.
 *
 * @custom:website https://nft.poczta-polska.pl
 * @author rutilicus.eth (ArchXS)
 * @custom:security-contact [email protected]
 */
contract PolishPhilatelicThaler is IPhilatelicThalerHolder, CryptoStampContract, ERC1155HolderUpgradeable {

    bytes1 private constant SLASH = 0x2f;

    // Mapping from collection ID to donated thalers
    mapping(uint256 => mapping(ThalerType => uint256)) private _thalersMinted;
    address private _signerAddress;

    ICryptoStampSupplier private stampSupplier;
    IStampCollectionRepository private collectionRepository;

    // Mapping from address to collected thalers counter
    mapping(address => mapping(uint256 => uint256)) private _thalersIdsCollected;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(string calldata initialUri, string memory contractUri, address supplierContract, address repositoryContract) public initializer  {
        __CryptoStampContract_init(initialUri, contractUri);

        _signerAddress = _msgSender();

        setStampContracts(supplierContract, repositoryContract);
    }

    /**
     * @dev Allows to donate administratively the specific thaler tokens to given recipiens. 
     */
    function donateThalers(uint256 collectionId, ThalerType thalerType, address[] memory recipients, uint256[] memory amounts) external onlyPrivileged {
        uint256 _thalerId = StampTokenHelper.combineTokenId(collectionId, uint256(thalerType));
        _dispatchThalers(collectionId, _thalerId, thalerType, recipients, amounts);
    }

    /**
     * @dev Allows the voucher holder to exchange his/her token for a token from the on-chain only category. 
     *      The final price of the stamp token depends on the `thalerType`.
     *
     * @param rounds IDs of exchange rate quotation rounds, [0,0] for latest.
     * @param consentApproved By setting the value to `true` you agree to the Terms and conditions of the PCS service.
     */
    function exchangeThaler(uint256 collectionId, ThalerType thalerType, uint80[2] calldata rounds, bool consentApproved) external payable nonContract {
        require(consentApproved, "PCS Terms not approved");

        ThalerInfo memory _thalerInfo = collectionRepository.getThalerInfo(thalerType);
        require(_thalerInfo.swappable, "Invalid thaler type");
        StampCollection memory collection = collectionRepository.getStampCollection(collectionId);
        
        require(collection.issuePhase > IssuePhase.Affiliate, "Exchange not allowed");

        uint256 _thalerId = StampTokenHelper.combineTokenId(collectionId, uint256(thalerType));
        require(balanceOf(_msgSender(), _thalerId) > 0, "Nothing to exchange");

        (uint256 _tokenPrice,) = collectionRepository.getDerivedStampPrice(collectionId, Tier.PUKKA, rounds);

        if (thalerType < ThalerType.Meritorious) {
            _tokenPrice = _tokenPrice - ((_tokenPrice * _thalerInfo.discount) / 100);
        } else if (thalerType == ThalerType.Meritorious) {
            _tokenPrice = 0;
        } 

        _checkout(collection.depositary, _tokenPrice);
        _safeTransferFrom(_msgSender(), address(this), _thalerId, 1, "");
    }

    /**
     * @dev Allows the minting of a thaler token through an open sale.
     * 
     * @param collectionId The ID of the collection to mint.
     * @param thalerType the type of thaler to mint.
     * @param amount The amount of stamps to mint.
     * @param recipient If set, the destination wallet. 
     * @param rounds IDs of exchange rate quotation rounds, [0,0] for latest.
     * @param consentApproved By setting the value to `true` you agree to the Terms and conditions of the PCS service.
     */
    function mintThalers(uint256 collectionId, ThalerType thalerType, uint256 amount, address recipient, uint80[2] calldata rounds, bool consentApproved) external payable nonContract {
        require(consentApproved, "PCS Terms not approved");
        ThalerInfo memory _thalerInfo = collectionRepository.getThalerInfo(thalerType);
        require(_thalerInfo.mintable, "Not mintable thaler");

        StampCollection memory _collection = collectionRepository.getStampCollection(collectionId);
        
        require(_collection.issuePhase > IssuePhase.Limited, "Minting not allowed");

        uint256 _thalerId = StampTokenHelper.combineTokenId(collectionId, uint256(thalerType));
        address[] memory _recipients = new address[](1);
        _recipients[0] = (recipient != address(0) ? recipient : _msgSender());
        uint256[] memory _amounts = new uint256[](1);
        _amounts[0] = amount;

        (uint256 _tokenPrice,) = collectionRepository.getDerivedThalerPrice(thalerType, rounds);
        _checkout(_collection.depositary, (_tokenPrice * amount));
        _dispatchThalers(collectionId, _thalerId, thalerType, _recipients, _amounts);      
    }

    /**
     * @dev See {IPhilatelicThalerHolder-redeemThaler}.
     */
    function redeemThaler(uint256 collectionId, ThalerType thalerType, bytes calldata coupon) external nonReentrant nonContract {
        require(thalerType < ThalerType.Meritorious, "Invalid thaler type");
        require(StampTokenHelper.validateClaim(_signerAddress, _msgSender(), coupon), "Invalid coupon");

        IssuePhase issuePhase = collectionRepository.getCollectionPhase(collectionId);
        require(issuePhase == IssuePhase.Affiliate, "Redemption not allowed");

        uint256 _thalerId = StampTokenHelper.combineTokenId(collectionId, uint256(thalerType));

        address[] memory _recipients = new address[](1);
        _recipients[0] = _msgSender();
        uint256[] memory _amounts = new uint256[](1);
        _amounts[0] = 1;

        _dispatchThalers(collectionId, _thalerId, thalerType, _recipients, _amounts);
    }

    /**
     * @dev Allows to set up an address used for signing coupons.
     * @param signerAddress A new address to set.
     */
    function setSignerAddress(address signerAddress) external onlyPrivileged {
        require(signerAddress != address(0), "Invalid address");
        _signerAddress = signerAddress;
    }

    /**
     * @dev Allows to set up coresponding crypto stamps system contract addresses.
     * @param supplierContract New addresses to set for the coresponding contracts.
     */
    function setStampContracts(address supplierContract, address repositoryContract) public onlyPrivileged {
        require(AddressUpgradeable.isContract(supplierContract) && AddressUpgradeable.isContract(repositoryContract), "Invalid contract address");
        stampSupplier = ICryptoStampSupplier(supplierContract);
        collectionRepository = IStampCollectionRepository(repositoryContract);
    }

    /**
     * @dev Fix for counter bypassing balanceOf.
     */
    function resetWallet(address wallet, uint256 thalerId, uint256 value) public onlyPrivileged {
        _thalersIdsCollected[wallet][thalerId] = value;
    }

    /**
     * @dev Returns the number of available thalers, in terms of the collection ID and a thaler type.
     */
    function availableThalers(uint256 collectionId, ThalerType thalerType) external view returns (uint256) {
        ThalerInfo memory _thalerInfo = collectionRepository.getThalerInfo(thalerType);
        return (_thalerInfo.supply - _thalersMinted[collectionId][thalerType]);
    }

    /**
     * @dev See {IERC1155MetadataURI-uri}.
     * 
     * This implementation returns the same URI for *all* tokens of given base ID 
     * and the thaler type with accordance to the mint type. 
     * It relies on the token ID combining mechanism.
     * 
     * @param tokenId - combined token ID.
     * @return tokenURI - Token metadata URI.
     */
    function uri(uint256 tokenId) public view virtual override returns (string memory) {
        string memory _baseUri = super.uri(tokenId);
        bytes memory _bytesUri = bytes(_baseUri);

        if (_bytesUri.length > 0 && _bytesUri[_bytesUri.length - 1] == SLASH) {
            string memory _tokenUri = string(abi.encodePacked(_baseUri, StringsUpgradeable.toString(tokenId)));

            if (bytes(uriSuffix).length > 0) {
                return string(abi.encodePacked(_tokenUri, uriSuffix));
            }
            return _tokenUri;
        } else {
            return _baseUri;
        }
    }

    // *************************************
    // Internal helpers methods
    // *************************************

    function _dispatchThalers(uint256 collectionId, uint256 thalerId, ThalerType thalerType, address[] memory recipients, uint256[] memory amounts) internal {
        require(recipients.length == amounts.length, "Invalid call data");

        ThalerInfo memory _thalerInfo = collectionRepository.getThalerInfo(thalerType);
        for (uint256 i = 0; i < recipients.length; i++) {
            require(_thalersIdsCollected[recipients[i]][thalerId] + amounts[i] <= _thalerInfo.maxMints, "Dispatch not allowed");

            if (thalerType == ThalerType.Philatelic) {
                uint256 _depositedAmount = _thalersIdsCollected[address(this)][thalerId];
                if (_depositedAmount > amounts[i]) {
                    _safeTransferFrom(address(this), recipients[i], thalerId, amounts[i], "");
                    _thalersIdsCollected[address(this)][thalerId] -= amounts[i];
                } else {
                    uint256 _minAmount = amounts[i] - _depositedAmount;
                    require(_thalersMinted[collectionId][thalerType] + _minAmount <= _thalerInfo.supply, "Not enough supply");

                    _mint(recipients[i], thalerId, _minAmount, "");

                    if (_depositedAmount > 0) {
                        _safeTransferFrom(address(this), recipients[i], thalerId, _depositedAmount, "");
                    }

                    unchecked {
                        _thalersMinted[collectionId][thalerType] += _minAmount;  
                        _thalersIdsCollected[recipients[i]][thalerId] += _minAmount;           
                    }
                }
            } else if (thalerType == ThalerType.Meritorious || thalerType == ThalerType.Metapost) {
                require(_thalersMinted[collectionId][thalerType] + amounts[i] <= _thalerInfo.supply, "Not enough thalers");
                
                _mint(recipients[i], thalerId, amounts[i], "");
                unchecked {
                    _thalersMinted[collectionId][thalerType] += amounts[i]; 
                    _thalersIdsCollected[recipients[i]][thalerId] += amounts[i]; 
                }
            } else {
                require(_msgSender() == owner(), "Minting forbidden");

                _mint(recipients[i], thalerId, amounts[i], "");
                 unchecked {
                    _thalersMinted[collectionId][thalerType] += amounts[i]; 
                    _thalersIdsCollected[recipients[i]][thalerId] += amounts[i]; 
                }
            }

            emit ThalersTransfered(_msgSender(), thalerId, amounts[i]);
        }
    }

    function _checkout(address beneficiary, uint256 totalAmount) internal {
        require(msg.value >= totalAmount, "Not enough value sent");

        address _beneficiary = (beneficiary != address(0) ? beneficiary : owner());
        payable(_beneficiary).transfer(totalAmount);
        payable(_msgSender()).transfer(msg.value - totalAmount);
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        require(operator != address(this), "Sending not allowed");
        (uint256 _collectionId, uint256 _mintType) = StampTokenHelper.extractTokenIds(id);
        ThalerType _thalerType = ThalerType(_mintType);

        try stampSupplier.exchangeThaler(_collectionId, from) returns (uint256 _tokenId) {
            if (_thalerType == ThalerType.Meritorious || _thalerType == ThalerType.Metapost) {
                _burn(address(this), id, 1);

                unchecked {
                    _thalersMinted[_collectionId][_thalerType]--;
                }
            } else {
                _thalersIdsCollected[address(this)][id]++;
            }

            emit ThalerExchanged(from, _collectionId, _tokenId);
        } catch Error(string memory reason) {
            revert ThalerExchangeFailed(reason, id);
        }

        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public virtual override returns (bytes4) {
        revert("Batch transfer not allowed");
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC1155ReceiverUpgradeable, CryptoStampContract) returns (bool) {
        return
            interfaceId == type(IPhilatelicThalerHolder).interfaceId || ERC1155ReceiverUpgradeable.supportsInterface(interfaceId) ||
            super.supportsInterface(interfaceId);
    }

    /**
     * See https://docs.openzeppelin.com/contracts/4.x/upgradeable#storage_gaps
     */
    uint256[49] private __gap;
    // Deprecated
    mapping(address => mapping(ThalerType => uint256)) private _thalersCollected;
}

