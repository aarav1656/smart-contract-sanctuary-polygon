        result = a < b ? a : b;
    }

    function difference(
        uint256 a,
        uint256 b
    ) internal pure returns (uint256 result) {
        result = max(a, b) - min(a, b);
    }

    function shift(
        uint256 value,
        uint256 steps,
        bool shiftBackwards
    ) internal pure returns (uint256 result) {
        result = shiftBackwards ? value / 10 ** steps : value * 10 ** steps;
    }

    function multiplyFraction(
        uint256 value,
        uint256 dividend,
        uint256 divisor
    ) internal pure returns (uint256 result) {
        return (value * dividend) / divisor;
    }
}

