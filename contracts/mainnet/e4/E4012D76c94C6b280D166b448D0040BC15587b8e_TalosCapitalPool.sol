pragma solidity ^0.8.19;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

import "../libraries/TCMath.sol";

/// @custom:security-contact [email protected]
/// @title A title that should describe the contract/interface
/// @author Kevin Scheeren (@i_like_cubes)
/// @notice Decentralised endpoint for a specific Strategy
/// @dev Contains user Management, Access to the Pool and logic for a authorized Strategy to execute spot market trades
contract TalosCapitalPool is ERC20, Ownable, ReentrancyGuard {
    using TCMath for uint256;
    using TCMath for uint8;

    // ---------------------------
    // Pool Information & MetaData
    // ---------------------------

    // collateral
    ERC20 public immutable collateral;

    // asset
    ERC20 public immutable asset;

    // pool state
    bool public closed = false;

    // ratio storage
    uint256 public constant BASE_RATIO = 10e6;
    uint256 internal lastRatio = BASE_RATIO;

    // ----------------------------
    // External Tools & Connections
    // ----------------------------

    // Chainlink Price feed
    AggregatorV3Interface public immutable priceFeed;

    // 0xSplit Wallet
    address public immutable feeRecipient;

    // UniSwap Access Point
    ISwapRouter public constant SWAP_ROUTER =
        ISwapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);
    uint24 internal immutable uniswapPoolFee;

    // Bot Wallet
    address public immutable bot;

    // ----------------------------
    // Events & Hostoric Data
    // ----------------------------
    event Deposit(
        address user,
        uint256 amount,
        uint256 shares,
        uint256 timestamp
    );
    event Withdraw(
        address user,
        uint256 shares,
        uint256 collateralAmount,
        uint256 assetAmount,
        uint256 timestamp
    );
    event RatioChanged(uint256 oldRatio, uint256 newRatio, uint256 timestamp);

    // ----------------------------
    // Constructor
    // ----------------------------
    constructor(
        ERC20 _collateral,
        ERC20 _asset,
        uint24 _uniswapPoolFee,
        address _bot,
        address _feeRecipient,
        AggregatorV3Interface _priceFeed
    ) ERC20("TalosCapitaPool", "TaCaPo") {
        // collateral
        collateral = _collateral;
        // asset
        asset = _asset;
        // external connections
        bot = _bot;
        uniswapPoolFee = _uniswapPoolFee;
        feeRecipient = _feeRecipient;
        priceFeed = _priceFeed;
    }

    // ----------------------------
    //  Modifiers
    // ----------------------------

    // modifier to only allow access to the strategy
    modifier onlyBot() {
        require(msg.sender == bot, "Unauthorized");
        _;
    }

    // modifier which restricts access when not active
    modifier whenNotClosed() {
        require(!closed, "Pool is Closed");
        _;
    }

    // ----------------------------
    //  Helpers
    // ----------------------------
    function assetBalance() public view returns (uint256 balance) {
        balance = asset.balanceOf(address(this));
    }

    function assetPrice() public view returns (uint256 price) {
        (, int256 priceSigned, , , ) = priceFeed.latestRoundData();
        price = uint256(priceSigned);
        uint256 difference = asset.decimals().difference(priceFeed.decimals());
        price = price.shift(
            difference,
            priceFeed.decimals() > asset.decimals()
        );
    }

    function collateralBalance() public view returns (uint256 balance) {
        balance = collateral.balanceOf(address(this));
    }

    function value() public view returns (uint256 balance) {
        uint256 price = assetPrice();
        uint256 valueAsset = assetBalance().multiplyFraction(
            price,
            10 ** asset.decimals()
        );
        balance = valueAsset + collateralBalance();
    }

    /// @notice Gets the pending ratio of the pool
    /// @return ratio Ratio of the Pool
    /// @return base base Ratio for comparison and calculation
    function getRatio() public view returns (uint256 ratio, uint256 base) {
        base = BASE_RATIO; // set ratio base
        ratio = lastRatio; // set current ratio to last ratio
        uint256 exponent = decimals().difference(collateral.decimals());
        uint256 expectedValue = totalSupply()
            .multiplyFraction(ratio, base)
            .shift(exponent, collateral.decimals() < decimals());
        ratio = ratio.multiplyFraction(value(), expectedValue);
    }

    /// @notice Deactivate the pool permanently
    function close() external onlyOwner nonReentrant {
        closed = true;
    }

    /// @notice Deposit Collateral
    /// @dev emits the Deposit Event upon completion and mints the respective shares to the user
    /// @param _amount amount of collateral to deposit
    function deposit(uint256 _amount) external whenNotClosed nonReentrant {
        require(
            collateral.balanceOf(msg.sender) >= _amount,
            "Insufficient Funds"
        );
        (uint256 ratio, uint256 baseRatio) = getRatio();
        uint256 supplyAmount = _amount.multiplyFraction(baseRatio, ratio);
        collateral.transferFrom(msg.sender, address(this), _amount);
        _mint(msg.sender, supplyAmount);
        emit Deposit(msg.sender, _amount, supplyAmount, block.timestamp);
    }

    /// @notice Withdraw Funds
    /// @dev emits the Withdrawn event and transfers collateral and asset based on their respective share to the user
    /// @param _amount the amount of shares to burn for withdrawal
    function withdraw(uint256 _amount) external nonReentrant {
        require(balanceOf(msg.sender) >= _amount, "Insufficient Funds");
        uint256 amountCollateral = _amount.multiplyFraction(
            collateralBalance(),
            totalSupply()
        );
        uint256 amountAsset = _amount.multiplyFraction(
            assetBalance(),
            totalSupply()
        );
        _burn(msg.sender, _amount);
        if (amountCollateral > 0) {
            transfer(msg.sender, amountCollateral);
        }
        if (amountAsset > 0) {
            transfer(msg.sender, amountAsset);
        }
        emit Withdraw(
            msg.sender,
            _amount,
            amountCollateral,
            amountAsset,
            block.timestamp
        );
    }

    /// @notice Execute a Buy
    /// @dev Proxy for authorized interaction with Uniswap on behalf of the Pool
    function buy() external onlyBot whenNotClosed nonReentrant {
        require(collateralBalance() > 0, "Not enough funds");
        uint256 price = assetPrice();
        uint256 maxOut = collateralBalance().multiplyFraction(
            10 ** collateral.decimals(),
            price
        );
        uint256 minOut = maxOut.multiplyFraction(995, 1000); //0.5% slippage
        swap(collateral, asset, minOut);
    }

    /// @notice Execute a Sell
    /// @dev Proxy for authorized interaction with Uniswap on behalf of the Pool
    function sell() external onlyBot whenNotClosed nonReentrant {
        require(assetBalance() > 0, "Not enough funds");
        uint256 price = assetPrice();
        uint256 maxOut = assetBalance().multiplyFraction(
            price,
            10 ** asset.decimals()
        );
        uint256 minOut = maxOut.multiplyFraction(995, 1000); //0.5% slippage
        swap(asset, collateral, minOut);
        updateRatio();
    }

    /// @dev Internal Swap Function
    /// @param _in ERC20 token to be sold
    /// @param _out ERC20 token to be bought
    /// @param _minOut Minimum Amount of _out received
    function swap(ERC20 _in, ERC20 _out, uint256 _minOut) internal {
        uint256 balance = _in.balanceOf(address(this));
        _in.approve(address(SWAP_ROUTER), balance);

        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: address(_in),
                tokenOut: address(_out),
                fee: uniswapPoolFee,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: balance,
                amountOutMinimum: _minOut,
                sqrtPriceLimitX96: 0
            });

        SWAP_ROUTER.exactInputSingle(params);
    }

    /// @notice Update State and Data
    /// @dev Should be executed after a trade is finished, emits Profit or Loss event based on the result
    function updateRatio() internal {
        // exit if trde is not closed
        if (assetBalance() > 0) {
            return;
        }

        (uint256 ratio, ) = getRatio();
        if (ratio > lastRatio) {
            uint256 difference = ratio.difference(lastRatio);
            uint256 ratioCut = difference / 5;
            uint256 fee = collateralBalance().multiplyFraction(ratioCut, ratio);
            collateral.transfer(feeRecipient, fee);
            ratio = ratio.difference(ratioCut);
        }
        emit RatioChanged(lastRatio, ratio, block.timestamp);
        lastRatio = ratio;
    }

    /// @notice Retrieve stuck tokens from the pool
    /// @dev not allowed to remove collateral, asset or the pool token itself
    /// @param _token address of the token to remove
    function inCaseTokensGetStuck(address _token) external onlyOwner {
        require(_token != address(this), "Invalid Token");
        require(_token != address(collateral), "Invalid Token");
        require(_token != address(asset), "Invalid Token");
        uint256 amount = IERC20(_token).balanceOf(address(this));
        ERC20(_token).transfer(msg.sender, amount);
    }
}