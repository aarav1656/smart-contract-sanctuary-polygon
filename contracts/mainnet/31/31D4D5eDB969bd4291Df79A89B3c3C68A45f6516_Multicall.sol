pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

contract Multicall {
    struct TokenInfo {
        address eoa;
        address token;
        uint256 balance;
        int256 price;
    }

    function getTokensInfo(
        address[] memory eoas,
        address[] memory tokens,
        address[] memory priceOracles
    ) public view returns (TokenInfo[] memory) {
        require(
            tokens.length == priceOracles.length,
            "Tokens and PriceOracles arrays must have the same length."
        );

        uint256 numTokens = tokens.length;
        uint256 numEOAs = eoas.length;

        TokenInfo[] memory result = new TokenInfo[](numTokens * numEOAs);

        uint256 index = 0;
        for (uint256 i = 0; i < numEOAs; i++) {
            for (uint256 j = 0; j < numTokens; j++) {
                IERC20 token = IERC20(tokens[j]);
                AggregatorV3Interface priceOracle = AggregatorV3Interface(
                    priceOracles[j]
                );

                uint256 balance = token.balanceOf(eoas[i]);
                (, int256 price, , , ) = priceOracle.latestRoundData();

                result[index] = TokenInfo({
                    eoa: eoas[i],
                    token: tokens[j],
                    balance: balance,
                    price: price
                });

                index++;
            }
        }

        return result;
    }
}